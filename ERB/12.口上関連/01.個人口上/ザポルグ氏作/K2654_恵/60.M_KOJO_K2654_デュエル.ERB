;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE カード種
		CASE 의식
			PRINTFORMW 「%カード名%を의식소환」
		CASE 융합
			PRINTFORMW 「%カード名%を융합소환」
		CASE 싱크로
			PRINTFORMW 「%カード名%を싱크로소환」
		CASE 엑시즈
			PRINTFORMW 「%カード名%を엑시즈소환」
		CASE 링크
			PRINTFORMW 「%カード名%を링크소환」
		;초차원モンスター（デュエマ）
		CASE 초차원
			PRINTFORMW 「초차원より、%カード名%を초차원소환」
	ENDSELECT
ENDIF

;==================================================
;4,효과仕様宣言
;==================================================
@M_KOJO_DUEL_K2654_4(カードID,발동出処)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード名
#DIM DYNAMIC カード種
#DIM DYNAMIC 발동出処
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF カードID == 71032
		PRINTFORMW 「モウヤンのカレー……」
	ELSE
		SELECTCASE 발동出処
			CASE 1
				;손패발동
				PRINTFORMW 「패에서 ……%カード名%、발동」
			CASE 2
				;필드발동
				PRINTFORMW 「%カード名%……효과발동」
			CASE 3
				;마함발동
				IF カード種 == 速攻마법 || カード種 == 通常함정
					PRINTFORMW 「リバースカード……%カード名%」
				ELSE
					PRINTFORMW 「%カード名%……발동」
				ENDIF
			CASE 4
				;묘지발동
				PRINTFORMW 「묘지から……%カード名%의 효과、발동」
			CASEELSE
				PRINTFORMW 「효과발동……%カード名%」
		ENDSELECT
	ENDIF
ENDIF



