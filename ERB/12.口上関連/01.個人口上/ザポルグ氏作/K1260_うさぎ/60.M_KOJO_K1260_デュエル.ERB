;==================================================
;1,モンスター소환
;例：%カード名%を소환！
;==================================================
@M_KOJO_DUEL_K1260_1(カードID,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード名
#DIMS DYNAMIC カード略称
TRYCALLFORM CARDNAME_{カードID}("略称")
カード略称 = %RESULTS%
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF カードID == 1260
		PRINTFORMW 「うおおおおお！　私を소환ー！」
	ELSEIF カードID >= 1261 && カードID <= 1265
		PRINTFORMW 「逝ってきて、%カード略称%」
	ELSE
		SELECTCASE RAND:2 + 1
			CASE 1
				PRINTFORMW 「%カード名%を소환ー」
			CASE 2
				PRINTFORMW 「行けー、%カード名%を소환ー」
		ENDSELECT
	ENDIF
ENDIF


;==================================================
;2,モンスター특수소환
;==================================================
@M_KOJO_DUEL_K1260_2(カードID,소환出処)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIM DYNAMIC 소환出処
#DIMS DYNAMIC カード名
#DIMS DYNAMIC カード略称
TRYCALLFORM CARDNAME_{カードID}("略称")
カード略称 = %RESULTS%
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF カードID == 1260
		PRINTFORMW 「うおおおおお！　私を특수소환ー！」
	ELSEIF カードID >= 1261 && カードID <= 1265
		PRINTFORMW 「逝ってきて、%カード略称%」
	ELSE
		SELECTCASE 소환出処
			;패에서 
			CASE 召種손패
				PRINTFORMW 「패에서 %カード名%を특수소환するよ」
			;마법함정ゾーンから。　キリ番・シェイプシスターなどを出す場合
			CASE 召種마함
				PRINTFORMW 「%カード名%、돌격ーっ」
			;덱에서 
			CASE 召種덱
				PRINTFORMW 「덱에서 出てこーい、%カード名%を특수소환」
			;EX덱에서 
			CASE 召種EX덱
				PRINTFORMW 「これこそが現代デュエル・・・EXから%カード名%を특수소환ー」
			;묘지から
			CASE 召種묘지
				PRINTFORMW 「死んでる場合じゃないよ。　起きて、%カード名%」
			;제외状態から
			CASE 召種제외
				PRINTFORMW 「%カード名%が異次元より帰還ー」
			;主にトークン生成
			CASE 10
				PRINTFORMW 「%カード名%を특수소환ー」
		ENDSELECT
	ENDIF
ENDIF

