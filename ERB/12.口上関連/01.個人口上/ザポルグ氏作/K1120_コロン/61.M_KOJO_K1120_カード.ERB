;存在証明
@M_KOJO_CARD_K1120
RETURN 1
;==================================================
;0,モンスター소환時
;==================================================
@M_KOJO_CARD_K1120_0(ARG,ARG:1)
#DIM DYNAMIC 호감도修正
#DIMS DYNAMIC カード名
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	PRINTFORMW 「コロンちゃん！　オン・ステージ！」
ENDIF

;==================================================
;1,攻撃時
;==================================================
@M_KOJO_CARD_K1120_1(ARG,ARG:1)
#DIM DYNAMIC 호감도修正
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE RAND:2
		CASE 0
			PRINTFORMW 「コロンちゃん！　パーンチ！」
		CASE 1
			PRINTFORMW 「コロンちゃん！　キーック！」
	ENDSELECT
ENDIF

;==================================================
;2,효과발동
;==================================================
;효과別で鳴らしたいなら、直接カードのデータを見て、설정する必要がある
;面倒、分からないであれば분기はせず
;失敗판정は、いわゆる효과을 무효로されたとかそういうやつ
@M_KOJO_CARD_K1120_2(종류,失敗판정)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC 종류
#DIM DYNAMIC 失敗판정
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF 失敗판정 == 0
		IF 종류 == EX소환時
			PRINTFORMW 「次의 장난감は何かなー？」
		ELSEIF 종류 == 효과後誘発
			PRINTFORMW 「これが、壊されたおもちゃの恨みよ！」
		ENDIF
	ELSE
		PRINTFORMW 「ぎゃん！」
	ENDIF
ENDIF

;==================================================
;3,除去時
;==================================================
;いちいちなんでも除去で話すとやかましいため、デフォでは破壊にのみ反応するように설정
@M_KOJO_CARD_K1120_3(除去種,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC 除去種
#DIMS DYNAMIC カード名
#DIM DYNAMIC カード種

;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE 除去種
		CASE 破壊行き,戦闘破壊行き
			PRINTFORMW 「ぐへえっ！？」
	ENDSELECT
ENDIF

