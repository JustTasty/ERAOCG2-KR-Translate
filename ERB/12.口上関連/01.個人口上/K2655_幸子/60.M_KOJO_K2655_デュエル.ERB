;-------------------------------------------------
IF LOCAL
	IF ダメージ量 >= ライフ_상대
		PRINTFORMW 「きゃあああああ！」
	ELSE
		SELECTCASE ダメージ量
			;ダメージなし
			CASE 0
				PRINTFORMW 「しょせんは五流ね」
			;１～１９９９の時、小ダメージ
			CASE 1 TO 1999
			SELECTCASE RAND:2 + 1
				CASE 1
					PRINTFORMW 「うぅ…」
					PRINTFORMW 「しょせんは五流ね」
				CASE 2
					PRINTFORMW 「なによ…！」
					PRINTFORMW 「しつけが必要のようね…！」
				ENDSELECT
			;２０００～３９９９の時、結構なダメージ
			CASE 2000 TO 3999
				PRINTFORMW 「あぁっ…！」
				SELECTCASE RAND:3 + 1
						CASE 1
							PRINTFORMW 「誰に手をあげたのか…わかっているの？！」
						CASE 2
							PRINTFORMW 「お父様にも…ぶたれとことないのにっ！」
						CASE 3
							PRINTFORMW 「くうっ…よ、よくもおおっ！」
					ENDSELECT
			;４０００～７９９９の時、超大ダメージ
			CASE 4000 TO 7999 
				PRINTFORMW 「きゃあああ！」
				PRINTFORMW 「ぐうっ…」
				SELECTCASE RAND:3 + 1
						CASE 1
							PRINTFORMW 「誰に手をあげたのか…わかっているの？！」
						CASE 2
							PRINTFORMW 「お父様にも…ぶたれとことないのにっ！」
						CASE 3
							PRINTFORMW 「よ、よくもおおっ！」
				ENDSELECT
			;８０００以上、基本即死
			CASEELSE
				PRINTFORMW 「きゃあああああ！」
		ENDSELECT
	ENDIF
ENDIF


