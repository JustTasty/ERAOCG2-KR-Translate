@CARDNAME_26154,参照先
;ココで지정 카드의 名前、略称を返す予定26154
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 가스타 베즐
	CASE "略称"
		RESULTS = 베즐
	CASE "カテゴリ"
		RESULTS:0 = 가스타
ENDSELECT


@CARD_26154(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 비행야수족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 1500
	CASE "튜너"
		RETURN 1
ENDSELECT

RETURN 0

