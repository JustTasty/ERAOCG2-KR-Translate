@CARDCAN_2131(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2131)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,2131)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 4
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_2(듀얼리스트,2131)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2131,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_2131(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2131,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = 중기사 트루디아
		CALL CARD_ADD(듀얼리스트,"필드","마함",場所,"表側표시")
		
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件カテゴリ = 센츄리온
		효과条件종류 = モン全般
		효과条件固名前 = 중기사 트루디아
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시",2131)
		CALL CARD_ID_SS_RIST(듀얼리스트,2131)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2131,2)
	IF RESULT == 0
		PRINTL 특수 소환하는 중기사 트루디아를 4레벨 올리시겠습니까?
		CALL YN_CHOICE(듀얼리스트)
		IF RESULT == はい
			CALL FULLRESET
			효과추가종류 = 140 + 8
			CALL CARD_SP_SUMMON(듀얼리스트,"마함",場所)
		ELSEIF RESULT == いいえ
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"마함",場所)
		ENDIF
	ENDIF
ENDIF


