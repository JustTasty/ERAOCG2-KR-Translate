	CASE "名前"
		RESULTS = 봉음구 머스큘라이저
	CASE "略称"
		RESULTS = 봉음 화난기둥
	CASE "カテゴリ"
		RESULTS:0 = 봉음구
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_79643(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 装備마법
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	;CASE "分割"
	;	RETURN 효과なし
ENDSELECT

RETURN 0

