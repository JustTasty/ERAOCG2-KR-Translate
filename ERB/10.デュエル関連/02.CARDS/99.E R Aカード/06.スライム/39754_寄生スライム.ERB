@CARDNAME_39754,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 번식하는 기생 슬라임
	CASE "略称"
		RESULTS = 기생 슬라임
	CASE "カテゴリ"
		RESULTS:0 = 패러사이트
		RESULTS:1 = 슬라임
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_39754(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 300
ENDSELECT

RETURN 0

