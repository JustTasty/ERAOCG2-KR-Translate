@CARDSUMMON_59533(듀얼리스트, 소환カード, EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 섀도르
ELSEIF EX参照 >= 10
	素材条件종류 = 융합
ENDIF

IF EX参照 == 1
	;PRINTL 분명 소환되는 장면까지 보고 있었다
	CALL FUSCAN(듀얼리스트, 소환カード, 59533) 
	RETURN RESULT
ENDIF

@CARDCAN_59533(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC 조교대상 = -1
#DIM DYNAMIC 상대굴복각인レベル
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트, 종류, ゾーン, 場所, 59533)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트, 59533)
		RETURN 0
	SIF メインフェイズ != 1
			RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	CALL FULLRESET
	CALL CARD_EROTICS(상대プレイヤー, 듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		;상대가 あなた（＝MASTER）の場合は발동불가（対NPC専用효과）
		SIF 조교대상 == MASTER
				RETURN 0
		상대굴복각인レベル = MARK:조교대상:굴복각인
		;상대プレイヤーの굴복각인Lv1以上でないと발동불가
		SIF 상대굴복각인レベル >= 1
			RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트, 59533)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트, 종류, ゾーン, 場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59533(듀얼리스트, 종류, ゾーン, 場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 묘지送カード,5
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상 = -1
#DIM DYNAMIC 상대굴복각인レベル
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트, 종류, ゾーン, 場所, 59533, 1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트, ゾーン, 場所)
		
		CALL CARD_EROTICS(상대プレイヤー, 듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			상대굴복각인レベル = MARK:조교대상:굴복각인
			SIF 상대굴복각인レベル <= 0
				RETURN 1
		ENDIF
		
		FOR カウンタ,0, 상대굴복각인レベル
			CALL FULLRESET
			효과条件カテゴリ = E.R.A
			;테스트 단계이므로 「E.R.A」카드는 몬스터 포함해 전부 검색할 수 버린다
			;마법함정에 한정할 때는 아래의 코멘트행으로부터 「;」를 지워 유효하게 한다
			;효과 조건 종류 = 마함 전반
			CALL CARD_ADD_BASIC(듀얼리스트, "덱", ゾーン, 場所)
		NEXT
	ENDIF
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트, 종류, ゾーン, 場所, 59533, 2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트, "全場単体", 場所, "제외")
		RETURN 1
	ENDIF
	RETURN 0
ENDIF
