@CARDCAN_99711(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99711)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲필드 = 1
	효과条件カテゴリ = 음화
	효과条件표시 = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99711(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동カード
#DIM DYNAMIC 발동カード_ID
#DIMS DYNAMIC 발동ゾーン
#DIMS DYNAMIC 발동カード名
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 合計攻撃力
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 발동誘発 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99711,1)
	IF RESULT == 0
		발동カード = 効後_設場所:(処理中番号 - 1)
		발동ゾーン = %効後_ゾーン:(処理中番号 - 1)%
		발동カード_ID = 効後_효과ID:(処理中番号 - 1)

		TRYCALLFORM CARDNAME_{발동カード_ID},"名前"
		발동カード名 = %RESULTS%
		PRINTFORMW 이 카드와 발동한 《%발동カード名%》를 셔플！
		PRINTFORMW （쉐킷쉐킷）
		PRINTFORML 
		IF 듀얼리스트 == "상대"
			PRINTFORML 셔플된 카드를 선택해 주세요.
			PRINTL [0] - 위쪽 카드
			PRINTL [1] - 아래쪽 카드
			PRINTL
			BINPUT
			;チ-トモード
			IF RAND:1 == 0
				PRINTFORMW 선택한 카드는 《%발동カード名%》！
				PRINTFORMW 이대로 효과가 적용됩니다.
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			ELSE
				PRINTFORMW 선택한 카드는 《음화의 바꿔치기》！
				PRINTFORMW 《%발동カード名%》는 《음화의 위작》으로 교체되었다！
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",발동カード,"無効")
				IF 발동ゾーン == "필드"
					CALL CARD_RECONSTRUCT(対面者,"필드",발동カード,-1)
				ELSEIF 발동ゾーン == "마함"
					CALL CARD_RECONSTRUCT(対面者,"마함",발동カード,-1)
				ENDIF
				CALL CARD_RECONSTRUCT(듀얼리스트,"손패",現손패(듀얼리스트),발동カード_ID)
				SETVAR @"%듀얼리스트%_手加数" , GETVAR(@"%듀얼리스트%_手加数") + 1
				PRINTL
				SETCOLOR C_RED
				PRINTFORMW 《%발동カード名%》을 빼앗겼습니다！
				ITEM:발동カード_ID -= 1
				RESETCOLOR
				CALL CARD_GENERATE_HAND(듀얼리스트,199711)
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
				RETURN 1
			ENDIF
		ELSEIF 듀얼리스트 == "자신"
			PRINTFORML 상대가 카드를 선택합니다.
			PRINTFORMW ………
			;チ-トモード
			IF RAND:1 == 0
				PRINTFORMW 선택한 카드는 《음화의 바꿔치기》！
				PRINTFORMW 《%발동カード名%》는 《음화의 위작》으로 교체되었다！
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",발동カード,"無効")
				IF 발동ゾーン == "필드"
					CALL CARD_RECONSTRUCT(対面者,"필드",발동カード,-1)
				ELSEIF 開始_ゾーン == "마함"
					CALL CARD_RECONSTRUCT(対面者,"마함",발동カード,-1)
				ENDIF
				CALL CARD_RECONSTRUCT(듀얼리스트,"손패",現손패(듀얼리스트),발동カード_ID)
				SETVAR @"%듀얼리스트%_手加数" , GETVAR(@"%듀얼리스트%_手加数") + 1
				CALL CARD_GET_SINGLE(발동カード_ID,1)
				CALL CARD_GENERATE_HAND(対面者,199711)
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
				RETURN 1
			ELSE
				PRINTFORMW 선택한 카드는 《%발동カード名%》！
				PRINTFORMW 이대로 효과가 적용됩니다.
				CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
	RETURN 0
ENDIF



