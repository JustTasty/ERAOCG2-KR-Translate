	CASE "名前"
		RESULTS = 촉수공주의 음화
	CASE "略称"
		RESULTS = 촉수공주의 음화
	CASE "カテゴリ"
		RESULTS:0 = 음화
		RESULTS:1 = 촉수
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_99710(参照先)

