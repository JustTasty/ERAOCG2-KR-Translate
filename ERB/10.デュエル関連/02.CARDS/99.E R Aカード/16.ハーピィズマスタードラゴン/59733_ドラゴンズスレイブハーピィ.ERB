@CARDNAME_59733,参照先
;ココで지정 카드의 名前、略称を返す予定
;#FUNCTIONS
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤즈 슬레이브 해피
	CASE "略称"
		RESULTS = 용의 노예해피
	CASE "カテゴリ"
		RESULTS:0 = 해피
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_59733(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 비행야수족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 1400
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

