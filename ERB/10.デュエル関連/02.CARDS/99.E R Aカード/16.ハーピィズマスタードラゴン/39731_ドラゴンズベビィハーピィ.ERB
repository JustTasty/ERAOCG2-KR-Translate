#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤의 베이비 해피
	CASE "略称"
		RESULTS = 용의 아이 해피
	CASE "カテゴリ"
		RESULTS:0 = 해피
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39731(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
