@CARDCAN_79551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79551)
SIF RESULT == 1
	RETURN 0

;起動효과で除去
;参考：상검암전
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	
	SIF 발동済_1(듀얼리스트,79551) && 발동済_2(듀얼리스트,79551) && 발동済_3(듀얼리스트,79551)
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 아누스피어
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;패에서 起動する효과
;参考：아로마ガ-デン
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79551(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

;参考：상검암전、乱波千代丸
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;カード발동確認
	IF 발동済_2(듀얼리스트,79551)
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79551,3)
	ELSEIF 발동済_1(듀얼리스트,79551)
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79551,2)
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79551,1)
	ENDIF
		
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		;효과条件行先플래그 = 破壊行き
		;CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		
		IF 選択カード != 9999
			CALL CARD_DISPOSE(듀얼리스트,"필드",選択カード,破壊行き)
			IF RESULT == 1
				CALL FULLRESET
				효과条件カテゴリ = 아누스피어
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ELSE
				PRINTFORMW 선택한 카드는 파괴되지 않았다…
			ENDIF
		ENDIF
		
	ENDIF
;参考：아로마ガ-デン
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79551)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ENDIF
