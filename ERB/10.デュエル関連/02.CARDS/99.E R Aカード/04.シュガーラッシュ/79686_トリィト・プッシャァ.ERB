#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 트리트 푸셔어
	CASE "略称"
		RESULTS = 과자판매원
	CASE "カテゴリ"
		RESULTS:0 = 트립 트리트
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_79686(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 通常마법
ENDSELECT

RETURN 0

