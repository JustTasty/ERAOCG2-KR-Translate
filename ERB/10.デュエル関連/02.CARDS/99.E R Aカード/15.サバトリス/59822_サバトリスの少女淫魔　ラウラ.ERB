VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 사바트리스의 소녀음마 라우라
	CASE "略称"
		RESULTS = SB 소녀음마
	CASE "カテゴリ"
		RESULTS:0 = 사바트리스
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_59822(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 싱크로
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 牝性	
ENDSELECT

RETURN 0

@CARDSUMMON_59822(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 3
IF EX参照 == 0 || EX参照 == 1
	素材条件튜너 = 1
	素材条件カテゴリ = 사바트리스
ELSEIF EX参照 >= 10
	素材条件튜너 = -1
ENDIF
IF EX参照 == 1
	CALL SYNCAN(듀얼리스트,소환カード,59822)
	RETURN RESULT
ENDIF


