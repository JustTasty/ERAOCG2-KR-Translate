CALL TEXT_DECORATION("ROGUE")

@CARDCAN_39855(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39855)
SIF RESULT == 1
    RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,39855)
		RETURN 0
	CALL FULLRESET
    효과範囲덱 = 1
	효과条件カテゴリ:0 = 엑소시스터
	효과条件カテゴリ:1 = 크라이시스터
	효과条件カテゴリ:3 = 사바트리스
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == S素材時효과 || 종류 == L素材時효과
	SIF 발동済_2(듀얼리스트,39855)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_39855(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
;상대を参照する時に必要
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39855,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ:0 = 엑소시스터
		효과条件カテゴリ:1 = 크라이시스터
		효과条件カテゴリ:3 = 사바트리스
		효과条件종류 = 마법全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == S素材時효과 || 종류 == L素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39855,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
		IF RESULT == 1
			CALL CARD_SELECT(듀얼리스트,他参照選択カード + 2000)
			CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"悪Ｃ",1)
			CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"発情",2,1)
			CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"接可",2,1)
		ENDIF
	ENDIF
ENDIF


