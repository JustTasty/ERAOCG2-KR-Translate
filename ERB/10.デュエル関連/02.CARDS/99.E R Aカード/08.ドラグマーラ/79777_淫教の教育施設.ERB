@CARDCAN_79777(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79777)
SIF RESULT == 1
	RETURN 0



IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_2(듀얼리스트,79777)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	SIF モンスター数(듀얼리스트) < 5
		효과範囲손패 = 1
	효과範囲필드 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79777)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79777(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 元持ち主
#DIM DYNAMIC 조교대상_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79777,2)
	IF RESULT == 0
		CALL FULLRESET
		SIF モンスター数(듀얼리스트) < 5
			효과範囲손패 = 1
		효과範囲필드 = 1
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과条件성별 = 牝性
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
			조교대상 = GETVAR(@"%듀얼리스트%_필드:コントロール先")
			元持ち主 = GETVAR(@"%듀얼리스트%_MZ_所有:コントロール先")
			IF 듀얼리스트 == "자신"
				CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"所有",1,1)
				CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"接可",2,1)
			ELSEIF 듀얼리스트 == "상대"
				CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"所有",2,1)
			ENDIF
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORML
				SETCOLOR C_PINK
				PRINTFORMW %CALLNAME:조교대상%는 음교의 신자로서 교육《조교》를 받았다…！
				RESETCOLOR
				PRINTFORML
				CALL EROTIC_MOVE("全身凌辱",조교대상, -1, 500)
			ENDIF
			IF 他参照選択カードID < 100000
				IF 듀얼리스트 == "자신" && 元持ち主 == 2
					CALL CARD_GET_SINGLE(他参照選択カードID,1)
				ELSEIF 듀얼리스트 == "상대" && ITEM:他参照選択カードID > 0 && 元持ち主 == 1
					PRINTL
					SETCOLOR C_RED
					TRYCALLFORM CARDNAME_{他参照選択カードID}, "名前"
					PRINTFORMW 《%RESULTS%》를 빼앗겼다！
					ITEM:他参照選択カードID -= 1
					RESETCOLOR
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79777,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件レベル:0 = 4
		효과条件レベル:1 = 8
		효과条件종족 = 마법사족
		효과条件속성 = 빛속성
		효과条件성별 = 牝性
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대덱 = 1
			효과範囲상대묘지 = 1
			효과条件성별 = 牝性 
			효과추가종류 = 効追無効
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,,,1)
		ENDIF
	ENDIF
ENDIF
