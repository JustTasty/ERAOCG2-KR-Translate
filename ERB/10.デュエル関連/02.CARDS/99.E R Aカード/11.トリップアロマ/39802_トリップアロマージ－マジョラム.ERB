VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 트립아로마지-마죠람-
	CASE "略称"
		RESULTS = TA-마죠람-
	CASE "カテゴリ"
		RESULTS:0 = 트립아로마
		RESULTS:1 = 아로마
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_39802(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 식물족
	CASE "レベル"
		RETURN 5
