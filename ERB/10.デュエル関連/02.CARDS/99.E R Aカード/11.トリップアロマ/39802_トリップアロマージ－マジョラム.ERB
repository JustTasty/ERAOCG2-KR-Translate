CALL CARD_ABLE(3,지속효과)
PRINTL ③：이 카드가 마법 & 함정 존에 존재하는 한,
PRINTL 자신 필드에 존재하는 미약 카운터가 놓여진 몬스터의 레벨/랭크/링크 를 1개 내린다.
CALL TEXT_DECORATION("ROGUE")

@CARDCAN_39802(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39802)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,39802)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,39802,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 4
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件固名前 = 트립아로마지-마죠람-
	효과条件종족 = 식물족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 트립아로마
	효과条件レベル = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,39802)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(対面者) >= 5
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件名前 = 트립아로마지-마죠람-
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과 || 종류 == リアクション효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39802(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 合計攻撃力
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 이동カード名
#DIM DYNAMIC 캐릭터番号
#DIM DYNAMIC レベル
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39802,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 트립아로마
		효과条件レベル = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			IF モンスター数(対面者) > 0
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
				IF RESULT == 1
					選択カード = RESULT:1
					CALL CARD_SELECT(듀얼리스트,選択カード)
					選択カード = RESULT
					CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択カード,1)
					IF RESULT != -1
						조교대상 = RESULT
						PRINTFORML 
						SETCOLOR C_PINK 
						PRINTFORML %NAME:조교대상%은 마죠람이 피우는 미향에 의해 발정했다!
						RESETCOLOR
						CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1392),500)
					ENDIF
					CALL STATCHANGE_EFFECT(対面者,"자신",選択カード,"発情",2)
					CALL SET_FIELD_INFO(対面者,"필드",選択カード,"薬Ｃ",1)
				ENDIF
			ENDIF
			SS소환可能종족 = 식물족
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39802,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%의 몸에 마죠람의 꽃이 피었다!
			RESETCOLOR
			CALL EROTIC_MOVE("淫紋の疼き",조교대상,NO_TO_CHARANUM(1392),500)
		ENDIF
		CALL CARD_ADD(対面者,"상대묘지","마함",場所)
	ENDIF
ELSEIF 종류 == 지속효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_薬Ｃ:カウンタ") == 0
			CONTINUE
		TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カウンタ")}("レベル")
			レベル = RESULT - 1
		CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"一星",レベル,1)
	NEXT
ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_薬Ｃ:カウンタ") == 0
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_リ数:カウンタ") >= 1
			CONTINUE
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",カウンタ)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORMW %NAME:조교대상%은 마죠람의 꽃으로부터 감도는 미향에 의해 힘이 빠져간다!
			RESETCOLOR
			CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1392),500)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"リ数",1)
		ENDIF
	NEXT
ENDIF
