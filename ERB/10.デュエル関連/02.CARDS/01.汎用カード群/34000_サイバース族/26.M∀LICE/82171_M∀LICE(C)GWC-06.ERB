@CARDCAN_82171(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 특수발동

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,82171)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,82171)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 멜리스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
		특수발동 = 1
	ELSEIF RESULT == 0 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = 멜리스
	효과条件종류 = モン全般
	효과条件소환可 = 1
	SIF 특수발동 == 1
		효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_82171(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 특수발동

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		특수발동 = 1
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82171,1)
	;효과処理
	IF RESULT == 0
		IF 특수발동 == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 멜리스
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
		
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 멜리스
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カードID = RESULT:1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 멜리스
			효과条件종류 = 링크
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARD_{選択カードID}, "攻撃力"
				CALL LIFE_CHANGE(듀얼리스트,"増加","효과",RESULT)
			ENDIF
		ENDIF
	ENDIF
ENDIF

