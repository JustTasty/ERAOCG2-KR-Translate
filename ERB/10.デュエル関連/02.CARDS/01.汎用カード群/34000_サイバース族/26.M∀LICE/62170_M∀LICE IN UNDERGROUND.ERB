@CARDNAME_62170,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = M∀LICE IN UNDERGROUND
	CASE "略称"
		RESULTS = UNDERGROUND
	CASE "カテゴリ"
		RESULTS:0 = 멜리스
ENDSELECT


@CARD_62170(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_62170(종류)
#DIM DYNAMIC 종류

PRINTL 자신 필드는 "UNDERGROUND" 가 된다.
PRINTL 이 카드명의  카드는 1턴에 1장 밖에 발동할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①：이 카드의 발동시의 효과 처리로서
PRINTL 자신의 패 / 덱 / 묘지로 부터 "M∀LICE" 카드 1장을 제외할 수 있다.
CALLFORM CARD_ABLE(2,攻守変動)
PRINTL ②：자신의 제외 상태의 "M∀LICE" 함정 카드가 3종류 이상 존재하는 한,
PRINTL 자신 필드의 "M∀LICE" L 몬스터의 공격력은 3000 올라간다.
CALLFORM CARD_ABLE(3,지속효과)
PRINTL ③：자신 필드에 "M∀LICE" L 몬스터가 존재하는 한,
PRINTL 상대 몬스터는 "M∀LICE" L 몬스터 밖에 공격 대상으로 선택할 수 없다.

@CARDCAN_62170(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 存在판정

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62170)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,62170)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件종류 = 함정全般
	효과条件カテゴリ = 멜리스
	효과条件固名前起動 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件カテゴリ = 멜리스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_62170(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62170,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件行先플래그 = 제외行き
		효과条件カテゴリ = 멜리스
		효과条件任意 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件カテゴリ = 멜리스
	효과条件종류 = 링크
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,3000)
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트,"UNDERGROUND")
	CALL FULLRESET
	효과条件종류 = 링크以外
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻避")
ENDIF
