VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 루닉의 속임수
	CASE "略称"
		RESULTS = 루닉의 속임수
	CASE "カテゴリ"
		RESULTS:0 = 루닉
ENDSELECT


