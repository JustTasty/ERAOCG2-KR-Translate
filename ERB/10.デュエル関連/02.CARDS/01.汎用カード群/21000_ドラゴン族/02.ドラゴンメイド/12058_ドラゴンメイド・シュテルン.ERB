@CARDNAME_12058,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤메이드 슈테른
	CASE "略称"
		RESULTS = 슈테른
	CASE "カテゴリ"
		RESULTS:0 = 드래곤메이드
ENDSELECT


@CARD_12058(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 9
	CASE "攻撃力"
		RETURN 2800
	CASE "守備力"
		RETURN 1800
	CASE "성별"
		RETURN 牝性
	CASE "連動ID"
		RETURN 2058
ENDSELECT

RETURN 0

@CARD_EXPLANATION_12058(종류)
#DIM DYNAMIC 종류

