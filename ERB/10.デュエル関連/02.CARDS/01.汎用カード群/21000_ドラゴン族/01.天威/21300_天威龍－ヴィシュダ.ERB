@CARDCAN_21300(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,21300)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	IF 발동済_2(듀얼리스트,21300) == 0
		CALL CARDCAN_21300(듀얼리스트,묘지起動,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	SIF 발동済_1(듀얼리스트,21300)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,21300,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 효과全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0

	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,21300)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 효과無し全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_21300(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동불가,10
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;同領域の複数選択――――――――――――――――――――――――――――――――――――――――――
;손패で起動できる효과が2つあり、그것이 묘지효과でもある場合など
IF 종류 == 손패起動

	SIF 발동済_1(듀얼리스트,21300)
		발동불가:1 = 1
	CALL CARD_SS_CHECK(듀얼리스트,21300,"손패")
	SIF RESULT == 1
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 효과全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 0
		발동불가:1 = 1

	CALL CARDCAN_21300(듀얼리스트,묘지起動,ゾーン,場所)
	SIF RESULT != 1
		발동불가:2 = 1
	IF 발동불가:1 == 0 && 발동불가:2 == 0
		CALL CARD_EXPLANATION_21300(종류)
		CALL YN_CHOICE(듀얼리스트,"①의 효과","②의 효과")
	ELSEIF 발동불가:2 == 1
		RESULT = 0
	ELSEIF 발동불가:1 == 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		종류 = 손패起動
	ELSEIF RESULT == 1
		종류 = 묘지起動
	ENDIF
ENDIF
;同領域の複数選択――――――――――――――――――――――――――――――――――――――――――

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21300,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21300,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,제외行き)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"손패")
	ENDIF
ENDIF



