@CARDCAN_1003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIM DYNAMIC 条件달성
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1003)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,1003)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 마법사족
	효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성 = 1
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

IF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 마법사족
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 300
	CALL STATCHANGE_BASIC(듀얼리스트,"자신",場所,攻撃力修正)	

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1003,2,X消費1)
	IF RESULT == 0
		CALL YN_CHOICE(듀얼리스트,"●자신 묘지의 이 카드의 공격력 이하의 마법사족 몬스터 １장을 선택하고、특수 소환한다。","●이 카드의 공격력 이하의 상대 필드의 몬스터 １장을 선택하고、엔드 페이즈까지 그 몬스터의 컨트롤을 얻는다。")
		IF RESULT == はい
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = モン全般
			효과条件종족 = 마법사족
			효과条件攻撃力 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ELSEIF RESULT == いいえ
			CALL FULLRESET
			효과추가종류 = 5
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		ENDIF
	ENDIF
ENDIF