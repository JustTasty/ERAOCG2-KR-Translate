PRINTL 패 / 필드의 이 카드를 묘지로 보내고 발동할 수 있다。
PRINTL 그 자신 몬스터의 공격력 / 수비력은 그 데미지 계산시에만 ２０００ 올린다。


@CARDCAN_1009(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1009)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	CALL CARD_SS_CHECK(듀얼리스트,1009,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前:0 = 블랙 매지션 걸
	효과条件名前:1 = 블랙 매지션
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	IF ゾーン == "필드" 
		SIF 戦闘場所(듀얼리스트) == 場所
			RETURN 0
	ELSEIF ゾーン == "손패"
		PRINT
	ELSE
		RETURN 0
	ENDIF

	SIF GETVAR(@"%듀얼리스트%_MZ_種:%듀얼리스트%_戦闘カード") != 마법사족
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_属:%듀얼리스트%_戦闘カード") != 어둠속성
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_1009(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1009)
	IF RESULT == 0
		CALL FULLRESET
		효과条件他所 = 1
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)			
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1009)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前:0 = 블랙 매지션 걸
		효과条件名前:1 = 블랙 매지션
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1009)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一時",2000)
	ENDIF
ENDIF

