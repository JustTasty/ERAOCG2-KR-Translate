@CARDNAME_2113,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 라뷰린스 버틀러 아리아스
	CASE "略称"
		RESULTS = 아리아스
	CASE "カテゴリ"
		RESULTS:0 = 라뷰린스
ENDSELECT


@CARD_2113(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
			RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 2500
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

