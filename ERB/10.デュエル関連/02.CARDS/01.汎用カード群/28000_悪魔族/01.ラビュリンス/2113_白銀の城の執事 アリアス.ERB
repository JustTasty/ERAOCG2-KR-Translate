PRINTL 묘지에 이 카드를 특수 소환한다。

@CARDCAN_2113(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2113)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動 || 종류 == 필드起動 || 종류 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"손패","필드")
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF 발동済_1(듀얼리스트,2113)
		RETURN 0
	SIF 마함数(듀얼리스트) == 5 && モンスター数(듀얼리스트) == 5
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件スーパー종류 = 通常함정
	효과条件カテゴリ = 라뷰린스
	효과条件종류 = モン全般
	SIF ゾーン == "손패"
		효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,2113)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 함정全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"除去成功")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2113,"묘지")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_2113(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード

IF 종류 == 손패起動 || 종류 == 필드起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2113,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		IF モンスター数(듀얼리스트) < 5
			효과条件종류:0 = モン全般
			효과条件カテゴリ = 라뷰린스
		ENDIF
		SIF 마함数(듀얼리스트) < 5
			효과条件スーパー종류 = 通常함정
		효과条件任意 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"손패",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_손패:選択カード")}("종류")
			IF RESULT == 通常함정
				CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード,마함行き,2)
			ELSEIF RESULT == 通常モン || RESULT == 효과モン
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트, "손패", 選択カード)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2113,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所)
	ENDIF
ENDIF
