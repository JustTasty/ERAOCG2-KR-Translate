VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 라뷰린스 쿠클락
	CASE "略称"
		RESULTS = 라뷰린스 쿠쿨락
	CASE "カテゴリ"
		RESULTS:0 = 라뷰린스
ENDSELECT


