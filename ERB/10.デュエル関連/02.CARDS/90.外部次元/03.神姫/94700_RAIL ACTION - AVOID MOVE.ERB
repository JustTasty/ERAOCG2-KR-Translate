@CARDNAME_94700,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = RAIL ACTION - AVOID MOVE
	CASE "略称"
		RESULTS = RA-AVOID M
	CASE "カテゴリ"
		RESULTS:0 = 신희
ENDSELECT


@CARD_94700(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_94700(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 카드는 １턴에 １번밖에 발동할 수 없으며、이 카드명의 ②의 효과는 １턴에 １번밖에 사용할 수 없다。
PRINTL 자신 필드의 몬스터가 「신희」몬스터 １장의 みの경우、이 카드는 패에서도 발동할 수 있다。
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①：자신 필드의 몬스터가 「신희」몬스터 １장의 みの경우、その몬스터는 完全내성을 얻는다。
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ②：자신 필드에 "신희" 몬스터가 존재하는 경우、상대 필드의  마법 / 함정 카드 １장을 대상으로 하고 발동할 수 있다。
PRINTL 이 카드를 패로 되돌리고、그 카드를 파괴한다。

@CARDCAN_94700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件チェック,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,94700)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,94700)
		RETURN 0

	SIF ゾーン != "마함"
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 신희
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF 마함数(対面者) == 0
		RETURN 0
	
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF 발동済_2(듀얼리스트,94700)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動
	SIF 발동済_2(듀얼리스트,94700)
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 신희
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF モンスター数(듀얼리스트) != 1
		RETURN 0
	
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF モンスター数(듀얼리스트) != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 신희
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	RETURN 1
ENDIF

@CARDEFFECT_94700(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者

#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 条件チェック,5

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,94700,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,"마함",場所,3)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,94700,2)
	IF RESULT == 0
	ENDIF
ELSEIF 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,94700,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件名前 = RAIL ACTION - AVOID MOVE
		CALL CARD_ADD(듀얼리스트,"손패","마함",場所,"表側표시")
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 신희
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"モ耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"魔耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"함정耐")
ENDIF

