@IRAI_EVENT_208(参照先)
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 所持制限カード数
#DIM DYNAMIC 合計価格

VARSET RESULT
VARSET RESULTS
VARSET 所持制限カード数

FOR カウンタ,1000,100000
	IF ITEM:カウンタ >= 1
		CALL CARD_RESTRICTION_CHECK(カウンタ)
		SIF RESULT > 0
			所持制限カード数 ++ 
	ENDIF
NEXT

SELECTCASE 参照先
	CASE "名前"
		RESULTS = (裏CP)제한의 벽을 부숴라！(반복수주 가능)
	CASE "이벤트種"
		RETURN 이벤트_施設
	CASE "依頼先"
		RETURN 場所_裏通り
	CASE "詳細"
		PRINTL 카드가 揃ったけど、制限지정で思うように덱を組めない！
		PRINTL そんなあなたに朗報です！
		PRINTL こちらでデュエルディスクを改造する事で、制限の限界を突破できるようになります！
		PRINTL ご興味のある方は是非当店まで！
		PRINTL 
		PRINTFORML （費用:{200000 + (制限突破횟수*10000)}円）
		;PRINTFORML （所持制限カード数:{所持制限カード数}）
			SETCOLOR C_RED
		PRINTL （注意！デュエルのバランスを壊す可能性が非常に高いですので自己判断でのご利用をお願いします！）
			RESETCOLOR
		PRINTL
	CASE "条件"
		SIF パック_解放:99 == 0
			RETURN 0
		SIF MONEY < 200000 + (制限突破횟수*10000)
			RETURN 0
		SIF 所持制限カード数 < 20
			RETURN 0
		RETURN 1
ENDSELECT

RETURN 0

