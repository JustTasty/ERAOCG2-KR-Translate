;-------------------------------------------------
;클리캡
;도구사용コマンド、レベル2
;-------------------------------------------------
@COM42
;着脱の処理
TEQUIP:클리캡 = !TEQUIP:클리캡
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 10
DOWNBASE:기력 += 80

CALL SOURCE_CALC_쾌Ｃ(TARGET, MASTER,200)
CALL SOURCE_CALC_노출(TARGET, MASTER, 20)
CALL SOURCE_CALC_접촉(TARGET, MASTER, 10)
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 1
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 1
ENDIF

EXP:MASTER:도구사용경험 ++

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM42(ARG)
PRINTL ＜클리캡装備中＞

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:ARG:체력 += 5
DOWNBASE:ARG:기력 += 20
CALL SOURCE_CALC_쾌Ｃ(TARGET, -1,100)
CALL SOURCE_CALC_노출(TARGET, MASTER, 10)
;-------------------------------------------------
;경험の処理
;-------------------------------------------------

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------

@COM_ABLE42
;電動클리캡実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(42)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:11
	RETURN 1
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:2 == 0 && NOITEM == 0
	RETURN 0

;하반신착의
SIF TEQUIP:0 > 1
	RETURN 0
;オトコや후타나리はダメ
SIF TALENT:2 & 2
	RETURN 0

;샤워中はダメ
SIF TEQUIP:32
	RETURN 0
RETURN 1
