;-------------------------------------------------
;수치플레이
;도구사용コマンド、レベル3
;-------------------------------------------------
@COM52
;着脱の処理
TEQUIP:수치플레이 = !TEQUIP:수치플레이
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 0
DOWNBASE:기력 += 200

CALL SOURCE_CALC_노출(TARGET, MASTER, 600)

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM52(ARG)
;수치플레이 중
PRINTL ＜수치플레이중＞

DOWNBASE:ARG:체력 += 10
DOWNBASE:ARG:기력 += 100

CALL SOURCE_CALC_노출(TARGET, MASTER, 300)
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE52
;착유기実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(52)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:수치플레이
	RETURN 1
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:큰거울 == 0 && NOITEM == 0
	RETURN 0
;순종が1以上ないとダメ
SIF ABL:순종 <= 1
	RETURN 0
;침대ルームでないとダメ
SIF !BEDROOM(CFLAG:MASTER:현재위치)
	RETURN 0
RETURN 1
