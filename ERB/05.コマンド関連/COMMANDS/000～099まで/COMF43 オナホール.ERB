;-------------------------------------------------
;오나홀
;도구사용コマンド、レベル2
;-------------------------------------------------
@COM43
;着脱の処理
TEQUIP:오나홀 = !TEQUIP:오나홀

;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
TCVAR:TARGET:사정대상캐릭터_1 = MASTER

TCVAR:TARGET:사정부위플래그 = 10
;강도
TCVAR:TARGET:사정쾌락강도 = 1000

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 10
DOWNBASE:기력 += 80

CALL SOURCE_CALC_쾌Ｃ(TARGET, MASTER,200)
CALL SOURCE_CALC_노출(TARGET, MASTER, 20)
CALL SOURCE_CALC_접촉(TARGET, MASTER, 10)
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 1
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 1
ENDIF

EXP:MASTER:도구사용경험 ++

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM43(ARG)
PRINTL ＜오나홀 장착중＞

