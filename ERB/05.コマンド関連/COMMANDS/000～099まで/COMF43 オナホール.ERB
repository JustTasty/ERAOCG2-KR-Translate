@COM_ABLE43
;오나홀実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(43)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:12
	RETURN 1
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:3 == 0 && NOITEM == 0
	RETURN 0
;オトコや후타나리じゃないとダメ
SIF HAS_PENIS(TARGET) == 0
	RETURN 0

;하반신착의
SIF TEQUIP:0 > 1
	RETURN 0

;새댁플레이 중はダメ
SIF TEQUIP:새댁플레이
	RETURN 0
RETURN 1