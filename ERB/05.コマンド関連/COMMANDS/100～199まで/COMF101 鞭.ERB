@COM_ABLE101
;채찍実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(101)
	RETURN RESULT
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:13 == 0 && NOITEM == 0
	RETURN 0

;全裸でないとダメ（양말、특수は除く）
SIF TEQUIP:0 || TEQUIP:1
	RETURN 0
;목욕탕플레이 중はダメ
SIF TEQUIP:목욕탕플레이
	RETURN 0
;새댁플레이 중はダメ
SIF TEQUIP:새댁플레이
	RETURN 0
RETURN 1