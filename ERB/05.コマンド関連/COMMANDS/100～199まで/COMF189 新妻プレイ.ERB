;-------------------------------------------------
;새댁플레이
;특수コマンド
;-------------------------------------------------
@COM189
;着脱の処理　装備時はソース、경험の加算は行わない
TEQUIP:새댁플레이 = !TEQUIP:새댁플레이
RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM189(ARG)
;새댁플레이

;助手조교時は、앞치마を解除して関数終了
IF ASSIPLAY
	TEQUIP:ARG:새댁플레이 = 0
	RETURN 0
ENDIF

PRINTL ＜새댁플레이 중＞

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:ARG:체력 += 20
DOWNBASE:ARG:기력 += 20

CALL SOURCE_CALC_접촉(TARGET, MASTER, 50)
CALL SOURCE_CALC_환락(TARGET, MASTER, 250)
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;애정경험
EXP:ARG:애정경험 += 1
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE189
;새댁플레이実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(189)
	RETURN RESULT
;奴隷が연모か친애でないとダメ
SIF !TALENT:연모
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:새댁플레이
	RETURN 1
;아이템｢앞치마｣を持っているか、아이템なし설정でないとダメ
SIF ITEM:23 == 0 && NOITEM == 0
	RETURN 0
;助手じゃダメ
SIF ASSIPLAY
	RETURN 0
;순종が3以上ないとダメ
SIF ABL:순종 < 3
	RETURN 0
;야외플레이 중はダメ
SIF TEQUIP:야외플레이
	RETURN 0
;수치플레이 중はダメ
SIF TEQUIP:수치플레이
	RETURN 0
;목욕탕플레이 중はダメ
SIF TEQUIP:목욕탕플레이
	RETURN 0
RETURN 1
