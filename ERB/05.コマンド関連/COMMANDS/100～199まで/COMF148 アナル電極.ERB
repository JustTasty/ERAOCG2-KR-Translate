;-------------------------------------------------
;애널전극
;ハードな조교コマンド、レベル4
;-------------------------------------------------
@COM148
;着脱の処理
TEQUIP:애널전극 = !TEQUIP:애널전극
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
;行為者
TCVAR:116 = MASTER
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 300
DOWNBASE:기력 += 450

CALL SOURCE_CALC_쾌Ａ(TARGET, MASTER, 500)
CALL SOURCE_CALC_노출(TARGET, MASTER, 300)

;固定値
CALL SOURCE_CALC_고통(TARGET, MASTER, 1000)
;変動値추가
LOCAL = 1500 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_고통(TARGET, MASTER, LOCAL)
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;Ａ경험
EXP:Ａ경험 += 4

SIF !GETBIT (CFLAG:3,8)
	EXP:이상경험 += 1

;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 1
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 1
ENDIF

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM148(ARG)
;애널전극

PRINTL ＜애널전극 삽입중＞

DOWNBASE:ARG:체력 += 200
DOWNBASE:ARG:기력 += 250

CALL SOURCE_CALC_쾌Ａ(TARGET, MASTER, 250)
CALL SOURCE_CALC_노출(TARGET, MASTER, 150)

;固定値
CALL SOURCE_CALC_고통(TARGET, MASTER, 500)
;変動値추가
LOCAL = 750 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_고통(TARGET, MASTER, LOCAL)
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;Ａ경험
EXP:ARG:Ａ경험 += 1

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE148
;애널전극実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(148)
	RETURN RESULT
;하반신착의
SIF TEQUIP:0 > 1
	RETURN 0
;解除はいつでも可能
SIF TEQUIP:23
	RETURN 1
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:24 == 0 && NOITEM == 0
	RETURN 0
;애널바이브사용중は불가
SIF TEQUIP:14
	RETURN 0
;애널비즈사용중は불가
SIF TEQUIP:15
	RETURN 0
;普通の관장사용중は불가
SIF TEQUIP:21
	RETURN 0
;バルーン사용중は불가
SIF TEQUIP:22
	RETURN 0
;목욕탕플레이 중はダメ
SIF TEQUIP:목욕탕플레이
	RETURN 0
RETURN 1
