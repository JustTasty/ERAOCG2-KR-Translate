;-------------------------------------------------
;샤워
;특수コマンド
;-------------------------------------------------
@COM188
;着脱の処理　装備時はソース、경험の加算は行わない
TEQUIP:샤워 = !TEQUIP:샤워

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM188(ARG)
;샤워사용중

PRINTL ＜샤워 사용중＞

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:ARG:체력 += 0
DOWNBASE:ARG:기력 += 10

CALL SOURCE_CALC_환락(TARGET, MASTER, 200)
CALL SOURCE_CALC_노출(TARGET, MASTER, 80)
;-------------------------------------------------
;특수ソース処理
;-------------------------------------------------
;흡혈귀（流물の中では動けないため、いろいろ추가）
IF TALENT:ARG:흡혈귀
	CALL SOURCE_CALC_불결(TARGET, MASTER, 200)
ENDIF

;동물귀の場合（まぁ基本洗われるのは嫌と解釈）
IF TALENT:ARG:동물귀
	CALL SOURCE_CALC_불결(TARGET, MASTER, 200)
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;샤워で汚れは常にリセット
STAIN:ARG:0 = 0
STAIN:ARG:1 = 0
STAIN:ARG:2 = 2
STAIN:ARG:3 = 1
STAIN:ARG:4 = 8
STAIN:ARG:5 = 0
STAIN:ARG:6 = 0

;윤활を1000減らす
IF PALAM:ARG:윤활 > 1000
	PALAM:ARG:윤활 -= 1000
ELSE
	PALAM:ARG:윤활 = 0
ENDIF

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE188
;샤워実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(188)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:32
	RETURN 1
;お목욕中じゃないとダメ
SIF TEQUIP:목욕탕플레이 == 0
	RETURN 0
;클리캡사용중は불가
SIF TEQUIP:11
	RETURN 0
;니플캡사용중は불가
SIF TEQUIP:16
	RETURN 0
;착유기사용중は불가
SIF TEQUIP:17
	RETURN 0
;유방전극装着中はダメ
SIF TEQUIP:24
	RETURN 0
;흡혈귀や동물귀には순종４がないと使用불가（プレイヤーが새드ならＯＫ）
IF TALENT:흡혈귀 || TALENT:동물귀
SIF ABL:순종 < 4 && TALENT:MASTER:새드 == 0
	RETURN 0
ENDIF
RETURN 1
