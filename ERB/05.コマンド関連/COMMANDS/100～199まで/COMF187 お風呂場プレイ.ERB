;-------------------------------------------------
;목욕탕플레이
;특수なコマンド
;-------------------------------------------------
@COM187
;着脱の処理　終了時はソース、경험の加算は行わない
IF TEQUIP:목욕탕플레이 == 1
	TEQUIP:목욕탕플레이 = 0
	;샤워も外す
	TEQUIP:샤워 = 0
	RETURN 1
ELSE
	TEQUIP:목욕탕플레이 = 1
ENDIF
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 0
DOWNBASE:기력 += 30

CALL SOURCE_CALC_환락(TARGET, MASTER, 150)
CALL SOURCE_CALC_노출(TARGET, MASTER, 200)
CALL SOURCE_CALC_액체(TARGET, MASTER, 500)
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;装備時に汚れをリセットする（목욕に来て汚れたままもどうかということで）
STAIN:0 = 0
STAIN:1 = 0
STAIN:2 = 2
STAIN:3 = 1
STAIN:4 = 8
STAIN:5 = 0

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM187(ARG)
;목욕탕플레이

DOWNBASE:ARG:체력 += 10
DOWNBASE:ARG:기력 += 10

CALL SOURCE_CALC_환락(TARGET, MASTER, 75)
CALL SOURCE_CALC_노출(TARGET, MASTER, 100)
CALL SOURCE_CALC_액체(TARGET, MASTER, 250)

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE187
;목욕탕플레이実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(187)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:목욕탕플레이
	RETURN 1
;순종が1以上ないとダメ
SIF ABL:순종 <= 1
	RETURN 0
;대상か助手が동물귀で、순종が3以下だとダメ
SIF TALENT:동물귀 && ABL:순종 <= 2
	RETURN 0
;全裸でないとダメ
SIF EQUIP:0
	RETURN 0
;야외플레이 중はダメ
SIF TEQUIP:야외플레이
	RETURN 0
;수치플레이 중はダメ
SIF TEQUIP:수치플레이
	RETURN 0
;새댁플레이 중はダメ
SIF TEQUIP:새댁플레이
	RETURN 0
RETURN 1