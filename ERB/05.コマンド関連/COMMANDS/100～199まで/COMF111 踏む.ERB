@COM_ABLE111
;土下座実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(111)
	RETURN RESULT

SIF TCVAR:TARGET:도게자중
	RETURN 1
SIF TALENT:TARGET:마조
	RETURN 1
SIF ABL:TARGET:마조끼 <= 3
	RETURN 0
SIF TCVAR:TARGET:절정여운 == 0
	RETURN 0
RETURN 1
