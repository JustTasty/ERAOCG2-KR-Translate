;청소
@COM_ABLE410
;청소実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(410)
	RETURN RESULT
;汚れてないとダメ
SIF FLAG:(1000 + CFLAG:MASTER:현재위치) < 100
	RETURN 0
;기력0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
SIF CFLAG:우후후 == 2
	RETURN 0
RETURN 1