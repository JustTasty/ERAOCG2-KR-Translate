@COM302
;스킨십
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
;ボディタッチで발기UP
IF BASE:MASTER:발기 <= 1000
	TCVAR:MASTER:사정쾌락강도 = 200
	TCVAR:MASTER:사정대상캐릭터_1 = TARGET
	TCVAR:MASTER:사정부위플래그 = 8
ENDIF


LOCAL = RAND:100
LOCAL:1 = 90 + GET_SUCCESS_RATE() / 5
SIF LOCAL:1 > 99
	LOCAL:1 = 99
IF LOCAL <= 9
	;10％で大成功
	TFLAG:SELECTCOM분기 = 1
ELSEIF LOCAL >= LOCAL:1
	;10～1％で失敗
	TFLAG:SELECTCOM분기 = -1
ELSE
	;残りは成功
	TFLAG:SELECTCOM분기 = 0
ENDIF
;先制発生時は失敗しない
SIF TCVAR:TARGET:CT행동
	TFLAG:SELECTCOM분기 = MAX(TFLAG:SELECTCOM분기,0)

DOWNBASE:기력 += 30
DOWNBASE:MASTER:기력 += 30

;환락강도
LOCAL:0 = 200
;정복
LOCAL:1 = 100
IF TFLAG:SELECTCOM분기 == -1
	TIMES LOCAL:0 , 0.10
	TIMES LOCAL:1 , 0.50
ELSEIF TFLAG:SELECTCOM분기 == 0
	TIMES LOCAL:0 , 1.00
	TIMES LOCAL:1 , 1.00
ELSE
	TIMES LOCAL:0 , 2.00
	TIMES LOCAL:1 , 2.00
ENDIF


CALL SOURCE_CALC_환락(TARGET, MASTER, LOCAL:0)
CALL SOURCE_CALC_정복(TARGET, MASTER, LOCAL:1)
CALL SOURCE_CALC_접촉(TARGET, MASTER, 50)
CALL SOURCE_CALC_노출(TARGET, MASTER, 60)
TIME += 10

;스킨십した플래그
TCVAR:접촉가능여부 = 1440 * DAY + TIME
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
;스킨십
@COM_ABLE302
;스킨십実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(302)
	RETURN RESULT
;1時間間隔
SIF TIME_PROGRESS(TCVAR:접촉가능여부) < 60 && TALENT:TARGET:연모 != 2
	RETURN 0
;수면中
SIF CFLAG:수면
	RETURN 0
;기력0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
RETURN 1