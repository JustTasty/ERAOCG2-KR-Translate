;반지を渡す
@COM_ABLE354
;고백한다実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(354)
	RETURN RESULT
;二人きりでないとだめ
SIF GET_TARGETNUM() > 1
	RETURN 0
;반지はもっていること前提
SIF ITEM:결혼반지 <= 0
	RETURN 0
;호감도1万以下はダメ
SIF CFLAG:TARGET:호감도 < 10000
	RETURN 0
;既に애처ならダメ
SIF TALENT:TARGET:애처 == 1
	RETURN 0
;수면中
SIF CFLAG:수면
	RETURN 0
;기력0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
RETURN 1