;COMABLE一括관리
@GLOBAL_COMABLE(ARG)
#FUNCTION
;コマンド필터
LOCALS = /{ARG}/
IF STRCOUNT(SAVESTR:0,LOCALS)
	RESULT = 0
	RETURNF 1
ENDIF
;一括관리
;日常OFF
IF INRANGE(ARG,300,309)
	IF TFLAG:COMABLE관리 != 1
		RESULT = 0
		RETURNF 1
	ENDIF
ELSEIF INRANGE(ARG,310,399)
	IF TFLAG:COMABLE관리 == 2
		RESULT = 0
		RETURNF 1
	ENDIF
	;お목욕場ではガチエロになるので
	IF BATHROOM(CFLAG:MASTER:현재위치) && CFLAG:우후후 != 2
		IF ARG != 350 && ARG != 351
			RESULT = 0
			RETURNF 1
		ENDIF
	ENDIF
;ウフフOFF
ELSEIF (ARG < 300 || ARG >= 900) 
	IF TFLAG:COMABLE관리 != 2
		RESULT = 0
		RETURNF 1
	ENDIF
ELSEIF ARG >= 400 && ARG < 900
	IF TFLAG:COMABLE관리 == 2
		RESULT = 0
		RETURNF 1
	ENDIF
ENDIF

IF INRANGE(ARG,80,95)
	SIF BASE:TARGET:체력 < 300
		RETURNF 1
ENDIF
IF TARGET:1 > 0 && CFLAG:수면 == 1 && (ARG < 400 || ARG >= 900)
	RESULT = 0
	RETURNF 1
ENDIF


