@COM_ABLE912
;파이즈리펠라
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(912)
	RETURN RESULT
;オトコだとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;[絶壁]だと불가
SIF BUST_SIZE(TARGET) == -2
	RETURN 0
;[爆乳]なら기교LV2以上、[巨乳]でなければ기교4以上、[貧乳]だと기교5必要
SIF BUST_SIZE(TARGET) + ABL:기교 < 4
	RETURN 0
;조교者がオトコか半人半妖かふたなりじゃないとダメ
SIF !(TALENT:MASTER:성별 & 2)
	RETURN 0
;고양이혀の奴隷の場合は기교Lv2以上必要
SIF TALENT:고양이혀 && ABL:기교 < 2
	RETURN 0
;상반신착의
SIF TEQUIP:1 > 1
	RETURN 0
;밧줄사용중/手足が使えないと불가
SIF TEQUIP:19
	RETURN 0
;볼개그사용중は불가
SIF TEQUIP:20
	RETURN 0
RETURN 1
