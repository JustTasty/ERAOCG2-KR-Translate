@CARDCAN_79635(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79635)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79635)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前:0 = アンジェロ・바르모니카
	효과条件名前:1 = デモーネ・바르모니카
	효과条件名前:2 = サキューベ・바르모니카
	효과条件名前:3 = 바르모니카の淫神－ラッシーヴィア
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_79635(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 종류
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 설치場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;卡片发动確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79635,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CUSTOMDRAWLINE —
		PRINTL 響鳴카운터を乗せる카드를 選択
		CUSTOMDRAWLINE —
		CALL FULLRESET
		효과条件名前:0 = アンジェロ・바르모니카
		효과条件名前:1 = デモーネ・바르모니카
		효과条件名前:2 = サキューベ・바르모니카
		효과条件名前:3 = 바르모니카の淫神－ラッシーヴィア
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"마함",ゾーン,場所,79635)
		SIF RESULT == 9999
			RETURN 0
		설치場所 = RESULT
		CALL SET_FIELD_INFO(듀얼리스트,"마함",설치場所,"個Ｃ",1)
		
		IF 듀얼리스트 == "자신"
			PRINTL
			PRINTL こうか
			PRINTL 　聲　を選択
			PRINTL
			PRINTL （ごにょごにょ…！）
			PRINTL （回復しながらおや개를 食べて、몬스터를 強くしましょう…！）[0]
			PRINTL
			PRINTL （ひそひそ…♪）
			PRINTFORML （ダメージは気にせず %CALLNAME:NO_TO_CHARANUM(2140)%）を食べて、덱 위에서 카드를 ３장送れ…♪[1]
			BINPUT
			IF RESULT == 0
				CALL CARDEFFECT_79635_1(듀얼리스트,종류,ゾーン,場所)
			ELSEIF RESULT == 1
				CALL CARDEFFECT_79635_2(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		;对方が发动
		ELSEIF 듀얼리스트 == "상대"
			SELECTCASE RAND:2
				CASE 0
					PRINTFORML 選ばれた효과 
					PRINTW ●５００回復し、「바르모니카」の공격력을 오른다。
					CALL CARDEFFECT_79635_1(듀얼리스트,종류,ゾーン,場所)
				CASE 1
					PRINTFORML 選ばれた효과 
					PRINTW ●５００데미지를 受け、덱 위에서 카드를 ３장묘지로 보낸다。
					CALL CARDEFFECT_79635_2(듀얼리스트,종류,ゾーン,場所)
			ENDSELECT
		ENDIF
	ENDIF
ENDIF


@CARDEFFECT_79635_1(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 종류
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교강도
#DIM DYNAMIC 调教对象
#DIM DYNAMIC 설치場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;响鸣지시物数量统计
CALL FULLRESET
효과範囲마함 = 1
효과条件カテゴリ = 바르모니카
효과条件CNT = 1
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
조교강도 = RESULT:9

;主要是调教天魔之声选姬
调教对象 = NO_TO_CHARANUM(2140)

;回复生命值通用
CALL FULLRESET
CALL LIFE_CHANGE(듀얼리스트,"増加","효과",500)

;主要效果：异响鸣怪兽攻击力上升
CALL FULLRESET
효과条件カテゴリ = 바르모니카
CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
설치場所 = RESULT
IF 설치場所 != 9999
	CALL SET_FIELD_INFO(듀얼리스트,"필드",설치場所,"永攻",조교강도 * 200)
ENDIF

;天魔之声选姬在场上时
CALL FULLRESET
효과範囲필드 = 1
효과条件名前:0 = セレトリーチェ・바르모니카
효과条件名前:1 = 바르모니카の神奏－ヴァーラル
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
IF RESULT == 1 && 듀얼리스트 == "자신"
; && TALENT:调教对象:爱慕 >= 1
	SETCOLOR C_PINK
	PRINTFORML
	IF EXP:调教对象:76 == 0
		PRINTFORML %CALLNAME:调教对象%는마법を使ってケーキを取り出した。
	ELSEIF EXP:调教对象:76 <= 20
		PRINTFORML %CALLNAME:调教对象%が天界の門を開くと、アンジェロとデモーネがケーキを運んできた。
		PRINTFORML 「前回失敗してから、たくさん練習したんだから！」
	ELSE 
		PRINTFORML %CALLNAME:调教对象%が天界の門を開くと、アンジェロとデモーネがケーキを運んできた。
		PRINTFORML 凝ったデザインのケーキには色とりどりのフルーツが綺麗に飾られており、見ているだけでお腹が空いてきた…
		PRINTFORML 「ふふん、昨日までの私だと思わないで！　今回のは自信作なんだから！」
	ENDIF
	PRINTFORMW
	PRINTFORML %CALLNAME:调教对象%는フォークで一口すくい、あなたに差し出してきた。
	PRINTFORML 「あーん❤」
	PRINTFORMW
	PRINTFORMW %CALLNAME:MASTER%는 %CALLNAME:调教对象%から渡されたケーキを食べた。
	IF EXP:调教对象:76 > 20
		PRINTFORML すごいおいしい！　おかわり！
		PRINTFORMW
		PRINTFORML 「これが私の練習の成果よ！」
	ELSE 
		PRINTFORML おいしい！
	ENDIF
	PRINTFORMW
	PRINTFORML 「今度は私の番ね！」
	PRINTFORML %CALLNAME:调教对象%는期待するようにあなたを見ている。
	PRINTFORMW
	PRINTFORML %CALLNAME:MASTER%는上に乗ったイチゴごとフォークですくい、口を開けている %CALLNAME:调教对象%に差し出した。
	PRINTFORML %CALLNAME:调教对象%는幸せそうな顔でケーキを味わっている。
	PRINTFORMW
	PRINTFORML 甘い空気の中で、二人は휴식した。
	PRINTFORMW
	CALL RECOVER_PERMIL(MASTER,조교강도 * 100,"체력",1)
	CALL RECOVER_PERMIL(MASTER,조교강도 * 100,"기력",1)
	CALL RECOVER_PERMIL(调教对象,조교강도 * 100,"체력",1)
	CALL RECOVER_PERMIL(调教对象,조교강도 * 100,"기력",1)
	PRINTFORMW
ENDIF

RETURN


@CARDEFFECT_79635_2(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 종류
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교강도
#DIM DYNAMIC 调教对象
#DIM DYNAMIC 설치場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;响鸣지시物数量统计
CALL FULLRESET
효과範囲마함 = 1
효과条件カテゴリ = 바르모니카
효과条件CNT = 1
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
조교강도 = RESULT:9

;调教对象通常是 天魔之声选姬
调教对象 = NO_TO_CHARANUM(2140)

;受到伤害通用
CALL FULLRESET
CALL LIFE_CHANGE(듀얼리스트,"減少","효과",500)


;天魔之声选姬 在场上时舐乳
CALL FULLRESET
효과範囲필드 = 1
효과条件名前:0 = セレトリーチェ・바르모니카
효과条件名前:1 = 바르모니카の神奏－ヴァーラル
CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)

IF RESULT == 1 && 듀얼리스트 == "자신"
; && TALENT:2140:爱慕 >= 1
	SETCOLOR C_PINK
	PRINTFORML
	PRINTFORML 「わ……私を食べるってどういうこと！？」
	PRINTFORML %CALLNAME:调教对象%는驚きながらそう言った。
	PRINTFORMW
	PRINTFORML しかし、 %CALLNAME:调教对象%もその意味に薄々気付いているようで、耳を真っ赤にしている。
	PRINTFORMW
	PRINTFORMW %CALLNAME:MASTER%が지시すると、 %CALLNAME:调教对象%는口をまごまごとさせながら、ボタンを１つずつ外していった。	
	IF TALENT:调教对象:가슴사이즈 <= -2
		PRINTFORML そこにはなんと、雄大な平原が広がっていた！
	ELSEIF TALENT:调教对象:가슴사이즈 == -1
		PRINTFORML 全て外し終えると、 %CALLNAME:调教对象%の控えめな유방が露わになった。
	ELSEIF TALENT:调教对象:가슴사이즈 == 1
		PRINTFORML 全て外し終えると、 %CALLNAME:调教对象%の豊満な유방が姿を보여준 。
	ELSEIF TALENT:调教对象:가슴사이즈 >= 2
		PRINTFORML 全て外し終えると、 %CALLNAME:调教对象%の豊満すぎる유방が隙間からこぼれ落ちた。
	ELSE
		PRINTFORML 全て外し終えると、 %CALLNAME:调教对象%の美しい유방が目の前に現れた。
	ENDIF
	PRINTFORMW
	PRINTFORMW %CALLNAME:MASTER%는 %CALLNAME:调教对象%の가슴に顔を近付け、そのピンク色の乳輪を혀でくすぐる。
	PRINTFORML 続けていると、目の前の乳頭が膨らみ、その存在を主張し始めた。
	PRINTFORMW
	PRINTFORML %CALLNAME:调教对象%는もどかしさに耐えきれず、 %CALLNAME:MASTER%の혀に触れるように、身体を揺らして自らの乳頭に誘導した。
	PRINTFORML %CALLNAME:MASTER%는その意図を見透かすように、乳頭を避け、その周りで円を描き続けた。
	PRINTFORMW
	PRINTFORML 「もうちょっとなの……❤　な、舐めて……ください❤」
	PRINTFORML %CALLNAME:调教对象%는上ずった声で懇願した。
	PRINTFORMW 
	PRINTFORML %CALLNAME:MASTER%는유두を口に含むと、強めに吸い出した。
	PRINTFORMW 
	PRINTFORML 「ふぁっ❤」
	PRINTFORML 가슴に溜まっていたもどかしさが吹き飛び、 %CALLNAME:调教对象%는蕩けた息を吐いた。
	PRINTFORMW 
	PRINTFORML %CALLNAME:MASTER%が발기した유두を歯で噛み潰すと、
	PRINTFORML 強烈な쾌락に %CALLNAME:调教对象%는激しく反応し、もっともっととねだるように %CALLNAME:MASTER%の頭を強く抱きしめた。
	PRINTFORMW 

	CALL EROTIC_MOVE("舐乳",调教对象,MASTER,100 + 25 * 조교강도)
	PRINTFORMW 
ENDIF

;主要效果：堆墓三张
SIF 듀얼리스트 == "자신"
	PRINTL 덱 위에서 카드를 묘지へ送りますか？
CALL YN_CHOICE(듀얼리스트)
IF RESULT == 0
	CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",3)
ENDIF

RETURN