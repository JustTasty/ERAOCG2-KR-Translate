	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44805,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件カテゴリ = I・HERO
		효과条件종류 = モン全般
		효과条件行先플래그 = 덱行き
		효과条件複数 = 2
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			; CALL FULLRESET
			; 효과範囲필드 = 1
			; 효과範囲상대필드 = 1
			; 효과範囲마함 = 1
			; 효과範囲상대마함 = 1
			; 효과条件他所 = 1
			; CALL CARD_REMOVAL_ADV(듀얼리스트,"全体除去",場所,"손패")
			CALL FULLRESET
			효과条件他所 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両全場全体",場所,"손패")
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,44805,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件カテゴリ = I・HERO
		효과条件종류 = モン全般
		효과条件行先플래그 = 덱行き
		효과条件複数 = 2
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대마함 = 1
			CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"손패")
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"対耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"破耐")
ENDIF