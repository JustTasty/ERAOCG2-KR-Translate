	CASE "名前"
		RESULTS = 狂逝の機械模魔羅兵（ィークギアディルドポーン）
	CASE "略称"
		RESULTS = 機械模魔羅兵
	CASE "カテゴリ"
		RESULTS:0 = 狂逝の機械
ENDSELECT


