PRINTL 묘지のこの카드를 제외하고、그 발동을 무효로 하고、破壊する。


@CARDCAN_79634(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 종류
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79634)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79634)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;자신 필드의 チェック
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = セレトリーチェ・바르모니카
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		;存在しない時
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件名前 = セレトリーチェ・바르모니카
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		;存在する時
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 바르모니카
		효과条件固名前 = 바르모니카・ラブレター
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
		
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF ゾーン != "묘지"
		RETURN 0
	;제외が可能かの確認
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 바르모니카
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과条件カテゴリ = E.R.A
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF



@CARDEFFECT_79634(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC 종류
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;卡片发动確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79634,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = セレトリーチェ・바르모니카
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件カテゴリ = 바르모니카
			효과条件固名前 = 바르모니카・ラブレター
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과추가종류:0 = 54
			효과추가종류:1 = 55
			효과추가종류:2 = 56
			효과条件名前 = セレトリーチェ・바르모니카
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

			;상대가 使った時に流れると不具合扱いされそうなので자신이 使用した경우에 만 
			IF 듀얼리스트 == "자신"
				SETCOLOR C_PINK
				PRINTFORML
				PRINTFORML 「あなたが呼んでくれたなら、私はどこにいても会いに行くよ」
				PRINTFORML "手紙"に綴られた想いが %CALLNAME:NO_TO_CHARANUM(2140)%を守っている！
				PRINTFORMW
				RESETCOLOR
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79634,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"제외")

		SETCOLOR C_PINK
		PRINTFORML
		PRINTFORML "手紙"に込められた想いが「E.R.A」카드를 弾いた！
		PRINTFORMW
		RESETCOLOR
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

