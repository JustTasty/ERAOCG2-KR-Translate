@CARDCAN_99641(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99641)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,99641)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 바르모니카
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	RETURN 1
ENDIF

@CARDEFFECT_99641(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;卡片发动確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99641,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류:0 = 링크
		효과条件종류:1 = 싱크로
		효과条件カテゴリ = 바르모니카
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1

		IF 듀얼리스트 == "자신"
			PRINTL
			PRINTL こうか
			PRINTL 　聲　を選択
			PRINTL
			PRINTL （ごにょごにょ…！）
			PRINTL （回復しつつ「바르모니카」카드를 守りましょう…！）[0]
			PRINTL
			PRINTL （ひそひそ…♪）
			PRINTL （ダメージは気にせず상대の몬스터를 裏側にしろ…！）[1]
			IF 条件달성 == 1
				PRINTL
				PRINTL （（それとも、両方？））[2]
			ENDIF
			BINPUT
			IF RESULT == 0
				CALL CARDEFFECT_99641_1(듀얼리스트,종류,ゾーン,場所)
			ELSEIF RESULT == 1
				CALL CARDEFFECT_99641_2(듀얼리스트,종류,ゾーン,場所)
			ELSEIF RESULT == 2
				CALL CARDEFFECT_99641_1(듀얼리스트,종류,ゾーン,場所)
				CALL CARDEFFECT_99641_2(듀얼리스트,종류,ゾーン,場所)
			ENDIF
		ELSEIF 듀얼리스트 == "상대"
			PRINTFORML 選ばれた효과 
			IF 条件달성 == 1
				PRINTFORMW ●両方適用する
				CALL CARDEFFECT_99641_1(듀얼리스트,종류,ゾーン,場所)
				CALL CARDEFFECT_99641_2(듀얼리스트,종류,ゾーン,場所)
			ELSE
				SELECTCASE RAND:2
					CASE 0
						PRINTFORMW ●５００回復し、자신의 「바르모니카」に破壊耐性を付与する。
						CALL CARDEFFECT_99641_1(듀얼리스트,종류,ゾーン,場所)
					CASE 1
						PRINTFORMW ●５００데미지를 受け、상대몬스터를 全て뒷면 수비 표시로한다。
						CALL CARDEFFECT_99641_2(듀얼리스트,종류,ゾーン,場所)
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時予約
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_MZ_表:カウンタ") != 3
			CONTINUE
		CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"表",2,1)
	NEXT
ENDIF
RETURN

@CARDEFFECT_99641_1(듀얼리스트,종류,ゾーン,場所)
