	CASE "名前"
		RESULTS = 傾世ドレミアイドル・クーリア
	CASE "略称"
		RESULTS = ♫ クーリア
	CASE "カテゴリ"
		RESULTS:0 = ドレミコード
		RESULTS:1 = ドレミアイドル
		RESULTS:2 = E.R.A
ENDSELECT


