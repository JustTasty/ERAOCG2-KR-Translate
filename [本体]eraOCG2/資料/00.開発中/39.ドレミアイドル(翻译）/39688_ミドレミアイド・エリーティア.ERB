		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = ドレミコード
	効果条件種類 = モン全般
	効果条件レベル:0 = 2
	効果条件レベル:1 = 4
	効果条件レベル:2 = 6
	効果条件レベル:3 = 8
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF 発動済_2(決闘者,39688)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
