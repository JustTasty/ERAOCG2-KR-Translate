@CARDSUMMON_59884(決闘者,召喚カード,EX参照)
#DIMS DYNAMIC 決闘者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 召喚カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC 条件达成
;素材条件

CALL RESETCONDITION_MAT
必要レベル数 = 10
IF EX参照 == 0 || EX参照 == 1
	素材条件チューナー = 1
	素材条件種族 = 天使族
ELSEIF EX参照 >= 10
	素材条件チューナー = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(決闘者,召喚カード,59884) 
	RETURN RESULT
ENDIF


@CARDCAN_59884(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要的卡
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,59884)
SIF RESULT == 1
	RETURN 0

IF 種類 == 発動誘発
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件カテゴリ = ドレミコード
	効果条件種類 = EX以外全般
	効果条件レベル:0 = 2
	効果条件レベル:1 = 4
	効果条件レベル:2 = 6
	効果条件レベル:3 = 8
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件カテゴリ = ドレミコード
	効果条件種類 = EX以外全般
	効果条件レベル:0 = 1
	効果条件レベル:1 = 3
	効果条件レベル:2 = 5
	効果条件レベル:3 = 7
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = モン全般
	効果条件カテゴリ = ドレミアイドル
	効果条件分割 = ペンデュラム
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59884(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59884,1)
	IF RESULT == 0
		カウンタ = 0
		CALL FULLRESET
		効果範囲EXデッキ = 1
		効果条件カテゴリ = ドレミコード
		効果条件種類 = EX以外全般
		効果条件レベル:0 = 1
		効果条件レベル:1 = 3
		効果条件レベル:2 = 5
		効果条件レベル:3 = 7
		効果条件行先フラグ = デッキ行き
		CALL CARD_ADD_GY_BASIC(決闘者,"EXデッキ",ゾーン,場所)
		SIF RESULT != 9999
			カウンタ++
		CALL FULLRESET
		効果範囲EXデッキ = 1
		効果条件カテゴリ = ドレミコード
		効果条件種類 = EX以外全般
		効果条件レベル:0 = 2
		効果条件レベル:1 = 4
		効果条件レベル:2 = 6
		効果条件レベル:3 = 8
		効果条件行先フラグ = デッキ行き
		CALL CARD_ADD_GY_BASIC(決闘者,"EXデッキ",ゾーン,場所)
		SIF RESULT != 9999
			カウンタ++	
		IF カウンタ == 2
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"無効",59884)
		ENDIF
	ENDIF
ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"攻避")
ENDIF
