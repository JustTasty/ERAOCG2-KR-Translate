@CARDCAN_4411(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,4411)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,4411)
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = ナイトメア・クラス
	効果条件種類 = モン全般
	効果条件固名前 = 冥界の闘犬・オルトロス
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF GETVAR(@"%決闘者%_MZ_条達:場所") != 0
		RETURN 0
	SIF 発動済_1(決闘者,覚醒発動)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4411(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC レベル合計


IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4411,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件行先フラグ = 破壊行き
		効果条件複数 = 1
		CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			レベル合計 = RESULT:200
			CALL FULLRESET
			効果範囲デッキ = 1
			効果条件カテゴリ = ナイトメア・クラス
			効果条件種類 = モン全般
			効果条件固名前 = 冥界の闘犬・オルトロス
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
			IF レベル合計 >= 5
				CALL FULLRESET
				効果範囲デッキ = 1
				効果条件カテゴリ = ナイトメア・クラス
				効果条件種類 = 魔法全般
				CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,覚醒発動,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"条達",2,1)
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"永攻",1000)
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"永守",1000)

		CALL FULLRESET
		効果条件任意 = 1
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地")
	ENDIF
ENDIF

