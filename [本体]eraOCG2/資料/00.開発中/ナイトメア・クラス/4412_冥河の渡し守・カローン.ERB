@CARDCAN_4412(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,4412)
SIF RESULT == 1
	RETURN 0

IF 種類 == 破壊→墓地
	SIF 発動済_1(決闘者,4412)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = ナイトメア・クラス
	効果条件種類 = モン全般
	効果条件召喚可 = 1
	効果条件固名前 = 冥河の渡し守・カローン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 墓地起動
	SIF 発動済_2(決闘者,4412)
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,4412,"墓地")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種類 = モン全般
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 4
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF GETVAR(@"%決闘者%_MZ_条達:場所") != 0
		RETURN 0
	SIF 発動済_1(決闘者,覚醒発動)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
; ELSEIF 種類 == チェーン可否
; 	SIF !GROUPMATCH(チェーン可否種類,墓地起動)
; 		RETURN 0
; 	RETURN 1
ENDIF


@CARDEFFECT_4412(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC レベル合計


IF 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4412,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = ナイトメア・クラス
		効果条件固名前 = 冥河の渡し守・カローン
		効果追加種類:0 = 効追無効
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		SIF RESULT == 1
			CALL CARD_DISPOSE(決闘者,"戦場",カード召喚先,破壊行き)
	ENDIF
ELSEIF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4412,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者,"墓地",場所)	
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,覚醒発動,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"条達",2,1)
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"永攻",800)
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"永守",800)

		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = ナイトメア・クラス
		効果追加種類:0 = 効追終破
		効果条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF

