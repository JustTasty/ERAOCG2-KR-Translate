@CARDCAN_4851(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,4851)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,4851)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件種類 = エクシーズ
	効果条件種族 = 機械族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4851(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 属性チェック,5
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4851,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果条件種類 = エクシーズ
			効果条件種族 = 機械族
			CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL RESETCONDITION_MAT
				代替素材数 = 1
				素材条件名前 = 紅のエース カレン
				CALL XYZSUMMON(決闘者, 選択カード)
				SETVAR @"%決闘者%_MZ_発無:カード召喚先", 2
				SETVAR @"%決闘者%_MZ_永攻:カード召喚先", 500
				SETVAR @"%決闘者%_MZ_改名:カード召喚先", 紅蓮
			ENDIF
		ENDIF
	ENDIF
ENDIF

