@CARDCAN_40075(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40075)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
		
	;通常함정カード发动时,从덱특수召唤惑乱魔怪兽的效果检测
	CALL FULLRESET
	효과条件종류 = 通常함정
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT == 1 && 발동済_1(듀얼리스트,40075) == 0 && モンスター数(듀얼리스트) < 5
		条件達成 = 1

	;惑乱魔怪兽发动效果时,从덱盖放陷阱卡的效果检测	
	CALL FULLRESET
	효과条件固名前 =  惑乱魔塞拉
	효과条件カテゴリ = 惑乱魔
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	SIF RESULT == 1 && 발동済_2(듀얼리스트,40075) == 0 && 마함数(듀얼리스트) < 5
		条件達成 = 1
	SIF	条件達成 != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_3(듀얼리스트,40075)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
		
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件표시 = 表側표시
	효과条件カテゴリ = 惑乱魔
	효과条件固名前 =  惑乱魔塞拉
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_40075(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 选择卡片
#DIM DYNAMIC 选择对方卡片
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件達成

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 惑乱魔
	효과条件固名前 = 惑乱魔塞拉
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻避")

ELSEIF 종류 == 효과後誘発
	;将惑乱魔怪兽특수召唤
	CALL FULLRESET
	효과条件종류 = 通常함정
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	IF RESULT == 1 && 발동済_1(듀얼리스트,40075) == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40075,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 惑乱魔
			효과条件종류 = モン全般
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

	;将落とし穴或蜜穴通常함정カード盖放
	CALL FULLRESET
	효과条件固名前 =  惑乱魔塞拉
	효과条件カテゴリ = 惑乱魔
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	IF RESULT == 1 && 발동済_2(듀얼리스트,40075) == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40075,2)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ:0 = 落とし穴
			효과条件カテゴリ:1 = 蜜穴
			효과条件종류 = 通常함정
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	;确认效果的发动
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40075,3)
	IF RESULT == 0
		;选择自己필드要变更표시形式的惑乱魔
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件カテゴリ = 惑乱魔
		효과条件固名前 =  惑乱魔塞拉
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		;定义选定到的卡片
		选择卡片 = RESULT
		;如果选择到了卡片
		IF 选择卡片 != 9999
			;获取选择卡片的守備力
			攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_守:选择卡片")

			;根据怪兽的표시形式变更成另1种표시形式。
			IF GETVAR(@"%듀얼리스트%_MZ_表:RESULT") == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",选择卡片,"表",2,1)
			ELSEIF GETVAR(@"%듀얼리스트%_MZ_表:RESULT") == 2
				CALL SET_FIELD_INFO(듀얼리스트,"필드",选择卡片,"表",1,1)
			ENDIF
			;确认是否要降低对手필드怪兽的攻撃力。
			CALL FULLRESET
			PRINTL 要让相手필드1只怪兽的攻撃力降低吗？
			PRINTL [1] - 是
			PRINTL [100] - 不需要
			BINPUT
			IF RESULT != 100
				CALL FULLRESET
				효과範囲相手필드 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"相手필드",ゾーン,場所)
				选择对方卡片 = RESULT
				IF RESULT != 9999
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",选择对方卡片,"永攻DOWN",攻撃力修正)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

