@CARDCAN_40082(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40082)
SIF RESULT == 1
	RETURN 0

IF 종류 == バトル開始時
	SIF !GROUPMATCH(ゾーン,"손패","묘지")
		RETURN 0
	SIF 발동済_1(듀얼리스트,40082)
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1		

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_40082(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 自己卡片
#DIM DYNAMIC 自己守備力修正
#DIM DYNAMIC 对方卡片
#DIM DYNAMIC 对方攻撃力修正
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == バトル開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40082,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 惑乱魔
		효과条件行先플래그 = 묘지行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
        	CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
    ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40082)
	IF RESULT == 0
		自己卡片 = 戦闘場所(듀얼리스트)
		自己守備力修正 = GETVAR(@"%듀얼리스트%_MZ_守:自己卡片")
		对方卡片 = 戦闘場所(듀얼리스트,1)
		对方攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:对方卡片")
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
		IF RESULT == 牝性
			조교대상 = GETVAR(@"%対面者%_필드:对方卡片")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW %CALLNAME:조교대상%撞在了阿特拉的网上无法挣脱 ,不适的触感在身体上游走。
				RESETCOLOR
				CALL EROTIC_MOVE("全身레즈愛撫",조교대상,NO_TO_CHARANUM(1374))
			ENDIF
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",对方卡片,"永攻DOWN",800)

		ELSEIF RESULT == 雄性 || RESULT == ふたなり && (对方攻撃力修正 - 800 ) - 自己守備力修正 >= 0
			조교대상 = GETVAR(@"%対面者%_필드:对方卡片")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 阿特拉沉溺于交欢的쾌감，被%CALLNAME:조교대상%的肉棒彻底정복了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1374), -1)
				IF 마함数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%CALLNAME:조교대상%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"상대필드",自己卡片,(1 + 2))
				ENDIF
			ELSE
				CALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:对方卡片")}("名前")
				SETCOLOR C_PINK
				PRINTFORMW 阿特拉沉溺于交欢的쾌감，被%RESULTS%的肉棒彻底정복了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1374), -1)
				IF 마함数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%RESULTS%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"상대필드",自己卡片,(1 + 2))
				ENDIF
			ENDIF

		ELSEIF RESULT == 雄性 || RESULT == ふたなり
			조교대상 = GETVAR(@"%対面者%_필드:对方卡片")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW %CALLNAME:조교대상%被蜘蛛网缠住无法动弹，被阿特拉无情的榨取着。
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1374),조교대상)
			ENDIF
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",对方卡片,"永攻DOWN",800)
			
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",对方卡片,"永攻DOWN",800)
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",2,1)
	ENDIF

ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	IF RESULT == 0
		IF 戦闘場所(듀얼리스트,1) != 5
			CALL CARD_EROTICS(戦闘カードID(듀얼리스트,1))
			IF RESULT != 0
				조교대상 = RESULT
			ENDIF
		ENDIF
		IF 조교대상 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML 阿特拉编织好了陷阱等待着%CALLNAME:조교대상%的到来。
			RESETCOLOR
		ENDIF		
	ENDIF		

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件カテゴリ = 惑乱魔
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦阻",3)
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ENDIF