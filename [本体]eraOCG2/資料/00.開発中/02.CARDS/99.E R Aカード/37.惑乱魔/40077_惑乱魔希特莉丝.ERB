@CARDCAN_40077(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要的卡
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40077)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF 발동済_1(듀얼리스트,40077)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") < 0
		RETURN 0

    CALL FULLRESET
	효과範囲상대필드 = 1
 	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0   
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,40077)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
        
  	CALL FULLRESET
	효과条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"필드離れ")
	SIF RESULT == 1
		RETURN 0      
	RETURN 1

ELSEIF 종류 == ターン終了時
    SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,40077)
		RETURN 0   

  	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
    효과範囲상대필드 = 1  
	효과範囲상대마함 = 1
	효과条件カテゴリ = 蜜罐
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1    

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動 || 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1 
ENDIF


@CARDEFFECT_40077(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 守備力修正
#DIM DYNAMIC X消費
#DIM DYNAMIC X素材数
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 选择卡片
#DIM DYNAMIC 蜜罐
#DIM DYNAMIC 蜜罐数量
#DIM DYNAMIC 回复量
#DIM DYNAMIC 조교대상


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40077,1,X消費1)
	IF RESULT == 0		
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
				CONTINUE

			IF GETVAR(@"%対面者%_MZ_攻:カウンタ") <= 0 && GETVAR(@"%対面者%_MZ_性:カウンタ") == 牝性 || GETVAR(@"%対面者%_MZ_性:カウンタ") == ふたなり || GETVAR(@"%対面者%_MZ_性:カウンタ") == 雄性
				CALL CARD_SET_CATEGORY(対面者,"필드",カウンタ,"蜜罐")
			ENDIF

			CALL CARD_LOADUP

			CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",カウンタ,"表",1)
		NEXT
    ENDIF

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40077,2)
	IF RESULT == 0
		选择卡片 = 戦闘場所(듀얼리스트,1)
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
		IF RESULT == 牝性 || RESULT == ふたなり || RESULT == 雄性
			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:选择卡片")}("名前")
			조교대상 = GETVAR(@"%対面者%_필드:选择卡片")
			CALL FULLRESET
			효과추가カテ = 蜜罐
			CALL CARD_ADD(対面者,"필드","마함",选择卡片,"表側표시")

			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORML
				PRINTFORMW 无力挣脱束缚的%CALLNAME:조교대상%被希特莉丝改造成了生产"花蜜"的蜜罐……！
				PRINTFORML
				RESETCOLOR
				CALL EROTIC_MOVE("묘상捕縛",조교대상, -1)
			ENDIF
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",选择卡片,"묘지")
		ENDIF
	ENDIF

ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40077,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件カテゴリ = 蜜罐
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		蜜罐数量 = RESULT
		回复量 = RESULT * 500
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",蜜罐数量)
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",回复量)
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 蜜罐
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	蜜罐数量 = RESULT
	守備力修正 = RESULT * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,守備力修正,守備力修正)

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦狂")
	IF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") >= 1
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
	ENDIF

ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_魔_リ数:カウンタ") >= 10
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_마함:カウンタ")}, "カテゴリ"
		SIF !MATCH(RESULTS, "蜜罐")
			CONTINUE
			
		CALL CARD_EROTICS(GETVAR(@"%듀얼리스트%_마함:カウンタ"))
		IF RESULT != -1
			조교대상 = RESULT
			SETCOLOR C_PINK
			PRINTFORML
			PRINTFORMW "花蜜"不受控制的从%CALLNAME:조교대상%的腿上流淌下来……
			PRINTFORML
			RESETCOLOR
			CALL EROTIC_MOVE("구속晒し",조교대상,-1)
			CALL SET_FIELD_INFO(듀얼리스트,"마함",カウンタ,"リ数",1)
		ENDIF
	NEXT

	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_마함:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_魔_リ数:カウンタ") >= 10
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_마함:カウンタ")}, "カテゴリ"
		SIF !MATCH(RESULTS, "蜜罐")
			CONTINUE

		CALL CARD_EROTICS(GETVAR(@"%対面者%_마함:カウンタ"))
		IF RESULT != -1
			조교대상 = RESULT
			SETCOLOR C_PINK
			PRINTFORML
			PRINTFORMW "花蜜"不受控制的从%CALLNAME:조교대상%的腿上流淌下来……
			PRINTFORML
			RESETCOLOR
			CALL EROTIC_MOVE("구속晒し",조교대상,-1)
			CALL SET_FIELD_INFO(対面者,"마함",カウンタ,"リ数",1)
		ENDIF
	NEXT
ENDIF