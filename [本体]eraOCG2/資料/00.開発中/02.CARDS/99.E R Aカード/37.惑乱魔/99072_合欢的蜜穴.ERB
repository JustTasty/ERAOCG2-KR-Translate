@CARDCAN_99072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 效果限制达成
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99072)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,99072)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0

	;自己필드没有蟲惑魔，达成
	CALL FULLRESET
	효과範囲필드 = 1
    효과条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
    SIF RESULT == 0
		条件達成++
		
	;全场蜜罐数量等于0,达成
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 蜜罐
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
    SIF RESULT == 0
		条件達成++
	;如果自己필드没有蟲惑魔的条件或全场蜜罐数量等于0的条件有任意一方达成或同时达成,返回0
	SIF 条件達成 != 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 特招엑시즈怪兽
#DIM DYNAMIC 엑시즈素材増加
#DIM DYNAMIC 选择링크怪兽
#DIM DYNAMIC 选择링크怪兽_ID
#DIM DYNAMIC 링크值
#DIM DYNAMIC 选择링크素材
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 条件達成

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99072,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		PRINTL 要특수召唤哪种怪兽？
		PRINTL [1] - 엑시즈怪兽
		PRINTL [2] - 링크怪兽
		PRINTL [100] - 放弃
		BINPUT
		IF RESULT == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 惑乱魔
			효과条件行先플래그 = 묘지行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				条件達成++

			REPEAT 2
				CALL CARD_LOADUP

				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				효과条件カテゴリ = 蜜罐
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT == 0
					BREAK

				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				효과条件カテゴリ = 蜜罐
				효과条件行先플래그 = 묘지行き
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				SIF RESULT == 1
					条件達成++
					
				IF 条件達成 != 3
					CALL FULLRESET
					SETCOLOR C_YELLOW
					PRINTFORML 
					PRINTFORML 要继续选择卡送去묘지吗?当前已送去묘지的「惑乱魔」怪兽与「蜜罐」数量为{COUNT+2}
					PRINTFORML 
					RESETCOLOR
					PRINTL [1] - 是
					PRINTL [2] - 但是我拒绝
					BINPUT
					SIF RESULT == 2
						BREAK
				ELSE
					SETCOLOR C_YELLOW
					PRINTFORML 
					PRINTFORML 已送去묘지的「惑乱魔」怪兽与「蜜罐」数量达到最大值3
					PRINTFORML 
					RESETCOLOR
				ENDIF
			REND
			엑시즈素材増加 = 条件達成 - 1

			IF 条件達成 <= 1
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 惑乱魔
				효과条件종류 = 엑시즈
				효과추가종류:0 = 1
				효과추가종류:1 = 8
				효과추가종류:2 = 190
				효과추가종류:3 = 40000 + 엑시즈素材増加
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所,"攻撃표시")
			ELSEIF 条件達成 >= 2
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 惑乱魔
				효과条件종류 = 엑시즈
				효과추가종류:3 = 40000 + 엑시즈素材増加
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		
		ELSEIF RESULT == 2
			CALL FULLRESET
			PRINTL 要召唤링크数为多少的怪兽？
			PRINTL [1] - 1
			PRINTL [2] - 2
			PRINTL [3] - 3
			BINPUT
			링크值 = RESULT

			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 惑乱魔
			효과条件行先플래그 = 묘지行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				条件達成++

			REPEAT 링크值 - 1
				CALL CARD_LOADUP

				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				효과条件カテゴリ = 蜜罐
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				SIF RESULT == 0
					BREAK

				CALL FULLRESET
				효과範囲필드 = 1
				효과範囲마함 = 1
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				효과条件カテゴリ = 蜜罐
				효과条件行先플래그 = 묘지行き
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				SIF RESULT == 1
					条件達成++

				SETCOLOR C_YELLOW
				PRINTFORML 
				PRINTFORML 当前已经选择送去묘지的「惑乱魔」怪兽与「蜜罐」数量为{COUNT+2}
				PRINTFORML 
				RESETCOLOR
			REND
			选择링크素材 = 条件達成

			IF 选择링크素材 < 링크值
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 惑乱魔
				효과条件종류 = 링크
				효과条件レベル = 링크值
				효과추가종류:0 = 1
				효과추가종류:1 = 8
				효과추가종류:2 = 190
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,选择링크怪兽,"攻撃표시")
			ELSEIF 选择링크素材 == 링크值
				CALL FULLRESET
				효과範囲EX덱 = 1
				효과条件カテゴリ = 惑乱魔
				효과条件종류 = 링크
				효과条件レベル = 링크值
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,选择링크怪兽)
			ENDIF
		ELSE
			PRINTFORMW 就算这么说，用掉的卡也不会给你盖回去。
		ENDIF
    ENDIF
ENDIF