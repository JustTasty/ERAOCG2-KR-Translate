@CARDNAME_40072,参照先
;ココで지정卡片の名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 惑乱魔兰卡
	CASE "略称"
		RESULTS = 兰卡(惑)
	CASE "カテゴリ"
		RESULTS:0 = 惑乱魔
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_40072(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 곤충족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 750
	CASE "守備力"
		RETURN 2050
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_40072(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("ROGUE")
PRINTL 이 카드명의 ①②의 효과는 1ターンに1度、いずれか1つしか使用できない。
CALLFORM CARD_ABLE(1,소환時,특수소환時)
PRINTL ①：이 카드가 소환 / 특수 소환に成功した場合に발동할 수 있다。
PRINTL 덱에서 「惑乱魔」 몬스터 １장을 패에 넣는다。
CALLFORM CARD_ABLE(2,필드起動)
PRINTL ②：이 카드가 攻撃표시の場合,자신 필드의 「惑乱魔」モンスター1体を대상으로 하고 발동할 수 있다。
PRINTL そのモンスタを덱に戻す,자신의 묘지에서 「惑乱魔」 몬스터 １장을 골라 특수소환,こ의 효과는 상대ターンでも발동할 수 있다。
SETCOLOR C_PINK
CALLFORM CARD_ABLE(3,攻撃時誘発)
PRINTL ③：攻撃표시の이 카드가 攻撃대상に選択된 경우에 발동する。
PRINTL 攻撃몬스터의 攻撃力は800ポイントダウンする,이 카드를 守備표시にする。
RESETCOLOR
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ④：이 카드는 함정내성을 持つ。
CALL TEXT_DECORATION("ROGUE")


@CARDCAN_40072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40072)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,40072)
		RETURN 0
	SIF 발동済_2(듀얼리스트,40072)
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 ;&& GETVAR(@"%듀얼리스트%_MZ_表:場所") == 1 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,40072)
		RETURN 0
	SIF 발동済_2(듀얼리스트,40072)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 惑乱魔
	효과条件固名前 = 惑乱魔兰卡
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = モン全般
	효과条件カテゴリ = 惑乱魔
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_40072(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 自己卡片
#DIM DYNAMIC 自己守備力修正
#DIM DYNAMIC 对方卡片
#DIM DYNAMIC 对方攻撃力修正
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40072,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 惑乱魔
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF

ELSEIF 종류 == 필드起動 ;&& GETVAR(@"%듀얼리스트%_MZ_表:場所") == 1 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40072,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 惑乱魔
		효과条件固名前 = 惑乱魔兰卡
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)	
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = モン全般
			효과条件カテゴリ = 惑乱魔
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40072)
	IF RESULT == 0
		自己卡片 = 戦闘場所(듀얼리스트)
		自己守備力修正 = GETVAR(@"%듀얼리스트%_MZ_守:自己卡片")
		对方卡片 = 戦闘場所(듀얼리스트,1)
		对方攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:对方卡片")
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
		IF RESULT == 牝性
			조교대상 = GETVAR(@"%対面者%_필드:对方卡片")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 被锁住的%CALLNAME:조교대상%一时无法挣脱,嘴唇被兰卡夺去,含有催淫成分的口水在二人体内交换着。
				RESETCOLOR
				CALL EROTIC_MOVE("ディープキス",조교대상,NO_TO_CHARANUM(1376))
			ENDIF
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",对方卡片,"永攻DOWN",800)

		ELSEIF RESULT == 雄性 || RESULT == ふたなり && (对方攻撃力修正 - 800 ) - 自己守備力修正 >= 0
			조교대상 = GETVAR(@"%対面者%_필드:对方卡片")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 兰卡沉溺于交欢的쾌감，被%CALLNAME:조교대상%的肉棒彻底정복了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1376),조교대상)
				IF 마함数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%CALLNAME:조교대상%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"상대필드",自己卡片,(1 + 2))
				ENDIF
			ELSE
				CALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:对方卡片")}("名前")
				SETCOLOR C_PINK
				PRINTFORMW 兰卡沉溺于交欢的쾌감，被%RESULTS%的肉棒彻底정복了……！
				RESETCOLOR
				CALL EROTIC_MOVE("前穴凌辱",NO_TO_CHARANUM(1376), -1)
				IF 마함数(対面者) < 5
					SETCOLOR C_PINK
					PRINTFORMW 随后就那样被%RESULTS%当作肉铠带走了……
					RESETCOLOR
					CALL CARD_EQUIP_MONSTER(対面者,对方卡片,"상대필드",自己卡片,(1 + 2))
				ENDIF
			ENDIF

		ELSEIF RESULT == 雄性 || RESULT == ふたなり
			조교대상 = GETVAR(@"%対面者%_필드:对方卡片")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW 兰卡吻上了%CALLNAME:조교대상%的嘴唇，股间不断来回刺激着%CALLNAME:조교대상%的肉棒。
				RESETCOLOR
				CALL EROTIC_MOVE("全身愛撫",조교대상,NO_TO_CHARANUM(1376))
			ENDIF
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",对方卡片,"永攻DOWN",800)
			
		ELSE
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",对方卡片,"永攻DOWN",800)
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",2,1)
	ENDIF

ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	IF RESULT == 0
		IF 戦闘場所(듀얼리스트,1) != 5
			CALL CARD_EROTICS(戦闘カードID(듀얼리스트,1))
			IF RESULT != 0
				조교대상 = RESULT
			ENDIF
		ENDIF
		IF 조교대상 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML 催淫气体干扰着%CALLNAME:조교대상%的意识,四肢被兰卡钳制住。
			RESETCOLOR
		ENDIF		
	ENDIF		

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ENDIF
