@CARDCAN_77510(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,77510)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 ;&& GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || 종류 == 필드起動 || 종류 == フリー誘発
	IF メインフェイズ == 1
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF 발동済_2(듀얼리스트,77510)
			RETURN 0
		SIF 발동済_3(듀얼리스트,77510)
			RETURN 0
		SIF ゾーン != "마함"
			RETURN 0
		SIF モンスター数(듀얼리스트) >= 5
			RETURN 0

		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲相手필드 = 1
		효과範囲마함 = 1
		효과範囲相手마함 = 1
		효과条件カテゴリ = 蜜罐
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	
	ELSEIF バトルフェイズ == 1
		SIF ターンプレイヤー == 듀얼리스트
			RETURN 0
		SIF 발동済_2(듀얼리스트,77510)
			RETURN 0
		SIF 발동済_3(듀얼리스트,77510)
			RETURN 0
		SIF ゾーン != "마함"
			RETURN 0
		SIF モンスター数(対面者) >= 5
			RETURN 0

		CALL FULLRESET
		효과範囲相手마함 = 1
		효과条件カテゴリ = 蜜罐
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,77510)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件표시 = 表側표시
	효과条件名前 = 惑乱魔狩猎园
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_77510(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 选择卡片
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 조교대상 = -1
#DIM DYNAMIC 调教强度
#DIM DYNAMIC 필드单体

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || 종류 == 필드起動 || 종류 == フリー誘発
	IF メインフェイズ == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,77510,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲相手필드 = 1
			효과範囲마함 = 1
			효과範囲相手마함 = 1
			효과条件カテゴリ = 蜜罐
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件カテゴリ = 惑乱魔
				효과条件종류 = モン全般
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF

	ELSEIF バトルフェイズ == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,77510,3)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲마함 = 1
			효과条件カテゴリ = 蜜罐
			효과추가カテ = 蜜罐
			효과추가종류:0 = 1
			효과추가종류:1 = 21
			효과추가종류:2 = 190
			CALL CARD_SP_SUMMON_ADV(対面者,ゾーン,場所,"攻撃표시")
			SETCOLOR C_PINK
			PRINTFORML 
			PRINTFORMW 精疲力尽的蜜罐作为玩乐的工具被惑乱魔再次推到了필드。
			PRINTFORML 
			RESETCOLOR
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,77510,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件カテゴリ = 惑乱魔
		효과条件종류 = モン全般
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "惑乱魔狩猎园")
ENDIF




