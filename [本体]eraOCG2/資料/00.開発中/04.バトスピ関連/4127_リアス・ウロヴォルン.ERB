@CARDNAME_4127,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4127)

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = リアス・ウロヴォルン
	CASE "略称"
		RESULTS = リアス
	CASE "カテゴリ"
		RESULTS:0 = 시희
		RESULTS:4 = 배틀 스피리츠
		IF TALENT:カード主:애처
			RESULTS:1 = 계약
		ENDIF
ENDSELECT


@CARD_4127(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
