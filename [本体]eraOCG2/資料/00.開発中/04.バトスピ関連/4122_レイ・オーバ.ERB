@CARDNAME_4122,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = レイ・オーバ
	CASE "略称"
		RESULTS = レイ
	CASE "カテゴリ"
		RESULTS:0 = 시희
		RESULTS:4 = 배틀 스피리츠
		IF TALENT:カード主:애처
			RESULTS:1 = 계약
		ENDIF
ENDSELECT


@CARD_4122(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 900
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 牝性
	CASE "튜너"
		RETURN 1
ENDSELECT

RETURN 0

@CARD_EXPLANATION_4122(종류)
#DIM DYNAMIC 종류
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)

IF TALENT:カード主:애처
	PRINTL このカード名の①②③の효과はそれぞれ１ターンに１度しか使用できない。
	CALLFORM CARD_ABLE(1,손패起動)
	PRINTL ①：자신フィールドのコア카운터を１つ取り除いて발동できる。
	PRINTL このカードを손패から특수소환する。
	CALLFORM CARD_ABLE(2,효과後誘発)
	PRINTL ②：자신필드에 「시희」モンスター 또는 화염속성モンスターが소환・특수소환された場合に발동できる。
	PRINTL 자신の덱の上からカードを３枚めくる。
	PRINTL その中から「ブレイヴ」カード 또는 装備마법１枚を選んで손패に加える事ができる。残りのカードは덱に戻す。
	CALLFORM CARD_ABLE(3,필드起動)
	PRINTL ③：자신の마법・함정ゾーンの「創界神」にコア카운터を２つ置くことで발동できる。
	PRINTL 상대フィールドの 몬스터 １장까지 の공격력을 １０００ポイントダウンする。
	PRINTL このカードが装備カードを装備している場合、かわりに２５００ポイントダウンする。
	PRINTL この효과で攻撃力、또는 守備力が０になった場合、さらにそのモンスターを묘지に送る。
ELSE
	PRINTL このカード名の①の효과は１ターンに１度しか使用できない。
	CALLFORM CARD_ABLE(2,효과後誘発)
	PRINTL ①：자신필드에 「시희」モンスター 또는 화염속성モンスターが소환・특수소환された場合に발동できる。
	PRINTL 자신の덱の上からカードを３枚めくる。
	PRINTL その中から「ブレイヴ」カード 또는 装備마법１枚を選んで손패に加える事ができる。残りのカードは덱に戻す。
ENDIF

@CARDCAN_4122(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4122)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	IF TALENT:カード主:애처
		SIF 발동済_1(듀얼리스트,4122)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,4122,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 배틀 스피리츠
		효과条件표시 = 表側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT:9 < 1
			RETURN 0
	ELSE
		RETURN 0	
	ENDIF
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,4122)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件속성 = 화염속성
	효과条件スーパーカテゴリ = 시희
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	IF TALENT:カード主:애처
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF 발동済_3(듀얼리스트,4122)
			RETURN 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 創界神
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSE
		RETURN 0	
	ENDIF
ENDIF

@CARDEFFECT_4122(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 軽減数
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4122)


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4122,1)
	IF RESULT == 0
		PRINTL コア카운터を取り除くカードを選択
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 배틀 스피리츠
		효과条件표시 = 表側표시
		효과条件個Ｃ所持 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			PRINTL コアが取り除かれました
			CALL CARD_SELECT(듀얼리스트,RESULT)
			CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード（CS）,"個Ｃ",-1)

			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4122,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件スーパーカテゴリ = ブレイヴ
		효과条件종류 = 装備마법
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所,3)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4122,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 創界神
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			CALL SET_FIELD_INFO(듀얼리스트,参照先（CS）,選択カード（CS）,"個Ｃ",2)
		ENDIF

		CALL FULLRESET
		CALL CARD_EQUIP_CHECK(듀얼리스트,場所,ゾーン)
		IF RESULT != 0
			효과条件표시 = 表側표시
			효과条件任意 = 1
			효과추가종류 = 11
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"永攻DOWN",2500)
		ELSE
			효과条件표시 = 表側표시
			효과条件任意 = 1
			효과추가종류 = 11
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"永攻DOWN",1000)
		ENDIF
	ENDIF
ENDIF

