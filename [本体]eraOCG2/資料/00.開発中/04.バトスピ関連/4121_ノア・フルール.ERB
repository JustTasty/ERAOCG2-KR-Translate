@CARDNAME_4121,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4121)

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = ノア・フルール
	CASE "略称"
		RESULTS = ノア
	CASE "カテゴリ"
		RESULTS:0 = 시희
		RESULTS:4 = 배틀 스피리츠
		IF TALENT:カード主:애처
			RESULTS:1 = 계약
		ENDIF
ENDSELECT


@CARD_4121(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
	
		RETURN 효과モン
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 900
	CASE "守備力"
		RETURN 700
	CASE "성별"
		RETURN 牝性
ENDSELECT

RETURN 0

@CARD_EXPLANATION_4121(종류)
#DIM DYNAMIC 종류
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4121)

IF TALENT:カード主:애처
	PRINTL このカード名の①②③の효과はそれぞれ１ターンに１度しか使用できない。
	CALLFORM CARD_ABLE(1,손패起動)
	PRINTL ①：자신フィールドのコア카운터を１つ取り除いて발동できる。
	PRINTL このカードを손패から특수소환する。
	CALLFORM CARD_ABLE(2,효과後誘発)
	PRINTL ②：자신필드에 「시희」モンスター 또는 화염속성モンスターが소환・특수소환された場合に발동できる。
	PRINTL 상대フィールドの攻撃力２０００以下の 몬스터 １장을 파괴한다。
	CALLFORM CARD_ABLE(3,필드起動)
	PRINTL ③：자신の마법・함정ゾーンの「創界神」にコア카운터を２つ置くことで발동できる。
	PRINTL その「創界神」のコア카운터×２以下のレベルの「시희」モンスター 또는 화염속성 몬스터 １장을 손패から특수소환できる。
ELSE
	PRINTL このカード名の①の효과は１ターンに１度しか使用できない。
	CALLFORM CARD_ABLE(2,효과後誘発)
	PRINTL ①：자신필드에 「시희」モンスター 또는 화염속성モンスターが소환・특수소환された場合に발동できる。
	PRINTL 상대フィールドの攻撃力２０００以下の 몬스터 １장을 파괴한다。
ENDIF

@CARDCAN_4121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4121)

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4121)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	IF TALENT:カード主:애처
		SIF 발동済_1(듀얼리스트,4121)
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,4121,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 배틀 스피리츠
		효과条件표시 = 表側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT:9 < 1
			RETURN 0
	ELSE
		RETURN 0	
	ENDIF
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,4121)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件속성 = 화염속성
	효과条件スーパーカテゴリ = 시희
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件攻撃力 = 2000
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	IF TALENT:カード主:애처
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
		SIF 발동済_3(듀얼리스트,4121)
			RETURN 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 創界神
		효과条件표시 = 表側표시
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSE
		RETURN 0	
	ENDIF
ENDIF

@CARDEFFECT_4121(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 軽減数
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カード主

カード主 = NO_TO_CHARANUM(4121)


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4121,1)
	IF RESULT == 0
		PRINTL コア카운터を取り除くカードを選択
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 배틀 스피리츠
		효과条件표시 = 表側표시
		효과条件個Ｃ所持 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			PRINTL コアが取り除かれました
			CALL CARD_SELECT(듀얼리스트,RESULT)
			CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード（CS）,"個Ｃ",-1)

			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4121,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		효과条件攻撃力 = 2000
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4121,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 創界神
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			CALL SET_FIELD_INFO(듀얼리스트,参照先（CS）,選択カード（CS）,"個Ｃ",2)

			CALL FULLRESET
			효과範囲마함 = 1
			효과条件カテゴリ = 創界神
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			カウンタ数 = RESULT:9
			
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件속성 = 화염속성
			효과条件スーパーカテゴリ = 시희
			CALL 효과条件レベル_ADV(カウンタ数 * 2,"以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

