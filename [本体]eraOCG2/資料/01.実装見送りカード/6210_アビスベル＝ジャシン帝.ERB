@CARDNAME_6210,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = アビスベル＝ジャシン帝
	CASE "略称"
		RESULTS = ジャシン帝
	CASE "カテゴリ"
		RESULTS:0 = アビス
		RESULTS:1 = 邪神
ENDSELECT


@CARD_6210(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 효과モン
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 어둠속성

	CASE "종족"
		RETURN 악마족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 2300
	CASE "성별"
		RETURN 雄性
ENDSELECT
RETURN 0

