;ココで지정カードの名前、略称を返す予定
;　
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = サンアバロン・グローリアス・グロース
	CASE "略称"
		RESULTS = 聖天樹の輝常緑
	CASE "カテゴリ"
		RESULTS:0 = サンアバロン
		RESULTS:1 = ゲームオリジナル
ENDSELECT


@CARD_93203(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_93203(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の②④の효과はそれぞれ１ターンに１度しか使用できない。
PRINTL ①：자신필드에 「サンアバロン」Lモンスターが存在しない場合、このカードは破壊される。
PRINTL ②：자신필드에 「サンアバロン」Lモンスターが存在し、
PRINTL 자신が戦闘・효과でダメージを受けた場合に발동できる。덱外から「聖種の地霊」１장을 生成し、
PRINTL 자신フィールドのモンスターを素材として식물족LモンスターのL소환を行う。
PRINTL ③：자신のLPが回復した場合に발동する。その数値分だけ相手にダメージを与える。
PRINTL ④：相手の攻撃宣言時、자신フィールドのL 몬스터 １장을 대상として발동できる。
PRINTL 攻撃대상をその몬스터에 移し替えてダメージ計算を行う。


@CARDCAN_93203(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93203)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発 || 종류 == 攻撃後強制誘発 || 종류 == 발동強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件カテゴリ = サンアバロン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		IF 발동済_2(듀얼리스트,93203) != 1
			CALL CARD_CHECK_FIN_BIT(듀얼리스트,"被弾者")
			SIF RESULT != 1
				RETURN 0
		ELSE
			RETURN 0
		ENDIF
	ELSE
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
	ENDIF
	RETURN 1
ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF ダメージ増減 != "増加"
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류,"효과")
		RETURN 0
	SIF ダメージ受者 != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_4(듀얼리스트,93203)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_93203(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発 || 종류 == 攻撃後強制誘発 || 종류 == 발동強制誘発
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件カテゴリ = サンアバロン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93203,2)
		IF RESULT == 0
			CALL CARD_GENERATE(듀얼리스트,32200)
			CALL FULLRESET
			효과条件종족 = 식물족
			효과条件종류 = 링크
			효과条件소환可 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALLFORM RESETCONDITION
				選択カード_ID = GETVAR(@"%듀얼리스트%_EX덱:選択カード")
				TRYCALLFORM CARDSUMMON_{選択カード_ID}(듀얼리스트,選択カード)
				TRYCALLFORM LINSUMMON(듀얼리스트,選択カード)
			ENDIF
		ENDIF
	ELSE
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == ライフ変強制誘発
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ受値,1)
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93203,4)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 링크
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL COVER_ATTACK(듀얼리스트,選択カード)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93203)
	IF RESULT == 0
	ENDIF
ENDIF
