#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = サンアバロン・フォース
	CASE "略称"
		RESULTS = 聖天樹の威圧
	CASE "カテゴリ"
		RESULTS:0 = サンアバロン
		RESULTS:1 = 게임 오리지널
ENDSELECT


@CARD_93204(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_93204(종류)
#DIM DYNAMIC 종류

PRINTL ①：자신필드에 「サンアバロン」Lモンスターが存在しない場合、このカードは破壊される。
PRINTL ②：자신フィールドの「サンアバロン」Lモンスターは대상내성을 得る。
PRINTL ③：자신フィールドのモンスターが戦闘でモンスターを破壊した場合、
PRINTL 자신フィールドの식물족Lモンスター1体を대상として발동できる。
PRINTL その링크数×200ダメージを상대に与える。



@CARDCAN_93204(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93204)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発 || 종류 == 攻撃後強制誘発 || 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件カテゴリ = サンアバロン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件종족 = 식물족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_93204(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発 || 종류 == 攻撃後強制誘発 || 종류 == 발동強制誘発
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종류 = 링크
	효과条件カテゴリ = サンアバロン
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93204)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = 링크
		효과条件종족 = 식물족
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			ダメージ量 = GETVAR(@"%듀얼리스트%_MZ_星:選択カード") * 200
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93204)
	IF RESULT == 0
	ENDIF
ENDIF
