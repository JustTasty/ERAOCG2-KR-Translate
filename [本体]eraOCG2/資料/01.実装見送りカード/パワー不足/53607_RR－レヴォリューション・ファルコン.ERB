@CARDCAN_53607(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,53607)
SIF RESULT == 1
	RETURN 0
IF 종류 == EX소환時強制 
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 엑시즈
	효과条件カテゴリ = レイドラプターズ
	CALLFORM 효과条件レベル_ADV(5, "以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
		SIF 발동済_1(듀얼리스트,53607) && 효과발동済(듀얼리스트,場所,ゾーン)
			RETURN 0
	ELSE
		SIF 발동済_1(듀얼리스트,53607)
			RETURN 0
	ENDIF
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF モンスター数(対面者) <= 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF GETVAR(@"%対面者%_MZ_召種:%対面者%_戦闘カード") == 召種通常
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_53607(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力上昇
#DIM 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時強制 
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53607,0,X消費1)
	IF RESULT == 0
		IF GETVAR(@"%듀얼리스트%_MZ_条達:場所") != 0
			IF 발동済_1(듀얼리스트,53607) == 0 && 효과발동済(듀얼리스트,場所,ゾーン) == 0
				CALL YN_CHOICE(듀얼리스트,"①상대モンスター全てに１回ずつ攻撃できる","③モンスターを破壊して攻撃力の半分のダメージ")
			ELSEIF 발동済_1(듀얼리스트,53607)
				RESULT = 1
			ELSE
				RESULT = 0
			ENDIF
		ELSE
			RESULT = 0
		ENDIF
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53607,1)
			CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"連戦",1)
		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,53607,10)
			효과추가종류 = 2
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지",53607)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	효과추가종류 = 10
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",戦闘場所(듀얼리스트,1),"永攻DOWN",99999)
ENDIF
