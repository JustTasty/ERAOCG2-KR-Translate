@CARD_EXPLANATION_93170(종류)
#DIM DYNAMIC 종류
CALLFORM CARD_ABLE(0,攻撃時誘発)
PRINTL ①：상대 몬스터의 공격 선언시에 발동할 수 있다。その攻撃を무효로 한다。
PRINTL その後、자신 필드의 빛 속성 몬스터の공격력은 ターン終了時まで攻撃した몬스터의 攻撃力分오른다。

@CARDCAN_93170(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93170)
SIF RESULT == 1
	RETURN 0
IF 종류 == 攻撃時誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 빛속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_93170(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50126)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:(%対面者%_戦闘カード)")

		CALL EVADE_ATTACK(듀얼리스트)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件속성 = 빛속성
		CALL CARD_GRANT_ADV(듀얼리스트,ゾーン,場所,"一攻",攻撃力修正)
	ENDIF
ENDIF
