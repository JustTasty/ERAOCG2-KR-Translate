#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 神の城門
	CASE "略称"
		RESULTS = 神の城門
	CASE "カテゴリ"
		RESULTS:0 = ヴァルハラ
		RESULTS:1 = ゲームオリジナル
ENDSELECT


@CARD_92965(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 通常함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_92965(종류)
#DIM DYNAMIC 종류

PRINTL このカード名のカードは１ターンに１枚しか발동できない。
PRINTL 자신필드에 「ヴァルハラ」カードが存在する場合、このカードの발동は손패からもできる。
CALLFORM CARD_ABLE(1,攻撃時誘発)
PRINTL ①：상대モンスターの直接攻撃宣言時、
PRINTL 자신の손패・덱・フィールドから「ヴァルハラ」카드 １枚を묘지へ送って발동できる。
PRINTL このターン、자신が受ける全てのダメージは半分になる。


@CARDCAN_92965(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92965)
SIF RESULT == 1
	RETURN 0
IF 종류 == 攻撃時誘発
	IF ゾーン == "손패"
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件スーパーカテゴリ = ヴァルハラ
		효과条件名前:0 = 神の居城－ヴァルハラ
		효과条件名前:1 = ヘカテリス
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "마함"
		IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲덱 = 1
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件スーパーカテゴリ = ヴァルハラ
			효과条件名前:0 = 神の居城－ヴァルハラ
			효과条件名前:1 = ヘカテリス
			효과条件他所 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,92963)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 5
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92965(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 상대レベル
#DIM DYNAMIC 상대攻撃力

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻撃時誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92965,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件スーパーカテゴリ = ヴァルハラ
		효과条件名前:0 = 神の居城－ヴァルハラ
		효과条件名前:1 = ヘカテリス
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL SET_PLAYER_INFO(듀얼리스트,"ダメージ半化",1)
		ENDIF
	ENDIF
ENDIF
