@CARDNAME_73204,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = サンヴァイン・プランダー
	CASE "略称"
		RESULTS = 聖蔓の略奪
	CASE "カテゴリ"
		RESULTS:0 = サンアバロン
		RESULTS:1 = サンヴァイン
		RESULTS:2 = ゲームオリジナル
ENDSELECT


@CARD_73204(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_73204(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①の효과は１ターンに１度しか使用できない。
PRINTL ①：상대のフィールド（表側표시）・묘지の마법카드 １枚を대상として、
PRINTL ８００LPを払って발동できる。そのカードを자신の손패に加える。
PRINTL ②：자신필드에 「サンアバロン」Lモンスターが存在する限り、
PRINTL 자신フィールドの表側표시の마법・함정カードは대상내성을 得る。
PRINTL ③：このカードがフィールドから離れた場合に발동する。
PRINTL 자신フィールドの마법・함정カードを全て破壊し、상대は１枚ドローする。



@CARDCAN_73204(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73204)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,73204)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件표시 = 表側표시
	효과範囲상대묘지 = 1
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 링크
	효과条件カテゴリ = サンアバロン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 필드→戦離 || 종류 == 제외時
	RETURN 1
ENDIF

@CARDEFFECT_73204(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC ダメージ量
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73204,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL FULLRESET
		효과範囲상대마함 = 1
		효과条件표시 = 表側표시
		효과範囲상대묘지 = 1
		효과条件종류 = 마법全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = GETVAR(@"%対面者%_마함:選択カード")
			CALL CARD_RECONSTRUCT(対面者,ゾーン,選択カード,-1)
			CALL CARD_GENERATE_HAND(듀얼리스트,選択カード_ID)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73204)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件표시 = 表側표시
	효과条件종류 = 마함全般
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")	
ELSEIF 종류 == 필드→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지 || 종류 == 필드→戦離 || 종류 == 제외時
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함全体",場所,"묘지")
	CALL CARDDRAW_BASIC(対面者,1)
ENDIF
