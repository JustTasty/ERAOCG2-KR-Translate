	CASE "名前"
		RESULTS = リ갤럭시
	CASE "略称"
		RESULTS = 銀河再誕
	CASE "カテゴリ"
		RESULTS:0 = 갤럭시
		RESULTS:1 = 게임 오리지널
ENDSELECT


@CARD_93175(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 미확인족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	CASE "分割"
		RETURN 효과なし
ENDSELECT

RETURN 0

