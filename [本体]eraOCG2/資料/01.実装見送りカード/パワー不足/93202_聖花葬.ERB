@CARDNAME_93202,参照先
;ココで지정カードの名前、略称を返す予定
;いったん隔離理由：묘지起動で初動などなど割れる
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = サンブルーム・フューネラル
	CASE "略称"
		RESULTS = 聖花葬
	CASE "カテゴリ"
		RESULTS:0 = サンアバロン
		RESULTS:1 = ゲームオリジナル
ENDSELECT


@CARD_93202(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 通常함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_93202(종류)
#DIM DYNAMIC 종류
PRINTL このカード名の①②の효과はそれぞれ１ターンに１度しか使用できない。
PRINTL ①：자신필드에 「サンアバロン」Lモンスターが存在する場合、
PRINTL 자신フィールドの 몬스터 １장을 대상として발동できる。そのモンスターと同じ종족の
PRINTL フィールドのモンスターの攻撃力の合計分、자신のLPを回復する。
PRINTL ②：묘지のこのカードを제외して발동できる。서로의 묘지の
PRINTL 마법・함정カードの数以下の레벨을 持つフィールドのモンスターを全て破壊し、
PRINTL お互いにそれぞれ破壊された自身のモンスターの数×300ダメージを受ける。



@CARDCAN_93202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93202)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
		SIF 발동済_1(듀얼리스트,93202)
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 링크
		효과条件カテゴリ = サンアバロン
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSEIF ゾーン == "묘지"
		SIF 발동済_2(듀얼리스트,93202)
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
		SIF モンスター数(듀얼리스트) <= 0 && モンスター数(対面者) <= 0
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲相手묘지 = 1
		효과条件종류 = 마함全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_93202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択종족
#DIM DYNAMIC 마함総数

IF 종류 == 마함起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	IF ゾーン == "마함"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93202,1)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				選択종족 = GETVAR(@"%듀얼리스트%_MZ_種:選択カード")
				효과範囲필드 = 1
				효과条件종류 = モン全般
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				CALL LIFE_CHANGE(듀얼리스트,"増加","효과",RESULT:3)
			ENDIF
		ENDIF
	ELSEIF ゾーン == "묘지"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93202,2)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲相手묘지 = 1
			효과条件종류 = 마함全般
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			마함総数 = RESULT
			CALL FULLRESET
			효과条件종류 = レベル持ち
			CALL 효과条件レベル_ADV(마함総数, "以下")
			효과추가종류 = 3
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지",300)
		ENDIF
	ENDIF
ENDIF
