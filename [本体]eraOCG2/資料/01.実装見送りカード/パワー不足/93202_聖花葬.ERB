@CARD_EXPLANATION_93202(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의 ①②의 효과는 각각 １턴에 １번밖에 사용할 수 없다。
PRINTL ①：자신필드에 「サンアバロン」L몬스터가 존재하는 경우、
PRINTL 자신 필드의  몬스터 １장을 대상으로 하고 발동할 수 있다。그 몬스터と同じ종족の
PRINTL 필드의 몬스터의 공격력의 합계分、자신의 LPを회복する。
PRINTL ②：묘지의 이 카드를 제외하고 발동할 수 있다。서로의 묘지의 
PRINTL 마법 / 함정 카드의 수이하의 레벨을 持つ필드의 몬스터를 전부 파괴하고、
PRINTL お互いに각각 파괴 된 自身の몬스터의 수×300데미지를 受ける。



@CARDCAN_93202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,93202)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
		SIF 발동済_1(듀얼리스트,93202)
			RETURN 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 링크
		효과条件カテゴリ = サンアバロン
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSEIF ゾーン == "묘지"
		SIF 발동済_2(듀얼리스트,93202)
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
		SIF モンスター数(듀얼리스트) <= 0 && モンスター数(対面者) <= 0
			RETURN 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件종류 = 마함全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_93202(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択종족
#DIM DYNAMIC 마함総数

IF 종류 == 마함起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	IF ゾーン == "마함"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93202,1)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)	
			選択カード = RESULT
			IF 選択カード != 9999
				選択종족 = GETVAR(@"%듀얼리스트%_MZ_種:選択カード")
				효과範囲필드 = 1
				효과条件종류 = モン全般
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				CALL LIFE_CHANGE(듀얼리스트,"増加","효과",RESULT:3)
			ENDIF
		ENDIF
	ELSEIF ゾーン == "묘지"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,93202,2)
		IF RESULT == 0
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲상대묘지 = 1
			효과条件종류 = 마함全般
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			마함総数 = RESULT
			CALL FULLRESET
			효과条件종류 = レベル持ち
			CALL 효과条件レベル_ADV(마함総数, "以下")
			효과추가종류 = 3
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"묘지",300)
		ENDIF
	ENDIF
ENDIF
