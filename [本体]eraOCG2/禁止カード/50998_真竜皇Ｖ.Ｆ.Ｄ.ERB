@CARDCAN_50998(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50998)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_T1汎数") < 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50998(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 宣言속성
#DIM DYNAMIC 속성最大数보존
#DIM DYNAMIC 설정속성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50998,10,X消費1)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			PRINTL 【속성을 宣言してください】
			PRINTL
			PRINTL [1] - 빛속성
			PRINTL [2] - 어둠속성
			PRINTL [3] - 땅속성
			PRINTL [4] - 물속성
			PRINTL [5] - 화염속성
			PRINTL [6] - 바람속성
			;PRINTL [7] - 신속성
			BINPUT
			宣言속성 = RESULT
		ELSE
			FOR カウンタ,1,7
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과範囲상대마함 = 1
				효과範囲상대묘지 = 1
				효과範囲상대제외 = 1
				효과条件속성 = カウンタ
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF カウンタ == 7 && RESULT != 0
					宣言속성 = カウンタ
					BREAK
				ELSEIF RESULT > 속성最大数보존
					속성最大数보존 = カウンタ
					宣言속성 = カウンタ
				ENDIF
			NEXT
			SIF 宣言속성 == 0
				宣言속성 = RAND:6 + 1
		ENDIF

		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"T1汎数",宣言속성)

		SELECTCASE 宣言속성
			CASE 1
				CALL SET_PLAYER_INFO(対面者,"빛속성효과無効",1)
			CASE 2
				CALL SET_PLAYER_INFO(対面者,"어둠속성효과無効",1)
			CASE 3
				CALL SET_PLAYER_INFO(対面者,"땅속성효과無効",1)
			CASE 4
				CALL SET_PLAYER_INFO(対面者,"물속성효과無効",1)
			CASE 5
				CALL SET_PLAYER_INFO(対面者,"화염속성효과無効",1)
			CASE 6
				CALL SET_PLAYER_INFO(対面者,"바람속성효과無効",1)
			;CASE 7
			;	CALL SET_PLAYER_INFO(対面者,"신속성효과無効",1)
		ENDSELECT

		攻撃可能속성:0 = 0
		FOR カウンタ,1,7
			SIF 宣言속성 != カウンタ
				攻撃可能속성:カウンタ = カウンタ
		NEXT
		CALL CARD_ATK_RESTRICTION(対面者)
	ENDIF

ELSEIF 종류 == 攻守変動
	설정속성 = GETVAR(@"%듀얼리스트%_MZ_T1汎数:場所")
	CALL FULLRESET
	CALL STATCHANGE_OTHER(듀얼리스트,"필드",場所,"属",설정속성)
	CALL FULLRESET
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"属",설정속성,50998)
ENDIF