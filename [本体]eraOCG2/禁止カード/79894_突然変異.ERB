@CARDCAN_79894(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79894)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	FOR カウンタ,1,13
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件レベル = カウンタ
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件レベル = カウンタ
		효과条件종류 = 융합
		효과条件特不無視 = 1
		효과条件소환可 = 2
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성 = 1
	NEXT
	SIF 条件달성 != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_79894(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성,13
#DIM DYNAMIC 選択カードレベル

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79894)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		FOR カウンタ,1,13
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件レベル = カウンタ
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				CONTINUE
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件レベル = カウンタ
			효과条件종류 = 융합
			효과条件特不無視 = 1
			효과条件소환可 = 2
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성:カウンタ = 1
		NEXT

		CALL FULLRESET
		효과範囲필드 = 1
		효과条件レベル:0 = 0
		FOR カウンタ,1,13
			효과条件レベル:カウンタ = カウンタ
		NEXT
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT != 9999
			選択カードレベル = GETVAR(@"%듀얼리스트%_MZ_星:RESULT")
			CALL CARD_DISPOSE(듀얼리스트,"필드",RESULT)

			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件レベル = 選択カードレベル
			효과条件종류 = 융합
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
