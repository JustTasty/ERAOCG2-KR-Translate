@CARDCAN_79892(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79892)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 5
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_79892(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,5
#DIMS DYNAMIC 選択カード名前,5
#DIM DYNAMIC ランダム

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79892)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件複数 = 5
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "덱",ゾーン,場所)
		IF RESULT != 9999
			FOR カウンタ,0,5
				選択カード:カウンタ = RESULT:カウンタ
			NEXT
			FOR カウンタ,0,5
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_덱:(選択カード:カウンタ)")},"名前"
				選択カード名前:カウンタ = %RESULTS%
			NEXT
			IF 듀얼리스트 != "자신"
				PRINTL 【패에 加えさせる카드를 選択】
				PRINTL
				FOR カウンタ,0,5
					PRINTFORML [カウンタ] - %選択カード名前:カウンタ%
				NEXT
				BINPUT
				ランダム = RESULT
			ELSE
				ランダム = RAND:5
			ENDIF

			CALL FULLRESET
			CALL CARD_ADD(듀얼리스트,"덱",選択カード:ランダム)

			CALL FULLRESET
			효과範囲덱 = 1
			효과条件名前:0 = ダミー
			FOR カウンタ,0,5
				SIF ランダム != カウンタ
					효과条件名前:(カウンタ+1) = %選択カード名前:カウンタ%
			NEXT
			효과条件複数 = 4
			효과条件固名前選択 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
