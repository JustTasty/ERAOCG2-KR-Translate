;-------------------------------------------------
;키스
;コミュニケーション계커맨드、レベル1
;-------------------------------------------------
@COM20
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
;ボディタッチで발기UP
IF BASE:MASTER:발기 <= 1000
	TCVAR:MASTER:사정쾌락강도 = 700
	TCVAR:MASTER:사정대상캐릭터_1 = TARGET
	TCVAR:MASTER:사정부위플래그 = 8
ENDIF
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
;봉사쾌락플래그
TFLAG:봉사쾌락플래그 = 1
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 0
DOWNBASE:기력 += 20

CALL SOURCE_CALC_노출(TARGET, MASTER, 30)
CALL SOURCE_CALC_접촉(TARGET, MASTER, 150)
CALL SOURCE_CALC_쾌Ｍ(TARGET, MASTER, 100)
CALL SOURCE_CALC_쾌Ｍ(MASTER, TARGET, 100)

SIF BASE:TARGET:술기운 >= 500
	CALL DRUNKEN(MASTER)

;키스상실
IF TALENT:MASTER:키스미경험
	CALL SET_FIRSTKISS(MASTER, TARGET, 1)
	EXP:TARGET:애정경험 += 10
ENDIF
IF TALENT:TARGET:키스미경험
	CALL SET_FIRSTKISS(TARGET, MASTER, 1)
	EXP:TARGET:애정경험 += 10
ENDIF

;애널、파과血、촉수の汚れ
IF (STAIN:MASTER:0 & 8) || (STAIN:MASTER:0 & 32) || (STAIN:MASTER:0 & 64)
	CALL SOURCE_CALC_불결(TARGET, MASTER, 300)
;정액汚れ
ELSEIF STAIN:MASTER:0 & 4
	CALL SOURCE_CALC_불결(TARGET, MASTER, 100)
;愛液、페니스汚れ
ELSEIF (STAIN:MASTER:0 & 1) || (STAIN:MASTER:0 & 2)
	CALL SOURCE_CALC_불결(TARGET, MASTER, 50)
ENDIF
IF TALENT:TARGET:스위트바디
	CALL RECOVER_PERMIL(MASTER,50,"체력",1)
	CALL RECOVER_PERMIL(MASTER,100,"기력",1)
ENDIF
;-------------------------------------------------
;특수ソース処理
;-------------------------------------------------
;抑圧、저항持ちには、억울ソース추가
SIF TALENT:자기애 < 0 || TALENT:저항
	CALL SOURCE_CALC_불결(TARGET, MASTER, 50)

;혀を使う조교では、조교者の혀사용자에 따라、쾌락のソース増加
SIF TALENT:MASTER:혀사용자
	CALL SOURCE_CALC_접촉(TARGET, MASTER, 50)

;고양이혀では減少
SIF TALENT:MASTER:고양이혀
	CALL SOURCE_CALC_고통(TARGET, MASTER, 20)

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の口⇔조교者の口の汚れが이동
STAIN:0 |= STAIN:MASTER:0
STAIN:MASTER:0 |= STAIN:0

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 3
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 3
ENDIF


SIF TALENT:연모
	EXP:애정경험 += 1

SIF TALENT:TARGET:고양이혀
	EXP:가학쾌락경험 += 1

EXP:키스경험 ++
EXP:MASTER:키스경험 ++
RETURN 1

@CAN_COM20(ARG)
#DIM DYNAMIC 素質確認
#DIM DYNAMIC 판정値
#DIM DYNAMIC 汚れ値
#DIM DYNAMIC 実行値
SKIPDISP ARG
PRINTL 키스한다
;-------------------------------------------------
;実行できるかの판정
;-------------------------------------------------


;すべての命令に共通の要素を考慮
;(순종が高いと命令に従いやすいなど)
CALL COM_ORDER
素質確認 = RESULT:1
판정値 += RESULT
;ABL:욕망
IF ABL:욕망
	SIF 素質確認
		PRINT  + 
	판정値 += ABL:욕망 * 1
	PRINT 욕망
	PRINTV 'LV,ABL:욕망,'(,ABL:욕망 * 1,')
	素質確認 = 1
ENDIF
;ABL:봉사정신
IF ABL:봉사정신
	SIF 素質確認
		PRINT  + 
	판정値 += ABL:봉사정신 * 4
	PRINT 봉사정신
	PRINTV 'LV,ABL:봉사정신,'(,ABL:봉사정신 * 4,')
	素質確認 = 1
ENDIF

IF MARK:쾌락각인
	SIF 素質確認
		PRINT  + 
	판정値 += MARK:쾌락각인 * 2
	PRINT 쾌락각인
	PRINTV 'LV,MARK:쾌락각인,'(,MARK:쾌락각인 * 2,')
	素質確認 = 1
ENDIF

;PALAM:욕정
IF GETPALAMLV(PALAM:욕정,5)
	SIF 素質確認
		PRINT  + 
	판정値 += GETPALAMLV(PALAM:욕정,5) * 1
	PRINT 욕정
	PRINTV 'LV,GETPALAMLV(PALAM:욕정,5),'(,GETPALAMLV(PALAM:욕정,5) * 1,')
	素質確認 = 1
ENDIF

;부끄럼쟁이
IF TALENT:수치심 > 0
	PRINT  - 
	판정値 -= 1
	PRINT 부끄러움
	PRINTV '(,1,')
	素質確認 = 1
ENDIF
;악취둔감
IF TALENT:악취내성 > 0
	SIF 素質確認
		PRINT  + 
	판정値 += 1
	PRINT 악취둔감
	PRINTV '(,1,')
	素質確認 = 1
ENDIF
;악취민감
IF TALENT:악취내성 < 0
	PRINT  - 
	판정値 -= 1
	PRINT 악취민감
	PRINTV '(,1,')
	素質確認 = 1
ENDIF
;헌신적
IF TALENT:헌신적
	SIF 素質確認
		PRINT  + 
	판정値 += 6
	PRINT 헌신적
	PRINTV '(,6,')
	素質確認 = 1
ENDIF
;쾌감의 부정（음란、쾌락광で無効）
IF TALENT:쾌감반응 < 0 && !TALENT:음란
	PRINT  - 
	판정値 -= 1
	PRINT 쾌감의 부정
	PRINTV '(,1,')
	素質確認 = 1
ENDIF
;연모
IF TALENT:연모
	SIF 素質確認
		PRINT  + 
	판정値 += 5
	PRINT 연모
	PRINTV '(,5,')
	素質確認 = 1
ENDIF
;친애
IF TALENT:연모 > 1
	SIF 素質確認
		PRINT  + 
	판정値 += 10
	PRINT 친애
	PRINTV '(,10,')
	S = 10
ENDIF


;愛液の汚れ
SIF STAIN:MASTER:0 & 1
	汚れ値 += 1
;정액の汚れ
SIF STAIN:MASTER:0 & 4
	汚れ値 += 3
;애널の汚れ
SIF STAIN:MASTER:0 & 8
	汚れ値 += 7
SIF STAIN:MASTER:0 & 16
	汚れ値 += 15
;키스では汚れがそれほど影響しない
Y /= 2
汚れ値 = 汚れ値 * (2 - TALENT:악취내성) / 2

;더러움있음
IF 汚れ値
 	PRINT  - 
	판정値 -= 汚れ値
	PRINT 더러움 있음
	;악취둔감
	IF TALENT:악취내성 > 0
		PRINT 、악취둔감
	ELSEIF TALENT:악취내성 < 0
		PRINT 、악취민감
	ENDIF
	PRINTV '(,汚れ値,')
	素質確認 = 1
ENDIF


;合計を표시(15以上で実行)
PRINT  = 
PRINTV 판정値

実行値 = 15
SIF 판정値 < 実行値
	PRINT  < 
SIF 판정値 == 実行値
	PRINT  = 
SIF 판정値 > 実行値
	PRINT  > 
PRINT 실행치
PRINTV 実行値

WAIT
SKIPDISP 0
;実行できない
SIF 판정値 < 実行値
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE20
;키스한다実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(20)
	RETURN RESULT
;口が汚れているとダメ（조교者が汚れ無視か愛液、모유のよごれならＯＫ）
SIF STAIN:0 >= 2 && (STAIN:0 != 16 && STAIN:0 != 17) && TALENT:MASTER:악취내성 < 2
	RETURN 0
;볼개그사용중は불가
SIF TEQUIP:볼개그
	RETURN 0
;고양이혀の조교者の場合は기교Lv2以上必要
SIF TALENT:MASTER:고양이혀 && ABL:MASTER:기교 < 2
	RETURN 0
RETURN 1

