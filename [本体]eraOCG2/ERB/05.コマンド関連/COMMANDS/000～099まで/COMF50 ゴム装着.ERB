@COM50
;着脱の処理
IF !TEQUIP:MASTER:콘돔
	ITEM:45 -= 1
	TEQUIP:MASTER:콘돔 = 1
	PRINTL 콘돔을 씌웠다
	PRINTFORMW 나머지{ITEM:45}장
ELSE
	TEQUIP:MASTER:콘돔 = 0
	PRINTW 콘돔을 뺐다
ENDIF
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
;行為者
TCVAR:116 = MASTER

RETURN 0

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE50
;콘돔 장착
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(50)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:MASTER:콘돔
	RETURN 1
SIF !ITEM:45
	RETURN 0
SIF !(TALENT:MASTER:성별 & 2)
	RETURN 0
RETURN 1
