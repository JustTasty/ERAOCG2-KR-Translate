;ピロートーク
;-------------------------------------------------

@COM23
#DIM 회복前체력
#DIM 회복前기력
#DIM 회복後체력
#DIM 회복後기력
#DIM 회복前정력
#DIM 회복後정력
#DIM DYNAMIC 환락강도
#DIM DYNAMIC 정복강도
#DIM DYNAMIC 수동강도


;대화누적値が閾値を超えると失敗
IF TCVAR:302
	PRINTFORML %CALLNAME:TARGET%에게 이야기를 걸려고 했지만 단어가 생각나지 않는다
	PRINTW 주위에 어색한 공기가 흘렀다…
	TIME += 10
	DOWNBASE:기력 += 100
	DOWNBASE:MASTER:기력 += 100
	RETURN 1
ENDIF

;======대화からｺﾋﾟﾍﾟ======
;固定で획득するソース
환락강도 = 200

;ABL:친밀をみる
IF ABL:친밀 <= 1
	환락강도 += (ABL:순종 * 40)
ELSEIF ABL:친밀 <= 3
	환락강도 += 200 + (ABL:순종 * 40)
ELSEIF ABL:친밀 <= 5
	환락강도 += 500 + (ABL:순종 * 40)
ELSEIF ABL:친밀 <= 8
	환락강도 += 750 + (ABL:순종 * 60)
ELSEIF ABL:친밀 <= 10
	환락강도 += 1000 + (ABL:순종 * 60)
ELSE
	환락강도 += 1600 + (ABL:순종 * 30)
ENDIF

;호감도をみる
IF CFLAG:호감도 <= 1000
	환락강도 += CFLAG:호감도
ELSEIF CFLAG:호감도 <= 5000
	환락강도 += 500 + (CFLAG:호감도 - 500) / 3
ELSE
	환락강도 += 2000 + (CFLAG:호감도 - 5000) / 5
ENDIF
SIF 환락강도 < 0
	환락강도 = 0


수동강도 = 100 + 100 * ABL:순종
정복강도 = 100 + 100 * ABL:새드끼

;しかし연모でないと成功率が下がる
LOCAL = RAND:(220 - TALENT:연모 * 100)

IF LOCAL <= 20
	;大成功
	EXP:MASTER:대화경험 ++
	TFLAG:SELECTCOM분기 = 1
ELSEIF LOCAL >= 95
	;運が悪いと失敗
	TFLAG:호감도마이너스 = 2
	TFLAG:SELECTCOM분기 = -1
ENDIF

IF TFLAG:SELECTCOM분기 == -1
	TIMES 강도환락 , 0.10
	TIMES 강도정복 , 0.50
	TIMES 강도수동 , 0.50
ELSEIF TFLAG:SELECTCOM분기 == 0
	TIMES 강도환락 , 1.00
	TIMES 강도정복 , 1.00
	TIMES 강도수동 , 1.00
ELSE
	TIMES 강도환락 , 2.00
	TIMES 강도정복 , 2.00
	TIMES 강도수동 , 2.00
ENDIF
SELECTCASE ABL:MASTER:화술기능
	CASE 0
		TIMES 강도환락 , 0.20
		TIMES 강도정복 , 0.20
		TIMES 강도수동 , 0.20
	CASE 1
		TIMES 강도환락 , 0.40
		TIMES 강도정복 , 0.40
		TIMES 강도수동 , 0.40
	CASE 2
		TIMES 강도환락 , 0.70
		TIMES 강도정복 , 0.70
		TIMES 강도수동 , 0.70
	CASE 3
		TIMES 강도환락 , 1.00
		TIMES 강도정복 , 1.00
		TIMES 강도수동 , 1.00
	CASE 4
		TIMES 강도환락 , 1.20
		TIMES 강도정복 , 1.20
		TIMES 강도수동 , 1.20
	CASEELSE
		TIMES 강도환락 , 1.50
		TIMES 강도정복 , 1.50
		TIMES 강도수동 , 1.50
ENDSELECT
;==================================
;대화누적値
TCVAR:301 += 1200 / (10 + ABL:MASTER:화술기능)

CALL SOURCE_CALC_환락(TARGET, MASTER, 환락강도)
CALL SOURCE_CALC_수동(TARGET, MASTER, 수동강도)
CALL SOURCE_CALC_정복(TARGET, MASTER, 정복강도)

CALL RECOVER_PERMIL(MASTER, 50, "체력", 1)
CALL RECOVER_PERMIL(TARGET, 50, "체력", 1)
IF TFLAG:SELECTCOM분기 == 1
	CALL RECOVER_PERMIL(MASTER, 100, "기력", 1)
	CALL RECOVER_PERMIL(TARGET, 150, "기력", 1)
	CALL RECOVER_PERMIL(MASTER, 150, "정력", 1)
ELSEIF TFLAG:SELECTCOM분기 == -1
	CALL RECOVER_PERMIL(MASTER, -100, "기력", 1)
	CALL RECOVER_PERMIL(TARGET, -100, "기력", 1)
	CALL RECOVER_PERMIL(MASTER, 50, "정력", 1)
ELSE
	CALL RECOVER_PERMIL(MASTER, 100, "기력", 1)
	CALL RECOVER_PERMIL(TARGET, 100, "기력", 1)
	CALL RECOVER_PERMIL(MASTER, 100, "정력", 1)
ENDIF

TIME += 30
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE23
;애무実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(0)
	RETURN RESULT
RETURN 1
