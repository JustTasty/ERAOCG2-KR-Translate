;-------------------------------------------------
;착유기
;도구사용コマンド、レベル3
;-------------------------------------------------
@COM48
;着脱の処理
TEQUIP:착유기 = !TEQUIP:착유기

;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
;行為者
TCVAR:116 = MASTER
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 50
DOWNBASE:기력 += 100

CALL SOURCE_CALC_쾌Ｂ(TARGET, MASTER,200)
CALL SOURCE_CALC_노출(TARGET, MASTER, 50)
CALL SOURCE_CALC_접촉(TARGET, MASTER, 10)
CALL SOURCE_CALC_고통(TARGET, MASTER, 100)

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 1
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 1
ENDIF

EXP:MASTER:도구사용경험 ++

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM48(ARG)
;착유기装備中
PRINTL ＜착유기 장착중＞
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
DOWNBASE:ARG:체력 += 25
DOWNBASE:ARG:기력 += 50

CALL SOURCE_CALC_쾌Ｂ(TARGET, -1,100)
CALL SOURCE_CALC_노출(TARGET, MASTER, 25)
CALL SOURCE_CALC_고통(TARGET, MASTER, 50)
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE48
;착유기実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(48)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:17
	RETURN 1
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:11 == 0 && NOITEM == 0
	RETURN 0
;모유체질でないと使えない
SIF MILK_CAN(TARGET) == 0
	RETURN 0
;상반신착의
SIF TEQUIP:1 > 1
	RETURN 0
;니플캡사용중は불가
SIF TEQUIP:16
	RETURN 0
;유방전극装着中はダメ
SIF TEQUIP:24
	RETURN 0
;オトコだとダメ
SIF !(TALENT:2 & 1)
	RETURN 0
;샤워中はダメ
SIF TEQUIP:32
	RETURN 0
;새댁플레이 중はダメ
SIF TEQUIP:새댁플레이
	RETURN 0
;침대ルームでないとダメ
SIF !BEDROOM(CFLAG:MASTER:현재위치)
	RETURN 0
RETURN 1
