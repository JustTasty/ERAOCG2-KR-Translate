;-------------------------------------------------
;야외플레이
;특수なコマンド
;-------------------------------------------------
@COM184

;着脱の処理　終了時はソース、경험の加算は行わない
TEQUIP:야외플레이 = !TEQUIP:야외플레이
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 0
DOWNBASE:기력 += 150

CALL SOURCE_CALC_노출(TARGET, MASTER, 1300)
RETURN 1


;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM184(ARG)
;야외플레이
IF TEQUIP:ARG:야외플레이 == 1
	DOWNBASE:ARG:체력 += 20
	DOWNBASE:ARG:기력 += 50
ELSE
	DOWNBASE:ARG:체력 += 50
	DOWNBASE:ARG:기력 += 100
ENDIF

SIF ARG > 0
	CALL SOURCE_CALC_노출(TARGET, MASTER, 500)
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE184
;야외플레이実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(184)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:야외플레이
	RETURN 1
;아이템｢首輪｣を持っているか、아이템なし설정でないとダメ
SIF ITEM:22 == 0 && NOITEM == 0
	RETURN 0
;순종か마조끼が3以上ないとダメ
SIF ABL:순종 <= 2 && ABL:마조끼 <= 2
	RETURN 0
;대상か主人か助手が흡혈귀で、時間が昼だとダメ
SIF (TALENT:흡혈귀 || TALENT:MASTER:흡혈귀) && TIME == 0
	RETURN 0
;목욕탕플레이 중はダメ
SIF TEQUIP:목욕탕플레이
	RETURN 0
;새댁플레이 중はダメ
SIF TEQUIP:새댁플레이
	RETURN 0
RETURN 1
