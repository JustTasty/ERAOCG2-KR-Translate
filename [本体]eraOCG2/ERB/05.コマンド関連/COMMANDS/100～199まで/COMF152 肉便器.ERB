@COM152
#DIM DYNAMIC リピート횟수
#DIM DYNAMIC カウンタ
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------

IF CFLAG:TARGET:변기화 == 0
	EQUIP:TARGET:1 = 0
	EQUIP:TARGET:2 = 0
	EQUIP:TARGET:신발 = 0
	EQUIP:TARGET:양말 = 0

	EQUIP:TARGET:외투 = 0
	EQUIP:TARGET:이너 = 0
	EQUIP:TARGET:바디슈트 = 0
	EQUIP:TARGET:원피스 = 0
	EQUIP:TARGET:바지 = 0
	EQUIP:TARGET:하반신겉옷 = 0
	EQUIP:TARGET:치마 = 0
	EQUIP:TARGET:상반신속옷１ = 0
	EQUIP:TARGET:상반신속옷２ = 0
	EQUIP:TARGET:하반신속옷１ = 0
	EQUIP:TARGET:하반신속옷２ = 0
	CALL CLOTHES_SETTING_TRAIN(TARGET)

	CFLAG:MASTER:현재위치 = 11
	CFLAG:TARGET:현재위치 = 11
	CFLAG:TARGET:변기화 = 1
	CFLAG:TARGET:동행 = 0

	TEQUIP:TARGET:볼개그 = 1
	TEQUIP:TARGET:애널바이브 = 1
	TEQUIP:TARGET:아이마스크 = 1
	TEQUIP:TARGET:바이브 = 1
	TEQUIP:TARGET:밧줄 = 1
	CALL SOURCE_CALC_쾌Ｖ(TARGET, MASTER,250)
	CALL SOURCE_CALC_쾌Ａ(TARGET, MASTER,250)
	CALL SOURCE_CALC_노출(TARGET, MASTER,500)
	CALL SOURCE_CALC_접촉(TARGET, MASTER,300)
	CALL SOURCE_CALC_구속(TARGET, MASTER,400)
	CALL SOURCE_CALC_고통(TARGET, MASTER,1000)
ELSEIF CFLAG:TARGET:변기화 == 1
	CFLAG:TARGET:변기화 = 0
	TEQUIP:TARGET:볼개그 = 0
	TEQUIP:TARGET:애널바이브 = 0
	TEQUIP:TARGET:아이마스크 = 0
	TEQUIP:TARGET:바이브 = 0
	TEQUIP:TARGET:밧줄 = 0
	TEQUIP:TARGET:Ｖ섹스 = -1
	TEQUIP:TARGET:Ａ섹스 = -1
ENDIF
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
TIME += 180
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE152
;角削り
SIF !TFLAG:100
	RETURN 0
SIF CFLAG:TARGET:변기화 == 1
	RETURN 1
;一括관리
SIF GLOBAL_COMABLE(152)
	RETURN RESULT
;IF LOCAL == 1
	;순종が4以上かつ마조끼が4以上じゃないと実行できない
	SIF ABL:순종 <= 3 || ABL:마조끼 <= 3
		RETURN 0
	;主人が금단의지식持ちじゃないとダメ
	SIF TALENT:MASTER:금단의지식 == 0
		RETURN 0
	;침대ルームでないとダメ
	SIF !BEDROOM(CFLAG:MASTER:현재위치)
		RETURN 0

	SIF ITEM:밧줄 == 0
		RETURN 0
	SIF ITEM:바이브 == 0
		RETURN 0
	SIF ITEM:볼개그 == 0
		RETURN 0
	SIF ITEM:아이마스크 == 0
		RETURN 0
	SIF ITEM:애널바이브 == 0
		RETURN 0
;ENDIF
RETURN 1
