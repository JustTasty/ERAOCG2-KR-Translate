;-------------------------------------------------
;미약
;특수コマンド
;-------------------------------------------------
@COM181
ITEM:41 -= 1
TEQUIP:미약 = 1
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
;조교者が조합지식を持っていれば消費を抑えられる
IF TALENT:MASTER:조합지식
	DOWNBASE:체력 += 150
	DOWNBASE:기력 += 150
ELSE
	DOWNBASE:체력 += 300
	DOWNBASE:기력 += 300
ENDIF
EXP:TARGET:약물경험 ++
;미약효과로 욕정のアップが2倍になるので実際には+5000
UP:욕정 = 2500
CALL SOURCE_CALC_불결(TARGET, MASTER, 1000)

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 1
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 1
ENDIF

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE181
;미약実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(181)
	RETURN RESULT
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:41 == 0 && NOITEM == 0
	RETURN 0
;약독내성だとダメ
SIF TALENT:약독내성
	RETURN 0
RETURN 1
