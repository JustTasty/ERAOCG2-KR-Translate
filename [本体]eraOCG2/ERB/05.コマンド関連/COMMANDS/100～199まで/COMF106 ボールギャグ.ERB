;-------------------------------------------------
;볼개그
;SM계커맨드、レベル2
;-------------------------------------------------
@COM106
;着脱の処理
TEQUIP:볼개그 = !TEQUIP:볼개그
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
;行為者
TCVAR:116 = MASTER
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 0
DOWNBASE:기력 += 50

CALL SOURCE_CALC_구속(TARGET, MASTER, 200)

;-------------------------------------------------
;특수ソース処理
;-------------------------------------------------
;긴박경험が高いと消費減少
IF EXP:구속경험 < EXPLV:3
	TIMES DOWNBASE:체력 , 1.00
	TIMES DOWNBASE:기력 , 1.00
ELSEIF EXP:구속경험 < EXPLV:4
	TIMES DOWNBASE:체력 , 0.90
	TIMES DOWNBASE:기력 , 0.90
ELSE
	TIMES DOWNBASE:체력 , 0.70
	TIMES DOWNBASE:기력 , 0.70
ENDIF

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
EXP:구속경험 += 2

RETURN 1
;-------------------------------------------------
;装着계속の処理
;-------------------------------------------------
@EQUIP_COM106(ARG)
PRINTL ＜볼개그 장착중＞

;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:ARG:체력 += 0

CALL SOURCE_CALC_구속(ARG, MASTER, 100)
;-------------------------------------------------
;특수ソース処理
;-------------------------------------------------
;긴박경험が高いと消費減少
LOCAL = 25
IF EXP:ARG:구속경험 < EXPLV:3
	TIMES LOCAL , 1.00
ELSEIF EXP:ARG:구속경험 < EXPLV:4
	TIMES LOCAL , 0.90
ELSE
	TIMES LOCAL , 0.70
ENDIF
DOWNBASE:ARG:기력 += LOCAL

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
EXP:ARG:구속경험 ++

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE106
;볼개그実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(106)
	RETURN RESULT
;解除はいつでも可能
SIF TEQUIP:볼개그
	RETURN 1
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:17 == 0 && NOITEM == 0
	RETURN 0
;새댁플레이 중はダメ
SIF TEQUIP:새댁플레이
	RETURN 0
RETURN 1