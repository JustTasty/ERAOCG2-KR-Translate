@COM102
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
ITEM:46 --
;自動補充
IF !ITEM:46 && MONEY >= 2000 && FLAG:1001
	CALL MONEY_GET(-2000)
	ITEM:46 ++
ENDIF
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 40
DOWNBASE:기력 += 30

CALL SOURCE_CALC_고통(TARGET, MASTER, 1200)
;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 2
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 2
ENDIF

RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE102
;양초実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(102)
	RETURN RESULT
;아이템を持っているか、아이템なし설정でないとダメ
SIF ITEM:46 == 0 && NOITEM == 0
	RETURN 0

;全裸でないとダメ（양말、특수は除く）
SIF TEQUIP:0 || TEQUIP:1
	RETURN 0
;목욕탕플레이 중はダメ
SIF TEQUIP:목욕탕플레이
	RETURN 0
;새댁플레이 중はダメ
SIF TEQUIP:새댁플레이
	RETURN 0
;침대ルームでないとダメ
SIF !BEDROOM(CFLAG:MASTER:현재위치)
	RETURN 0
RETURN 1