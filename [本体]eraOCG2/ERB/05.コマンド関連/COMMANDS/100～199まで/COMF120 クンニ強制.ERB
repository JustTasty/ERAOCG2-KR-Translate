;-------------------------------------------------
;커닐링구스 강제
;助手によるコマンド、及び레즈プレイ、レベル1
;-------------------------------------------------
@COM120
;-------------------------------------------------
;COM別FLAGの설정
;-------------------------------------------------
TCVAR:MASTER:사정대상캐릭터_1 = TARGET
TCVAR:MASTER:사정부위플래그 = 3
TCVAR:MASTER:사정쾌락강도 = 1000

;봉사쾌락
TFLAG:봉사쾌락플래그 = 1
;-------------------------------------------------
;ソース추가処理
;-------------------------------------------------
;消費체력、기력
DOWNBASE:체력 += 10
DOWNBASE:기력 += 100

CALL SOURCE_CALC_쾌Ｃ(MASTER, TARGET, 150)
CALL SOURCE_CALC_접촉(TARGET, MASTER, 100)
CALL SOURCE_CALC_노출(TARGET, MASTER, 40)
CALL SOURCE_CALC_봉사(TARGET, MASTER, 300)
;애널、파과血、촉수の汚れ
IF (STAIN:MASTER:3 & 8) || (STAIN:MASTER:3 & 32) || (STAIN:MASTER:3 & 64)
	CALL SOURCE_CALC_불결(TARGET, MASTER, 800)
;정액汚れ
ELSEIF STAIN:MASTER:3 & 4
	CALL SOURCE_CALC_불결(TARGET, MASTER, 400)
ELSE
	CALL SOURCE_CALC_불결(TARGET, MASTER, 200)
ENDIF
;키스상실
IF TALENT:TARGET:키스미경험
	CALL SET_FIRSTKISS(TARGET, MASTER, 3)
	EXP:TARGET:이상경험 += 5
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隷の口⇔조교者のＶの汚れが이동
STAIN:0 |= STAIN:MASTER:3
STAIN:MASTER:3 |= STAIN:0

;-------------------------------------------------
;경험の処理
;-------------------------------------------------
;同性愛　레즈なら戻り値1게이なら戻り値2
IF HETEROSEX(TARGET,MASTER)
	EXP:(50 + HETEROSEX(TARGET,MASTER)) += 6
	EXP:MASTER:(50 + HETEROSEX(TARGET,MASTER)) += 6
ENDIF

;奴隷が고양이혀持ちの場合は、조교者に가학쾌락경험を추가
SIF TALENT:TARGET:고양이혀
	EXP:가학쾌락경험 ++
EXP:펠라경험 ++

RETURN 1

@CAN_COM120(ARG)
#DIM DYNAMIC 素質確認
#DIM DYNAMIC 판정値
#DIM DYNAMIC 汚れ値
#DIM DYNAMIC 実行値
SKIPDISP ARG
PRINTL 커닐링구스 강제
;-------------------------------------------------
;実行판정処理
;-------------------------------------------------


;すべての命令に共通の要素を考慮
;(순종が高いと命令に従いやすいなど)
CALL COM_ORDER
素質確認 = RESULT:1
판정値 += RESULT
;ABL:욕망
IF ABL:욕망
	SIF 素質確認
		PRINT  + 
	판정値 += ABL:욕망 * 1
	PRINT 욕망
	PRINTV 'LV,ABL:욕망,'(,ABL:욕망 * 1,')
	素質確認 = 1
ENDIF
;ABL:봉사정신
IF ABL:봉사정신
	SIF 素質確認
		PRINT  + 
	판정値 += ABL:봉사정신 * 4
	PRINT 봉사정신
	PRINTV 'LV,ABL:봉사정신,'(,ABL:봉사정신 * 4,')
	素質確認 = 1
ENDIF

IF MARK:쾌락각인
	SIF 素質確認
		PRINT  + 
	판정値 += MARK:쾌락각인 * 2
	PRINT 쾌락각인
	PRINTV 'LV,MARK:쾌락각인,'(,MARK:쾌락각인 * 2,')
	素質確認 = 1
ENDIF
;PALAM:욕정
IF GETPALAMLV(PALAM:욕정,5)
	SIF 素質確認
		PRINT  + 
	판정値 += GETPALAMLV(PALAM:욕정,5) * 1
	PRINT 욕정
	PRINTV 'LV,GETPALAMLV(PALAM:욕정,5),'(,GETPALAMLV(PALAM:욕정,5) * 1,')
	素質確認 = 1
ENDIF
;부끄럼쟁이
IF TALENT:수치심 > 0
	PRINT  - 
	판정値 -= 1
	PRINT 부끄럼쟁이
	PRINTV '(,1,')
	素質確認 = 1
ENDIF
;악취둔감
IF TALENT:악취내성 > 0
	SIF 素質確認
		PRINT  + 
	판정値 += 3
	PRINT 악취둔감
	PRINTV '(,3,')
	素質確認 = 1
ENDIF
;악취민감
IF TALENT:악취내성 < 0
	PRINT  - 
	판정値 -= 3
	PRINT 악취민감
	PRINTV '(,3,')
	素質確認 = 1
ENDIF
;헌신적
IF TALENT:헌신적
	SIF 素質確認
		PRINT  + 
	판정値 += 6
	PRINT 헌신적
	PRINTV '(,6,')
	素質確認 = 1
ENDIF
;쾌감의 부정（음란、쾌락광で無効）
IF TALENT:쾌감반응 < 0 && !TALENT:음란
	PRINT  - 
	판정値 -= 1
	PRINT 쾌감의 부정
	PRINTV '(,1,')
	素質確認 = 1
ENDIF
;음란
IF TALENT:음란
	SIF 素質確認
		PRINT  + 
	판정値 += 5
	PRINT 음란
	PRINTV '(,5,')
	素質確認 = 1
ENDIF
;쾌락광
IF TALENT:음란 > 1
	SIF 素質確認
		PRINT  + 
	판정値 += 5
	PRINT 쾌락광
	PRINTV '(,5,')
	素質確認 = 1
ENDIF


;愛液の汚れ
SIF STAIN:MASTER:3 & 1
	汚れ値 += 1
;정액の汚れ
SIF STAIN:MASTER:3 & 4
	汚れ値 += 3
;애널の汚れ
SIF STAIN:MASTER:3 & 8
	汚れ値 += 7
SIF STAIN:MASTER:3 & 16
	汚れ値 += 15

汚れ値 = 汚れ値 * (2 - TALENT:악취내성) / 2

;더러움있음
IF 汚れ値
 	PRINT  - 
	판정値 -= 汚れ値
	PRINT 더러움있음
	;악취둔감
	IF TALENT:악취내성 > 0
		PRINT 、악취둔감
	ELSEIF TALENT:악취내성 < 0
		PRINT 、악취민감
	ENDIF
	PRINTV '(,汚れ値,')
	素質確認 = 1
ENDIF

;合計を표시(23以上で実行)
PRINT  = 
PRINTV 판정値

実行値 = 23
SIF 판정値 < 実行値
	PRINT  < 
SIF 판정値 == 実行値
	PRINT  = 
SIF 판정値 > 実行値
	PRINT  > 
PRINT 실행치
PRINTV 実行値

WAIT
SKIPDISP 0
;実行できない
SIF 판정値 < 実行値
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行판정
;-------------------------------------------------
@COM_ABLE120
;커닐링구스 강제実行판정
SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(120)
	RETURN RESULT
;조교者がオトコだとダメ
SIF !(TALENT:MASTER:성별 & 1)
	RETURN 0
;고양이혀の奴隷の場合は기교Lv2以上必要
SIF TALENT:고양이혀 && ABL:기교 < 2
	RETURN 0
;볼개그사용중は불가
SIF TEQUIP:볼개그
	RETURN 0
RETURN 1