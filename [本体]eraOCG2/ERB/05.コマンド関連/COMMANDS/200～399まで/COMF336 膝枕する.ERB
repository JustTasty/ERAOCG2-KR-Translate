SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(336)
	RETURN RESULT
;친밀감강도1
SIF TCVAR:MASTER:친밀감 < 1
	RETURN 0
;室内のみ
SIF CFLAG:MASTER:현재위치 > 自宅部屋最大値
	RETURN 0
SIF CFLAG:우후후 == 2
	RETURN 0
;수면中
SIF CFLAG:수면
	RETURN 0
;기력0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
RETURN 1
