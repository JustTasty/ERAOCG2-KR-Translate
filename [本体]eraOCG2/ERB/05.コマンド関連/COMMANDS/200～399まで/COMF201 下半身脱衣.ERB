SIF !TFLAG:100
	RETURN 0
;一括관리
SIF GLOBAL_COMABLE(201)
	RETURN RESULT
;既に着ていない
SIF !EQUIP:바지 && !EQUIP:하반신겉옷 && !EQUIP:치마
	RETURN 0
;상반신一체형
SIF EQUIP:바디슈트 || EQUIP:원피스 || EQUIP:기모노 || EQUIP:레오타드
	RETURN 0
SIF !EQUIP:0
	RETURN 0
RETURN 1
