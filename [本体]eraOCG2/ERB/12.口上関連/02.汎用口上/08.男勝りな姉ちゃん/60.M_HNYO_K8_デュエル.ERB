;==================================================
;2,モンスター특수소환
;==================================================
@M_KOJO_DUEL_K8_2(カードID,소환出処)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIM DYNAMIC 소환出処
#DIMS DYNAMIC カード名
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE 소환出処
		;패에서 
		CASE 召種손패
			PRINTFORML 「%カード名%を패에서 특수 소환한다ぜ」
		;마법함정ゾーンから。　キリ番・シェイプシスターなどを出す場合
		CASE 召種마함
			PRINTFORML 「飛び出しな！　마함 존から%カード名%を특수소환！」
		;덱에서 
		CASE 召種덱
			PRINTFORML 「へへ、リクルートっと！　%カード名%を덱에서 특수소환！」
		;EX덱에서 
		CASE 召種EX덱
			PRINTFORML 「EXから%カード名%を특수소환だ！」
		;묘지에서 
		CASE 召種묘지
			PRINTFORML 「お休み中ごめんな、%カード名%を蘇生！」
		;제외状態から
		CASE 召種제외
			PRINTFORML 「まだまだ働かせるぜ！　%カード名%を특수소환！」
		;主にトークン生成
		CASE 10
			PRINTFORML 「行くぜカード生産っと%カード名%を특수소환！」
	ENDSELECT
ENDIF

;==================================================
;3,특수モンスター소환
;==================================================
@M_KOJO_DUEL_K8_3(カードID,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード名
#DIM DYNAMIC カード種
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%

TRYCALLFORM CARD_{カードID}("종류")
カード種 = RESULT

;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE カード種
		;의식소환
		CASE 의식
			PRINTFORML 「青いカードってなんかいいよな～！　%カード名%、강림！」
		;융합소환
		CASE 융합
			PRINTFORML 「手と手を合わせて、융합っと！　%カード名%を융합소환！」
		;싱크로소환
		CASE 싱크로
			PRINTFORML 「こいつ足す、こいつで～。よし、싱크로소환、%カード名%！」
		;엑시즈소환
		CASE 엑시즈
			PRINTFORML 「行くぜ！　モンスター同士をオーバーレイ！　엑시즈、%カード名%！」
		;링크소환
		CASE 링크
			PRINTFORML 「アローヘッド確認、行くぜ%カード名%を링크소환！」
		;遊戯王作品 이외의 EXのモンスター
		CASE 초차원
			PRINTFORML 「全く知らないけど・・・　초차원から出てきなさい！　%カード名%、강림！」
	ENDSELECT
ENDIF

;==================================================
;4,효과仕様宣言
;==================================================
@M_KOJO_DUEL_K8_4(カードID,발동出処)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード名
#DIM DYNAMIC 발동出処
#DIM DYNAMIC カード種
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE 발동出処
		;손패발동
		CASE 1
			PRINTFORML 「패에서 %カード名%의 효과를 발동するぜ！」
		;필드발동
		CASE 2
			PRINTFORML 「필드에 いる%カード名%의 효과를 발동するぞ！」
		;마함발동
		CASE 3
			IF カード種 == 速攻마법
				PRINTFORML 「速攻마법발동！　%カード名%！」
			ELSEIF カード種 == 지속마법
				PRINTFORML 「%カード名%의 효과를 발동だ！！」
			ELSEIF カード種 == フィールド
				PRINTFORML 「フィールド마법、%カード名%의 효과를 발동だ」
			ELSEIF カード種 == 通常함정
				PRINTFORML 「リバースカードオープン！　%カード名%！」
			ELSE
				PRINTFORML 「%カード名%의 효과를 발동する」
			ENDIF
		;묘지발동
		CASE 4
			PRINTFORML 「眠ってるとこごめんな？　%カード名%의 효과발동！」
	ENDSELECT
ENDIF



