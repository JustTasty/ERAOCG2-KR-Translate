@M_HNYO_EVENT_K9_1(ARG,ARG:1)
;구상주는 TARGET
;--------------------------------------------------
;기입 체크 (=0, 비표시, 1, 표시)
LOCAL = 1
;-------------
IF LOCAL
	;빈 줄
	PRINTFORML
	;-------------------------------------------------
	;하루 첫 인사 분기 (MAIN/밖 모두)
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && GROUPMATCH(ARG,1,2,6) && CFLAG:TARGET:인사했음 == 0
		PRINTFORMW "안녕~ %CSTR:TARGET:MASCALL%. 하아~ 졸려……"
		RETURN 1
	ENDIF

	;-------------------------------------------------
	;소분기
	;-------------------------------------------------
	;MASTER가 들어왔을 때
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 1
		PRINTFORMW "어, %CSTR:TARGET:MASCALL%이네."
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;TARGET이 들어왔을 때
	;eraOCG2_V0.40_BT_240518 현재는 흐르지 않으므로 주의
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 2
		PRINTFORMW "있었네, %CSTR:TARGET:MASCALL%."
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;MASTER가 목욕하러 들어와 같이 목욕할 때
	;eraOCG2_V0.40_BT_240518 현재는 흐르지 않으므로 주의
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 3
		PRINTFORMW "아~, 있었네. 너무 빤히 보지 마."
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;TARGET이 목욕하러 들어왔다가 나갔을 때
	;eraOCG2_V0.40_BT_240518 현재는 흐르지 않으므로 주의
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 4
		PRINTFORMW "으악!? 있으면 소리라도 내라고!"
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;TARGET이 목욕하러 들어와서 쫓겨났을 때
	;미확인
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 5
		PRINTFORMW "목욕 너무 길어, 내 차례니까 자, 얼른 비켜."
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;외출지에서 조우했을 때
	;eraOCG2_V0.40_BT_240522 현재는 흐르지 않으므로 주의
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 6
		PRINTFORMW "%CSTR:TARGET:MASCALL%이네, 안녕~"
		RETURN 1
	ENDIF
	;-------------------------------------------------
	;다른 캐릭터와 데이트 중에 조우했을 때
	;eraOCG2_V0.40_BT_240522 현재는 흐르지 않으므로 주의
	;ARG:1에 데이트 상대
	;기입 체크 (=0, 비표시, 1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARG == 7
		PRINTFORMW "앗, %CSTR:TARGET:SELFCALL%는 신경 쓰지 말고~"
		RETURN 1
	ENDIF
ENDIF
RETURN 1

