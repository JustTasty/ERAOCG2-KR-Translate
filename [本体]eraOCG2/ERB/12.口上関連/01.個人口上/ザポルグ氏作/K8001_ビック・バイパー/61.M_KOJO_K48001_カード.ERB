;直接カードのIDを使える。
;캐릭터が無くても動く

;存在証明
@M_KOJO_CARD_K48001
SIF CFLAG:NO_TO_CHARANUM(8001):500 >= 9
	RETURN 0
RETURN 1

;==================================================
;0,モンスター소환時
;==================================================
@M_KOJO_CARD_K48001_0(ARG,ARG:1)
#DIM DYNAMIC 호감도修正
#DIMS DYNAMIC カード名
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	PRINTFORMW 「ハロー、オールデリートの時間です」
ENDIF

;==================================================
;1,攻撃時
;==================================================
@M_KOJO_CARD_K48001_1(ARG,ARG:1)
#DIM DYNAMIC 호감도修正
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	PRINTFORMW 「オーダーを承認、殴り殺します」
ENDIF

;==================================================
;2,효과발동
;==================================================
;효과別で鳴らしたいなら、直接カードのデータを見て、설정する必要がある
;面倒、分からないであれば분기はせず
;失敗판정は、いわゆる효과을 무효로されたとかそういうやつ
@M_KOJO_CARD_K48001_2(종류,失敗판정)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC 종류
#DIM DYNAMIC 失敗판정
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF 失敗판정 == 0
		IF 종류 == EX소환時
			PRINTFORMW 「オプションセレクト開始、好きなのを７장골라주세요」
		ELSEIF 종류 == 발동誘発
			PRINTFORMW 「박테리안を確認、デストロります」
		ELSEIF 종류 == 戦破壊→묘지
			PRINTFORMW 「機体の修復が完了しました、再出撃します」
		ENDIF
	ELSE
		PRINTFORMW 「행동が阻害されました、次の지시をお願いします」
	ENDIF
ENDIF

;==================================================
;3,除去時
;==================================================
;いちいちなんでも除去で話すとやかましいため、デフォでは破壊にのみ反応するように설정
@M_KOJO_CARD_K48001_3(除去種,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC 除去種
#DIMS DYNAMIC カード名
#DIM DYNAMIC カード種

;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE 除去種
		CASE 破壊行き,戦闘破壊行き
			PRINTFORMW 「機体の損傷を確認。　オプションをパージし、修復を開始します」
	ENDSELECT
ENDIF

