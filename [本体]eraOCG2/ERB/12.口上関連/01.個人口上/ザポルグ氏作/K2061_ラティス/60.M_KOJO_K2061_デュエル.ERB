	IF GROUPMATCH(カードID,2055,42055,2058,12058,2059,12059)
		PRINTFORMW 「%カード略称%さん의 효과를 발동しますね♪」
	ELSEIF GROUPMATCH(カードID,2060,12060,2056,12056,2057,12057)
		PRINTFORMW 「%カード略称%ちゃん의 효과를 발동しますね♪」
	ELSEIF カードID == 2061
		PRINTFORMW 「私의 효과를 발동しますね♪」
	ELSE
		SELECTCASE 발동出処
			CASE 1
				;손패발동
				IF カード종류 < モン全般
					PRINTFORMW 「패의 %カード名%의 효과를 발동します」
				ELSE
					PRINTFORMW 「%カード名%を발동します」
				ENDIF
			CASE 2
				;필드발동
				PRINTFORMW 「%カード名%의 효과를 발동します」
			CASE 3
				;마함발동
				IF GROUPMATCH(カード종류,速攻마법,通常함정)
					PRINTFORMW 「リバースカード、オープン！　%カード名%を발동します♪」
				ELSEIF カード종류 < モン全般
					PRINTFORMW 「마법＆함정존의 %カード名%의 효과를 발동します」
				ELSE
					PRINTFORMW 「%カード名%의 효과를 발동します」
				ENDIF
			CASE 4
				;묘지발동
				PRINTFORMW 「묘지의 %カード名%의 효과를 발동します」
		ENDSELECT
	ENDIF
ENDIF



