LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF GROUPMATCH(カードID,2055,42055,2058,12058,2059,12059)
		PRINTFORMW 「%カード略称%さん！　お願いします！」
	ELSEIF GROUPMATCH(カードID,2060,12060,2056,12056,2057,12057)
		PRINTFORMW 「%カード略称%ちゃん、頑張ってくださいね♪」
	ELSEIF カードID == 2061
		PRINTFORMW 「私を특수소환します♪」
	ELSE
		SELECTCASE 소환出処
			;패에서 
			CASE 召種손패
				PRINTFORMW 「패에서 %カード名%を특수소환します」
			;마법함정ゾーンから。　キリ番・シェイプシスターなどを出す場合
			CASE 召種마함
				PRINTFORMW 「마법＆함정존의 %カード名%を필드에 특수소환します」
			;덱에서 
			CASE 召種덱
				PRINTFORMW 「덱에서 %カード名%を특수소환します」
			;EX덱에서 
			CASE 召種EX덱
				PRINTFORMW 「ＥＸ덱의 %カード名%を특수소환します」
			;묘지에서 
			CASE 召種묘지
				PRINTFORMW 「お目覚めの時間ですよ？　묘지의 %カード名%を특수소환します」
			;제외状態から
			CASE 召種제외
				PRINTFORMW 「お帰りなさいませ、제외되어있는 %カード名%を특수소환します」
			;主にトークン生成
			CASE 10
				PRINTFORMW 「%カード名%を특수소환しますね」
		ENDSELECT
	ENDIF
ENDIF

