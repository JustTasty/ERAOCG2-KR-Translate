			CASE 召種제외
				PRINTFORMW 「제외되어있는 %カード名%さんを필드에 戻します」
			;主にトークン生成
			CASE 10
				IF カードID == 1628
					PRINTFORMW 「おいで、ルーシカ！」
					SETCOLOR C_YELLOW
					PRINTFORMW 「おっけー！　私の出番だねー！」
					RESETCOLOR
				ELSE
					PRINTFORMW 「%カード名%を필드에 生成します・・・」
				ENDIF
		ENDSELECT
	ENDIF
ENDIF

