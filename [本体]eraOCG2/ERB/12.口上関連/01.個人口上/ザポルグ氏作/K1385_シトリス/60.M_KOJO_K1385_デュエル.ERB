;==================================================
;2,モンスター특수소환
;==================================================
@M_KOJO_DUEL_K1385_2(カードID,소환出処)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIM DYNAMIC 소환出処
#DIMS DYNAMIC カード名
#DIMS DYNAMIC カード略称
TRYCALLFORM CARDNAME_{カードID}("略称")
カード略称 = %RESULTS%
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF カードID == 1385
		PRINTFORMW 「わたしを특수 소환한다わ～❤」
	ELSEIF カードID >= 1370 && カードID <= 1384
		PRINTFORMW 「%カード略称%ちゃんを특수소환よ～❤」
	ELSE
		SELECTCASE 소환出処
			;패에서 
			CASE 召種손패
				PRINTFORMW 「패에서 ～、%カード名%を특수소환～❤」
			;마법함정ゾーンから。　キリ番・シェイプシスターなどを出す場合
			CASE 召種마함
				PRINTFORMW 「手前から～、%カード名%を특수소환～❤」
			;덱에서 
			CASE 召種덱
				PRINTFORMW 「덱에서 ～、%カード名%を특수소환～❤」
			;EX덱에서 
			CASE 召種EX덱
				PRINTFORMW 「EX덱에서 ～、%カード名%を특수소환～❤」
			;묘지에서 
			CASE 召種묘지
				PRINTFORMW 「묘지에서 ～、%カード名%を특수소환～❤」
			;제외状態から
			CASE 召種제외
				PRINTFORMW 「제외されてる～、%カード名%を특수소환～❤」
			;主にトークン生成
			CASE 10
				PRINTFORMW 「%カード名%を특수소환よ～❤」
		ENDSELECT
	ENDIF
ENDIF

;==================================================
;3,특수モンスター소환
;==================================================
@M_KOJO_DUEL_K1385_3(カードID,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード名
#DIMS DYNAMIC カード略称
#DIM DYNAMIC カード種
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
TRYCALLFORM CARDNAME_{カードID}("略称")
カード略称 = %RESULTS%
TRYCALLFORM CARD_{カードID}("종류")
カード種 = RESULT

;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE カード種
		CASE 의식
			PRINTFORMW 「%カード名%を～、의식しょうか～ん❤」
		CASE 융합
			PRINTFORMW 「%カード名%を～、융합しょうか～ん❤」
		CASE 싱크로
			PRINTFORMW 「%カード名%を～、싱크로しょうか～ん❤」
		CASE 엑시즈
			IF カードID == 1385
				PRINTFORMW 「いくわよ～❤　わたしを엑시즈しょうか～ん❤」
			ELSEIF カードID == 1371 || カードID == 1377
				PRINTFORMW 「엑시즈しょうか～ん❤　%カード略称%ちゃーん❤　おねがいね～❤」
			ELSE
				PRINTFORMW 「%カード名%を～、엑시즈しょうか～ん❤」
			ENDIF
		CASE 링크
			IF カードID == 1370 || カードID == 1380 || カードID == 1384
				PRINTFORMW 「링크しょうか～ん❤　%カード略称%ちゃーん❤　おねがいね～❤」
			ELSE
				PRINTFORMW 「%カード名%を～、링크しょうか～ん❤」
			ENDIF
		;초차원モンスター（デュエマ）
		CASE 초차원
			PRINTFORMW 「%カード名%を～、초차원？しょうか～ん❤」
	ENDSELECT
ENDIF

