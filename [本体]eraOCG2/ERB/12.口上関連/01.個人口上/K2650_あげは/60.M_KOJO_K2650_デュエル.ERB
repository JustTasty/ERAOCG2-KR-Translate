;==================================================
;10,ダメージ反応！（ダメージ）
;==================================================
@M_KOJO_DUEL_K2650_10(ダメージ量,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC ダメージ量
#DIMS DYNAMIC カード名
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	PRINTFORMDL
	IF ダメージ量 >= ライフ_상대
		PRINTFORMW 「きゃあああああ！」
	ELSE
		SELECTCASE ダメージ量
			;ダメージなし
			CASE 0
				PRINTFORMW 「ふん、軽い」
			;１～１９９９の時、小ダメージ
			CASE 1 TO 1999
				PRINTFORMW 「うっ…、そんなもの？」
			;２０００～３９９９の時、結構なダメージ
			CASE 2000 TO 3999
				SELECTCASE RAND:3 + 1
				CASE 1
					PRINTFORMW 「うっ…負ける、もんか…！」
				CASE 2
					PRINTFORMW 「うっ…調子に乗っちゃて…！」
				CASE 3
					PRINTFORMW 「うっ…ちょっと手加減を…！」
				ENDSELECT
			;４０００～７９９９の時、超大ダメージ
			CASE 4000 TO 7999
				PRINTFORMW 「ああうっー！」
				PRINTFORMW　「くっ…ひ、ひどい…」
			;８０００以上、基本即死
			CASEELSE
				PRINTFORMW 「きゃああああああー！」
		ENDSELECT
	ENDIF
ENDIF


