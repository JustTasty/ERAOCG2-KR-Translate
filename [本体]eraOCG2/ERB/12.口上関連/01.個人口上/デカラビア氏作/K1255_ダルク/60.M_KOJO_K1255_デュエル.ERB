;==================================================
;1,モンスター소환
;例：%カード名%を소환！
;==================================================
@M_KOJO_DUEL_K1255_1(カードID,ARG:1)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード名
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	IF カードID == 11250
		PRINTFORMW 「물の力を貸してくれエリア！」
		ENDIF
	IF カードID == 11251
		PRINTFORMW 「바람の力を貸してくれウィン！」
		ENDIF
	IF カードID == 11252
		PRINTFORMW 「火の力を貸してくれヒータ！」
		ENDIF
	IF カードID == 11253
		PRINTFORMW 「땅の力を貸してくれアウス！」
		ENDIF
	IF カードID == 11254
		PRINTFORMW 「光の力を貸してくれライナ！」
		ENDIF
	IF カードID == 11255
		PRINTFORMW 「ボク자신を소환する！」
		ENDIF
	SELECTCASE RAND:3 + 1
		CASE 1
			PRINTFORMW 「%カード名%を소환させてもらう」
		CASE 2
			PRINTFORMW 「力を貸してくれ%カード名%」
		CASE 3
			PRINTFORMW 「出でよ%カード名%」
	ENDSELECT
ENDIF


;==================================================
;2,モンスター특수소환
;==================================================
@M_KOJO_DUEL_K1255_2(カードID,소환出処)
#DIM DYNAMIC 호감도修正
#DIM DYNAMIC カードID
#DIM DYNAMIC 소환出処
#DIMS DYNAMIC カード名
TRYCALLFORM CARDNAME_{カードID}("名前")
カード名 = %RESULTS%
;-------------------------------------------------
;記入チェック（=0, 非표시、1, 표시）
LOCAL = 1
;-------------------------------------------------
IF LOCAL
	SELECTCASE 소환出処
		;패에서 
		CASE 召種손패
			PRINTFORMW 「%カード名%を특수소환だ」
		;마법함정ゾーンから。　キリ番・シェイプシスターなどを出す場合
		CASE 召種마함
			PRINTFORMW 「%カード名%を특수소환だ」
		;덱에서 
		CASE 召種덱
			PRINTFORMW 「덱에서 %カード名%を특수소환」
		;EX덱에서 
		CASE 召種EX덱
			PRINTFORMW 
		;묘지에서 
		CASE 召種묘지
			PRINTFORMW 「出でよ%カード名%」
		;제외状態から
		CASE 召種제외
			PRINTFORMW 「出でよ%カード名%」
		;主にトークン生成
		CASE 10
			PRINTFORMW 
	ENDSELECT
ENDIF

;==================================================
;3,특수モンスター소환
