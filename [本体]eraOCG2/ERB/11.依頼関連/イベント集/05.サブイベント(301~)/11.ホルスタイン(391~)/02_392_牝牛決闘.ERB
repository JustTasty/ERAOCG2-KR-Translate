
@IRAI_DUEL_INTRO_392
#DIM DYNAMIC カウンタ
;듀얼前に「詰め플래그」に1を설정し、最初の5ドローをスキップ
;ターン跨いで処理したいので、듀얼が始まったら詰め플래그をリセット
詰め플래그 = 0

;詰め플래그でスキップしてしまった初期化
CALL CARD_LOADUP

;必要に応じて、ターンプレイヤーを변경(ここで자신にすると、상대의 ターンになる)
;ターンプレイヤー = 자신

;1以上の値を入れると、1한번만 ドローがスキップされる
SETVAR @"자신_ドロースキップ", 1
SETVAR @"상대_ドロースキップ", 1

SETVAR @"자신_バトルスキップ", 1

;필드의 情報を설정
SETVAR @"자신_魔_所有:2", 1;자신의 カード
SETVAR @"자신_魔_表:2", 1;表
SETVAR @"자신_마함:2",279555;発情제어
SETVAR @"자신_魔_個Ｃ:2",1 ;카운터を一個乗せる
SETVAR @"자신_魔_破耐:2",2
SETVAR @"자신_魔_対耐:2",2

SETVAR @"상대_MZ_所有:2", 2;상대의 カード
SETVAR @"상대_MZ_表:2", 1;表
SETVAR @"상대_필드:2",50703;푸른 눈의究極룡

;자신의 패
SETVAR @"자신_손패:0", 79556;미유

;자신의 덱
SETVAR @"자신_덱:0", 79555;호루스타인ミルクファーム
SETVAR @"자신_덱:1", 2110;라뷰린스
SETVAR @"자신_덱:2", 21141;アナザーベリル

;자신의 묘지
SETVAR @"자신_묘지:0", 23063;混沌の使者(エンドフェイズ時、빛속성と어둠속성을 제외하고 패에 加える)
SETVAR @"자신_묘지:1", 23962;어둠・サキュバスナイト
SETVAR @"자신_묘지:2", 11607;光・クイーズナイト

;상대의 덱：引いても使えない札
SETVAR @"상대_덱:0", 41813;의식ガストクラーケ
SETVAR @"상대_덱:1", 41813
SETVAR @"상대_덱:2", 41813
SETVAR @"상대_덱:3", 41813

;勝利条件の설정、ここで詰めデュエルの勝利条件を설치할 수 있다。
@IRAI_DUEL_CONDVIC_392
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者

VARSET RESULT

듀얼리스트 = 자신
対面者 = 상대

;상대몬스터를 全て倒したらクリア
CALL FULLRESET
효과範囲상대필드 = 1
효과条件CNT = 1
CALL CARD_CHECK_ADV("자신")
SIF RESULT == 0
	RETURN 1

IF ターン数 == 3
;패에 미유あり

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 79556
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 2

;패에 ミルクファームあり
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 79555
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 3

;패에 암소あり
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 179556
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 4

;손패なし
	SIF 現손패(듀얼리스트) == 0
		RETURN 5
	
ELSEIF ターン数 == 4

;メインフェイズ１
	SIF メインフェイズ == 1 && メインフェイズ２ == 0
		RETURN 6

;バトルフェイズ
	IF バトルフェイズ == 1 
		
		;패에 回収した카드가 ある
		SIF 現손패(듀얼리스트) != 0
			RETURN 7

		;필드에 암소あり
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV("자신")
		SIF RESULT == 1
			RETURN 8

		;묘지에 암소あり
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 179556
		효과条件CNT = 1
		CALL CARD_CHECK_ADV("자신")
		SIF RESULT == 1
			RETURN 9
	ENDIF
	
	SIF メインフェイズ２ == 1
		RETURN 9

;3ターン目
ELSEIF ターン数 == 5
	;암소의 효과使わずに殴った場合
	SIF ライフ_자신 < 4500
		RETURN 0
	RETURN 10
	
ELSE
	RETURN -1
ENDIF

RETURN 0

;メッセージの설정
@IRAI_DUEL_MESSAGE_392(存在確認)
#DIM DYNAMIC 存在確認
VARSET RESULT

IF 存在確認 == 1
	RETURN 1
ENDIF

;リアクション
CALL IRAI_DUEL_CONDVIC_392

SELECTCASE RESULT

CASE 1
	;デュエルクリア！
PRINTFORML 수고하셨습니다!
	PRINTFORML 「勝利条件달성」を押せば終了するよ！

;1ターン目
CASE 2
	;패에 미유あり
	PRINTFORML 미유登録で「ミルクファーム」を패에 加えよう。
PRINTFORML 아, 실수했다고 생각했다면 「항복하기」를 하면 다시 할 수 있어. ...뭐, 부담 없이 해봐.
CASE 3
	;패에 ミルクファームあり
	PRINTFORML フィールド마법「ミルクファーム」を발동しよう
CASE 4
