
@IRAI_DUEL_INTRO_392
#DIM DYNAMIC カウンタ
;듀얼前に「詰め플래그」に1を설정し、最初の5ドローをスキップ
;ターン跨いで処理したいので、듀얼が始まったら詰め플래그をリセット
詰め플래그 = 0

;詰め플래그でスキップしてしまった初期化
CALL CARD_LOADUP

;必要に応じて、ターンプレイヤーを변경(ここで자신にすると、상대의 ターンになる)
;ターンプレイヤー = 자신

;1以上の値を入れると、1한번만 ドローがスキップされる
SETVAR @"자신_ドロースキップ", 1
SETVAR @"상대_ドロースキップ", 1

SETVAR @"자신_バトルスキップ", 1

;필드의 情報を설정
SETVAR @"자신_魔_所有:2", 1;자신의 カード
SETVAR @"자신_魔_表:2", 1;表
SETVAR @"자신_마함:2",279555;発情제御
SETVAR @"자신_魔_個Ｃ:2",1 ;카운터を一個乗せる
SETVAR @"자신_魔_破耐:2",2
SETVAR @"자신_魔_対耐:2",2

SETVAR @"상대_MZ_所有:2", 2;상대의 カード
SETVAR @"상대_MZ_表:2", 1;表
SETVAR @"상대_필드:2",50703;푸른 눈의究極룡

;자신의 패
SETVAR @"자신_손패:0", 79556;미유
SETVAR @"자신_손패:1", 2110;라뷰린스

;자신의 덱
SETVAR @"자신_덱:0", 79555;호루스타인ミルクファーム
SETVAR @"자신_덱:1", 21141;アナザーベリル
;SETVAR @"자신_덱:2", 2110;ラビュリンス

;자신의 묘지
SETVAR @"자신_묘지:0", 23063;混沌の使者(エンドフェイズ時、빛속성と어둠속성을 제외하고 패에 加える)
SETVAR @"자신_묘지:1", 11607;光・クイーズナイト

;상대의 덱：引いても使えない札
SETVAR @"상대_덱:0", 41811;의식ガストクラーケ
SETVAR @"상대_덱:1", 41811
SETVAR @"상대_덱:2", 41811
SETVAR @"상대_덱:3", 41811

;승리条件の설정、ここで詰めデュエルの승리条件を설치할 수 있다。
@IRAI_DUEL_CONDVIC_392
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者

VARSET RESULT

듀얼리스트 = 자신
対面者 = 상대

;상대 몬스터를 全て倒したらクリア
CALL FULLRESET
효과範囲상대필드 = 1
효과条件CNT = 1
CALL CARD_CHECK_ADV("자신")
SIF RESULT == 0
	RETURN 1

IF ターン数 == 3
;패에 미유あり

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 79556
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 2

;패에 ミルクファームあり
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 79555
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 3

;패에 암소あり
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 179556
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 4

;손패なし
	SIF 現손패(듀얼리스트) == 0
		RETURN 5
	
ELSEIF ターン数 == 4

;メインフェイズ１
	SIF メインフェイズ == 1 && メインフェイズ２ == 0
		RETURN 6

;バトルフェイズ
	IF バトルフェイズ == 1 
		
		;패에 回収した카드가 ある
		SIF 現손패(듀얼리스트) != 0
			RETURN 7

		;필드에 암소あり
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV("자신")
		SIF RESULT == 1
			RETURN 8

		;묘지에 암소あり
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 179556
		효과条件CNT = 1
		CALL CARD_CHECK_ADV("자신")
		SIF RESULT == 1
			RETURN 9
	ENDIF
	
	SIF メインフェイズ２ == 1
		RETURN 9

;3ターン目
ELSEIF ターン数 == 5
	;암소의 효과使わずに殴った場合
	SIF ライフ_자신 < 4500
		RETURN 0
	RETURN 10
	
ELSE
	RETURN -1
ENDIF

RETURN 0

;メッセージの설정
@IRAI_DUEL_MESSAGE_392(存在確認)
#DIM DYNAMIC 存在確認
VARSET RESULT

IF 存在確認 == 1
	RETURN 1
ENDIF

;リアクション
CALL IRAI_DUEL_CONDVIC_392

SELECTCASE RESULT

CASE 1
	;デュエルクリア！
	PRINTFORML 수고했어!
	PRINTFORML "승리 조건 달성"을 누르면 종료돼!

;1ターン目
CASE 2
	;패에 미유あり
	PRINTFORML 미유 등록으로 "밀크 팜"을 패에 넣자.
	PRINTFORML 아, 실패했다고 생각되면 "항복하기"를 통해 다시 시작할 수 있어. 뭐, 부담 없이.
CASE 3
	;패에 ミルクファームあり
	PRINTFORML 필드 마법 "밀크 팜"을 발동하자
CASE 4
	;패에 암소あり
	PRINTFORML 패의 "【미유】 암소"는 원래 레벨을 참조하고 있으므로, "백은 성의 라뷰린스"와 같은 레벨 8이 되어 있어.
	PRINTFORML 
	PRINTFORML 패에 암소가 된 라뷰린스가 2장 있는것은, 1장은 원래 패에 있던 카드이고, 다른 1장은 미유의 효과로 덱에서 1장 패에 넣은거야.
	PRINTFORML 일반 소환도 할 수 없으니 "밀크 팜"의 효과로 묘지로 보내두자.
CASE 5
	;손패なし
	PRINTFORML "호루스타인" 몬스터는 "밀크 팜"의 효과로 패에서 버리면 착유할 수 있어.
	PRINTFORML 이번 턴은 달리 할 수 있는 게 없으니, 이대로 턴을 종료하자.
	PRINTFORML 
	PRINTFORML ※묘지에 "혼돈의 사자"가 떨어져 있다. 잊지 말고 발동해두자.

;2ターン目
CASE 6
	;メインフェイズ１
	PRINTFORML 호루스타인은 함정 카드 이외에는 메인 페이즈에 움직일 수 없다… 조용히 상대의 전개를 지켜보자.
CASE 7
	;バトルフェイズ
	PRINTFORML "밀크 팜"은 배틀 페이즈에도 발동할 수 있다.
	PRINTFORML 회수한 "혼돈의 사자"를 버리고, 공주님을 수비 표시로 특수 소환하자!
CASE 8
	;필드에 암소あり
	PRINTFORML "밀크 팜"이 존재하면, 암소도 배틀 페이즈에 젖을 짤 수 있다.
	PRINTFORML 젖을 짜서, 상대의 공격을 버텨내자!
CASE 9
	;묘지에 암소あり
	PRINTFORML 한 대 맞겠지만… 어떻게든 버틸 수 있을 것 같네!
	PRINTFORML 다음 턴에 전투 파괴를 노리자!
	
;3ターン目
CASE 10
	;
	PRINTFORML 효과 몬스터를 뽑았네!
	PRINTFORML "밀크 팜"의 효과로 공주님을 공격 표시로 특수 소환하고,
	PRINTFORML 아까와 같이 배틀 페이즈에 젖을 짜서, 전투 파괴해보자!
	
CASEELSE
	PRINTFORML 아, 실패했다고 생각되면 "항복하기"를 통해 다시 시작할 수 있어. 뭐, 부담 없이.

ENDSELECT