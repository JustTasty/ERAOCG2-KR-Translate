	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲마함 = 1
	효과条件ID = 79555
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 4
ELSEIF バトルフェイズ == 1

;バトルフェイズ(상대필드의 몬스터 あり)
	CALL FULLRESET
	효과範囲상대필드 = 1
