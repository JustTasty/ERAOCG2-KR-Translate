;勝利条件の설정、ここで詰めデュエルの勝利条件を설치할 수 있다。
@IRAI_DUEL_CONDVIC_391
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者

VARSET RESULT

듀얼리스트 = 자신
対面者 = 상대

;상대몬스터를 全て倒したらクリア
CALL FULLRESET
효과範囲상대필드 = 1
효과条件CNT = 1
CALL CARD_CHECK_ADV("자신")
SIF RESULT == 0
	RETURN 1

;攻守が下がってる
SIF GETVAR(@"상대_MZ_攻:2") < 2900
	RETURN 8

;암소미유_효과발동
SIF 발동済_1(듀얼리스트,179556) 
	RETURN 7

;バトルフェイズ
SIF バトルフェイズ == 1
	RETURN 6

;미유登録_발동D1済み
SIF 발동済_D1(듀얼리스트,79556) 
	RETURN 5
	
;패에 미유あり
CALL FULLRESET
효과範囲손패 = 1
효과条件ID = 79556
효과条件CNT = 1
CALL CARD_CHECK_ADV("자신")
SIF RESULT == 1
	RETURN 4

;필드에 밀크 팜あり
CALL FULLRESET
효과範囲마함 = 1
효과条件名前 = 호루스타인─밀크 팜
효과条件CNT = 1
CALL CARD_CHECK_ADV("자신")
SIF RESULT == 1
	RETURN 3

;패에 밀크 팜が2枚
CALL FULLRESET
효과範囲손패 = 1
효과条件名前 = 호루스타인─밀크 팜
효과条件CNT = 1
CALL CARD_CHECK_ADV("자신")
SIF RESULT == 2
	RETURN 2

RETURN 0

;メッセージの설정
