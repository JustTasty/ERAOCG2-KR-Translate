		효과範囲마함 = 1
		효과条件ID = 79555
		효과条件CNT = 1
		CALL CARD_CHECK_ADV("자신")
		SIF RESULT == 1
			RETURN 9
		
	ELSEIF メインフェイズ２ == 1
		RETURN 11
	ENDIF

ELSEIF ターン数 == 3
	RETURN 12
ENDIF

RETURN 0

