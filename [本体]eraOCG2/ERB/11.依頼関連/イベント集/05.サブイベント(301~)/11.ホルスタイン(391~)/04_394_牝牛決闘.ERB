@IRAI_DUEL_CONDVIC_394
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者

VARSET RESULT

듀얼리스트 = 자신
対面者 = 상대



SIF ライフ_상대 == 0
	RETURN 1

IF ターン数 == 1
;패에 암소登録あり
	;묘지에 암소あり
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 79558
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 4
;패에 ミルクファームとインポートがある
	SIF 손패数(듀얼리스트) == 2
		RETURN 2
;패에 ミルクファームのみ
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件ID = 79555
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 5
;손패なし
	SIF 손패数(듀얼리스트) == 0
		RETURN 6
;필드에 ミルクファームあり
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件ID = 79555
	효과条件CNT = 1
	CALL CARD_CHECK_ADV("자신")
	SIF RESULT == 1
		RETURN 3

ELSEIF ターン数 == 2
;상대メイン
	IF メインフェイズ == 1 && メインフェイズ２ == 0
		RETURN 7
	ELSEIF バトルフェイズ == 1
		;バトルフェイズ、묘지에 インポートあり
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件ID = 99553
		효과条件CNT = 1
		CALL CARD_CHECK_ADV("자신")
		SIF RESULT == 1
			RETURN 8
		
		;지유발동後
		SIF 발동済_1(듀얼리스트,179558)
			RETURN 10
			
		;場にミルクファームあり
