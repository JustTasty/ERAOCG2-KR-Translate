@CARDCAN_259790(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,259790)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,259790)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과範囲상대묘지 = 1
	효과範囲상대제외 = 1
	효과条件名前 = 기사황 레가티아
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,259790)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 짐승 기사 프리메라 비트
	효과条件発情 = 0
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件名前 = 기사황 레가티아
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
;もしトゥルース・센츄리온などで無効にされたら拍子抜けなので特別にチェーン不可に
ELSEIF 종류 == チェーン可否
	SIF !GROUPMATCH(チェーン可否종류, EX덱起動, EX소환時, 특수소환時)
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_259790(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ


CALL 対面者判定(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,259790,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과範囲상대묘지 = 1
		효과範囲상대제외 = 1
		효과条件名前 = 기사황 레가티아
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,場所)
		IF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"発情",2,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"接可",2,1)
			;이벤트専用이벤트
			SIF MARK:NO_TO_CHARANUM(2130):굴복각인 == 0
				CALL IRAI_ACT_466_2
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,259790,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = 짐승 기사 프리메라 비트
		효과条件発情 = 0
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"発情",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"接可",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",2)
		ENDIF
	ENDIF
ELSEIF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,259790)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前 = 기사황 레가티아
		효과추가종류:0 == 効追無効
		효과추가종류:1 == 効追攻守０
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		;이벤트専用이벤트
		IF RESULT == 1 && MARK:NO_TO_CHARANUM(2131):굴복각인 == 0
			CALL IRAI_ACT_466_1
		ENDIF
	ENDIF
ENDIF


