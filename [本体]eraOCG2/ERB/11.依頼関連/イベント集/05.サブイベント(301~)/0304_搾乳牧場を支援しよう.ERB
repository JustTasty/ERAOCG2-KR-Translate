@IRAI_EVENT_304(参照先)
#DIMS DYNAMIC 参照先
#DIM DYNAMIC 대상캐릭터

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE  "名前"
		IF 依頼_完了횟수:304 == 0
			RESULTS = 목장、팝니다！
		ELSE
			RESULTS = 젖짜기를 하자
		ENDIF
	CASE "이벤트種"
		RETURN 이벤트_施設
	CASE "依頼先"
		RETURN 場所_牧場
	CASE "詳細"
		IF 依頼_完了횟수:304 == 0
			PRINTL 牧場を見に来たのは良かったが、牧場には何も無くて……
			PRINTL 
			PRINTL 
			PRINTL 
			PRINTL 費用：1,000,000円
		ELSE
			PRINTL たまには자신의 手で働いてみよう
			PRINTL 
			PRINTL 
			PRINTL 
			PRINTL 
		ENDIF
	CASE "条件"
	;悪辣値35以上(普通)も条件
		SIF FLAG:악랄치 < 35
			RETURN 0
		RETURN 1
ENDSELECT

RETURN 0

