@IRAI_EVENT_481(参照先)
#DIMS DYNAMIC 参照先
#DIM DYNAMIC 대상캐릭터

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE  "名前"
		RESULTS = (CP-NGA1)바이론 습격！
	CASE "이벤트種"
		RETURN 이벤트_通常
	CASE "依頼先"
		RETURN 即時開始
	CASE "詳細"
		PRINTL 平和な바람の谷に、謎の勢力から습격が！
		PRINTL 
		PRINTL 
		PRINTL 報酬：？
	CASE "条件"
		;천년도어の解放が必要
		SIF ITEM:천년도어 == 0
			RETURN 0
		RETURN 1
ENDSELECT

RETURN 0

