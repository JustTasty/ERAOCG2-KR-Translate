PRINTL 　ＥＸ덱에서 Ｓ몬스터의 튜너 １장을 Ｓ소환한다。


@CARDCAN_62271(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62271)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 2
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_2(듀얼리스트,62271)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 킬러튠
	효과条件固名前 = 킬러튠 싱크로
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_62271(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC EX選択カード
#DIM DYNAMIC EXカードID,50
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 条件달성

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62271,15)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL SET_PLAYER_INFO(듀얼리스트,"튜너制限",1)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 킬러튠
		효과条件固名前 = 킬러튠 싱크로
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件종류 = 싱크로
			효과条件튜너 = 1
			효과条件소환可 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				발동불가:0 = 1
			
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
					CONTINUE
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"カテゴリ"
				SIF !MATCH(RESULTS,"킬러튠")
					CONTINUE
				TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"レベル"
				SIF RESULT > 4
					CONTINUE
				CALL KILLERTUNE_CHECK(듀얼리스트,カウンタ,1)
				IF RESULT == 1
					条件달성 = 1
					BREAK
				ENDIF
			NEXT
			SIF 条件달성 != 1
				발동불가:1 = 1

			SIF 발동불가:0 == 1 && 발동불가:1 == 1
				RETURN 0
			SIF 듀얼리스트 == "자신"
				PRINTL 싱크로소환を行いますか？
			CALL YN_CHOICE(듀얼리스트)
			SIF RESULT == いいえ
				RETURN 0
			
			IF 발동불가:0 != 1 && 발동불가:1 != 1
				CALL YN_CHOICE(듀얼리스트,"●필드의 몬스터로 Ｓ소환한다。","●패의 튜너와 필드의 킬러튠으로 Ｓ소환한다。")
			ELSEIF 발동불가:0 != 1
				RESULT = 0
			ELSEIF 발동불가:1 != 1
				RESULT = 1
			ENDIF

			IF RESULT == 0
				CALL FULLRESET
				효과条件종류 = 싱크로
				효과条件튜너 = 1
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
				IF RESULT != 9999
					選択カード = RESULT
					TRYCALLFORM CARDSUMMON_{RESULT:99}(듀얼리스트,選択カード)
					CALL SYNSUMMON(듀얼리스트, 選択カード)
				ENDIF

			ELSEIF RESULT == 1
				SETCOLOR C_YELLOW
				PRINTL 싱크로 소재로 할 몬스터를 선택해주세요
				RESETCOLOR
				CALL FULLRESET
				효과条件名前:0 = 킬러튠 레코
				효과条件名前:1 = 킬러튠 믹스
				효과条件名前:2 = 킬러튠 클립
				효과条件名前:3 = 킬러튠 큐
				효과条件名前:4 = 킬러튠 트랙메이커
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
				IF RESULT != 9999
					選択カード = RESULT
					CALL KILLERTUNE_CHECK(듀얼리스트,選択カード,1)
					FOR カウンタ,0,50
						EXカードID:カウンタ = RESULT:(カウンタ+1)
					NEXT

					CALL FULLRESET
					FOR カウンタ,0,50
						효과条件ID:カウンタ = EXカードID:カウンタ
					NEXT
					CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
					IF RESULT != 9999
						EX選択カード = RESULT
						CALL KILLERTUNE_SYNSUMMON(듀얼리스트,"필드",選択カード,EX選択カード)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
