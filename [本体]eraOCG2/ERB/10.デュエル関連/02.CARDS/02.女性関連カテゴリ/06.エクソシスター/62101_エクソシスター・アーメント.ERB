@CARDCAN_62101(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62101)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,62101)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0	
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 엑소시스터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 엑시즈
	효과条件カテゴリ = 엑소시스터
	효과条件レベル = 4		
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_62101(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 필드選択カード
#DIM DYNAMIC EX選択カード
#DIMS DYNAMIC 필드選択カード名
#DIM DYNAMIC EX選択カード_ID

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62101,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 엑소시스터
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		필드選択カード = RESULT
		IF 필드選択カード != 9999
			CALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{필드選択カード}")}("名前")
			필드選択カード名 = %RESULTS%
			CALL FULLRESET
			효과条件종류 = 엑시즈
			효과条件カテゴリ = 엑소시스터
			효과条件レベル = 4
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			EX選択カード = RESULT
			EX選択カード_ID = RESULT:99
			IF EX選択カード != 9999
				CALL RESETCONDITION_MAT
				TRYCALLFORM CARDSUMMON_{EX選択カード_ID}(듀얼리스트,EX選択カード)
				代替素材数 = 1
				효과条件名前 = %필드選択カード名%
				重ねてＸ = 1
				CALL XYZSUMMON(듀얼리스트, EX選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF
