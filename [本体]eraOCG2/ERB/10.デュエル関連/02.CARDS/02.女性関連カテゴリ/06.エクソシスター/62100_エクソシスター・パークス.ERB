@CARDCAN_62100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62100)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,62100)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 엑소시스터
	효과条件固名前 = 엑소시스터 파크스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_62100(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62100,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 엑소시스터
		효과条件固名前 = 엑소시스터 파크스
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲묘지 = 1
			CALLFORM CARDNAME_{選択カード_ID}, "名前"
			SELECTCASE RESULTS
				CASE "엑소시스터 에리스"
					효과条件名前:0 = 엑소시스터 스텔라
					효과条件名前:1 = 엑소시스터 마르파
				CASE "엑소시스터 스텔라"
					효과条件名前:0 = 엑소시스터 에리스
				CASE "엑소시스터 이렌느"
					효과条件名前:0 = 엑소시스터 소피아
				CASE "엑소시스터 소피아"
					효과条件名前:0 = 엑소시스터 이렌느
				CASE "엑소시스터 마르파"
					효과条件名前:0 = 엑소시스터 에리스
			ENDSELECT
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1 && モンスター数(듀얼리스트) != 5
				PRINTL 특수 소환합니까？
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				RESULT = いいえ
			ENDIF
			IF RESULT == はい
				CALL FULLRESET
				효과範囲손패 = 1
				효과条件ID = 選択カード_ID
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF	
			CALL SHUFFLE(듀얼리스트)
		ENDIF
	ENDIF
ENDIF
