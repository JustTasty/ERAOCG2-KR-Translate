@CARDCAN_2001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2001)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		SIF 발동済_1(듀얼리스트,2001)
			RETURN 0
		SIF ゾーン != "손패"
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,2001,"손패")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ = 섬도희
		효과条件固名前 = 섬도희－로제
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"소환全般")
		SIF RESULT != 1
			RETURN 0
	ELSEIF ゾーン == "묘지"
		SIF 발동済_2(듀얼리스트,2001)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,2001,"묘지")
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件カテゴリ = 섬도희
		효과条件固名前 = 섬도희－로제
		;CALL CARD_CHECK_FIN_DATA(듀얼리스트,"묘지送り全般")
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"필드離れ")
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_2001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2001,1)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		ENDIF
	ELSEIF ゾーン == "묘지"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2001,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所)
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
		ENDIF
	ENDIF
ENDIF

