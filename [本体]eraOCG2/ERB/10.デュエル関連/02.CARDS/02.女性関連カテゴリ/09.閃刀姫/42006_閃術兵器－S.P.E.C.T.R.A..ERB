	CASE "名前"
		RESULTS = 섬술병기－S.P.E.C.T.R.A.
	CASE "略称"
		RESULTS = S.P.E.C.T.R.A.
	CASE "カテゴリ"
		RESULTS:0 = 섬도
		RESULTS:1 = 섬도희
ENDSELECT


