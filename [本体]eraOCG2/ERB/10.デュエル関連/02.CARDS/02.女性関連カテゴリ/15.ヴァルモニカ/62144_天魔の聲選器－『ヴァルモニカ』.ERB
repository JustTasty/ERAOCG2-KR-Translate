#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 천마의 성선기 - 『바르모니카』
	CASE "略称"
		RESULTS = 천마의 성선기
	CASE "カテゴリ"
		RESULTS:0 = 바르모니카
ENDSELECT


@CARD_62144(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN フィールド
ENDSELECT

RETURN 0

@CARD_EXPLANATION_62144(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의  카드는 1턴에 1장밖에 발동할 수 없고, 이 카드명의  ②의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動)
PRINTL ①：이 카드의 발동시의 효과 처리로서, 덱에서 "바르모니카」 몬스터 1장을 패에 넣을 수 있다.
CALLFORM CARD_ABLE(2,마함起動,フリー誘発)
PRINTL ②：자신 / 상대 턴에, 자신 마법 / 함정 존의 카드 1장에서 향명 카운터를 3개 제거하고 발동할 수 있다.
PRINTL 상대 필드의 몬스터 1장의 컨트롤을 엔드 페이즈까지 얻는다.
PRINTL 이 효과로 컨트롤을 얻은 몬스터는 공격 선언할 수 없다.

@CARDCAN_62144(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62144)
SIF RESULT == 1
	RETURN 0

IF (종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")) && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,62144)
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 바르모니카
	효과条件個Ｃ所持 = 3
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,62144)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_62144(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF (종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")) && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62144,2)
	IF RESULT == 0
		PRINTL 響鳴카운터を取り除く 카드를 選択
		CALL FULLRESET
		효과条件カテゴリ = 바르모니카
		효과条件個Ｃ所持 = 3
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"마함",ゾーン,場所)	
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"마함",選択カード,"個Ｃ",-3)
			CALL FULLRESET
			효과추가종류:0 = 5
			효과추가종류:1 = 6
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪",62144)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62144,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件カテゴリ = 바르모니카
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF
