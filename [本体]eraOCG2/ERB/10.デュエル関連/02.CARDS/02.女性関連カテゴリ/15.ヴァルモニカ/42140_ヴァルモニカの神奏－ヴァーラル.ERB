@CARDNAME_42140,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 바르모니카의 신주 - 바라르
	CASE "略称"
		RESULTS = 신주 바라르
	CASE "カテゴリ"
		RESULTS:0 = 바르모니카
ENDSELECT


@CARD_42140(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 2500
	CASE "성별"
		RETURN 牝性
	CASE "특수制限"
		RETURN 1
	CASE "連動ID"
		RETURN 2140
ENDSELECT

RETURN 0

