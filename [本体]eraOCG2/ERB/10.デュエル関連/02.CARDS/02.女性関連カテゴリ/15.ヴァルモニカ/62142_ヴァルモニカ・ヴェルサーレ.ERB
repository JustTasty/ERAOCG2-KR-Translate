	CASE "名前"
		RESULTS = 바르모니카 베르사레
	CASE "略称"
		RESULTS = 베르사레
	CASE "カテゴリ"
		RESULTS:0 = 바르모니카
ENDSELECT


@CARD_62142(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_62142(종류)
#DIM DYNAMIC 종류

