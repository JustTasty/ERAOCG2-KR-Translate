@CARDSUMMON_42141(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC 条件달성
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 1
素材条件종류 = 효과全般

FOR カウンタ,0,5
	SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
		CONTINUE
	TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:{カウンタ}")}, "종족"
	SIF RESULT != 천사족
		CONTINUE
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:カウンタ") < 3
		CONTINUE
	条件달성 = 1
NEXT
SIF 条件달성 == 0
	RETURN 0

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,42141) 
	RETURN RESULT
ENDIF


