#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 바르모니카의 이신－쥬라르메
	CASE "略称"
		RESULTS = 이신 쥬라르메
	CASE "カテゴリ"
		RESULTS:0 = 바르모니카
ENDSELECT


