@CARDCAN_42142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,42142)
SIF RESULT == 1
	RETURN 0

IF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 바르모니카
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT:9 < 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_2(듀얼리스트,42142)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 바르모니카
	효과条件종류:0 = 通常마법
	효과条件종류:1 = 通常함정
	효과条件固名前 = 바르모니카 에레디타레
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_42142(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID



IF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42142)
	IF RESULT == 0
		REPEAT 3
PRINTL 響鳴 카운터를 제거하는 카드를 선택
			CALL FULLRESET
			효과条件カテゴリ = 바르모니카
			효과条件個Ｃ所持 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"마함",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				CALL FULLRESET
				CALL SET_FIELD_INFO(듀얼리스트,"마함",選択カード,"個Ｃ",-1)
				CALL FULLRESET
				CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐",6)
				CALL FULLRESET
				CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐",6)

			ENDIF
		REND
		RETURN 1
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,42142,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件カテゴリ = 바르모니카
		효과条件종류:0 = 通常마법
		효과条件종류:1 = 通常함정
		효과条件固名前 = 바르모니카 에레디타레
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			CALLFORM CARDEFFECT_{GETVAR(@"%듀얼리스트%_%参照先（CS）%:RESULT")}(듀얼리스트,마함起動,"효과処理",選択カード)
		ENDIF
	ENDIF
ENDIF


