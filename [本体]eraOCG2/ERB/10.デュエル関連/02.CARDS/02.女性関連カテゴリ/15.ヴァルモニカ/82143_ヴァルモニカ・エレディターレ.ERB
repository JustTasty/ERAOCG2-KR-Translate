			カウンタ = 10
			響鳴카운터 -= 10
		ELSE
			カウンタ  = 響鳴카운터
		ENDIF

		CALL FULLRESET
		효과範囲EX덱 = 1
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件종류 = 링크以外
		효과条件カテゴリ = 바르모니카
		효과条件固名前 = 바르모니카 에레디타레
		효과条件複数 = 100 - カウンタ
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		条件達成 += RESULT:2
		SIF RESULT:2 == 10
			GOTO 響鳴loop

;		FOR カウンタ,0,響鳴카운터
;			CALL FULLRESET
;			효과範囲EX덱 = 1
;			효과範囲묘지 = 1
;			효과範囲제외 = 1
;			효과条件종류 = 링크以外
;			효과条件カテゴリ = 바르모니카
;			효과条件固名前 = 바르모니카 에레디타레
;			효과条件行先플래그 = 덱行き
;			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
;			SIF RESULT == 1
;				条件達成++
;		NEXT


		IF 条件달성 >= 3
			条件달성 = 条件달성 / 3
			CALL CARDDRAW_BASIC(듀얼리스트,条件달성)
		ENDIF
	ENDIF
ENDIF

