@CARD_EXPLANATION_62130(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,지속효과)
PRINTL 자신 필드는「스탠드업 센츄리온!」이 된다.。
PRINTL 이 카드명의  ②③의 효과는 각각 1턴에 1번밖에 사용할 수 없다.。
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①: 자신 필드에 "센츄리온」 몬스터 카드가 존재하는 한,
PRINTL 이 카드는 상대 효과로는 파괴되지 않는다。
CALLFORM CARD_ABLE(2,마함起動)
PRINTL ②: 이 카드를 발동한 턴의 자신 메인 페이즈에, 패를 1장 묘지로 보내고 발동할 수 있다。
PRINTL 덱에서 "센츄리온」 몬스터 1장을 지속 함정 카드로 취급하고 자신의 마법 & 함정 존에 앞면 표시로 놓는다。
CALLFORM CARD_ABLE(3,효과後誘発)
PRINTL ③: 몬스터가 특수 소환되었을 경우에 발동할 수 있다。
PRINTL 「센츄리온」 몬스터를 포함하는 자신 필드의 몬스터를 소재로서 싱크로 소환을 실행한다。

@CARDCAN_62130(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62130)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
    SIF 발동済_2(듀얼리스트,62130)
    	RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 센츄리온
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

    SIF 발동済_1(듀얼리스트,62130)
    	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
    RETURN 1
ELSEIF 종류 == 효과後誘発
    SIF 발동済_3(듀얼리스트,62130)
    	RETURN 0

	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",2)
	SIF RESULT != 1
		RETURN 0

	CALL RESETAREA_MAT
	CALL FULLRESET
	효과範囲EX덱 = 1
    素材条件カテゴリ = 센츄리온
	효과条件종류 = 싱크로
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_62130(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード



IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62130,2)
	IF RESULT == 0
        CALL FULLRESET
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 센츄리온
			효과条件종류 = モン全般
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시",62130)
		ENDIF

	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62130,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)

	ENDIF
ELSEIF 종류 == 지속효과
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "스탠드업 센츄리온!")
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件カテゴリ = 센츄리온
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"魔자신",場所,"破耐")
	
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62130,3)
	IF RESULT == 0
		CALL RESETAREA_MAT
		CALL FULLRESET
        素材条件カテゴリ = 센츄리온
		효과条件종류 = 싱크로
		효과条件소환可 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			CALL SYNSUMMON(듀얼리스트, 選択カード)
		ENDIF
	ENDIF

ENDIF
