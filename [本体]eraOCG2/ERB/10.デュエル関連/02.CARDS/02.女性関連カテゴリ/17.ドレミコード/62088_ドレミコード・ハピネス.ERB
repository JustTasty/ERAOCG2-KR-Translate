@CARDEFFCT_ABLE_62088(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 効果使用可,3

効果使用可:0 = 1 - 発動済_1(決闘者,62088)
効果使用可:1 = 1 - 発動済_2(決闘者,62088)
効果使用可:2 = 1 - 発動済_3(決闘者,62088)
SIF 手札数(決闘者) == 0
	効果使用可:0 = 0

CALL FULLRESET
効果範囲手札 = 1
効果範囲EXデッキ = 1
効果条件カテゴリ = 도레미코드
効果条件分割 = ペンデュラム
効果条件種類 = EX以外全般
CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
SIF RESULT == 0
	効果使用可:1 = 0

CALL FULLRESET
効果範囲魔罠 = 1
効果条件カテゴリ = 도레미코드
効果条件種類 = モン全般
効果条件CNT = 1
CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
SIF RESULT == 0
	効果使用可:1 = 0
SIF RESULT < 2
	効果使用可:2 = 0
SIF モンスター数(決闘者) > 3
	効果使用可:2 = 0

VARSET RESULT
RESULT:1 = 効果使用可:0
RESULT:2 = 効果使用可:1
RESULT:3 = 効果使用可:2

RETURN