@CARDEFFECT_62088_0(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_EFFECT_USE(決闘者,62088,1)

CALL FULLRESET
CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
IF RESULT == 1
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 도레미코드
	効果条件種類 = モン全般
	効果条件分割 = ペンデュラム
	CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	IF RESULT != 9999
		CALLFORM CARD_{RESULT:1},"レベル"
		カウンタ = RESULT
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 도레미코드
		効果条件種類 = モン全般
		効果条件分割 = ペンデュラム
		CALL 効果条件レベル_ADV(カウンタ  , "以外")
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF

	カウンタ = MIN( モンスター数(対面者)+1, 5-モンスター数(決闘者))
	
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ = 도레미코드
	効果条件分割 = ペンデュラム
	効果条件複数 = 100 - カウンタ
	CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
ENDIF
RETURN


