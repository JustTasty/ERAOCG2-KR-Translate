@CARDCAN_2094(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,2094)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果条件名前 = 도레미코드 프리모아
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 魔罠起動
	SIF 発動済_1(決闘者,2094)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲EXデッキ = 1
	効果条件カテゴリ = 도레미코드
	効果条件種類 = EX以外全般
	CALL 効果条件レベル_ADV(4, "以下")
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果条件カテゴリ = 도레미코드
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1


ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_2(決闘者,2094)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 도레미코드
	効果条件固名前 = 도레미코드 프리모아
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果条件カテゴリ = 도레미코드
	効果条件種類 = モン全般
	効果条件レベル:0 = 1
	効果条件レベル:1 = 3
	効果条件レベル:2 = 5
	効果条件レベル:3 = 7
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果条件カテゴリ = 도레미코드
	効果条件種類 = モン全般
	効果条件レベル:0 = 2
	効果条件レベル:1 = 4
	効果条件レベル:2 = 6
	効果条件レベル:3 = 8
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 効果後誘発
	SIF 発動済_3(決闘者,2094)
		RETURN 0
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果範囲墓地 = 1
	効果条件カテゴリ = 도레미코드
	効果条件種類 = EX以外全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果条件カテゴリ = 도레미코드
	効果条件種類 = リンク
	CALL CARD_CHECK_FIN_DATA(決闘者,"EX特殊召喚")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2094(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2094)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,魔罠行き)
	ENDIF
ELSEIF 種類 == 魔罠起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2094,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲EXデッキ = 1
		効果条件カテゴリ = 도레미코드
		効果条件種類 = EX以外全般
		CALL 効果条件レベル_ADV(4, "以下")
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)

		CALL FULLRESET
		効果範囲魔罠 = 1
		効果条件カテゴリ = 도레미코드
		効果条件表示 = 表側表示
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2094,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 도레미코드
		効果条件種類 = モン全般
		効果条件固名前 = 도레미코드 프리모아
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 永続効果
	CALL SET_CAT_SOGAI_INFO(決闘者,"도레미코드")
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2094,3)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲EXデッキ = 1
		効果範囲墓地 = 1
		効果条件カテゴリ = 도레미코드
		効果条件種類 = EX以外全般
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF

