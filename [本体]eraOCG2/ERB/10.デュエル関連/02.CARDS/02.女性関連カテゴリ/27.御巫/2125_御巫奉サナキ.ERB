@CARDNAME_2125,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 미캉코봉 사나키
	CASE "略称"
		RESULTS = 사나키
	CASE "カテゴリ"
		RESULTS:0 = 미캉코
ENDSELECT


@CARD_2125(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 효과モン
