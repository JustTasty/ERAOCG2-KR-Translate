		RETURN 3
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 牝性
	CASE "추가日"
		RETURN 250628
ENDSELECT
RETURN 0

