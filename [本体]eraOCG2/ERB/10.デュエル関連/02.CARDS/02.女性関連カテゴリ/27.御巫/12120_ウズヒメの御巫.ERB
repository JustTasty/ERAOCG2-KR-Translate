#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 우즈히메의 미캉코
	CASE "略称"
		RESULTS = 우즈히메
	CASE "カテゴリ"
		RESULTS:0 = 미캉코
ENDSELECT


@CARD_12120(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 엑시즈
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 천사족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	;牝性/雄性があるよ
	CASE "성별"
		RETURN 牝性
	CASE "連動ID"
		SELECTCASE RAND:2
			CASE 0
				RESULT:1 = 2121
				RETURN 2120
			CASE 1
				RESULT:1 = 2120
				RETURN 2121
		ENDSELECT
	CASE "추가日"
		RETURN 250628
ENDSELECT
RETURN 0

