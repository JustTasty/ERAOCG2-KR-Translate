VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 미캉코무용 - 미혹의 새
	CASE "略称"
		RESULTS = 미혹의 새
	CASE "カテゴリ"
		RESULTS:0 = 미캉코
ENDSELECT


