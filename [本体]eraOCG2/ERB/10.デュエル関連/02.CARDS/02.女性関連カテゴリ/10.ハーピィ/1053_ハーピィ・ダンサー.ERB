@CARDCAN_1053(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1053)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,1053)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件속성 = 바람속성
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1053(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1053,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件속성 = 바람속성		
		효과条件行先플래그 = 3
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)	
		IF RESULT == 1
			PRINTL 몬스터를 소환하시겠습니까？
			CALL YN_CHOICE(듀얼리스트)
			IF RESULT == はい
				CALL FULLRESET
				효과条件종류 = モン全般
				효과条件속성 = 바람속성
				CALL CARD_CHOOSE_BASIC(듀얼리스트, "손패",ゾーン,場所)	
				選択カード = RESULT
				IF 選択カード != 9999
					CALL CARD_SUMMON_SHORI(듀얼리스트,選択カード,"攻撃표시",1)
				ENDIF
			ENDIF
		ENDIF	
	ENDIF
ENDIF
