@CARDCAN_1054(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1054)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 소환時
	SIF 발동済_1(듀얼리스트,1054)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 비행야수족
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_2(듀얼리스트,1054)
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件攻撃力 = 1500
	효과条件종족 = 비행야수족
	효과条件レベル = 4
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1054(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1054,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 비행야수족
		효과条件他所 = 1
		효과条件行先플래그 = 3
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF 選択カード == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"손패")
		ENDIF	
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지

	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1054,2)
	IF RESULT == 0
		CALL CARD_RESERV(듀얼리스트,1054)
	ENDIF
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과条件攻撃力 = 1500
	효과条件종족 = 비행야수족
	효과条件レベル = 4
	CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
ENDIF
