@CARDCAN_1370(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 효과발동불가,10
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1370)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	IF 발동済_1(듀얼리스트,1370) == 0
		CALL FULLRESET
		효과条件종류 = 通常함정
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
		SIF RESULT != 1
			효과발동불가:1 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 충혹마
		효과条件종류 = モン全般
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			효과발동불가:1 = 1
	ELSE
		효과발동불가:1 = 1
	ENDIF
	IF 발동済_2(듀얼리스트,1370) == 0
		CALL FULLRESET
		효과条件固名前 = 세라의 충혹마
		효과条件カテゴリ = 충혹마
		효과条件종류 = モン全般
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
		SIF RESULT != 1
			효과발동불가:2 = 1
		SIF 마함数(듀얼리스트) > 5
			효과발동불가:2 = 1
	ELSE
		효과발동불가:2 = 1
	ENDIF



	SIF	효과발동불가:1 == 1 && 효과발동불가:2 == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_1370(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 효과後誘発
	;モンスター특수소환
	CALL FULLRESET
	효과条件종류 = 通常함정
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	IF RESULT == 1 && 발동済_1(듀얼리스트,1370) == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1370,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 충혹마
			효과条件종류 = モン全般
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF

	;함정セット효과
	CALL FULLRESET
	효과条件固名前 = 세라의 충혹마
	효과条件カテゴリ = 충혹마
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동")
	IF RESULT == 1 && 발동済_2(듀얼리스트,1370) == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1370,2)
		IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 함정 속으로
			효과条件종류 = 通常함정
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ENDIF


