@CARDNAME_1383,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 홀티아의 충혹마
	CASE "略称"
		RESULTS = 홀티아
	CASE "カテゴリ"
		RESULTS:0 = 충혹마
		RESULTS:1 = 함정 속으로
ENDSELECT


@CARD_1383(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 식물족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 400
	CASE "守備力"
		RETURN 2400
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 효과なし
ENDSELECT

RETURN 0

