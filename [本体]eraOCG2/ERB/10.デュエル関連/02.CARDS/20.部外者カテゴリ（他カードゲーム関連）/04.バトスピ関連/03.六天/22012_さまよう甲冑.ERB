@CARD_22012(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RESULT:1 = 땅속성
		RETURN 어둠속성
	CASE "종족"
		RETURN 언데드족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1300
	CASE "守備力"
		RETURN 700
ENDSELECT

RETURN 0

