@CARDCAN_50686(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50686)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_2(듀얼리스트,50686)
 		RETURN 0
	SIF ゾーン != "EX덱"
		 RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
 	SIF ターンプレイヤー != 듀얼리스트
 		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 오버로드
	CALL CARD_CHECK_ADV(듀얼리스트)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 초차원
	효과条件カテゴリ = 뱅가드
	CALL CARD_CHECK_ADV(듀얼리스트)
	SIF RESULT == 1
		RETURN 0
	SIF 발동済_2(듀얼리스트,21086) == 0
		RETURN 0
 	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 카게로우
	효과条件종류 = 초차원
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = 마함全般
	효과条件カテゴリ = 오버로드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50686(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 효과先
#DIM DYNAMIC モンスター数
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC カードID
#DIM DYNAMIC 選択カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
 	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50686,2)
 	IF RESULT == 0
	CALL FULLRESET
	효과条件カテゴリ = 오버로드
	효과条件行先플래그 = 消滅行き
	효과条件任意 = 1
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			選択カードID = RESULT:1
			CALL CARD_LOADUP
			PRINTFORML
			PRINTFORML
			PRINTFORML 超越《ストライド》、ジェネレーション！
			CALL PRINT_STATE_DUEL(カードID)
			CALL FULLRESET
			CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所,"攻撃표시")
			SETVAR @"%듀얼리스트%_MZ_変化元ID:カード소환先", 選択カードID
		ELSE
			RETURN 0
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"不材")
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50686,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 카게로우
		효과条件종류 = 초차원
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件カテゴリ = 오버로드
			효과条件종류 = 마함全般
			CALL CARD_SET_BASIC(듀얼리스트,"손패",ゾーン,場所,"使化裏側표시")
			IF RESULT == 1
				ダメージ量 = 1500
				CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	IF 8000 > GETVAR(@"ライフ_%対面者%")
		攻撃力修正 = 8000 - GETVAR(@"ライフ_%対面者%")
	ELSEIF　GETVAR(@"ライフ_%対面者%") > 8000
		攻撃力修正 = 0
	ENDIF
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ENDIF



