@CARDNAME_35031,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 창람전희 세타
	CASE "略称"
		RESULTS = 세타
	CASE "カテゴリ"
		RESULTS:0 = 아쿠아포스
		RESULTS:1 = 창람
		RESULTS:4 = 뱅가드
ENDSELECT

@CARD_35031(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 바다생물족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 1000
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 펜듈럼

ENDSELECT

RETURN 0

