@CARDNAME_24161,参照先
;ココで지정카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 각수 메리블록 드래곤
	CASE "略称"
		RESULTS = 메리블록
	CASE "カテゴリ"
		RESULTS:0 = 기어 크로니클
		RESULTS:1 = 십이지각수
		RESULTS:4 = 뱅가드
ENDSELECT


@CARD_24161(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RESULT:1 = 드래곤족
		RETURN 기계족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 1000
	CASE "守備力"
		RETURN 1500
ENDSELECT

RETURN 0

