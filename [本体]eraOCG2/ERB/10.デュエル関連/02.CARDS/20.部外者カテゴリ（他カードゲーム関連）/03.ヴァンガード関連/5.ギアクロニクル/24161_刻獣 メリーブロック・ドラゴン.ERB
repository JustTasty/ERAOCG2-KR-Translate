@CARDCAN_24161(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24161)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,24161)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 십이지각수
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,24161,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,24161)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 십이지각수
	효과条件固名前 = 각수 메리블록 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_24161(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24161,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲손패 = 1
		효과条件カテゴリ = 십이지각수
		효과条件他所 = 1
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			SS소환可能속성 = 어둠속성
			CALL CARD_SS_RESTRICTION(듀얼리스트)
			CALL FULLRESET
			IF ゾーン == "손패"
				CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
			ELSEIF ゾーン == "묘지"
				CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	효과条件カテゴリ = 십이지각수
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = RESULT * 500
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24161,2)
	IF RESULT == 0
		IF ターン数 >= 3
			PRINTL 효과를 선택하십시오
			CALL YN_CHOICE(듀얼리스트,"●「십이지각수」카드 １장을 묘지로 보낸다。","●「십이지각수」카드 １장을 제외한다。")
			IF RESULT == 0
				CALL FULLRESET
				효과条件カテゴリ = 십이지각수
				효과条件固名前 = 각수 메리블록 드래곤
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ELSEIF RESULT == 1
				CALL FULLRESET
				효과条件カテゴリ = 십이지각수
				효과条件行先플래그 = 제외行き
				효과条件固名前 = 각수 메리블록 드래곤
				CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ENDIF
		ELSE
			CALL FULLRESET
			효과条件カテゴリ = 십이지각수
			효과条件固名前 = 각수 메리블록 드래곤
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"덱",ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



