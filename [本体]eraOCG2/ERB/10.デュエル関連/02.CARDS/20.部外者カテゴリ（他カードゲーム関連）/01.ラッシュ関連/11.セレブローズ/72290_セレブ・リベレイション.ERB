CALLFORM CARD_ABLE(1,마함起動,フリー誘発)
PRINTL ①：자신のフィールド・묘지の、「셀레브로즈」융합モンスターの数まで以下の효과を繰り返す事ができる。
PRINTL ●상대フィールドのモンスター１体を손패に戻す。

@CARDCAN_72290(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72290)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,72290)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 셀레브로즈
	효과条件종류 = 융합
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_72290(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 대상枚数


IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72290,1)
	;カード발동確認
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 셀레브로즈
		효과条件종류 = 융합
		효과条件CNT = 1
		효과条件限界値 = 5
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		대상枚数 = RESULT
		REPEAT 대상枚数
			CALL FULLRESET
			효과条件任意 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"손패")
		REND
	ENDIF

ENDIF
