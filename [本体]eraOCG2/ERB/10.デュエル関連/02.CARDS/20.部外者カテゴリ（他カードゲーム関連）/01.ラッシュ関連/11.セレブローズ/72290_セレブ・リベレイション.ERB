@CARD_EXPLANATION_72290(種類)
#DIM DYNAMIC 種類

PRINTL このカード名のカードは１ターンに１度しか発動できない。
CALLFORM CARD_ABLE(1,魔罠起動,フリー誘発)
PRINTL ①：自分のフィールド・墓地の、「셀레브로즈」融合モンスターの数まで以下の効果を繰り返す事ができる。
PRINTL ●相手フィールドのモンスター１体を手札に戻す。

@CARDCAN_72290(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,72290)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,72290)
		RETURN 0
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲墓地 = 1
	効果条件カテゴリ = 셀레브로즈
	効果条件種類 = 融合
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_72290(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 対象枚数


IF 種類 == 魔罠起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72290,1)
	;カード発動確認
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲墓地 = 1
		効果条件カテゴリ = 셀레브로즈
		効果条件種類 = 融合
		効果条件CNT = 1
		効果条件限界値 = 5
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		対象枚数 = RESULT
		REPEAT 対象枚数
			CALL FULLRESET
			効果条件任意 = 1
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"手札")
		REND
	ENDIF

ENDIF
