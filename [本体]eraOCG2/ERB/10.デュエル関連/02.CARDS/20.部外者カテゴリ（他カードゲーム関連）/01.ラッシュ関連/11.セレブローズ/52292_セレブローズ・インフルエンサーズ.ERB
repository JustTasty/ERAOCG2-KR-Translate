@CARDSUMMON_52292(決闘者,召喚カード,EX参照)
#DIMS DYNAMIC 決闘者
#DIM DYNAMIC 召喚カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 셀레브로즈・エンチャンター
ELSEIF EX参照 >= 10
	素材条件名前 = 셀레브로즈・ウィズ
ENDIF

IF EX参照 == 1
	CALL FUSCAN(決闘者,召喚カード,52292) 
	RETURN RESULT
ENDIF

@CARDCAN_52292(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時
	SIF 発動済_1(決闘者,52292)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 셀레브로즈
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 発動済_2(決闘者,52292)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲相手墓地 = 1
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(決闘者,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52292(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カードレベル
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,52292,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 셀레브로즈
		CALL CARD_ADD_GY_BASIC(決闘者,"デッキ",ゾーン,場所)
	ENDIF
	
ELSEIF 種類 ==戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,52292,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件種類 = モン全般
		効果範囲相手墓地 = 1
		CALL CARD_REMOVAL_ADV(決闘者,"単体除去",場所,"デッキ")
		IF RESULT == 1
			選択カード_ID = RESULT:2
			TRYCALLFORM CARD_{選択カード_ID},"レベル"
			選択カードレベル = RESULT
			攻撃力修正 = 200 * 選択カードレベル
			CALL SET_FIELD_INFO(決闘者,"戦場",場所,"一攻",攻撃力修正)
		ENDIF
	ENDIF
	
ELSEIF 種類 == 永続効果
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"破耐")
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"追戦",1)
	
ENDIF
