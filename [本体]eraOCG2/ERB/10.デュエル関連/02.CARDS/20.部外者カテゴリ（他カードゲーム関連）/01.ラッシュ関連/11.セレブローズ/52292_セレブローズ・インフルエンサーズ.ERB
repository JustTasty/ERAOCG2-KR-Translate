	CASE "属性"
		RETURN 光属性
	CASE "種族"
		RETURN 魔法使い族
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 1600
	CASE "性別"
		RETURN 牝性
	CASE "連動ID"
		SELECTCASE RAND:2
			CASE 0
				RESULT:1 = 2324
				RETURN 2326
			CASE 1
				RESULT:1 = 2326
				RETURN 2324
		ENDSELECT
	CASE "追加日"
		RETURN 250720
ENDSELECT
