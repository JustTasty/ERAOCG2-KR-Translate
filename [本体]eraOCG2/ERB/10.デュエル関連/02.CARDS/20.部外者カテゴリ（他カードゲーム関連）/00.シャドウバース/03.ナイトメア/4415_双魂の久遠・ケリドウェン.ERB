@CARD_EXPLANATION_4415(종류)
#DIM DYNAMIC 종류

CALL TEXT_DECORATION("P_MAGIC")
CALLFORM CARD_ABLE(0,손패起動)
PRINTL ①：이 카드의 발동 시의 효과 처리로서, 자신의 손패의 몬스터 1체를 파괴할 수 있다.
PRINTL 파괴했을 경우, 상대 몬스터를 1체까지 파괴할 수 있고, 자신은 1장 드로우한다.
CALLFORM CARD_ABLE(0,효과後強制誘発)
PRINTL ②: 이 카드가 마법/함정 존에 앞면 표시로 존재하는 한, 자신 몬스터가 파괴될 때마다 이 카드에 카운터를 놓는다.
PRINTL 이 카드의 카운터가 4개 이상이 되었을 경우, 이 카드를 파괴한다.
PRINTL 그 후, 자신의 묘지에서 레벨 4 이하의 언데드족 몬스터 1체를 특수 소환한다.
CALL TEXT_DECORATION("P_MAGIC_2")
PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,EX덱起動)
PRINTL ①：EX 덱에 존재하는 이 카드는, 자신 필드의 레벨 2 이상의 언데드족 몬스터 1체를 파괴하는 것으로 특수 소환할 수 있다.
CALLFORM CARD_ABLE(2,소환時,특수소환時)
PRINTL ②：이 카드가 소환・특수 소환했을 경우에 발동할 수 있다.
PRINTL 자신의 묘지에서 「쌍혼의 영원 케리드웬」을 제외하고, 언데드족 몬스터 1장을 특수 소환한다.



@CARDCAN_4415(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4415)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,4415)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4415,"EX덱")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 언데드족
	효과条件除去種 = 묘지
	CALLFORM 효과条件レベル_ADV(2,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,4415)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 언데드족
	효과条件종류 = モン全般
	효과条件소환可 = 1
효과条件固名前 = 쌍혼의 영원 케리드웬
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_4415(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 守備力修正


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4415)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		IF RESULT == 1
			CALL FULLRESET
			효과条件종류 = モン全般
			효과条件行先플래그 = 破壊行き
			효과条件任意 = 1
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과条件除去種 = 묘지
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF RESULT == 1
					CALL FULLRESET
					효과条件任意 = 1
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
				ENDIF
				CALL CARDDRAW_BASIC(듀얼리스트,1)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後強制誘発
	PRINTFORML 
	CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"個Ｃ",1)
	IF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 4
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종족 = 언데드족
			CALLFORM 효과条件レベル_ADV(4,"以下")
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4415,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件行先플래그 = 破壊行き
		효과条件종족 = 언데드족
		CALLFORM 효과条件レベル_ADV(2,"以上")
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"EX덱",場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4415,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종족 = 언데드족
효과条件固名前 = 쌍혼의 영원 케리드웬
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

