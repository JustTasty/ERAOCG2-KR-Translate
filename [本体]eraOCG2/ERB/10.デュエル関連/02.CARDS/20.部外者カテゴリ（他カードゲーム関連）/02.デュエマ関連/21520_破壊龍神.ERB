	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,21520,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,소멸行き)

		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ)
		NEXT	
		CALL FULLRESET
		CALL CARD_GENERATE(듀얼리스트,121520,"攻撃표시")				
		CALL CARD_GENERATE(듀얼리스트,121521,"守備표시")	
		CALL CARD_GENERATE(듀얼리스트,121522,"守備표시")
	ENDIF
ENDIF



