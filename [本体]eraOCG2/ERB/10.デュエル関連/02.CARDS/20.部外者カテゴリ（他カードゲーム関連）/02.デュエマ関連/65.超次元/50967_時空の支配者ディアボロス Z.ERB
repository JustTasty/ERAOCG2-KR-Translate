		효과範囲마함 = 1
		효과条件他所 = 1
		효과条件複数 = 3
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"条達",2,1)
			CALL CARD_RECONSTRUCT(듀얼리스트,ゾーン,場所,150967)
