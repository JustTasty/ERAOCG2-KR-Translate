	CASE "名前"
		RESULTS = 초차원 류세이 홀
	CASE "略称"
		RESULTS = 류세이 홀
	CASE "カテゴリ"
		RESULTS:0 = 초차원 주문
		RESULTS:1 = 헌터
		RESULTS:4 = DUEL MASTERS
ENDSELECT


