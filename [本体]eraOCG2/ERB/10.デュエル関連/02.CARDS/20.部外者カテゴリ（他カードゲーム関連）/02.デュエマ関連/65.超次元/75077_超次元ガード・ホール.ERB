@CARDCAN_75077(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,75077)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 ||  종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,21504)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件속성 = 빛속성
	효과条件종족 = 천사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件속성 = 어둠속성
	효과条件종족 = 악마족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 초차원
	효과条件속성:0 = 빛속성
	효과条件속성:1 = 어둠속성
효과条件カテゴリ = 사이킥
	CALL 효과条件レベル_ADV(10, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_75077(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC レベル数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 ||  종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,75077,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		PRINTL 효과を選択してください
		CALL YN_CHOICE(듀얼리스트,"●빛속성「サイキック」モンスターを특수소환する。","●어둠속성「サイキック」モンスターを특수소환する。")
		IF RESULT == 0
			CALL FULLRESET
			효과条件종류 = 초차원
			효과条件속성 = 빛속성
효과条件カテゴリ = 사이킥
			CALL 효과条件レベル_ADV(10, "以下")
			CALL DIMSUMMON(듀얼리스트,ゾーン,場所,8)
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"마함")
		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件종류 = 초차원
			효과条件속성 = 어둠속성
효과条件カテゴリ = 사이킥
			CALL 효과条件レベル_ADV(10, "以下")
			CALL DIMSUMMON(듀얼리스트,ゾーン,場所,8)
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"마함")
		ENDIF
	ENDIF
ENDIF
