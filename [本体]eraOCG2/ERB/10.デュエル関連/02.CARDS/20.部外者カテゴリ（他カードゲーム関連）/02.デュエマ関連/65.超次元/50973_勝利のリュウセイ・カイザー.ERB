CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①：상대フィールドのＬモンスター以外の表側표시モンスターは守備표시になる。

@CARDCAN_50973(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50973)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과 || 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 맥시멈条件
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_필드:1") != 4091 || GETVAR(@"%듀얼리스트%_필드:2") != 50972 || GETVAR(@"%듀얼리스트%_필드:3") != 50973
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50973(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 耐性추가종류,4

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL FULLRESET
	효과条件종류 = 링크以外
	효과条件표시 = 攻撃표시
	효과추가종류 = 3
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"표시변경")
ELSEIF 종류 == 常在無効
	CALL FULLRESET
	효과条件종류 = 링크以外
	효과条件표시 = 攻撃표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"表",2,41955)

	CALL FULLRESET
	효과条件종류 = 링크以外
	효과条件표시 = 守備표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"表固",3,41955)
ELSEIF 종류 == 맥시멈条件
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"変化元ID",150972)
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無")
ENDIF
