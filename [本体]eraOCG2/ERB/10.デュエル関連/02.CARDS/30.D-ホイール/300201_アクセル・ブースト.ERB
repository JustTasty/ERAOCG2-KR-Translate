@CARDCAN_300201(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,300201)
SIF RESULT == 1
	RETURN 0

IF 種類 == 부스트起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF 発動済_1(決闘者,300201)
		RETURN 0
	SIF GETVAR(@"%決闘者%_SpＣ") < 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_300201(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択肢

IF 種類 == 부스트起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,300201,1)
	IF RESULT == 0
		CALL SET_PLAYER_INFO(決闘者,"SpＣ",-2,0,1)
		CALL CARDDRAW_BASIC(決闘者,1)
	ENDIF
ENDIF
