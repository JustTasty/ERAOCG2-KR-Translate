@CARDSUMMON_AA_36030


@CARDCAN_36030(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 存在カード名,100

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,36030)
SIF RESULT == 1
	RETURN 0

IF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 発動済_2(決闘者,36030)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲手札 = 1
	素材範囲戦場 = 1
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件スーパー名前 = 창감옥신 네르바
	効果条件カテゴリ = 아르토메기아
	効果条件種類 = 融合
	効果条件召喚可 = 1
	強制素材場所２ = 指定場所(場所,ゾーン)
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 手札→墓地 || 種類 == 戦場→墓地 || 種類 == 破壊→墓地 || 種類 == 戦闘→墓地
	SIF 発動済_3(決闘者,36030)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 아르토메기아
	効果条件種類 = 魔罠全般
	CALL SET_EXIST_CARDS(決闘者,墓地指定)
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF


@CARDEFFECT_36030(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 存在カード名,100

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 永続効果
	CALL SET_TMP_EX_RST(決闘者,"種類",融合)
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,36030,2)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲手札 = 1
		素材範囲戦場 = 1
		CALL FULLRESET
		効果条件スーパー名前 = 창감옥신 네르바
		効果条件カテゴリ = 아르토메기아
		効果条件種類 = 融合
		効果条件召喚可 = 1
		強制素材場所２ = 指定場所(場所,ゾーン)
		CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_EXデッキ:{選択カード}")}(決闘者,選択カード)
			CALL FUSSUMMON(決闘者,選択カード)
		ENDIF
	ENDIF
ELSEIF 種類 == 手札→墓地 || 種類 == 戦場→墓地 || 種類 == 破壊→墓地 || 種類 == 戦闘→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,36030,3)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 아르토메기아
		効果条件種類 = 魔罠全般
		CALL SET_EXIST_CARDS(決闘者,墓地指定)
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF

