@CARDCAN_1967(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成
#DIMS DYNAMIC 対面者


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,1967)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時 || 種類 == 破壊→墓地
	SIF 発動済_1(決闘者,1967)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 둠즈
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 発動済_2(決闘者,1967)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF モンスター数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	CALL CARD_EQUIP_CHECK(決闘者,場所,ゾーン)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件種類 = エクシーズ
	効果条件種族 = 機械族
	効果条件属性 = 風属性
	効果条件召喚可 = 1
	効果条件特不無視 = 1
	効果条件レベル = GETVAR(@"%決闘者%_MZ_星:場所")
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1967(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 装備数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 出処

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 召喚時 || 種類 == 特殊召喚時 || 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1967,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 둠즈
		効果条件種類 = 魔罠全般
		CALL CARD_SET_ADV(決闘者,ゾーン,場所,"裏側表示")
	ENDIF
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1967,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件CNT = 1
		CALL CARD_EQUIP_CHECK(決闘者,場所,ゾーン)
		SIF RESULT > 0
			装備数 = RESULT
		;
		;DOOMDURGの③効果の処理用
		CALL FULLRESET
		効果条件名前 = 終刻起動『Ｄ.Ｏ.Ｏ.Ｍ.Ｄ.Ｕ.Ｒ.Ｇ.』
		CALL CARD_EQUIP_CHECK(決闘者,場所,ゾーン)
		SIF RESULT == 1
			条件達成 = 1
		;
		CALL FULLRESET
		効果条件種類 = エクシーズ
		効果条件種族 = 機械族
		効果条件属性 = 風属性
		効果条件レベル = GETVAR(@"%決闘者%_MZ_星:場所")
		CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			CALL FULLRESET
			効果条件特不無視 = 1
			CALL CARD_EX_SUMMON(決闘者,"EXデッキ",選択カード)
			CALL SET_FIELD_INFO(決闘者,"戦場",カード召喚先,"Ｘ",装備数 + 1)
			CALL FULLRESET
			CALL CARD_DISPOSE(決闘者,ゾーン,場所)
			IF 条件達成 == 1
				SETCOLOR C_YELLOW
				PRINTL 【終刻起動『Ｄ.Ｏ.Ｏ.Ｍ.Ｄ.Ｕ.Ｒ.Ｇ.』が装備されます】
				RESETCOLOR
				CALL FULLRESET
				効果範囲墓地 = 1
				効果条件名前 = 終刻起動『Ｄ.Ｏ.Ｏ.Ｍ.Ｄ.Ｕ.Ｒ.Ｇ.』
				CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL CARD_SELECT(決闘者,選択カード)
					選択カード = RESULT
					出処 = %参照先（CS）%
					CALL FULLRESET
					効果条件固定 = カード召喚先
					CALLFORM CARD_EQUIP_ADV(決闘者,選択カード,出処)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

