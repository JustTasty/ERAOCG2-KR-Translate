@CARDCAN_52185(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,52185)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,52185)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件重ねてＸ = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	FOR カウンタ,0,5
		CALL FULLRESET
		효과条件CNT = 1
		CALL CARD_EQUIP_CHECK(듀얼리스트,カウンタ,"필드")
		IF RESULT >= 3
			RETURN 1
		ENDIF
	NEXT
	RETURN 0
ELSEIF 종류 == EX소환時
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 装備마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 둠즈
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52185(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード,5
#DIM DYNAMIC 素材カード
#DIM DYNAMIC 装備可能数
#DIMS DYNAMIC 出処
#DIM DYNAMIC 選択結果


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52185,0)
	IF RESULT == 0
		;装備カード３枚以上装備しているモンスターの場所を調べる
		FOR カウンタ,0,5
			CALL FULLRESET
			효과条件CNT = 1
			CALL CARD_EQUIP_CHECK(듀얼리스트,カウンタ,"필드")
			IF RESULT >= 3
				選択カード:カウンタB = カウンタ
				カウンタB ++
			ENDIF
		NEXT
		CALL FULLRESET
		효과範囲필드 = 1
		FOR カウンタ,0,カウンタB
			효과条件固定:カウンタ = 選択カード:カウンタ
		NEXT
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		素材カード = RESULT
		IF 素材カード != 9999
			CALL RESETCONDITION_MAT
			必要素材数 = 1
			素材条件固定 = 素材カード
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:素材カード")},"종류"
			SIF RESULT == 엑시즈
				효과추가종류 = 効追条達
			重ねてＸ = 1
			TRYCALLFORM XYZSUMMON(듀얼리스트,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52185,1)
	IF RESULT == 0
		CALL FULLRESET
		;마함ゾーンの空き数カウント
		装備可能数 = 5 - 마함数(듀얼리스트)
		;묘지の装備마법の枚数カウント
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 装備마법
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 0 && RESULT < 装備可能数
			装備可能数 = RESULT
		FOR カウンタ,0,装備可能数
			CALL FULLRESET
			IF 듀얼리스트 == "자신"
				PRINTFORML \@ カウンタ == 0 ? 유피테르에게 # 추가로\@장착 마법을 장착하시겠습니까？
				CALL YN_CHOICE(듀얼리스트)
				選択結果 = RESULT
			ENDIF
			IF 選択結果 == 0
				CALL FULLRESET
				효과範囲묘지 = 1
				효과条件종류 = 装備마법
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL CARD_SELECT(듀얼리스트,選択カード)
					選択カード = RESULT
					出処 = %参照先（CS）%
					CALL FULLRESET
					효과条件固定 = カード소환先
					CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,出処)
				ENDIF
			ELSE
				BREAK
			ENDIF
		NEXT
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,3000)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,52185,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 둠즈
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF 듀얼리스트 == "자신"
			PRINTL 필드의 몬스터를 파괴하시겠습니까？
			CALL YN_CHOICE(듀얼리스트)
			選択結果 = RESULT
		ELSE
			CALL FULLRESET
			효과範囲상대필드 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				選択結果 = 0
		ENDIF
		IF 選択結果 == 0
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF