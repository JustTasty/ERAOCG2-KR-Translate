@CARDCAN_52183(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,52183)
SIF RESULT == 1
	RETURN 0

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,52183)
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件表示 = 表側表示
	効果条件カテゴリ = 둠즈
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 破壊→墓地
	SIF 発動済_2(決闘者,52183)
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 둠즈
	効果条件スーパー名前 = 無垢なる者 メディウス
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件種類 = 装備魔法
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_52183(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択結果

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,52183,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件表示 = 表側表示
		効果条件カテゴリ = 둠즈
		効果条件行先フラグ = 破壊行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			IF 決闘者 == "自分"
				PRINTL フィールドのモンスターを破壊しますか？
				CALL YN_CHOICE(決闘者)
				選択結果 = RESULT
			ELSE
				CALL FULLRESET
				効果範囲相手戦場 = 1
				CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
				SIF RESULT != 1
					選択結果 = 1
			ENDIF
			IF 選択結果 == 0
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(決闘者,"両戦場単体",場所,"墓地")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,52183,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件種類 = 装備魔法
		IF 決闘者 == "自分"
			PRINTL 装備魔法を手札に加えますか？
			CALL YN_CHOICE(決闘者)
			選択結果 = RESULT
		ENDIF
		;相手が使う時は絶対サーチ
		IF 選択結果 == 0
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
		ELSE
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF