PRINTL 필드의 앞면 표시 몬스터 １장을 대상으로 하고 발동할 수 있다。
PRINTL 덱에서 "둠즈" 몬스터 １장을 장착 마법 카드 취급으로 대상의 몬스터에게 장착한다。

@CARDCAN_92183(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92183)
SIF RESULT == 1
	RETURN 0

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,92183)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 둠즈
	효과条件종류 = 엑시즈
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,92183)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 둠즈
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"離이동元",4,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득+D",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92183(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カードB_ID
#DIM DYNAMIC 修正値
#DIM DYNAMIC 装備先
#DIMS DYNAMIC 装備者
#DIMS DYNAMIC 대상者
#DIMS DYNAMIC 出処

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92183,1)
	IF RESULT == 0
		효과範囲필드 = 1
		효과条件カテゴリ = 둠즈
		효과条件종류 = 엑시즈
		효과条件표시 = 表側표시
		CALLFORM CARD_EQUIP_ADV(듀얼리스트,場所,ゾーン)
	ENDIF
ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92183,0)
	IF RESULT == 0
		CALL FULLRESET
		SETCOLOR C_YELLOW
		PRINTL 【장착 대상을 골라주십시오】
		RESETCOLOR
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			대상者 = %대상者（CS）%
			出処 = %参照先（CS）%
			SETCOLOR C_YELLOW
			PRINTL 【장착할 "둠즈" 몬스터를 골라주십시오】
			RESETCOLOR
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 둠즈
			효과条件종류 = モン全般
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カードB = RESULT
			選択カードB_ID = RESULT:99
			IF 選択カードB != 9999
				CALL CARD_SELECT(듀얼리스트,選択カードB)
				選択カードB = RESULT
				CALL FULLRESET
				IF 대상者 == "상대"
					出処 = 상대덱
				ELSE
					出処 = 덱
				ENDIF
				CALL CARD_EQUIP_MONSTER(대상者,選択カード,出処,選択カードB)
				TRYCALLFORM CARDNAME_{選択カードB_ID},"名前"
				SETCOLOR C_YELLOW
				PRINTFORMW 【%RESULTS%가 장착되었습니다】
				RESETCOLOR
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"덱")
ENDIF