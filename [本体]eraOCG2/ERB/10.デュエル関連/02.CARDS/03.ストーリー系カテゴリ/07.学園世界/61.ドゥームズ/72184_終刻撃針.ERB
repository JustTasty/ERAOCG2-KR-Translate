@CARD_EXPLANATION_72184(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の①②の効果は１ターンに１度、いずれか１つしか使用できない。
CALLFORM CARD_ABLE(1,魔罠起動)
PRINTL ①：自分メインフェイズに発動できる。
PRINTL 自分の手札・フィールド（表側表示）の他の「둠즈」カード１枚を破壊する。
PRINTL その後、デッキから「둠즈」モンスター１体を選び、手札に加えるか特殊召喚する。
PRINTL この効果の発動後、ターン終了時まで自分はＸモンスターしかＥＸデッキから特殊召喚できない。
CALLFORM CARD_ABLE(2,破壊→墓地)
PRINTL ②：このカードが効果で破壊された場合、フィールドの表側表示モンスター１体を対象として発動できる。
PRINTL そのモンスターを破壊する。


@CARDCAN_72184(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,72184)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1
	SIF 発動済_1(決闘者,72184)
		RETURN 0
	SIF 発動済_2(決闘者,72184)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲戦場 = 1
	効果条件表示 = 表側表示
	効果条件他所 = 1
	効果条件カテゴリ = 둠즈
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 둠즈
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動
	IF 種類 == 魔罠起動
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ELSEIF 種類 == 破壊→墓地
	SIF 発動済_1(決闘者,72184)
		RETURN 0
	SIF 発動済_2(決闘者,72184)
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲相手戦場 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72184(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 属性数


IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72184,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件他所 = 1
		効果条件表示 = 表側表示
		効果条件行先フラグ = 破壊行き
		効果条件カテゴリ = 둠즈
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲デッキ = 1		
			効果条件種類 = モン全般
			効果条件カテゴリ = 둠즈
			IF モンスター数(決闘者) != 5
				IF 決闘者 == "自分"
					PRINTL 特殊召喚しますか？
					CALL YN_CHOICE(決闘者)
				ENDIF
				IF RESULT == はい || 決闘者 == "相手"
					CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
				ELSE
					CALL CARD_ADD_ADV(決闘者,ゾーン,場所)	
				ENDIF
			ELSE
				CALL CARD_ADD_ADV(決闘者,ゾーン,場所)	
			ENDIF
		ENDIF
		CALL CARD_EX_RESTRICTION(決闘者)
	ENDIF
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動
	;カード発動＆設置まで
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72184)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,魔罠行き)
	ENDIF
ELSEIF 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72184,2)
	IF RESULT == 0
		効果条件表示 = 表側表示
		CALL CARD_REMOVAL_BASIC(決闘者,"両戦場単体",場所,"墓地")
	ENDIF
ENDIF
