@CARDCAN_24185(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名
#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 存在カード名,100

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,24185)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,24185)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,0)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 엑시즈
	효과条件カテゴリ = 둠즈
	효과条件スーパー名前 = 괴감옥신 유피테르
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = レベル持ち
	효과条件他所 = 1
	효과条件重ねてＸ = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_3(듀얼리스트,24185)
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 둠즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_24185(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC レベル存在,12
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 選択カードB


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 지속효과
	CALL SET_TMP_EX_RST(듀얼리스트,"종류",엑시즈)
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24185,2)
	IF RESULT == 0
		;소환できないモンスターが選ばれないようにするための処理
		CALL FULLRESET
		FOR カウンタ, 1, 12
			효과範囲필드 = 1
			효과条件종류 = レベル持ち
			효과条件他所 = 1
			효과条件レベル = カウンタ
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				レベル存在:カウンタ = 1
		NEXT
		SETCOLOR C_YELLOW
		PRINTL 【Ｘ소환할 몬스터를 골라주십시오】
		RESETCOLOR
		CALL FULLRESET
		;소환できないモンスターが選ばれないようにするための処理その２
		FOR カウンタ, 1, 12
			IF レベル存在:カウンタ == 1
				효과条件レベル:カウンタB = カウンタ
				カウンタB ++
			ENDIF
		NEXT
		효과条件カテゴリ = 둠즈
		SIF レベル存在:10 == 1
			효과条件スーパー名前 = 괴감옥신 유피테르
		효과条件종류 = 엑시즈
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			CALL FULLRESET
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			選択カード名前 = %RESULTS%
			TRYCALLFORM CARD_{選択カード_ID},"レベル"
			효과条件レベル = RESULT
			효과条件종류 = レベル持ち
			효과条件他所 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
			選択カードB = RESULT
			IF 選択カードB != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				CALL RESETCONDITION_MAT(1)
				代替素材数 = 1
				重ねてＸ = 1
				素材条件固定 = 選択カードB
				TRYCALLFORM XYZSUMMON(듀얼리스트,選択カード)
				;装備
				SETCOLOR C_YELLOW
				PRINTL 【DOOM-Z를 장착할 몬스터를 골라주십시오】
				RESETCOLOR
				CALL FULLRESET
				효과条件名前 = %選択カード名前%
				CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
				選択カード = RESULT
				CALL CARD_EQUIP_MONSTER(듀얼리스트,選択カードB,"필드",場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,24185,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 둠즈
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

