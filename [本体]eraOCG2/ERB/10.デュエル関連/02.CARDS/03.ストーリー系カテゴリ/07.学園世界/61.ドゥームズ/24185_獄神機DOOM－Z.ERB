	CASE "名前"
		RESULTS = 감옥신기 DOOM－Z
	CASE "略称"
		RESULTS = 감옥신기 DOOM－Z
	CASE "カテゴリ"
		RESULTS:0 = 둠즈
		RESULTS:1 = 감옥신
ENDSELECT


