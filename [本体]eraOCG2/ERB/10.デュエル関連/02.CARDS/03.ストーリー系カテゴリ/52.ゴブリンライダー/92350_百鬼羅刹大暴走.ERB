@CARDNAME_92350,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 고블린라이더 스탬피드
	CASE "略称"
		RESULTS = 백귀나찰대폭주
	CASE "カテゴリ"
		RESULTS:0 = 고블린
		RESULTS:1 = 고블린라이더
ENDSELECT


@CARD_92350(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_92350(종류)
#DIM DYNAMIC 종류

PRINTL  카드명의 ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(2,마함起動 ,フリー誘発)
PRINTL ①: 자신 / 상대의 메인 페이즈에 발동할 수 있다.
PRINTL 자신 필드의 "고블린" 몬스터만을 소재로서 엑시즈 소환을 실행한다.
CALLFORM CARD_ABLE(1,발동誘発)
PRINTL ②: 자신 필드에 '고블린' X 몬스터가 존재하고, 상대 필드의 몬스터가 효과를 발동했을 때 발동할 수 있다.
PRINTL 필드에 있는 X 소재를 1개 제거하고, 그 효과를 무효화하여 파괴한다.

@CARDCAN_92350(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,92350)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동誘発
	SIF 발동済_1(듀얼리스트,92350)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 엑시즈
	효과条件カテゴリ = 고블린
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件Ｘ素所持 = 999
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 2
		RETURN 1
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		SIF ゾーン != "마함"
			RETURN 0
		SIF 발동済_2(듀얼리스트,92350)
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		素材条件カテゴリ = 고블린
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件종류 = 엑시즈
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_92350(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 無効대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 발동誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92350,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件Ｘ素所持 = 999
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			CALL SET_FIELD_INFO(대상者（CS）,"필드",選択カード（CS）,"Ｘ",-1)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
			RETURN 1
		ENDIF
		RETURN 0
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == フリー誘発
	IF GETVAR(@"%듀얼리스트%_魔_表:場所") == 2
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91913)
		IF RESULT == 0
		ENDIF
	ELSEIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,92350,2)
		IF RESULT == 0
			CALL RESETAREA_MAT
			CALL FULLRESET
			효과条件종류 = 엑시즈
			효과条件소환可 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				素材条件カテゴリ = 고블린
				CALL XYZSUMMON(듀얼리스트, 選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF
