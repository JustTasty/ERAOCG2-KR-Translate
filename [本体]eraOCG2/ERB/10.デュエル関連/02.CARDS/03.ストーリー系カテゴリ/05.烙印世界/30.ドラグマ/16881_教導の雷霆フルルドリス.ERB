@CARDCAN_16881(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,16881)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動 || 種類 == フリー誘発
	SIF ゾーン != "手札"
		RETURN 0
	SIF 発動済_1(決闘者,16881)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,16881,"手札")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲相手戦場 = 1
	効果条件召種 = 召種EXデッキ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 特殊召喚時
	SIF 発動済_2(決闘者,16881)
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_召種:場所") != 召種手札
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 드래그마
	効果条件種類 = 罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_16881(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 種類 == 手札起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,16881,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者,"手札",場所)
	ENDIF
ELSEIF 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,16881,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果条件以攻撃力 = 2500
		効果条件種類:0 = 融合
		効果条件種類:1 = シンクロ
		効果条件種類:2 = エクシーズ
		効果条件種類:3 = リンク
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT == 1
			カウンタ = 1
			
		CALL FULLRESET
		効果条件カテゴリ = 드래그마
		効果条件種類 = 罠全般
		IF カウンタ == 0
			CALL CARD_SET_BASIC(決闘者,"デッキ",ゾーン,場所,"裏側表示")
		ELSE
			CALL CARD_SET_BASIC(決闘者,"デッキ",ゾーン,場所,"使化裏側表示")
		ENDIF
	ENDIF
ENDIF
