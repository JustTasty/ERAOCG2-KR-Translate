#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2


IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 메탈포제
ELSEIF EX参照 >= 10
	素材条件종류 = 융합
ENDIF
IF EX参照 == 1
	CALL FUSCAN(듀얼리스트,소환カード,56509) 
	RETURN RESULT
ENDIF


