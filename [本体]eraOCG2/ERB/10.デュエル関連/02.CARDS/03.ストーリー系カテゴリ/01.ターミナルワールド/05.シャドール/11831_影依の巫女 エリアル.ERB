	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,11831,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件複数 = 97			
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"상대묘지",ゾーン,場所)
	ENDIF
ENDIF

