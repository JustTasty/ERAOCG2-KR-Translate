@CARDNAME_81835,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 섀도르츠
	CASE "略称"
		RESULTS = 섀도르츠
	CASE "カテゴリ"
		RESULTS:0 = 섀도르
ENDSELECT


@CARD_81835(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 9
	CASE "攻撃力"
		RETURN 1450
	CASE "守備力"
		RETURN 1950
	CASE "융합代用"
		RETURN 10
	CASE "分割"
		RETURN 효과なし
ENDSELECT

RETURN 0

