	CALL CARD_CHOICE(듀얼리스트, 종류, ゾーン, 場所, 20355, 1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트, "마함単体", 場所, "묘지")
	ENDIF
ENDIF

