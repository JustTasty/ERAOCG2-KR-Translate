@CARDCAN_79901(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,79901)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF 発動済_1(決闘者,79901)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果条件固カテゴリ = 서큐버스 걸
	CALL CARD_CHECK_FIN_DATA(決闘者,"EX履歴")
	SIF RESULT != 0
		RETURN 0
	SIF GETVAR(@"ライフ_%決闘者%") <= 1000 && GETVAR(@"%決闘者%_コスト無効") < 1
		RETURN 0
	;後続のEXデッキチェック内の召喚可 = 1とちょっと被ってるけど
	;その後続のEXデッキチェックの処理が省けるためここで確認しておく
	SIF モンスター数(決闘者) >= 5
		RETURN 0
	FOR カウンタ, 0, 現EX山札数(決闘者)
		選択カードID = GETVAR(@"%決闘者%_EXデッキ:カウンタ")
		SIF 選択カードID < 1
			CONTINUE
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件ID = 選択カードID
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT == 1
			CONTINUE
		CALL CARD_EX_CHECK(決闘者,選択カードID)
		SIF RESULT == 1
			CONTINUE
		TRYCALLFORM CARDNAME_{選択カードID}("カテゴリ")
		SIF !MATCH(RESULTS,"서큐버스 걸")
			CONTINUE
		CALL RESETCONDITION_MAT
		TRYCALLFORM CARDSUMMON_{選択カードID}(決闘者,選択カードID,0)
		選択カード名 = %素材条件名前%
		SIF 選択カード名 == ""
			CONTINUE
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件名前 = %選択カード名%
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		IF RESULT == 1
			条件達成++
			BREAK
		ENDIF
	NEXT
	SIF 条件達成 < 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79901(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 選択カード名
#DIM DYNAMIC 選択カード候補,VARSIZE("効果条件ID")
#DIM DYNAMIC カウンタB

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,79901,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL LIFE_CHANGE(決闘者,"減少","コスト",1000)
		FOR カウンタ, 0, 現EX山札数(決闘者)
			選択カードID = GETVAR(@"%決闘者%_EXデッキ:カウンタ")
			SIF 選択カードID < 1
				CONTINUE
			SIF MATCH(選択カード候補,選択カードID)
				CONTINUE
			CALL FULLRESET
			効果範囲戦場 = 1
			効果範囲魔罠 = 1
			効果条件ID = 選択カードID
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			SIF RESULT == 1
				CONTINUE
			CALL CARD_EX_CHECK(決闘者,選択カードID)
			SIF RESULT == 1
				CONTINUE
			TRYCALLFORM CARDNAME_{選択カードID}("カテゴリ")
			SIF !MATCH(RESULTS,"서큐버스 걸")
				CONTINUE
			CALL RESETCONDITION_MAT
			TRYCALLFORM CARDSUMMON_{選択カードID}(決闘者,選択カードID,0)
			選択カード名 = %素材条件名前%
			SIF 選択カード名 == ""
				CONTINUE
			CALL FULLRESET
			効果範囲デッキ = 1
			効果条件名前 = %選択カード名%
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			IF RESULT == 1
				選択カード候補:カウンタB = 選択カードID
				カウンタB++
				SIF カウンタB >= VARSIZE("効果条件ID")
					BREAK
			ENDIF
		NEXT
		CALL FULLRESET
		効果条件種類 = 融合
		効果条件カテゴリ = 서큐버스 걸
		FOR カウンタ, 0, カウンタB
			効果条件ID:カウンタ = 選択カード候補:カウンタ
		NEXT
		CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL RESETCONDITION_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_EXデッキ:{選択カード}")}(決闘者,選択カード,0)
			選択カード名 = %素材条件名前%
			CALL FULLRESET
			効果範囲デッキ = 1
			効果条件名前 = %選択カード名%
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL CARD_EX_SUMMON(決闘者,"EXデッキ",選択カード)
				IF RESULT == 1
					CALL CARD_GENERATE_GY(決闘者,宝液ID)
				ENDIF
			ENDIF
		ENDIF
		CALL CARD_EX_RESTRICTION(決闘者,"서큐버스 걸")
	ENDIF
ENDIF