	CASE "名前"
		IF GETBIT(TALENT:MASTER:성별,1)
			RESULTS = 서큐버스 매직 파이즈리
		ELSEIF GETBIT(TALENT:MASTER:성별,0)
			RESULTS = 서큐버스 매직 파후파후
		ELSE
			RESULTS = 서큐버스 매직 파이즈리
		ENDIF
	CASE "略称"
		RESULTS = 음마술폭유파
	CASE "カテゴリ"
	    RESULTS:0 = 매지션 걸
		RESULTS:1 = 서큐버스 걸
		RESULTS:2 = E.R.A
ENDSELECT

