@CARDNAME_59854,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 미스트리스 오브 서큐버스 마기아
	CASE "略称"
		RESULTS = 궁극음마도사
	CASE "カテゴリ"
	    RESULTS:0 = 블랙 매지션 걸
	    RESULTS:1 = 매지션 걸
		RESULTS:2 = 서큐버스 걸
		RESULTS:3 = E.R.A
ENDSELECT

@CARD_59854(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RESULT:1 = 악마족
		RETURN 마법사족
	CASE "レベル"
		RETURN 12
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 2100
	CASE "성별"
		RETURN 牝性
	CASE "특수불가"
		RETURN 1
	CASE "生成カード"
		RETURN 宝液ID
	CASE "連動ID"
		RETURN 1000
ENDSELECT
RETURN 0

@CARD_EXPLANATION_59854(종류)
