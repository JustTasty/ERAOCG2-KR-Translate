PRINT 자신は
SETCOLOR C_H_PINK
PRINT ❤契約の対価❤として
RESETCOLOR
PRINTL ５００ＬＰを失い、묘지に「현자의 보액」トークン１枚を生成する。
PRINTL その後、제외状態の「매지션 걸」마법カード１枚を손패に加えることができる。
CALL TEXT_DECORATION("ROGUE")

@CARDSUMMON_AA_59854

@CARDCAN_59854(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59854)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,59854)
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 매지컬 실드 베드룸－음마술의 비의
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 현자의 보액
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 10
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = ブラック・서큐버스 걸
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 4000 && GETVAR(@"%듀얼리스트%_コスト無効") < 1
		RETURN 0
	CALL CARD_EX_CHECK(듀얼리스트,59854)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 서큐버스 걸
	효과条件종류 = 마함全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	IF RESULT == 1
		SIF 발동済_3(듀얼리스트,59854)
			RETURN 0
		RETURN 1
	ENDIF
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	IF RESULT == 1
		SIF 발동済_4(듀얼리스트,59854)
			RETURN 0
		RETURN 1
	ENDIF
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,59854)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 듀얼리스트 == "자신"
		SIF GETVAR(@"%듀얼리스트%_MZ_所有:場所") != 1
			RETURN 0
	ELSE
		SIF GETVAR(@"%듀얼리스트%_MZ_所有:場所") != 2
			RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_59854(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59854,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",4000)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = ブラック・서큐버스 걸
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_EX_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 서큐버스 걸
	효과条件종류 = 마법全般
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT > 0
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,RESULT * 400)
ELSEIF 종류 == 발동誘発
	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59854,3)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 서큐버스 걸
			효과条件종류 = 마법全般
			효과条件行先플래그 = 제외行き
			효과条件複数 = 2
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
				RETURN 1
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	IF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59854,4)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 서큐버스 걸
			효과条件종류 = 마법全般
			효과条件行先플래그 = 제외行き
			효과条件複数 = 2
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"묘지")
				RETURN 1
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59854,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",500)
		CALL CARD_GENERATE_GY(듀얼리스트,宝液ID)
		IF GETVAR(@"ライフ_%듀얼리스트%") > 0
			CALL FULLRESET
			효과範囲제외 = 1
			효과条件カテゴリ = 서큐버스 걸
			효과条件종류 = 마함全般
			효과条件任意 = 1
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
