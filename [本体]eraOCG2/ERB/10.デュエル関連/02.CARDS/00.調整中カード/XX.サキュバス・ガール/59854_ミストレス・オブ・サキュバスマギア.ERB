ENDSELECT

@CARD_59854(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 融合
	CASE "属性"
		RETURN 闇属性
	CASE "種族"
		RESULT:1 = 悪魔族
		RETURN 魔法使い族
	CASE "レベル"
		RETURN 12
	CASE "攻撃力"
		RETURN 2500
	CASE "守備力"
		RETURN 2100
	CASE "性別"
		RETURN 牝性
	CASE "特殊不可"
		RETURN 1
	CASE "生成カード"
		RETURN 宝液ID
	CASE "連動ID"
		RETURN 1000
ENDSELECT
RETURN 0

