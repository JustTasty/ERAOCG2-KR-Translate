@CARDSUMMON_AA_59854

@CARDCAN_59854(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,59854)
SIF RESULT == 1
	RETURN 0

IF 種類 == EXデッキ起動
	SIF 発動済_1(決闘者,59854)
		RETURN 0
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果条件名前 = 매지컬 실드 베드룸－음마술의 비의
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件名前 = 賢者の宝液
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 10
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = ブラック・서큐버스 걸
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"ライフ_%決闘者%") <= 4000 && GETVAR(@"%決闘者%_コスト無効") < 1
		RETURN 0
	CALL CARD_EX_CHECK(決闘者,59854)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 発動誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 서큐버스 걸
	効果条件種類 = 魔罠全般
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	CALL FULLRESET
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_START_DATA(決闘者,1)
	IF RESULT == 1
		SIF 発動済_3(決闘者,59854)
			RETURN 0
		RETURN 1
	ENDIF
	CALL FULLRESET
	効果条件種類 = モン全般
	CALL CARD_CHECK_START_DATA(決闘者,1)
	IF RESULT == 1
		SIF 発動済_4(決闘者,59854)
			RETURN 0
		RETURN 1
	ENDIF
ELSEIF 種類 == 戦場起動
	SIF 発動済_2(決闘者,59854)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	IF 決闘者 == "自分"
		SIF GETVAR(@"%決闘者%_MZ_所有:場所") != 1
			RETURN 0
	ELSE
		SIF GETVAR(@"%決闘者%_MZ_所有:場所") != 2
			RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_59854(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%



IF 種類 == EXデッキ起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59854,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(決闘者,"減少","コスト",4000)
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件名前 = ブラック・서큐버스 걸
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_EX_SUMMON(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 攻守変動
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 서큐버스 걸
	効果条件種類 = 魔法全般
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT > 0
		CALL STATCHANGE_BASIC(決闘者,"自身",場所,RESULT * 400)
ELSEIF 種類 == 発動誘発
	CALL FULLRESET
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_START_DATA(決闘者,1)
	IF RESULT == 1
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59854,3)
		IF RESULT == 0
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件カテゴリ = 서큐버스 걸
			効果条件種類 = 魔法全般
			効果条件行先フラグ = 除外行き
			効果条件複数 = 2
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"墓地")
				RETURN 1
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果条件種類 = モン全般
	CALL CARD_CHECK_START_DATA(決闘者,1)
	IF RESULT == 1
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59854,4)
		IF RESULT == 0
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件カテゴリ = 서큐버스 걸
			効果条件種類 = 魔法全般
			効果条件行先フラグ = 除外行き
			効果条件複数 = 2
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"墓地")
				RETURN 1
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59854,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(決闘者,"減少","コスト",500)
		CALL CARD_GENERATE_GY(決闘者,宝液ID)
		IF GETVAR(@"ライフ_%決闘者%") > 0
			CALL FULLRESET
			効果範囲除外 = 1
			効果条件カテゴリ = 서큐버스 걸
			効果条件種類 = 魔罠全般
			効果条件任意 = 1
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
