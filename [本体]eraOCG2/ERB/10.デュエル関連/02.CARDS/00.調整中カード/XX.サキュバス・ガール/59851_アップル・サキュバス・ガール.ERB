@CARD_59851(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 화염속성
	CASE "종족"
		RESULT:1 = 악마족
		RETURN 마법사족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 牝性
	CASE "生成カード"
		RETURN 宝液ID
	CASE "連動ID"
		RETURN 1004
ENDSELECT
RETURN 0

