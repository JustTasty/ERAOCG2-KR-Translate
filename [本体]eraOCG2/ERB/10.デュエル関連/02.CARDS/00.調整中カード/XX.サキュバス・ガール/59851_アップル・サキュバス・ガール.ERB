@CARDCAN_59851(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,59851)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF 発動済_2(決闘者,59851)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 서큐버스 걸
	効果条件固名前 = 賢者の宝液
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == ターン終了時強制
	SIF ゾーン != "戦場"
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	IF 決闘者 == "自分"
		SIF GETVAR(@"%決闘者%_MZ_所有:場所") != 1
			RETURN 0
	ELSE
		SIF GETVAR(@"%決闘者%_MZ_所有:場所") != 2
			RETURN 0
	ENDIF
	RETURN 1
ENDIF



@CARDEFFECT_59851(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%



IF 種類 == EXデッキ起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59851,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(決闘者,"減少","コスト",500)
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲戦場 = 1
		効果条件名前 = アップル・매지션 걸
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_EX_SUMMON(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL CARD_GENERATE_GY(決闘者,宝液ID)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 攻守変動
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 서큐버스 걸
	効果条件種類 = 魔法全般
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT > 0
		CALL STATCHANGE_BASIC(決闘者,"自身",場所,RESULT * 200)
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59851,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 서큐버스 걸
		効果条件固名前 = 賢者の宝液
		効果条件種類 = 魔罠全般
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == ターン終了時強制
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59851)
	IF RESULT == 0
		CALL LIFE_CHANGE(決闘者,"減少","コスト",500)
		CALL CARD_GENERATE_GY(決闘者,宝液ID)
	ENDIF
ENDIF
