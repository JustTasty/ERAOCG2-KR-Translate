@CARDCAN_51851(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC カウンタ
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,51851)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == EXデッキ起動
	SIF 発動済_2(決闘者,51851)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件名前 = 七盾同盟の象徴 セレスティン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = 六の砦の聖騎士 クラウディア
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == EX召喚時
	SIF 発動済_3(決闘者,51851)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") < 0
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 発動誘発
	SIF 発動済_4(決闘者,51851)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件名前 = 七盾同盟の象徴 セレスティン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲EXデッキ = 1
	効果条件名前 = 六の砦の聖騎士 クラウディア
	効果条件召喚可 = 2
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果条件種類 = モン全般
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_51851(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 対象者
#DIMS DYNAMIC 対象ゾーン

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51851)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,魔罠行き)
	ENDIF
ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果条件名前 = 七盾同盟の象徴 セレスティン
	CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")
	CALL STATCHANGE_EFFECT(決闘者,"魔罠",場所,"破耐")
	IF ゾーン == "戦場"
		CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"破耐")
	; ELSE ゾーン == "魔罠"
	ENDIF
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51851,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,EXデッキ行き)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲EXデッキ = 1
			効果範囲墓地 = 1
			効果条件名前 = 六の砦の聖騎士 クラウディア
			CALL CARD_SET_ADV(決闘者,ゾーン,場所,"表側表示")
		ENDIF
	ENDIF
ELSEIF 種類 == EXデッキ起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51851,2)
	IF RESULT == 0
		CALL RESETCONDITION_MAT
		必要素材数 = 1
		効果範囲戦場 = 1
		素材条件名前 = 六の砦の聖騎士 クラウディア
		重ねてＸ = 1
		TRYCALLFORM XYZSUMMON(決闘者,場所)
	ENDIF
ELSEIF 種類 == EX召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51851,3,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲相手戦場 = 1
		CALL CARD_REMOVAL_ADV(決闘者,"単体除去",場所,"墓地")
	ENDIF
ELSEIF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51851,4)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,EXデッキ行き)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果範囲EXデッキ = 1
			効果条件名前 = 六の砦の聖騎士 クラウディア
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"無効")
				RETURN 1
			ENDIF
		ENDIF
	ENDIF
ENDIF