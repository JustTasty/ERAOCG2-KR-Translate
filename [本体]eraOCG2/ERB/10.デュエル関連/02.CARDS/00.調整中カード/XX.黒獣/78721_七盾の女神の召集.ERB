@CARDCAN_78721(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 候補除外レベル,6
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カウンタB

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,78721)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	IF ゾーン == "手札"
		IF ターンプレイヤー != 決闘者
			RETURN 0
		ENDIF
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 発動済_1(決闘者,78721)
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件名前 = 七盾同盟の象徴 セレスティン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1 && 手札数(決闘者) < 1
		RETURN 0
	FOR カウンタ, 0, 5
		;MZ
		選択カードID = GETVAR(@"%決闘者%_戦場:カウンタ")
		IF 選択カード != -1
			VARSET 条件達成
			TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
			SIF MATCH(RESULTS, "七盾同盟")
				条件達成 ++
			IF GETVAR(@"%決闘者%_MZ_変化元ID:カウンタ") > -1
				TRYCALLFORM CARDNAME_{GETVAR(@"%決闘者%_MZ_変化元ID:カウンタ")}, "カテゴリ"
				SIF MATCH(RESULTS, "七盾同盟")
					条件達成 ++
			ENDIF
			;改名されてるとカテゴリをすべて失い、追加カテゴリのみ
			IF GETVARS(@"%決闘者%_MZ_改名:カウンタ") != ""
				VARSET 条件達成
			ENDIF
			SIF GETVARS(@"%決闘者%_MZ_追カテ:カウンタ") == "七盾同盟"
				条件達成++
			SIF GETVARS(@"%決闘者%_MZ_追カテ2:カウンタ") == "七盾同盟"
				条件達成++
			IF 条件達成 > 0 && GETVAR(@"%決闘者%_MZ_星:カウンタ") < 7
				候補除外レベル:(GETVAR(@"%決闘者%_MZ_星:カウンタ") - 1) = 1
			ENDIF
		ENDIF
		;魔罠
		選択カードID = GETVAR(@"%決闘者%_魔罠:カウンタ")
		IF 選択カード != -1
			VARSET 条件達成
			TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
			SIF MATCH(RESULTS, "七盾同盟")
				条件達成++
			;改名されてるとカテゴリをすべて失い、追加カテゴリのみ
			IF GETVARS(@"%決闘者%_魔_改名:カウンタ") != ""
				VARSET 条件達成
			ENDIF
			SIF GETVARS(@"%決闘者%_魔_追カテ:カウンタ") == "七盾同盟"
				条件達成++
			SIF GETVARS(@"%決闘者%_魔_追カテ2:カウンタ") == "七盾同盟"
				条件達成++
			IF 条件達成 > 0
				TRYCALLFORM CARD_{選択カードID}("レベル")
				SIF RESULT < 7 && RESULT > 0
					候補除外レベル:(RESULT - 1) = 1
			ENDIF
		ENDIF
	NEXT
	CALL FULLRESET
	効果範囲デッキ = 1
	効果範囲EXデッキ = 1
	効果条件種類 = EX以外全般
	効果条件分割 = ペンデュラム
	VARSET カウンタB
	FOR カウンタ, 0, 6
		IF 候補除外レベル:カウンタ == 0
			効果条件レベル:カウンタB = カウンタ + 1
			カウンタB++
		ENDIF
	NEXT
	効果条件カテゴリ = 七盾同盟
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == ターン終了時
	SIF 発動済_2(決闘者,78721)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件名前 = 七盾同盟の象徴 セレスティン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_78721(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 候補除外レベル,6
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カウンタB

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,78721,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件名前 = 七盾同盟の象徴 セレスティン
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		IF RESULT != 1
			CALL FULLRESET
			効果範囲手札 = 1
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 1
			FOR カウンタ, 0, 5
				;MZ
				選択カードID = GETVAR(@"%決闘者%_戦場:カウンタ")
				IF 選択カード != -1
					VARSET 条件達成
					TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
					SIF MATCH(RESULTS, "七盾同盟")
						条件達成 ++
					IF GETVAR(@"%決闘者%_MZ_変化元ID:カウンタ") > -1
						TRYCALLFORM CARDNAME_{GETVAR(@"%決闘者%_MZ_変化元ID:カウンタ")}, "カテゴリ"
						SIF MATCH(RESULTS, "七盾同盟")
							条件達成 ++
					ENDIF
					;改名されてるとカテゴリをすべて失い、追加カテゴリのみ
					IF GETVARS(@"%決闘者%_MZ_改名:カウンタ") != ""
						VARSET 条件達成
					ENDIF
					SIF GETVARS(@"%決闘者%_MZ_追カテ:カウンタ") == "七盾同盟"
						条件達成++
					SIF GETVARS(@"%決闘者%_MZ_追カテ2:カウンタ") == "七盾同盟"
						条件達成++
					IF 条件達成 > 0 && GETVAR(@"%決闘者%_MZ_星:カウンタ") < 7
						候補除外レベル:(GETVAR(@"%決闘者%_MZ_星:カウンタ") - 1) = 1
					ENDIF
				ENDIF
				;魔罠
				選択カードID = GETVAR(@"%決闘者%_魔罠:カウンタ")
				IF 選択カード != -1
					VARSET 条件達成
					TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
					SIF MATCH(RESULTS, "七盾同盟")
						条件達成++
					;改名されてるとカテゴリをすべて失い、追加カテゴリのみ
					IF GETVARS(@"%決闘者%_魔_改名:カウンタ") != ""
						VARSET 条件達成
					ENDIF
					SIF GETVARS(@"%決闘者%_魔_追カテ:カウンタ") == "七盾同盟"
						条件達成++
					SIF GETVARS(@"%決闘者%_魔_追カテ2:カウンタ") == "七盾同盟"
						条件達成++
					IF 条件達成 > 0
						TRYCALLFORM CARD_{選択カードID}("レベル")
						SIF RESULT < 7 && RESULT > 0
							候補除外レベル:(RESULT - 1) = 1
					ENDIF
				ENDIF
			NEXT
			CALL FULLRESET
			効果範囲デッキ = 1
			効果範囲EXデッキ = 1
			効果条件種類 = EX以外全般
			効果条件分割 = ペンデュラム
			VARSET カウンタB
			FOR カウンタ, 0, 6
				IF 候補除外レベル:カウンタ == 0
					効果条件レベル:カウンタB = カウンタ + 1
					カウンタB++
				ENDIF
			NEXT
			効果条件カテゴリ = 七盾同盟
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 種類 == ターン終了時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,78721,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件名前 = 七盾の女神の召集
		効果追加種類 = 500
		CALL CARD_SET_ADV(決闘者,ゾーン,場所,"裏側表示")
	ENDIF
ENDIF