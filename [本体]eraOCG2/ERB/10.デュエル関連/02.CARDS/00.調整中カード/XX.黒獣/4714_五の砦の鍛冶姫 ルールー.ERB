	CASE "名前"
		RESULTS = 5의 방패의 대장공주 루루
	CASE "略称"
		RESULTS = 五の砦 루루
	CASE "カテゴリ"
		RESULTS:0 = 7방패 동맹
		RESULTS:1 = 쿠로이누
ENDSELECT

