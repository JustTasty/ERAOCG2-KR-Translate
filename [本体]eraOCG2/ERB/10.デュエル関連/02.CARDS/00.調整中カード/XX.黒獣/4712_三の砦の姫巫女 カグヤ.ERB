PRINTL このカードを마법＆함정ゾーンに表側표시で置き、
PRINTL ＥＸ덱・마법＆함정ゾーンのこのカード名以外でかつＥＸモンスター以外の「7방패 동맹」Ｐモンスター１体を특수소환する。


@CARDCAN_4712(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4712)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,4712)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	IF 마함数(듀얼리스트) < 5
		효과範囲필드 = 1
		효과範囲묘지 = 1
	ENDIF
	효과条件分割 = 펜듈럼
	효과条件カテゴリ = 7방패 동맹
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = EX以外全般
	효과条件分割 = 펜듈럼
	효과条件カテゴリ = 7방패 동맹
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,4712)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件他所 = 1
	효과条件除去種 = 손패
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_3(듀얼리스트,4712)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件固名前 = 三の砦の姫巫女 카구야
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前 = 7방패 동맹의 상징 셀레스틴
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 7방패 동맹
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4712(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 選択カードID
#DIMS DYNAMIC 대상者
#DIMS DYNAMIC 대상ゾーン

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4712)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4712,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		IF 마함数(듀얼리스트) < 5
			효과範囲필드 = 1
			효과範囲묘지 = 1
		ENDIF
		효과条件分割 = 펜듈럼
		효과条件カテゴリ = 7방패 동맹
		효과条件行先플래그 = EX덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		選択カードID = RESULT:1
		IF RESULT == 1
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件종류 = EX以外全般
			효과条件分割 = 펜듈럼
			효과条件固ID = RESULT:1
			효과条件カテゴリ = 7방패 동맹
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ENDIF
	ENDIF
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4712,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件他所 = 1
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"손패")
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_DISPOSE(듀얼리스트,"필드",場所,손패行き)
		ENDIF
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4712,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과範囲마함 = 1
			효과条件종류 = EX以外全般
			효과条件固名前 = 三の砦の姫巫女 카구야
			효과条件分割 = 펜듈럼
			효과条件カテゴリ = 7방패 동맹
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF