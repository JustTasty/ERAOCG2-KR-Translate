@CARDNAME_51850,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 1의 방패의 성 아이리스 앨리시아
	CASE "略称"
		RESULTS = 성앨리시아
	CASE "カテゴリ"
		RESULTS:0 = 7방패 동맹
		RESULTS:1 = 쿠로이누
ENDSELECT

@CARD_51850(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
		RETURN 엑시즈
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 전사족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 1800
	CASE "守備力"
		RETURN 1000
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 펜듈럼
	CASE "連動ID"
		RETURN 4710
	CASE "추가日"
		RETURN 250707
ENDSELECT
RETURN 0

