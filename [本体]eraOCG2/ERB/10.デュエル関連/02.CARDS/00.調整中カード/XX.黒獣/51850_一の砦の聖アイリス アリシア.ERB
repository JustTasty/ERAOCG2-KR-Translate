@CARDCAN_51850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51850)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,51850)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") > 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件固名前 = 1의 방패의 성 아이리스 앨리시아
	CALL CARD_CHECK_START_DATA(듀얼리스트,2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前:0 = 7방패 동맹의 상징 셀레스틴
	효과条件名前:1 = 二の砦の無垢姫 프림
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,51850,"마함")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX덱起動
	SIF 발동済_2(듀얼리스트,51850)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前:0 = 7방패 동맹의 상징 셀레스틴
	효과条件名前:1 = 二の砦の無垢姫 프림
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 1의 방패의 여기사 앨리시아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_3(듀얼리스트,51850)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") < 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_4(듀얼리스트,51850)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	효과条件固名前 = 1의 방패의 성 아이리스 앨리시아
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",2)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前:0 = 7방패 동맹의 상징 셀레스틴
	효과条件名前:1 = 二の砦の無垢姫 프림
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲EX덱 = 1
	효과条件カテゴリ = 7방패 동맹
	효과条件分割 = 펜듈럼
	효과条件종류 = EX以外全般
	효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") < 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_51850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID

#DIM DYNAMIC 条件달성
#DIM DYNAMIC 候補제외レベル,12
#DIM DYNAMIC カウンタB

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51850)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51850,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			IF 듀얼리스트 == "자신"
				PRINTL 이 카드의 Ｘ素材を１つ増やし、발동した효과を무효로 하고 ますか？
				CALL YN_CHOICE(듀얼리스트)
			ELSE
				SIF 効後_実行者:(効後_カウンタ - 2) == 듀얼리스트
					RESULT = いいえ
			ENDIF
			IF RESULT == はい
				CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"Ｘ",1)
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
				RETURN 1
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51850,2)
	IF RESULT == 0
		CALL RESETCONDITION_MAT
		必要素材数 = 1
		효과範囲필드 = 1
		素材条件名前 = 1의 방패의 여기사 앨리시아
		重ねてＸ = 1
		TRYCALLFORM XYZSUMMON(듀얼리스트,場所)
	ENDIF
ELSEIF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51850,3,X消費1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"条達",1,上書きモード)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51850,4)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲마함 = 1
			효과範囲EX덱 = 1
			효과条件종류 = EX以外全般
			효과条件固名前 = 1의 방패의 성 아이리스 앨리시아
			효과条件分割 = 펜듈럼
			효과条件カテゴリ = 7방패 동맹
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	FOR カウンタ, 0, 6
		;MZ
		選択カードID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
		IF 選択カード != -1
			VARSET 条件달성
			TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
			SIF MATCH(RESULTS, "7방패 동맹")
				条件달성 ++
			IF GETVAR(@"%듀얼리스트%_MZ_変化元ID:カウンタ") > -1
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_MZ_変化元ID:カウンタ")}, "カテゴリ"
				SIF MATCH(RESULTS, "7방패 동맹")
					条件달성 ++
			ENDIF
			;改名されてるとカテゴリをすべて失い、추가カテゴリのみ
			IF GETVARS(@"%듀얼리스트%_MZ_改名:カウンタ") != ""
				VARSET 条件달성
			ENDIF
			SIF GETVARS(@"%듀얼리스트%_MZ_追カテ:カウンタ") == "7방패 동맹"
				条件달성++
			SIF GETVARS(@"%듀얼리스트%_MZ_追カテ2:カウンタ") == "7방패 동맹"
				条件달성++
			IF 条件달성 > 0 && GETVAR(@"%듀얼리스트%_MZ_星:カウンタ") - 1 > 0
				候補제외レベル:(GETVAR(@"%듀얼리스트%_MZ_星:カウンタ") - 1) = 1
			ENDIF
		ENDIF
		;마함
		選択カードID = GETVAR(@"%듀얼리스트%_마함:カウンタ")
		IF 選択カード != -1
			VARSET 条件달성
			TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
			SIF MATCH(RESULTS, "7방패 동맹")
				条件달성++
			;改名されてるとカテゴリをすべて失い、추가カテゴリのみ
			IF GETVARS(@"%듀얼리스트%_魔_改名:カウンタ") != ""
				VARSET 条件달성
			ENDIF
			SIF GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "7방패 동맹"
				条件달성++
			SIF GETVARS(@"%듀얼리스트%_魔_追カテ2:カウンタ") == "7방패 동맹"
				条件달성++
			IF 条件달성 > 0
				TRYCALLFORM CARD_{選択カードID}("レベル")
				SIF RESULT > 0
					候補제외レベル:(RESULT - 1) = 1
			ENDIF
		ENDIF
	NEXT
	カウンタ = MATCH(候補제외レベル,1)
	IF カウンタ > 0
		CALL FULLRESET
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,カウンタ*200)
	ENDIF
	RETURN 0
ENDIF