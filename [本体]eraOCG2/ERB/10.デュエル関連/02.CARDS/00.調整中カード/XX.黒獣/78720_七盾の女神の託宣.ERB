@CARDCAN_78720(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

#DIMS DYNAMIC 대상ゾーン
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,78720)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		IF ターンプレイヤー != 듀얼리스트
			RETURN 0
		ENDIF
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,78720)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前 = 7방패 동맹의 상징 셀레스틴
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件名前 = 7방패 동맹의 상징 셀레스틴
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1 && 마함数(듀얼리스트) < 5
			条件달성++
	ENDIF
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 7방패 동맹
	효과条件分割 = 펜듈럼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성++
	SIF 条件달성 < 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	; SIF 발동済_2(듀얼리스트,78720)
	; 	RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	IF 破壊대상ゾーン == "필드"
		대상ゾーン = MZ
	ELSE
		대상ゾーン = 魔
	ENDIF
	IF 대상ゾーン != ""
		SIF 破壊대상ID != 4716 && GETVAR(@"%듀얼리스트%_%대상ゾーン%_変化元ID:破壊대상場所") != 4716
			RETURN 0
	ENDIF
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_78720(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 条件Ａ
#DIM DYNAMIC 条件Ｂ
#DIM DYNAMIC 選択효과

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78720,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件名前 = 7방패 동맹의 상징 셀레스틴
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件名前 = 7방패 동맹의 상징 셀레스틴
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1 && 마함数(듀얼리스트) < 5
				条件Ａ++
		ENDIF
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 7방패 동맹
		효과条件分割 = 펜듈럼
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件Ｂ++
		IF 条件Ａ != 0 && 条件Ｂ != 0
			CALL YN_CHOICE(듀얼리스트,"●덱에서 「7방패 동맹의 상징 셀레스틴」１장을 자신의 마법＆함정ゾーンに表側표시で置く。","●덱에서 「7방패 동맹」Ｐ몬스터 １장을 ＥＸ덱に送る。")
			選択효과 = RESULT
		ELSEIF 条件Ｂ == 1 && 条件Ａ == 0
			選択효과 = いいえ
		ELSEIF 条件Ａ == 1 && 条件Ｂ == 0
			選択효과 = はい
		ENDIF
		IF 選択효과 == はい
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件名前 = 7방패 동맹의 상징 셀레스틴
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ELSEIF 選択효과 == いいえ
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 7방패 동맹
			효과条件分割 = 펜듈럼
			효과条件行先플래그 = EX덱行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78720,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF