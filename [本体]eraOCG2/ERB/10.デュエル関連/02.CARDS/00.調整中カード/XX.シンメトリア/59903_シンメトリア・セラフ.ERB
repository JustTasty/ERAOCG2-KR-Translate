@CARDCAN_59903(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,59903)
SIF RESULT == 1
	RETURN 0

;身代わり効果
IF 種類 == 身代効果
	SIF ゾーン != "手札"
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊対象ID}("カテゴリ")
	SIF !MATCH(RESULTS,"타천칭")
		RETURN 0
	SIF !GROUPMATCH(破壊種類,"効果","戦闘")
		RETURN 0
	RETURN 1

;墓地からのss効果
ELSEIF 種類 == 墓地起動
	SIF 発動済_2(決闘者,59903)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,59903,"墓地")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果範囲手札 = 1
	効果条件他所 = 1
	効果条件固カテゴリ = 타천칭
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所,1281)
	SIF RESULT < 1
		RETURN 0
	RETURN 1

;フリー誘発効果
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 発動済_3(決闘者,59903)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件カテゴリ = 타천칭
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59903(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 選択後メッセージ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンター数
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC 効果分岐
#DIM DYNAMIC 調教対象

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,59903)
SIF RESULT == 1
	RETURN 0

IF 種類 == 身代効果
	;身代わり効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59903)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0

ELSEIF 種類 == 墓地起動
	;墓地から自分を特殊召喚する効果
	;このカードのみ条件と効果が違う
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59903,2)
	IF RESULT == 0
		;手札またはフィールドのカードを墓地へ
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果範囲手札 = 1
		効果条件固カテゴリ = 타천칭
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			;自身を特殊召喚
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,"墓地",場所)
			;テーマカードを回収
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件カテゴリ = 심메트리아
			効果条件固名前 = 심메트리아 세라프
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	;ダメージか固有のボーナス効果かを相手に選択させる効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,59903,3)
	IF RESULT == 0
		;自分を墓地に送る
		CALL FULLRESET
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		;どの効果が選択されるか決定
		CALL FULLRESET
		CALL CALC_PROBABILITY_SYMMETRIA(決闘者,種類,ゾーン,場所)
		効果分岐 = RESULT

		IF 効果分岐 == 1 || 効果分岐 == 2
			;RESULTが1なら確率によってボーナス効果が選択された
			;RESULTが2ならダメージ的にボーナス効果を選択するしかなかった
			;それぞれに違うメッセージを用意する予定があったが、今のところは結果は同じ
			;魔法罠無効
			CALL SET_PLAYER_INFO(決闘者,"魔罠無効",1,1)
		ELSEIF 効果分岐 == 3
			;RESULTが3なら使途が居るので両方の効果を適用させる
			;モンスターが個別で持つボーナス効果の処理
			;魔法罠無効
			CALL SET_PLAYER_INFO(決闘者,"魔罠無効",1,1)
			;奉仕処理
			CALL CARD_EROTICS(相手プレイヤー,決闘者)
			IF RESULT != -1
				調教対象 = RESULT
				PRINTFORML
				SETCOLOR C_PINK 
				PRINTFORML %CALLNAME:調教対象%は公開オナニーを強要されている……
				RESETCOLOR
				CALL EROTIC_MOVE("自慰",調教対象,MASTER,500)
			ENDIF
			;ダメージを与えカウンターを置く効果
			CALL FULLRESET
			ダメージ量 = 200
			CALL CARD_DAMAGE_SYMMETRIA(決闘者,種類,ゾーン,場所,ダメージ量)
		ELSE
			;それ以外ならダメージを与える効果が選択されている。
			;奉仕処理
			CALL CARD_EROTICS(相手プレイヤー,決闘者)
			IF RESULT != -1
				調教対象 = RESULT
				PRINTFORML
				SETCOLOR C_PINK 
				PRINTFORML %CALLNAME:調教対象%は公開オナニーを強要されている……
				RESETCOLOR
				CALL EROTIC_MOVE("自慰",調教対象,MASTER,500)
			ENDIF
			;ダメージを与えカウンターを置く効果の処理
			CALL FULLRESET
			ダメージ量 = 200
			CALL CARD_DAMAGE_SYMMETRIA(決闘者,種類,ゾーン,場所,ダメージ量)
		ENDIF
	ENDIF
ENDIF



