#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 調教対象

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,39902)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃後誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_戦闘カード") != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(決闘者,1) == 0
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻守変動 || 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動
	SIF 発動済_3(決闘者,39902)
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_条達:場所") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件性別 = 牝性
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


