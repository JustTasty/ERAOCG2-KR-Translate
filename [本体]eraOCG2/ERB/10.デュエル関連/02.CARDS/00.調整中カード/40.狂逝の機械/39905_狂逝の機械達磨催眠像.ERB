@CARDCAN_39905(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 調教対象

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,39905)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動 || 種類 == 墓地起動
	SIF 発動済_1(決闘者,39905)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,39905,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
    効果範囲魔罠 = 1
	効果条件カテゴリ = 狂逝の機械
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻撃時強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦闘→墓地
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF 戦闘カードID(決闘者,1) == -1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_39905(決闘者,種類,ゾーン,場所)
