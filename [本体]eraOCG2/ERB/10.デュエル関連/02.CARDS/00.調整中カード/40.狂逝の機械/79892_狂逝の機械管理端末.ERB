@CARDCAN_79892(決闘者,種類,ゾーン,場所)

#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 効果条件フラグ = 0


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,79892)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1
	SIF 発動済_1(決闘者,79892)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0

    CALL FULLRESET
    効果範囲手札 = 1
    効果範囲墓地 = 1
	効果条件カテゴリ = 狂逝の機械
	効果条件種類 = モン全般
	効果条件CNT = 2
    CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	IF RESULT < 2
		CALL FULLRESET
    	効果範囲デッキ = 1
    	効果条件種類 = モン全般
    	効果条件カテゴリ = 狂逝の機械
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		CALL FULLRESET
    	効果範囲墓地 = 1
		効果条件カテゴリ = 狂逝の機械
		CALL 効果条件レベル_ADV(8, "以上")
    	効果条件召喚可 = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
	ENDIF
	RETURN 1
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動
		IF 種類 == 魔罠起動
			SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
				RETURN 0
		ENDIF
		SIF メインフェイズ != 1
		RETURN 0
		SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79892(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 戦闘カードID
#DIM DYNAMIC 攻撃力上昇
#DIM DYNAMIC 選択結果
#DIM DYNAMIC 効果条件フラグ = 0
#DIM DYNAMIC 捕縛対象
#DIM DYNAMIC 捕縛候補,紙束最大値
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 絶頂횟수

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1

CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,79892,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件種類 = モン全般
		効果条件カテゴリ = 狂逝の機械
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT == 1
			効果条件フラグ |= 1

		CALL FULLRESET
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,79892)
		SIF RESULT == 0
			効果条件フラグ |= 2

		IF 効果条件フラグ & 1 && 効果条件フラグ & 2
			IF 決闘者 == "相手"
				選択結果 = はい
			ELSE
				CUSTOMDRAWLINE -
				PRINTL 狂逝の機械管理端末のどちらの効果を適用しますか？
				CUSTOMDRAWLINE -
				CALL YN_CHOICE(決闘者,"デッキから「狂逝の機械」モンスターを１枚墓地に送り、自分フィールド上の機械族の牝性モンスターを１体の攻撃力を１０００アップさせる","自分の手札・墓地から「狂逝の機械」カードを２枚除外し、デッキ・手札・墓地からレベル８以上の「狂逝の機械」モンスターを１体特殊召喚する。")
				選択結果 = RESULT
			ENDIF
		ELSEIF 効果条件フラグ & 2
			選択結果 = いいえ
		ELSE
			選択結果 = はい
		ENDIF

	    IF 選択結果 == はい
			CALL FULLRESET
			CUSTOMDRAWLINE -
			PRINTL 【デッキから「狂逝の機械」モンスターを１枚墓地に送る事を選択しました。】
			CUSTOMDRAWLINE -
			効果範囲デッキ = 1
			効果条件種類 = モン全般
			効果条件カテゴリ = 狂逝の機械
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CUSTOMDRAWLINE -
				PRINTL 【自分フィールド上の牝性モンスター１体の攻撃力を１０００アップし、発情させ、「狂逝の機械」としても扱うことが出来ます、】
				PRINTL 【効果を付与するモンスターを選択してください。】
				CUSTOMDRAWLINE -
				効果条件種族 = 機械族
				効果条件性別 = 牝性
				効果条件表示 = 表側表示
				CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
				選択カード = RESULT
				IF 選択カード != 9999
					CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"永攻",1000)
					CALL STATCHANGE_EFFECT(決闘者,"戦場",選択カード,"発情",1)
				ENDIF
				CALL FULLRESET
					FOR カウンタ,0,現山札数(対面者)
					捕縛対象 = GETVAR(@"%対面者%_デッキ:カウンタ") ;0→カウンタ
					SIF 捕縛対象 == -1 ;念のため-1の場合は次へ
						CONTINUE
					CALLFORM CARD_{捕縛対象},"性別"
					SIF RESULT == 無性 || RESULT == 雄性
						CONTINUE
					CALL CARD_EROTICS(捕縛対象)
					SIF RESULT < 1 ;CSV持ち以外は除外
						CONTINUE
					捕縛候補:カウンタB = 捕縛対象 ;牝性を候補に格納
					カウンタB++ ;候補数加算
				NEXT
				SIF カウンタB < 1 ;カウンタが0以下=候補0
					RETURN
				捕縛対象 = 捕縛候補:(RAND:カウンタB) ;カウンタBまでの乱数で捕縛候補の中からランダムに捕縛対象を決定
				CALL CARD_EROTICS(捕縛対象) ;必ずCARD_EROTICSを挟む
				調教対象 = RESULT
				IF 調教対象 > 0 ;調教対象条件はあなたを想定しないなら>0で
					SELECTCASE RAND:6
						CASE 0
							PRINTFORML
							PRINTFORML 新しい狂逝の機械の増産のために、捕らえられていた%CALLNAME:調教対象%はその牝穴を使いつぶされている、
							PRINTFORML 快楽を伝えるための信号、その体液、苦痛、恐怖、快感の全てが狂逝の機械を動かすための糧にされていく、
							PRINTFORMW %CALLNAME:調教対象%は、新しい牝肉を得るための糧を狂逝の機械に捧げるためだけに使いつぶされていく……
						CASE 1
							PRINTFORML
							PRINTFORML 狂逝の機械に力を与えるべく既に捕らえられていた%CALLNAME:調教対象%に対しての責めが加速していく。
							PRINTFORML ごつんごつんっ、と子宮を潰し続けていた生殖器の模造品のピストン運動がより重く速いものとなる。
							PRINTFORMW 四肢を失っている%CALLNAME:調教対象%はその胴をのけぞらせ、舌を出しながらイくことしかできない……
						CASE 2
							PRINTFORML
							PRINTFORML %CALLNAME:調教対象%を含めた牝穴への凌辱が急に激しく、その肉体の消耗を問わない激しさとなっていた。
							PRINTFORML 狂逝の機械に対して一時的な強化の糧を得るべく、牝穴たちの性的な蹂躙を強化させられたのだ。
							PRINTFORMW %CALLNAME:調教対象%は壊されてしまいそうな恐怖と苦痛から必死に助けを求めながら絶頂を繰り返す……

						CASE 3
							PRINTFORML
							PRINTFORML 手足を失い、鉄の棒によって組み上げられたフレームの中に押し込められ、機械のアームで運搬される%CALLNAME:調教対象%、
							PRINTFORML アームが彼女を入れようとする鉄の箱には隙間が無いほどに触手が詰め込まれていた。
							PRINTFORMW %CALLNAME:調教対象%は必死に首を振りながら助けを求めるが、フレームごと入れられ、密閉され並べられてしまう……

						CASE 4
							PRINTFORML
							PRINTFORML %CALLNAME:調教対象%は媚薬を体内に流し込まれながら口からは呼吸をさせられながら催淫ガスを吸わされ、
							PRINTFORML 肉体を完全に雄ちんぽを咥えるのに適した状態にさせられたまま触手の詰まった箱に詰め込まれる。
							PRINTFORMW 快楽を受け、発狂し、イき狂うためだけに使われる牝穴として%CALLNAME:調教対象%はその役目を全うする……。

						CASE 5
							PRINTFORML
							PRINTFORML %CALLNAME:調教対象%は必死に助けを乞うものの、その声は虚しく機械城にこだますだけであった。
							PRINTFORML そうしていてもしっとりと熱を帯びた息を吐き、全身から溢れる汗とともに両穴から溢れる愛液が垂れ落ちている。
							PRINTFORMW 機械城を動かす糧となるべく生き永らえさせられながら犯される牝肉として、触手の箱に%CALLNAME:調教対象%、は入れられていく……。
					ENDSELECT
					FOR カウンタ,0,4
						CALL EROTIC_MOVE("全身凌辱",調教対象,MASTER,500)
						PRINTFORML 
						CALL MADORGASM_RAND_ROB_TXT(1,0)
						CALL MADORGASM_RAND_ROB_TXT(1,4)
						PRINTFORML
					NEXT
					CALL MADORGASM_RAND_ROB_TXT(1,4);うるさい鳴き声
					PRINTFORML %CALLNAME:調教対象%は体中から体液を耐え流し、涙を溢れさせながら必死に救いを求めている。
					PRINTFORMW この狂逝の機械はいつでも動けるようだ、決闘の盤面に置いても効果を発揮するだろう
				ENDIF
			ENDIF
		ELSE
			CALL FULLRESET
			効果範囲手札 = 1
			効果範囲墓地 = 1
			効果条件種類 = モン全般
			効果条件カテゴリ = 狂逝の機械
			効果条件行先フラグ = 除外行き
			効果条件複数 = 2
			CUSTOMDRAWLINE -
			PRINTL レベル８以上の狂逝の機械を召喚するには手札・墓地に存在する「狂逝の機械」モンスターを２体除外しなければなりません、
			CUSTOMDRAWLINE -
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				効果範囲手札 = 1
				効果範囲墓地 = 1
				効果範囲デッキ = 1
				効果条件カテゴリ = 狂逝の機械
				CALL 効果条件レベル_ADV(8, "以上")
				効果条件召喚可 = 1
				CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
				IF RESULT == 1
					FOR カウンタ,0,現山札数(対面者)
						捕縛対象 = GETVAR(@"%対面者%_デッキ:カウンタ") ;0→カウンタ
						SIF 捕縛対象 == -1 ;念のため-1の場合は次へ
							CONTINUE
						CALLFORM CARD_{捕縛対象},"性別"
						SIF RESULT == 無性 || RESULT == 雄性
							CONTINUE
						CALL CARD_EROTICS(捕縛対象)
						SIF RESULT < 1 ;CSV持ち以外は除外
							CONTINUE
						捕縛候補:カウンタB = 捕縛対象 ;牝性を候補に格納
						カウンタB++ ;候補数加算
					NEXT
					SIF カウンタB < 1 ;カウンタが0以下=候補0
						RETURN
					捕縛対象 = 捕縛候補:(RAND:カウンタB) ;カウンタBまでの乱数で捕縛候補の中からランダムに捕縛対象を決定
					CALL CARD_EROTICS(捕縛対象) ;必ずCARD_EROTICSを挟む
					調教対象 = RESULT
					IF 調教対象 > 0 ;調教対象条件はあなたを想定しないなら>0で
						SELECTCASE RAND:4
							CASE 0
								PRINTFORML
								PRINTFORML 強大な機械兵を動かすための糧を得るべく、牝穴たちは加工され尽くされた肉体を犯され続けている、
								PRINTFORML 捕らえられている%CALLNAME:調教対象%も気づけばその１つとされていた。
								PRINTFORMW 機械城の施設の１つである密閉され媚薬が詰め込まれたカプセルの中で、%CALLNAME:調教対象%は凌辱され続けている……
							CASE 1
								PRINTFORML
								PRINTFORML 大型の狂逝の機械を動かすためのエネルギーを得るべく、%CALLNAME:調教対象%を含めた牝肉は犯され続けていた
								PRINTFORML 絶頂と発狂を繰り返し、精神が壊れそうになれば無理矢理に補強され正気を保たされ続ける。
								PRINTFORMW %CALLNAME:調教対象%は、終わる事のない性的蹂躙に絶頂と喘ぎ声を返し、狂逝の機械に捧げている……
							CASE 2
								PRINTFORML
								PRINTFORML %CALLNAME:調教対象%は大型の狂逝の機械を作動させるためのエネルギー源を生み出すために、
								PRINTFORML 四肢を切断され、機械城の施設の中で延々と犯されるための牝穴として組み込まれてしまっていた。
								PRINTFORMW %CALLNAME:調教対象%を含めた無数の牝穴たちの喘ぎ声が機械城に響き渡る……

							CASE 3
								PRINTFORML
								PRINTFORML 既に捕縛されていた牝の１つが機械兵として手元に写される
								PRINTFORML 手足を切断され、責め苦を与えられ続ける機械に頼らないと動くこともできない、そんな牝肉。
								PRINTFORMW %CALLNAME:調教対象%、機械に組み込まれた牝の腹部にその中が刻まれていた。
						ENDSELECT
						FOR カウンタ,0,4
							PRINTFORML 
							CALL MADORGASM_RAND_ROB_TXT(1,0)
							CALL MADORGASM_RAND_ROB_TXT(1,4)
							PRINTFORML
							CALL EROTIC_MOVE("全身凌辱",調教対象,MASTER,500)
						NEXT
						CALL MADORGASM_RAND_ROB_TXT(1,4);うるさい鳴き声
						PRINTFORML %CALLNAME:調教対象%は体中から体液を耐え流し、涙を溢れさせながら必死に救いを求めている。
						PRINTFORMW この狂逝の機械はいつでも動けるようだ、決闘の盤面に置いても効果を発揮するだろう
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,79892)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,魔罠行き)
	ENDIF

ENDIF





