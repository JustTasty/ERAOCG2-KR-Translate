@CARDCAN_39908(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39908)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
    효과範囲필드 = 1
	효과条件종족 = 기계족
	효과条件성별 = 牝性
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT <= 1
		RETURN 0
	CALL FULLRESET
    효과範囲필드 = 1
	효과条件カテゴリ = 광서의 기계
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_2(듀얼리스트,39908)
		RETURN 0
	SIF 발동済_3(듀얼리스트,39908)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
    CALL FULLRESET
    효과範囲묘지 = 1
    효과条件カテゴリ = 광서의 기계
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,39908)
		RETURN 0
	SIF 발동済_3(듀얼리스트,39908)
		RETURN 0
    SIF ゾーン != "필드"
	 	RETURN 0
	CALL FULLRESET
	효과条件종류 = 마함全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종족 = 기계족
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
    RETURN 1

ENDIF

@CARDEFFECT_39908(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 제외カードID
#DIM DYNAMIC 破壊カードID
#DIMS DYNAMIC 제외カード名
#DIM DYNAMIC 残り횟수
#DIM DYNAMIC 取込カードID
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39908)
		IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 광서의 기계
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
        CALL FULLRESET
		효과範囲필드 = 1
		효과条件성별 = 牝性
		효과条件종족 = 기계족
        CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",場所,"守備표시")
			ENDIF
		ENDIF

ELSEIF 종류 == 지속효과
	IF GETVAR(@"%듀얼리스트%_MZ_表:場所") == 守備표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻誘")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"一破")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"守戦")
	ENDIF

	IF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") > 0
		;汎数読み込み
		取込カードID = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
		;記録した素材の성별をチェック
		TRYCALLFORM CARD_{取込カードID}, "성별"
		;♀かふたなりなら続行
		選択カード = NO_TO_CHARANUM(取込カードID)
		IF 選択カード >= 1 && オプション_성별
			RESULT = TALENT:選択カード:성별
		ENDIF
		IF GETBIT(RESULT,0)
			;変化元IDに汎数を打ち込み
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",取込カードID,上書きモード)
			;フレーバー、캐릭터リスト読み込み
			CALL CARD_EROTICS(取込カードID)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORMW 인격을 덮어씌워진、%NAME:조교대상%는『과묵검객기인』으로서 필드에 내려섰다
				CALL EROTIC_MOVE("拷問処理",조교대상,-1,200)
			ENDIF
		ENDIF
		;使い終わった汎数を削除
		SIF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") >= 1000
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"汎数",0,上書きモード)
	ENDIF

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39908,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종족 = 기계족
			효과条件성별 = 牝性
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL EVADE_ATTACK(듀얼리스트)
				CALL FULLRESET
				효과추가종류 = 5
	    		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"표시변경")
			ENDIF
        ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39908,3)
    	IF RESULT == 0
			CALL FULLRESET
			효과条件カテゴリ = 광서의 기계
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
				RETURN 1
			ENDIF
        ENDIF
ENDIF







