@CARDCAN_39903(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39903)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,39903)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 광서의 기계
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;戦闘場所(듀얼리스트)　：これから戦闘を行う자신のモンスターの位置
	;戦闘場所(듀얼리스트,1)：これから戦闘を行う상대のモンスターの位置、
	;この関数（プログラム）は「,1」を付けることで상대と자신を分ける。
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	IF 戦闘場所(듀얼리스트,1) != 5
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
		SIF RESULT != 牝性
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_39903(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 戦闘カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39903,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 광서의 기계
		효과条件종류 = モン全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39903)
	IF RESULT == 0
		;ここで何をしているか：
		;戦闘場所(듀얼리스트,1)＝これから戦闘行為を行う상대のカードの位置を指し、
		;상대モンスターに攻撃した場合は0～4が、ダイレクトなら5が返される。
		IF 戦闘場所(듀얼리스트,1) != 5
			CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",戦闘場所(듀얼리스트,1),1)
			IF RESULT != -1
				조교대상 = RESULT
			ENDIF
		ELSE
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != -1
				조교대상 = RESULT
			ENDIF
		ENDIF
		
		;조교대상が-1だったら怒られるからこうするぜー
		IF 조교대상 != -1
			;%←これが青くなってなかったら듀얼리스트（文字列）は反映されてないぜー
			;とりあえず他の処理と同じく GETVAR(@"%듀얼리스트%") ってやっとくぜー
			IF GETVAR(@"%듀얼리스트%_MZ_攻:場所") >= GETVAR(@"%対面者%_MZ_攻:戦闘場所(듀얼리스트,1)") && 조교대상 > 0
				IF MARK:조교대상:쾌락각인 + MARK:조교대상:고통각인 + MARK:조교대상:굴복각인 + MARK:조교대상:반발각인 < 8
					SELECTCASE RAND:3
						CASE 0
						PRINTFORMW 機械模魔羅兵に捕らえられた%CALLNAME:조교대상%は鍛えられた男性の腕以上に太く硬い作りものちんぽを押し付けられてしまう。
						PRINTFORMW 抵抗しようとする%CALLNAME:조교대상%を一切無視しそのふたなりちんぽが%CALLNAME:조교대상%の穴をこじ開けながら根元までねじこんだ。
						PRINTFORMW 一切の抵抗も出来るはずもなく、その刺激を受けたいがために愛液を溢れさせ、メスとしての패배を示すために潮を吹き続ける。
						CASE 1
						PRINTFORML %CALLNAME:조교대상%は倒されてしまったからか、倒れながらも白目を向いてがくがくと震え無防備にもガニ股で居続けていながら、
						PRINTFORML 喉元から漏れている「……あ”……っはっっ”❤ぁ…❤」という声には、機械城に漂う淫らな毒霧を吸ってしまった影響で艶交じりのものになっていた。
						PRINTFORMW 淫らに、無防備に、패배して後の牝として使いやすいモノとなっている証のように……。
						CASE 2
						PRINTFORML 機械城の蒸気を吸い続け、発情し膝を揺らしながらも抵抗を続けていた%CALLNAME:조교대상%は
						PRINTFORML 「っ”❤ん”っっ……ぅぅ”…❤」という声を漏らし、武器も取り落とし空いた両手は
						PRINTFORML 自制することも出来ず、自身の肉体を弄び%CALLNAME:조교대상%の意思と無関係に쾌락を貪ってしまい、無防備となってしまう……
					ENDSELECT
						SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,0)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,1)
						CALL MADORGASM_RAND_ROB_TXT(1,1)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,0)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,1)
						CALL MADORGASM_RAND_ROB_TXT(1,3)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,0)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,1)
						CALL MADORGASM_RAND_ROB_TXT(1,5)
					ENDSELECT
						RESETCOLOR
						CALL EROTIC_MOVE("全身凌辱",조교대상,-1,50)

				ELSEIF MARK:조교대상:쾌락각인 + MARK:조교대상:고통각인 + MARK:조교대상:굴복각인 + MARK:조교대상:반발각인 >= 8
					PRINTFORMW %CALLNAME:조교대상%は機械模魔羅兵として組み込まれた雌の作りものちんぽを見た時から抵抗が弱弱しかった
					CALL EROTIC_MOVE("媚毒汚染",조교대상,50)
					SELECTCASE RAND:3
						CASE 0
						PRINTFORMW その광서의 기계たちの環境が、%CALLNAME:조교대상%の過去の경험が、その肉体が%CALLNAME:조교대상%を動かした。
						PRINTFORMW 衣服を脱ぎ散らし、膝をつき正座をし手を地面に沿わせ、頭を地面に擦りつけ、
						PRINTFORMW 頭の中でずっと、おちんぽ様に犯していただき性の捌け口として扱われる妄想ばかりしていた事を語りながら自ら牝穴を差し出した……
						CASE 1
						PRINTFORMW 弱弱しい抵抗をもやめ、急に衣服を脱ぎ散らし%CALLNAME:조교대상%は一糸まとわぬ姿で土下座をしながら、
						PRINTFORMW この体がおちんぽ様に心から굴복された身であること、광서의 기계の場の中で자신は犯される事を望んでいると。
						PRINTFORMW 漂う淫らな匂いがこの肉体が喘ぎ、時には物陰で자위をし続けそれでもなお満足しない事を語りながら自ら牝穴を広げ삽입懇願してしまう……
						CASE 2
						PRINTFORMW %CALLNAME:조교대상%は今までの경험から、今자신が何をするべきかを模索した。
						PRINTFORMW 必死に逃げのびるためか、肉体が求めるモノを得るためか、本能のままにかはわからないが
						PRINTFORMW 気づけば自ら衣服を捨て、패배宣言をしながら、愛液が溢れ濡れている牝穴を機械模魔羅兵に向けた。
					ENDSELECT
						SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,2)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,3)
						CALL MADORGASM_RAND_FALL_TXT(1,0)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,2)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,3)
						CALL MADORGASM_RAND_FALL_TXT(1,2)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,2)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,3)
						CALL MADORGASM_RAND_FALL_TXT(1,3)
					ENDSELECT
						RESETCOLOR
						CALL EROTIC_MOVE("全身凌辱",조교대상,-1,50)

				ENDIF
			;ELSEIFとは？IF条件というのは、複数설정できるが、IFと付けるのは最初の一つだけで、
			;そのほかは"ELSEIF"/または"ELSE"を使う。それぞれELSEIF「その他の条件」かELSE「その他」となる。
			;ELSEIF MARK:조교대상:쾌락각인 + MARK:조교대상:고통각인 + MARK:조교대상:굴복각인 + MARK:조교대상:반발각인 >= 3
			;↑の条件설정でも問題無いが、今回の場合は……↓の「ELSE」…つまり最初に설정したIFの条件以外、でOK
				ELSE
				IF MARK:조교대상:쾌락각인 + MARK:조교대상:고통각인 + MARK:조교대상:굴복각인 + MARK:조교대상:반발각인 < 8
					SELECTCASE RAND:3
						CASE 0
						PRINTFORML 返り討ちにあった機械模魔羅兵として組み込まれた手足の無い無様な雌を見ながら、%CALLNAME:조교대상%の体は、
						PRINTFORMW 機械城に充満する淫らな毒を吸い過ぎたからか勝手に자위を始めてしまう。
						PRINTFORMW %CALLNAME:조교대상%の体は、意思に反して쾌락を貪り始める……
						CASE 1
						PRINTFORMW 義肢が壊された機械兵は元の手足がないままたうち回る模魔羅兵を見ながら、
						PRINTFORMW %CALLNAME:조교대상%の肉体は機械城に充満する淫らな毒に耐えられず、
						PRINTFORMW 発情しっぱなしの愛液まみれの牝穴を自ら弄り始めてしまう……
						CASE 2
						PRINTFORML %CALLNAME:조교대상%の肉体が勝手に자위を初めてしまう。
						PRINTFORML 肉体に積み重なった淫らな毒素によって発情した体をもはや抑える事もできない%CALLNAME:조교대상%は。
						PRINTFORMW 過敏にもさせられている要所を自ら弄る手を抑える事もできない……
					ENDSELECT

					SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,4)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,5)
						CALL MADORGASM_RAND_FALL_TXT(1,0)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,4)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,5)
						CALL MADORGASM_RAND_FALL_TXT(1,1)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,4)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,5)
						CALL MADORGASM_RAND_FALL_TXT(1,4)
					ENDSELECT
					RESETCOLOR
					CALL EROTIC_MOVE("全身凌辱",조교대상,-1,50)

				ELSEIF MARK:조교대상:쾌락각인 + MARK:조교대상:고통각인 + MARK:조교대상:굴복각인 + MARK:조교대상:반발각인 >= 8
					SELECTCASE RAND:3
						CASE 0
						PRINTFORML 返り討ちにした機械模魔羅兵に取り付けられている偽物ちんぽを見ながら、%CALLNAME:조교대상%は자위を始めてしまう。
						PRINTFORMW 幾度も%CALLNAME:MASTER%に조교されてしまった結果肉体が今では쾌락を貪る牝穴とさせられていた、
						PRINTFORMW その証拠に%CALLNAME:조교대상%は躾けられた牝穴をほじくりながら절정を繰り返す………
						CASE 1
						PRINTFORMW 義肢が壊された機械兵の手足を失い淫具によって責められている無様な姿に、%CALLNAME:조교대상%は자신を投影してしまう。
						PRINTFORMW 『同じように肉体を弄られてしまったら』『捕らえらえ、そのまま犯されてしまっていたら』
						PRINTFORMW そうした妄想をしながら、%CALLNAME:조교대상%は자위をし始めていた……
						CASE 2
						PRINTFORML %CALLNAME:조교대상%の肉体が勝手に자위を初めてしまう。
						PRINTFORML 肉体に積み重なった淫らな毒素によって発情した体をもはや抑える事もできない%CALLNAME:조교대상%は。
						PRINTFORMW %CALLNAME:MASTER%にオナホのように使われる자신を妄想しながら手を動かし続ける……
					ENDSELECT

					SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,6)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,7)
						CALL MADORGASM_RAND_FALL_TXT(1,0)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,6)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,7)
						CALL MADORGASM_RAND_FALL_TXT(1,4)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,6)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,7)
						CALL MADORGASM_RAND_FALL_TXT(1,5)
					ENDSELECT
					RESETCOLOR
					CALL EROTIC_MOVE("全身凌辱",조교대상,-1,50)
