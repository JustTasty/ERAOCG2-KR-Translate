@CARDCAN_39903(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 調教対象

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,39903)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,39903)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 狂逝の機械
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃時誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	;戦闘場所(決闘者)　：これから戦闘を行う自分のモンスターの位置
	;戦闘場所(決闘者,1)：これから戦闘を行う相手のモンスターの位置、
	;この関数（プログラム）は「,1」を付けることで相手と自分を分ける。
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	IF 戦闘場所(決闘者,1) != 5
		TRYCALLFORM CARD_{戦闘カードID(決闘者,1)}("性別")
		SIF RESULT != 牝性
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_39903(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 戦闘カードID

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,39903,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 狂逝の機械
		効果条件種類 = モン全般
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,39903)
	IF RESULT == 0
		;ここで何をしているか：
		;戦闘場所(決闘者,1)＝これから戦闘行為を行う相手のカードの位置を指し、
		;相手モンスターに攻撃した場合は0～4が、ダイレクトなら5が返される。
		IF 戦闘場所(決闘者,1) != 5
			CALL CARD_EROTICS_FIELD(決闘者,"戦場",戦闘場所(決闘者,1),1)
			IF RESULT != -1
				調教対象 = RESULT
			ENDIF
		ELSE
			CALL CARD_EROTICS(相手プレイヤー,決闘者)
			IF RESULT != -1
				調教対象 = RESULT
			ENDIF
		ENDIF
		
		;調教対象が-1だったら怒られるからこうするぜー
		IF 調教対象 != -1
			;%←これが青くなってなかったら決闘者（文字列）は反映されてないぜー
			;とりあえず他の処理と同じく GETVAR(@"%決闘者%") ってやっとくぜー
			IF GETVAR(@"%決闘者%_MZ_攻:場所") >= GETVAR(@"%対面者%_MZ_攻:戦闘場所(決闘者,1)") && 調教対象 > 0
				IF MARK:調教対象:快楽刻印 + MARK:調教対象:苦痛刻印 + MARK:調教対象:屈服刻印 + MARK:調教対象:反発刻印 < 8
					SELECTCASE RAND:3
						CASE 0
						PRINTFORMW 機械模魔羅兵に捕らえられた%CALLNAME:調教対象%は鍛えられた男性の腕以上に太く硬い作りものちんぽを押し付けられてしまう。
						PRINTFORMW 抵抗しようとする%CALLNAME:調教対象%を一切無視しそのふたなりちんぽが%CALLNAME:調教対象%の穴をこじ開けながら根元までねじこんだ。
						PRINTFORMW 一切の抵抗も出来るはずもなく、その刺激を受けたいがために愛液を溢れさせ、メスとしての敗北を示すために潮を吹き続ける。
						CASE 1
						PRINTFORML %CALLNAME:調教対象%は倒されてしまったからか、倒れながらも白目を向いてがくがくと震え無防備にもガニ股で居続けていながら、
						PRINTFORML 喉元から漏れている「……あ”……っはっっ”❤ぁ…❤」という声には、機械城に漂う淫らな毒霧を吸ってしまった影響で艶交じりのものになっていた。
						PRINTFORMW 淫らに、無防備に、敗北して後の牝として使いやすいモノとなっている証のように……。
						CASE 2
						PRINTFORML 機械城の蒸気を吸い続け、発情し膝を揺らしながらも抵抗を続けていた%CALLNAME:調教対象%は
						PRINTFORML 「っ”❤ん”っっ……ぅぅ”…❤」という声を漏らし、武器も取り落とし空いた両手は
						PRINTFORML 自制することも出来ず、自身の肉体を弄び%CALLNAME:調教対象%の意思と無関係に快楽を貪ってしまい、無防備となってしまう……
					ENDSELECT
						SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,0)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,1)
						CALL MADORGASM_RAND_ROB_TXT(1,1)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,0)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,1)
						CALL MADORGASM_RAND_ROB_TXT(1,3)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,0)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,1)
						CALL MADORGASM_RAND_ROB_TXT(1,5)
					ENDSELECT
						RESETCOLOR
						CALL EROTIC_MOVE("全身凌辱",調教対象,-1,50)

				ELSEIF MARK:調教対象:快楽刻印 + MARK:調教対象:苦痛刻印 + MARK:調教対象:屈服刻印 + MARK:調教対象:反発刻印 >= 8
					PRINTFORMW %CALLNAME:調教対象%は機械模魔羅兵として組み込まれた雌の作りものちんぽを見た時から抵抗が弱弱しかった
					CALL EROTIC_MOVE("媚毒汚染",調教対象,50)
					SELECTCASE RAND:3
						CASE 0
						PRINTFORMW その狂逝の機械たちの環境が、%CALLNAME:調教対象%の過去の経験が、その肉体が%CALLNAME:調教対象%を動かした。
						PRINTFORMW 衣服を脱ぎ散らし、膝をつき正座をし手を地面に沿わせ、頭を地面に擦りつけ、
						PRINTFORMW 頭の中でずっと、おちんぽ様に犯していただき性の捌け口として扱われる妄想ばかりしていた事を語りながら自ら牝穴を差し出した……
						CASE 1
						PRINTFORMW 弱弱しい抵抗をもやめ、急に衣服を脱ぎ散らし%CALLNAME:調教対象%は一糸まとわぬ姿で土下座をしながら、
						PRINTFORMW この体がおちんぽ様に心から屈服された身であること、狂逝の機械の場の中で自分は犯される事を望んでいると。
						PRINTFORMW 漂う淫らな匂いがこの肉体が喘ぎ、時には物陰で自慰をし続けそれでもなお満足しない事を語りながら自ら牝穴を広げ挿入懇願してしまう……
						CASE 2
						PRINTFORMW %CALLNAME:調教対象%は今までの経験から、今自分が何をするべきかを模索した。
						PRINTFORMW 必死に逃げのびるためか、肉体が求めるモノを得るためか、本能のままにかはわからないが
						PRINTFORMW 気づけば自ら衣服を捨て、敗北宣言をしながら、愛液が溢れ濡れている牝穴を機械模魔羅兵に向けた。
					ENDSELECT
						SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,2)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,3)
						CALL MADORGASM_RAND_FALL_TXT(1,0)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,2)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,3)
						CALL MADORGASM_RAND_FALL_TXT(1,2)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,2)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,3)
						CALL MADORGASM_RAND_FALL_TXT(1,3)
					ENDSELECT
						RESETCOLOR
						CALL EROTIC_MOVE("全身凌辱",調教対象,-1,50)

				ENDIF
			;ELSEIFとは？IF条件というのは、複数設定できるが、IFと付けるのは最初の一つだけで、
			;そのほかは"ELSEIF"/または"ELSE"を使う。それぞれELSEIF「その他の条件」かELSE「その他」となる。
			;ELSEIF MARK:調教対象:快楽刻印 + MARK:調教対象:苦痛刻印 + MARK:調教対象:屈服刻印 + MARK:調教対象:反発刻印 >= 3
			;↑の条件設定でも問題無いが、今回の場合は……↓の「ELSE」…つまり最初に設定したIFの条件以外、でOK
				ELSE
				IF MARK:調教対象:快楽刻印 + MARK:調教対象:苦痛刻印 + MARK:調教対象:屈服刻印 + MARK:調教対象:反発刻印 < 8
					SELECTCASE RAND:3
						CASE 0
						PRINTFORML 返り討ちにあった機械模魔羅兵として組み込まれた手足の無い無様な雌を見ながら、%CALLNAME:調教対象%の体は、
						PRINTFORMW 機械城に充満する淫らな毒を吸い過ぎたからか勝手に自慰を始めてしまう。
						PRINTFORMW %CALLNAME:調教対象%の体は、意思に反して快楽を貪り始める……
						CASE 1
						PRINTFORMW 義肢が壊された機械兵は元の手足がないままたうち回る模魔羅兵を見ながら、
						PRINTFORMW %CALLNAME:調教対象%の肉体は機械城に充満する淫らな毒に耐えられず、
						PRINTFORMW 発情しっぱなしの愛液まみれの牝穴を自ら弄り始めてしまう……
						CASE 2
						PRINTFORML %CALLNAME:調教対象%の肉体が勝手に自慰を初めてしまう。
						PRINTFORML 肉体に積み重なった淫らな毒素によって発情した体をもはや抑える事もできない%CALLNAME:調教対象%は。
						PRINTFORMW 過敏にもさせられている要所を自ら弄る手を抑える事もできない……
					ENDSELECT

					SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,4)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,5)
						CALL MADORGASM_RAND_FALL_TXT(1,0)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,4)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,5)
						CALL MADORGASM_RAND_FALL_TXT(1,1)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,4)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,5)
						CALL MADORGASM_RAND_FALL_TXT(1,4)
					ENDSELECT
					RESETCOLOR
					CALL EROTIC_MOVE("全身凌辱",調教対象,-1,50)

				ELSEIF MARK:調教対象:快楽刻印 + MARK:調教対象:苦痛刻印 + MARK:調教対象:屈服刻印 + MARK:調教対象:反発刻印 >= 8
					SELECTCASE RAND:3
						CASE 0
						PRINTFORML 返り討ちにした機械模魔羅兵に取り付けられている偽物ちんぽを見ながら、%CALLNAME:調教対象%は自慰を始めてしまう。
						PRINTFORMW 幾度も%CALLNAME:MASTER%に調教されてしまった結果肉体が今では快楽を貪る牝穴とさせられていた、
						PRINTFORMW その証拠に%CALLNAME:調教対象%は躾けられた牝穴をほじくりながら絶頂を繰り返す………
						CASE 1
						PRINTFORMW 義肢が壊された機械兵の手足を失い淫具によって責められている無様な姿に、%CALLNAME:調教対象%は自分を投影してしまう。
						PRINTFORMW 『同じように肉体を弄られてしまったら』『捕らえらえ、そのまま犯されてしまっていたら』
						PRINTFORMW そうした妄想をしながら、%CALLNAME:調教対象%は自慰をし始めていた……
						CASE 2
						PRINTFORML %CALLNAME:調教対象%の肉体が勝手に自慰を初めてしまう。
						PRINTFORML 肉体に積み重なった淫らな毒素によって発情した体をもはや抑える事もできない%CALLNAME:調教対象%は。
						PRINTFORMW %CALLNAME:MASTER%にオナホのように使われる自分を妄想しながら手を動かし続ける……
					ENDSELECT

					SETCOLOR C_PINK 
					SELECTCASE RAND:3
						CASE 0
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,6)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,7)
						CALL MADORGASM_RAND_FALL_TXT(1,0)
						CASE 1
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,6)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,7)
						CALL MADORGASM_RAND_FALL_TXT(1,4)
						CASE 2
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,6)
						CALL MADORGASM_FAKEPENISPAWN_TXT(1,7)
						CALL MADORGASM_RAND_FALL_TXT(1,5)
					ENDSELECT
					RESETCOLOR
					CALL EROTIC_MOVE("全身凌辱",調教対象,-1,50)
				ENDIF
			ENDIF
			CALL EROTIC_MOVE("媚毒汚染",調教対象,300)
		ENDIF
		;これだと発情が１ターンで終わるぜ！　永遠に発情して欲しかったら一番右の数字は２ね！
		CALL STATCHANGE_EFFECT(対面者,"戦場",戦闘場所(決闘者,1),"発情",2)

		;その後、フィールドの「狂逝の機械」カード１枚を選び、そのカードに薬物カウンターを１つ置く。
		CALL FULLRESET
		PRINTFORML 「狂逝の機械」に、媚薬カウンターを乗せれます、対象を選んでください。
		効果範囲戦場 = 1
		効果条件カテゴリ = 狂逝の機械
		CALL CARD_GRANT_ADV(決闘者,ゾーン,場所,"薬Ｃ",1)

		;調教対象が-1だったら怒られるからおわりね！
		SIF 調教対象 < 0
			RETURN 0
		;こっちも同じようにやっとくぜー
		IF GETVAR(@"%決闘者%_MZ_攻:場所") >= GETVAR(@"%対面者%_MZ_攻:戦闘場所(決闘者,1)")

		ELSEIF MARK:調教対象:快楽刻印 + MARK:調教対象:苦痛刻印 + MARK:調教対象:屈服刻印 + MARK:調教対象:反発刻印 >= 5
