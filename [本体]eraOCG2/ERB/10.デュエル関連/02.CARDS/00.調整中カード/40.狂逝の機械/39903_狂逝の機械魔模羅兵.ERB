@CARDCAN_39903(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39903)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,39903)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 광서의 기계
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;戦闘場所(듀얼리스트)　：これから戦闘を行う자신의 몬스터의 位置
	;戦闘場所(듀얼리스트,1)：これから戦闘を行う상대의 몬스터의 位置、
	;この関数（プログラム）は「,1」を付けることで상대と자신を分ける。
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	IF 戦闘場所(듀얼리스트,1) != 5
		TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
		SIF RESULT != 牝性
			RETURN 0
	ENDIF
	RETURN 1
ENDIF

