@CARDSUMMON_39909(決闘者,召喚カード,EX参照)
#DIMS DYNAMIC 決闘者
#DIM DYNAMIC 召喚カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要素材数 = 2


IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 狂逝の機械
ELSEIF EX参照 >= 10
	素材条件種族 = 機械族
    素材条件性別 = 牝性
ENDIF

IF EX参照 == 1
	CALL FUSCAN(決闘者,召喚カード,39909) 
	RETURN RESULT
ENDIF


@CARDCAN_39909(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 調教対象
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カウンタ

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,39909)
SIF RESULT == 1
	RETURN 0

IF 種類 == EXデッキ起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
    効果範囲戦場 = 1
	効果条件種族 = 機械族
	効果条件性別 = 牝性
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT <= 1
		RETURN 0
	CALL FULLRESET
    効果範囲戦場 = 1
	効果条件カテゴリ = 狂逝の機械
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == EX召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,39909)
		RETURN 0
	CALL FULLRESET
	効果範囲相手デッキ = 1
	効果範囲相手EXデッキ = 1
    効果範囲相手墓地 = 1
    効果範囲相手手札 = 1
	効果条件特不無視 = 1
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(対面者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動
	SIF 発動済_2(決闘者,39909)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	FOR カウンタ,1,13
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件種類 = モン全般
		効果条件種族 = 機械族
		効果条件性別 = 牝性
		効果条件レベル = カウンタ
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件レベル = カウンタ + 2
	    効果条件カテゴリ = 狂逝の機械
		効果条件種類 = モン全般
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT == 1
			条件達成 = 1
	NEXT
	SIF 条件達成 != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 墓地起動
	SIF 発動済_3(決闘者,39909)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲相手墓地 = 1
	効果条件性別 = 牝性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0

	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 狂逝の機械
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39909(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 除外カードID
#DIM DYNAMIC 破壊カードID
#DIMS DYNAMIC 除外カード名
#DIM DYNAMIC 残り횟수
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 攻撃力判定
#DIM DYNAMIC 攻撃誘導者
#DIM DYNAMIC 条件達成,13
#DIM DYNAMIC 選択カードレベル

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 種類 == EXデッキ起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,39909)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = 狂逝の機械
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件性別 = 牝性
			効果条件種族 = 機械族
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_EX_SUMMON(決闘者,"EXデッキ",場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 種類 == EX召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,39909,1)
	IF RESULT == 0
		CALL FULLRESET
	    効果範囲相手デッキ = 1
        効果範囲相手EXデッキ = 1
        効果範囲相手墓地 = 1
        効果範囲相手手札 = 1
	    効果条件種類 = モン全般
        効果条件特不無視 = 1
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"",0,1)
		IF RESULT == 1
            CALL FULLRESET
		    効果条件カテゴリ = 狂逝の機械
            効果条件種類 = モン全般
		    効果範囲手札 = 1
		    CALL CARD_SP_SUMMON_ADV(決闘者,場所)
			FOR カウンタ,0,5
			IF 攻撃力判定 < GETVAR(@"%対面者%_MZ_攻:{カウンタ}")
				攻撃力判定 = GETVAR(@"%対面者%_MZ_攻:{カウンタ}")
			ENDIF
			NEXT
			CALL FULLRESET
			効果条件以攻撃力 = 攻撃力判定
			CALL CARD_CHOOSE_BASIC(対面者,"戦場",ゾーン,場所)
			攻撃誘導者 = RESULT
			CALL SET_FIELD_INFO(対面者,"戦場",攻撃誘導者,"攻誘",1,2)
		ENDIF
	ENDIF

ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,39909,2)
	IF RESULT == 0
		FOR カウンタ,1,13
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件種族 = 機械族
			効果条件性別 = 牝性
			効果条件レベル = カウンタ
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			SIF RESULT != 1
				CONTINUE
			CALL FULLRESET
			効果範囲デッキ = 1
			効果条件レベル = カウンタ + 2
		    効果条件カテゴリ = 狂逝の機械
            効果条件種類 = モン全般
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			SIF RESULT == 1
				条件達成:カウンタ = 1
		NEXT

		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件レベル:0 = 0
		FOR カウンタ,1,13
			効果条件レベル:カウンタ = カウンタ
		NEXT
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		IF RESULT != 9999
			選択カードレベル = GETVAR(@"%決闘者%_MZ_星:RESULT")
			CALL CARD_DISPOSE(決闘者,"戦場",RESULT)

			CALL FULLRESET
			効果範囲デッキ = 1
			効果条件レベル = 選択カードレベル + 2
		    効果条件カテゴリ = 狂逝の機械
            効果条件種類 = モン全般
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,39909,5)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲相手墓地 = 1
		効果条件性別 = 牝性
		CALL CARD_ADD_GY_BASIC(決闘者, "墓地", ゾーン, 場所)
		IF RESULT != 0
			効果条件召喚可 = 1
			効果条件カテゴリ = 狂逝の機械
    		効果範囲デッキ = 1
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF







