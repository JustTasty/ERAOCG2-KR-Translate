@CARDCAN_39906(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39906)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,39906)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件성별 = 牝性	
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,39906)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
    SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
    CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
    효과条件종류 = モン全般
	효과条件カテゴリ = 광서의 기계
	효과条件소환可 = 1
    CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
    SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
	RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
	RETURN 0
    CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件성별 = 성별在
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_39906(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 捕縛대상
#DIM DYNAMIC 捕縛候補,紙束最大値
#DIM DYNAMIC カウンタB

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39906,1)
	IF RESULT == 0
		CALL FULLRESET
        효과範囲필드 = 1
        효과範囲상대필드 = 1
        효과条件성별 = 牝性
        CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1 
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "묘지", 場所)
			;範囲지정は不要
			IF RESULT == 1 ;一応「소환できた」を後続条件に
				FOR カウンタ,0,現山札数(対面者)
					捕縛대상 = GETVAR(@"%対面者%_덱:カウンタ") ;0→カウンタ
					SIF 捕縛대상 == -1 ;念のため-1の場合は次へ
						CONTINUE
					CALLFORM CARD_{捕縛대상},"성별"
					SIF RESULT == 無性 || RESULT == 雄性
						CONTINUE
					CALL CARD_EROTICS(捕縛대상)
					SIF RESULT < 1 ;CSV持ち以外は제외
						CONTINUE
					捕縛候補:カウンタB = 捕縛대상 ;牝性を候補に格納
					カウンタB++ ;候補数加算
				NEXT
				SIF カウンタB < 1 ;カウンタが0以下=候補0
					RETURN
				捕縛대상 = 捕縛候補:(RAND:カウンタB) ;カウンタBまでの乱数で捕縛候補の中からランダムに捕縛대상を決定
				CALL CARD_EROTICS(捕縛대상) ;必ずCARD_EROTICSを挟む
				조교대상 = RESULT
				IF 조교대상 > 0 ;조교대상条件はあなたを想定しないなら>0で
					SELECTCASE RAND:3
						CASE 0
							PRINTFORML
