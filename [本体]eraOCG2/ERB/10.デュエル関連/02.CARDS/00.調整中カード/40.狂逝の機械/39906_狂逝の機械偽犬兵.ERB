@CARDCAN_39906(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 調教対象

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,39906)
SIF RESULT == 1
	RETURN 0

IF 種類 == 効果後誘発
	SIF 発動済_1(決闘者,39906)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件性別 = 牝性	
	CALL CARD_CHECK_FIN_DATA(決闘者,"特殊召喚",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動
	SIF 発動済_2(決闘者,39906)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
    SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
    CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
    効果条件種類 = モン全般
	効果条件カテゴリ = 狂逝の機械
	効果条件召喚可 = 1
    CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
    SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃後強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
	RETURN 0
	SIF 戦闘場所(決闘者) != 場所
	RETURN 0
    CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件表示 = 表側表示
	効果条件性別 = 性別在
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_39906(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 調教対象
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 捕縛対象
#DIM DYNAMIC 捕縛候補,紙束最大値
#DIM DYNAMIC カウンタB

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,39906,1)
	IF RESULT == 0
		CALL FULLRESET
        効果範囲戦場 = 1
        効果範囲相手戦場 = 1
        効果条件性別 = 牝性
        CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1 
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者, "墓地", 場所)
			;範囲指定は不要
			IF RESULT == 1 ;一応「召喚できた」を後続条件に
				FOR カウンタ,0,現山札数(対面者)
					捕縛対象 = GETVAR(@"%対面者%_デッキ:カウンタ") ;0→カウンタ
					SIF 捕縛対象 == -1 ;念のため-1の場合は次へ
						CONTINUE
					CALLFORM CARD_{捕縛対象},"性別"
					SIF RESULT == 無性 || RESULT == 雄性
						CONTINUE
					CALL CARD_EROTICS(捕縛対象)
					SIF RESULT < 1 ;CSV持ち以外は除外
						CONTINUE
					捕縛候補:カウンタB = 捕縛対象 ;牝性を候補に格納
					カウンタB++ ;候補数加算
				NEXT
				SIF カウンタB < 1 ;カウンタが0以下=候補0
					RETURN
				捕縛対象 = 捕縛候補:(RAND:カウンタB) ;カウンタBまでの乱数で捕縛候補の中からランダムに捕縛対象を決定
				CALL CARD_EROTICS(捕縛対象) ;必ずCARD_EROTICSを挟む
