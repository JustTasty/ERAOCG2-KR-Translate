@CARDCAN_79891(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79891)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79891)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 광서의 기계
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF 발동済_2(듀얼리스트,79891)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79891(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択結果
#DIM DYNAMIC 捕縛대상
#DIM DYNAMIC 捕縛候補,紙束最大値
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 절정횟수
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79891,1)
	IF RESULT == 0
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 광서의 기계
		효과条件複数 = 2
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
			IF RESULT == 1
				FOR カウンタ,0,現山札数(対面者)
					捕縛대상 = GETVAR(@"%対面者%_덱:カウンタ") ;0→カウンタ
					SIF 捕縛대상 == -1 ;念のため-1の場合は次へ
						CONTINUE
					CALLFORM CARD_{捕縛대상},"성별"
					SIF RESULT == 無性 || RESULT == 雄性
						CONTINUE
						CALL CARD_EROTICS(捕縛대상)
					SIF RESULT < 1 ;CSV持ち以外は제외
						CONTINUE
					捕縛候補:カウンタB = 捕縛대상 ;牝性を候補に格納
					カウンタB ++ ;候補数加算
				NEXT
				SIF カウンタB < 1 ;カウンタが0以下=候補0
					RETURN
				捕縛대상 = 捕縛候補:(RAND:カウンタB) ;カウンタBまでの乱数で捕縛候補の中からランダムに捕縛대상を決定
				CALL CARD_EROTICS(捕縛대상) ;必ずCARD_EROTICSを挟む
				조교대상 = RESULT
				IF 조교대상 > 0 ;조교대상条件はあなたを想定しないなら>0で
					SELECTCASE RAND:4
						CASE 0
							PRINTFORML
							PRINTFORML 強大な機械兵を動かすための糧を得るべく、牝穴たちは加工され尽くされた肉体を犯され続けている、
							PRINTFORML 捕らえられている%CALLNAME:조교대상%も気づけばその１つとされていた。
							PRINTFORMW 機械城の施設の１つである密閉され媚薬が詰め込まれたカプセルの中で、%CALLNAME:조교대상%は凌辱され続けている……
						CASE 1
							PRINTFORML
							PRINTFORML 大型の광서의 기계を動かすためのエネルギーを得るべく、%CALLNAME:조교대상%を含めた牝肉は犯され続けていた
							PRINTFORML 절정と発狂を繰り返し、精神が壊れそうになれば無理矢理に補強され正気を保たされ続ける。
							PRINTFORMW %CALLNAME:조교대상%は、終わる事のない性的蹂躙に절정と喘ぎ声を返し、광서의 기계に捧げている……
						CASE 2
							PRINTFORML
							PRINTFORML %CALLNAME:조교대상%は大型の광서의 기계を作動させるためのエネルギー源を生み出すために、
							PRINTFORML 四肢を切断され、機械城の施設の中で延々と犯されるための牝穴として組み込まれてしまっていた。
							PRINTFORMW %CALLNAME:조교대상%を含めた無数の牝穴たちの喘ぎ声が機械城に響き渡る……

						CASE 3
							PRINTFORML
							PRINTFORML 既に捕縛されていた牝の１つが機械兵として手元に写される
							PRINTFORML 手足を切断され、責め苦を与えられ続ける機械に頼らないと動くこともできない、そんな牝肉。
							PRINTFORMW %CALLNAME:조교대상%、機械に組み込まれた牝の腹部にその中が刻まれていた。
					ENDSELECT
					FOR カウンタ,0,4
						PRINTFORML 
						CALL MADORGASM_RAND_ROB_TXT(1,0)
						CALL MADORGASM_RAND_ROB_TXT(1,4)
						PRINTFORML
						CALL EROTIC_MOVE("全身凌辱",조교대상,MASTER,500)
					NEXT
					CALL MADORGASM_RAND_ROB_TXT(1,4);うるさい鳴き声
					PRINTFORML %CALLNAME:조교대상%は体中から体液を耐え流し、涙を溢れさせながら必死に救いを求めている。
					PRINTFORMW その代わりに손패に加えた광서의 기계は動くための糧を得ていつでも動けるようだ、듀얼の盤面に置いても효과を発揮するだろう
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79891,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		조교대상 = 戦闘場所(듀얼리스트,1)
		CALL SET_FIELD_INFO(対面者,"필드",조교대상,"一攻",- GETVAR(@"%対面者%_MZ_攻:조교대상") / 2)
		CALL EVADE_ATTACK(듀얼리스트)
		CALL CARD_EROTICS(조교대상)
		IF 조교대상 != -1
			PRINTFORML 광서의 기계に犯された%CALLNAME:조교대상%は身も心も蜜のようにトロトロにされた。
			CALL EROTIC_MOVE("全身凌辱",조교대상,-1,800)
		ENDIF
		CALL FULLRESET
		효과条件성별 = 성별在
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드全体",場所,"発情",2)
		CALL FULLRESET
        효과範囲필드 = 1
    	효과条件종류 = モン全般
		효과条件カテゴリ = 광서의 기계
        CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"発情",100)
	ENDIF
ENDIF




