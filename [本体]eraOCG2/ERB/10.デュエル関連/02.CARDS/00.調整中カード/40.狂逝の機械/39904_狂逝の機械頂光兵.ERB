CALL TEXT_DECORATION("ROGUE")


@CARDCAN_39904(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39904)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 묘지起動
	SIF 발동済_1(듀얼리스트,39904)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,39904,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
    효과範囲마함 = 1
	효과条件カテゴリ = 광서의 기계
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
    
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,39904)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 마함全般
	효과条件カテゴリ = 광서의 기계
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_3(듀얼리스트,39904)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
    효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_39904(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 減少値




IF 종류 == 손패起動 || 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39904,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39904,2)
	IF RESULT == 0
		CALL FULLRESET
        효과範囲덱 = 1
		효과条件カテゴリ = 광서의 기계
        효과条件종류 = 마함全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39904,3)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件표시 = 表側표시
        減少値 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"永攻DOWN",減少値)
		CALL CARD_EROTICS(RESULT:2)
			IF RESULT != -1
			조교대상 = RESULT
				SELECTCASE RAND:3
					CASE 0
					PRINTFORMW 機械頂光兵は右肩に搭載された強制절정させる光線を発射させるための狙撃砲を%CALLNAME:조교대상%に向けて撃つ。
					SETCOLOR C_PINK 
					PRINTFORMW 数コンマ程度の差異で、桃色の光線で撃ち抜かれた%CALLNAME:조교대상%はその場で急に愛液と潮を吹き出させ、
					PRINTFORMW 「ぇ、……ぁ”、え”♡ぃ”っっっぎゅゅっ”♡ぁ”♡なに”こりぇ”ぇ”ぇ”♡♡♡」
					PRINTFORMW 遅れるように愛液を溢れさせるように喘ぎ声をまき散らしながら절정した……
					RESETCOLOR
					CASE 1
					PRINTFORMW 機械頂光兵が撃つ절정光線に貫かれた%CALLNAME:조교대상%の体はその場で愛液と潮を吹き出して절정する。
					SETCOLOR C_PINK
					PRINTFORMW 肉体に何が起きたかもわかっていない%CALLNAME:조교대상%は不意の事態に対応する子も出来ず、
					PRINTFORMW ただその場で肉体を『びくっ❤びくっっ”❤』と跳ねあげながら절정し続けることしかできずにいる……
					RESETCOLOR
					CASE 2
					PRINTFORMW %CALLNAME:조교대상%は急に自身の肉体を貫いた桃色の光線を感じ取った、
					SETCOLOR C_PINK 
					PRINTFORMW それを自覚してしまいながら体がイきつづけている事を認識した%CALLNAME:조교대상%に身に受けた절정光線に対して出来る事は無く、
					PRINTFORMW ただアクメ声をあげ、절정するたびに「イくっ♡」と報告するだけの無様な牝となってしまった……
					RESETCOLOR
				ENDSELECT
				SETCOLOR C_PINK 
				CALL MADORGASM_RAND_ROB_TXT(1,1)
				RESETCOLOR
				CALL EROTIC_MOVE("절정光線",조교대상,-1,300)

				IF 조교대상 != -1
				CALL EROTIC_MOVE("절정光線",조교대상,-1,300)
				ENDIF

        	CALL STATCHANGE_EFFECT(듀얼리스트,"필드単体",場所,"発情")
			ENDIF
    	CALL FULLRESET
        SETCOLOR C_PINK
		PRINTFORML
		PRINTFORML
		PRINTFORML 　　　「광서의 기계」に、媚薬카운터を１つ乗せる事ができます、대상を選んでください。
		PRINTFORML
		RESETCOLOR
		효과範囲필드 = 1
		효과条件カテゴリ = 광서의 기계
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
			IF 選択カード != 9999
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"薬Ｃ",1)
			ENDIF
	ENDIF
	
ENDIF




