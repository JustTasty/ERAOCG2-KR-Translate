PRINTL ③：자신メインフェイズに묘지のこのカードを제외して발동できる。
PRINTL 상대は손패のカードを全て덱に戻してシャッフルし、戻した枚数分ドローする。
CALL TEXT_DECORATION("ROGUE")

@CARDCAN_99735(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99735)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,99735)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,99735,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == S素材時효과 || 종류 == L素材時효과 || 종류 == X素材時효과 || 종류 == F素材時효과
	SIF 발동済_2(듀얼리스트,99735)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_3(듀얼리스트,99735)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99735(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ドロー枚数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99735,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"마함",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
		ENDIF
	ENDIF
	RETURN 0
ELSEIF 종류 == S素材時효과 || 종류 == L素材時효과 || 종류 == X素材時효과 || 종류 == F素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99735,2)
	IF RESULT == 0
		CALL FULLRESET
		REPEAT 3
			SELECTCASE RAND:9
				CASE 0
					CALL CARD_GENERATE_DECK(対面者,79840)
				CASE 1
					CALL CARD_GENERATE_DECK(対面者,79841)
				CASE 2
					CALL CARD_GENERATE_DECK(対面者,79842)
				CASE 3
					CALL CARD_GENERATE_DECK(対面者,79843)
				CASE 4
					CALL CARD_GENERATE_DECK(対面者,79844)
				CASE 5
					CALL CARD_GENERATE_DECK(対面者,79845)
				CASE 6
					CALL CARD_GENERATE_DECK(対面者,79846)
				CASE 7
					CALL CARD_GENERATE_DECK(対面者,79847)
				CASE 8
					CALL CARD_GENERATE_DECK(対面者,79848)
			ENDSELECT
		REND
		SETCOLOR C_PINK
		PRINTFORML 마인드컨트롤 트랜스미터が奇怪な音を立てると、
		PRINTFORMW 상대の덱に최면カードが加わった…。
		RESETCOLOR
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99735,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		FOR カウンタ,0,紙束最大値
			SIF GETVAR(@"%対面者%_손패:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(対面者,"손패",カウンタ,덱行き)
			ドロー枚数 ++
		NEXT
		CALL SHUFFLE(対面者)
		CALL CARDDRAW_BASIC(対面者,ドロー枚数,1)
		SETCOLOR C_PINK
		PRINTFORML 마인드컨트롤 트랜스미터が奇怪な音を立てて壊れると、
		PRINTFORMW 상대の손패が入れ替わった…。
		RESETCOLOR
	ENDIF
ENDIF
