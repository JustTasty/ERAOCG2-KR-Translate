@CARDCAN_2176(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2176)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,2176)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 멜리스
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_3(듀얼리스트,2176)
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 900
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2176,"제외")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2176(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 元攻撃力
#DIM DYNAMIC 元守備力

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2176,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 멜리스
		효과条件종류 = 마법全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻守変動
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:{カウンタ}") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_필드:{カウンタ}") == -1
			CONTINUE
		元攻撃力 = GETVAR(@"%対面者%_MZ_攻:カウンタ")
		元守備力 = GETVAR(@"%対面者%_MZ_守:カウンタ")
		CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"攻",元守備力,上書きモード)
		CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"守",元攻撃力,上書きモード)
	NEXT
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,"제외",場所,2176,3)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",900)
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件名前 = M∀LICE＜Q＞RED RANSOM
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件行先플래그 = 제외行き
		효과条件종족 = 사이버스족
		효과条件任意 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

