@CARDNAME_62174,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = M∀LICE IN THE MIRROR
	CASE "略称"
		RESULTS = IN THE MIRROR
	CASE "カテゴリ"
		RESULTS:0 = 멜리스
ENDSELECT


@CARD_62174(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 速攻마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_62174(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①②의 효과는 각각 1턴에 1번 밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動,손패起動,フリー誘発)
PRINTL ①：자신의 패 / 필드(앞면 표시)로 부터 "M∀LICE" 몬스터 1장을 제외하고,
PRINTL 상대 필드의 앞면 표시 몬스터 1장의 효과를 턴 종료시 까지 무효로 한다.
CALLFORM CARD_ABLE(2,제외時)
PRINTL ②：이 카드가 제외 되었을 경우에 발동할 수 있다.
PRINTL 자신 묘지의 "M∀LICE" 카드 1장을 제외하고,
PRINTL 제외한 카드와 같은 종류(몬스터 / 마법 / 함정)의 "M∀LICE" 카드 1장을 덱으로부터 패로 넣는다.



@CARDCAN_62174(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,62174)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,62174)
		RETURN 0
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과条件カテゴリ = 멜리스
	효과条件표시 = 10
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_2(듀얼리스트,62174)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 멜리스
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 멜리스
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			カウンタ ++
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 멜리스
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 멜리스
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			カウンタ ++
	ENDIF
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 멜리스
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 멜리스
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			カウンタ ++
	ENDIF
	SIF カウンタ == 0
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_62174(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択カード종류
#DIM DYNAMIC 条件달성モン
#DIM DYNAMIC 条件달성魔
#DIM DYNAMIC 条件달성함정


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62174,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과条件カテゴリ = 멜리스
		효과条件표시 = 10
		효과条件종류 = モン全般
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
		ENDIF
	ENDIF
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,62174,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 멜리스
		효과条件종류 = モン全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성モン = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 멜리스
		효과条件종류 = 마법全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성魔 = 1
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 멜리스
		효과条件종류 = 함정全般
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성함정 = 1

		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 멜리스
		효과条件行先플래그 = 제외行き
		효과条件종류:0 = 99
		IF 条件달성モン == 1
			효과条件종류:0 = モン全般
		ENDIF
		IF 条件달성魔 == 1
			효과条件종류:1 = フィールド
			효과条件종류:2 = 速攻마법
			효과条件종류:3 = 通常마법
		ENDIF
		IF 条件달성함정 == 1
			효과条件종류:4 = 通常함정
			효과条件종류:5 = 지속함정
		ENDIF
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			選択カード종류 = RESULT
			IF 選択カード종류 < 20
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종류 = モン全般
				효과条件カテゴリ = 멜리스
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF 選択カード종류 >= 20 && 選択カード종류 < 30
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종류 = 마법全般
				효과条件カテゴリ = 멜리스
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF 選択カード종류 >= 30 && 選択カード종류 < 40
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종류 = 함정全般
				효과条件カテゴリ = 멜리스
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF

	ENDIF
ENDIF
