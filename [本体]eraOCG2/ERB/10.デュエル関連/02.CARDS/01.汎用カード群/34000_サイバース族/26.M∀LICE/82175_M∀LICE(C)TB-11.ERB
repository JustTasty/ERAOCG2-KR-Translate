@CARDCAN_82175(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 특수발동

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,82175)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,82175)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 맬리스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
			RETURN 0
		특수발동 = 1
	ELSEIF RESULT == 0 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 맬리스
	효과条件소환可 = 1
	SIF 특수발동 == 1
		효과条件소환可 = 2
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 맬리스
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			SIF モンスター数(듀얼리스트) >= 5
				RETURN 0
		ELSE
			RETURN 0
		ENDIF
	ENDIF

	RETURN 1
ENDIF

@CARDEFFECT_82175(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 특수발동

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		특수발동 = 1

	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82175,1)
	;효과処理
	IF RESULT == 0
		IF 특수발동 == 1
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件カテゴリ = 맬리스
			효과条件行先플래그 = 제외行き
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT != 1
				RETURN 0
		ENDIF
		
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		条件달성 = RESULT

		CALL FULLRESET
		효과範囲덱 = 1
		SIF 条件달성 >= 3
			효과範囲EX덱 = 1
		효과条件カテゴリ = 맬리스
		효과추가종류:0 = 26
		효과추가종류:1 = 効追一無
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

