@CARDCAN_2173(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,2173)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,2173)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 멜리스
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻紋章起動
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時
	SIF 발동済_3(듀얼리스트,2173)
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 300
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,2173,"제외")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_2173(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,2173,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件行先플래그 = 제외行き
		효과条件カテゴリ = 멜리스
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT
			CALL CARD_RESERV(듀얼리스트,2173,攻紋章予約)
	ENDIF
ELSEIF 종류 == 攻紋章起動
	CALL FULLRESET
	효과条件カテゴリ = 멜리스
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",0,600)
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件종류 = 링크
	효과条件カテゴリ = 멜리스
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")
ELSEIF 종류 == 제외時
	CALL CARD_CHOICE(듀얼리스트,종류,"제외",場所,2173,3)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",300)
		CALL FULLRESET
		효과範囲제외 = 1
		효과条件名前 = M∀LICE＜P＞Dormouse
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		EX소환可能종류 = 링크
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF

