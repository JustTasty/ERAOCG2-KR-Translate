PRINTL ●９이하：이 카드는 효과로는 파괴되지 않으며、상대는 이 카드를 효과의 대상으로 할 수 없다。
PRINTL ●１０이상：이 카드는 묘지로 보내진다。
PRINTL 　　　　　　그 후、자신의 덱의 위에서 카드를 １０장 묘지로 보낼수 있다。


@CARDCAN_1736(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1736)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 2
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後強制誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 효과발동済(듀얼리스트,1736)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") < 10
		RETURN 0
	RETURN 1
	
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所") >= 10
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_1736(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 묘지送カード,5

#DIM DYNAMIC カウンタ

IF 종류 == 마함起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1736)
	IF RESULT == 0
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1736,10)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",効後_カウンタ)
		PRINTL
		PRINTFORML ──접시가{GETVAR(@"%듀얼리스트%_魔_個Ｃ:場所")}장~……
		PRINTW
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"効済",0,1)
	ENDIF

ELSEIF 종류 == 효과後強制誘発
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
	SIF 現山札数(듀얼리스트) < 10
		RETURN 0
	SIF 듀얼리스트 == "자신"
		PRINTL 카드를 묘지로 보내시겠습니까？
	CALL YN_CHOICE(듀얼리스트)
	SIF RESULT == はい
		CALL CARD_DECK_DISPOSE(듀얼리스트,"덱",10)

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"魔自身",場所,"破耐")
	CALL STATCHANGE_EFFECT(듀얼리스트,"魔自身",場所,"対耐")
ENDIF
