@CARDCAN_91011(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,91011)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃時誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") != 2
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
	効果条件種族 = 未確認族
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,91011)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	SIF 処理中_決闘者 == 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
	効果条件種族 = 未確認族
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果条件種族 = 未確認族
	CALL CARD_CHECK_FIN_DATA(決闘者,"戦闘除送")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果条件種族 = 未確認族
	CALL CARD_CHECK_FIN_DATA(決闘者,"戦場離れ")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_91011(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 墓地送カード,5

#DIM DYNAMIC カウンタ

IF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,91011)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲墓地 = 1
		効果条件種族 = 未確認族
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",戦闘場所(決闘者,1),"手札")
		ENDIF
	ENDIF

ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,91011,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲墓地 = 1
		効果条件種族 = 未確認族
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF
