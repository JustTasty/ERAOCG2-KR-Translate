@CARD_EXPLANATION_91503(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,마함起動 ,フリー誘発)
PRINTL ①：종족を１つ宣言して발동할 수 있다。
PRINTL 선언한 종족の필드의 몬스터는 攻撃および효과の발동을 行えない。
CALLFORM CARD_ABLE(0,ターン開始時強制)
PRINTL ②：자신 스탠바이 페이즈에、자신 필드의 몬스터 １장을 リリースできる。
PRINTL リリースしなかった경우、이 카드는 파괴된다。

@CARDCAN_91503(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91503)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時強制
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_汎数:場所") < 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_91503(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 宣言종족
#DIM DYNAMIC 最多モンスター数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91503)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			PRINTL 종족을 선언해 주세요
			PRINTL
			PRINT [01] - 마법사족　
			PRINT [02] - 드래곤족　
			PRINTL [03] - 언데드족
			PRINT [04] - 전사족　　　
			PRINT [05] - 기계족　　　
			PRINTL [06] - 야수족
			PRINT [07] - 비행야수족　　　
			PRINT [08] - 비늘야수족　　　
			PRINTL [09] - 악마족
			PRINT [10] - 천사족　　　
			PRINT [11] - 곤충족　　　
			PRINTL [12] - 원소정령족
			PRINT [13] - 식물족　　　
			PRINT [14] - 사이킥족
			PRINTL [15] - 사이버스족
			PRINT [16] - 바다생물족　　　
			PRINT [17] - 미확인족　　
			PRINTL [20] - 환신야수족
			SETCOLOR C_D_GRAY
			PRINTL [21] - 나체족
			RESETCOLOR
			BINPUT
			宣言종족 = RESULT
		ELSE
			FOR カウンタ,1,21
				CALL FULLRESET
				효과範囲상대필드 = 1
				효과条件표시 = 表側표시
				효과条件종족 = カウンタ
				효과条件CNT = 1
				CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
				IF 最多モンスター数 < RESULT
					最多モンスター数 = RESULT
					宣言종족 = カウンタ
				ENDIF
			NEXT
			IF 宣言종족 == 0
				宣言종족 = RAND:17
			ENDIF
		ENDIF
		PRINTL
		IF 宣言종족 == 21
			PRINTFORML %듀얼리스트%は裸族を宣言しました
		ELSE
			PRINTFORML %듀얼리스트%は%GET_TALENTNAME(191,宣言종족)%を宣言しました
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"마함",場所,"汎数",宣言종족)
	ENDIF

ELSEIF 종류 == ターン開始時強制
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件任意 = 1
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	SIF RESULT != 1
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
	
ELSEIF 종류 == 지속효과
	宣言종족 = GETVAR(@"%듀얼리스트%_魔_汎数:場所")
	IF 宣言종족 == 21
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_服状:カウンタ") < 2
				CONTINUE
			CALL STATCHANGE_EFFECT(듀얼리스트,"自身",カウンタ,"戦無")
			CALL STATCHANGE_EFFECT(듀얼리스트,"自身",カウンタ,"発無")
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_服状:カウンタ") < 2
				CONTINUE
			CALL STATCHANGE_EFFECT(듀얼리스트,"対面自身",カウンタ,"戦無",,91503)
			CALL STATCHANGE_EFFECT(듀얼리스트,"対面自身",カウンタ,"発無",,91503)
		NEXT
	ELSE
		CALL FULLRESET
		효과条件종족 = 宣言종족
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"戦無")
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"発無")
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦無",,91503)
		CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"発無",,91503)
	ENDIF
ENDIF

