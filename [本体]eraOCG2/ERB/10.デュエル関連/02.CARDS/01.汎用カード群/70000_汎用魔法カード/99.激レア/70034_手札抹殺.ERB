@CARDCAN_70034(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70034)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF



@CARDEFFECT_70034(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ドロー枚数
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70034)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
		IF RESULT == 0
			FOR カウンタ,0,紙束最大値
				SIF GETVAR(@"%듀얼리스트%_손패:カウンタ") == -1
					CONTINUE
				CALL CARD_DISPOSE(듀얼리스트,"손패",カウンタ)
				ドロー枚数 ++
			NEXT
			CALL CARDDRAW_BASIC(듀얼리스트,ドロー枚数,2)

			VARSET ドロー枚数
			FOR カウンタ,0,紙束最大値
				SIF GETVAR(@"%対面者%_손패:カウンタ") == -1
					CONTINUE
				CALL CARD_DISPOSE(対面者,"손패",カウンタ)
				ドロー枚数 ++
			NEXT
			CALL CARDDRAW_BASIC(対面者,ドロー枚数,2)
		ENDIF
	ENDIF
ENDIF
