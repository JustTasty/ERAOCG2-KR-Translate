@CARDCAN_71002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,71002)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
			SIF ターンプレイヤー != 決闘者
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果範囲相手魔罠 = 1
	SIF ゾーン == "魔罠"
		効果条件他所 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 発動誘発
	IF ゾーン == "手札"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果範囲相手魔罠 = 1
	SIF ゾーン == "魔罠"
		効果条件他所 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲魔罠 = 1
	効果条件名前 = 현람한 권능
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲魔罠 = 1
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_71002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 発動不可,2

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,71002)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"両魔罠単体",場所,"墓地")

		CALL FULLRESET
		効果範囲魔罠 = 1
		効果条件名前 = 현람한 권능
		効果条件表示 = 表側表示
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		
		IF 種類 == 発動誘発
			SIF 決闘者 == "自分"
				PRINTL 発動した効果を無効にしますか？
			CALL YN_CHOICE(決闘者)
			SIF RESULT == 1
				RETURN 0
			
			IF RESULT == 0
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"無効")
				RETURN 1
			ENDIF
		ENDIF
		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果範囲相手魔罠 = 1
		効果条件表示 = 表側表示
		効果条件除去種 = 無効
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		効果条件任意 = 1
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"無効")
	ENDIF
	RETURN 0
ENDIF