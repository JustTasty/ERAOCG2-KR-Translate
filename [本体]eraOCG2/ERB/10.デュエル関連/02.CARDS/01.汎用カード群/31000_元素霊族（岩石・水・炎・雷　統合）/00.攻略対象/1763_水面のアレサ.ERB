@CARDCAN_1763(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,1763)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動 && GETVAR(@"%決闘者%_MZ_条達:場所") == 0
	SIF 発動済_1(決闘者,覚醒発動)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻撃後誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_戦闘カード") != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(決闘者,1) == 0
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1763(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタ数
#DIM DYNAMIC 攻撃力修正

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動 && GETVAR(@"%決闘者%_MZ_条達:場所") == 0
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,覚醒発動,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"条達",2,1)
	ENDIF
ELSEIF 種類 == 攻撃後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1763)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"手札破壊",場所,"墓地")
	ENDIF
ENDIF

