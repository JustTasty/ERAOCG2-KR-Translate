@CARDCAN_55522(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 発動不可,2

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,55522)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
		
	SIF 発動済_1(決闘者,55522)
		発動不可:0 = 1
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		発動不可:0 = 1
    CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件表示 = 表側表示
	効果条件除去種 = 無効
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	SIF 効果発動済(決闘者,場所,ゾーン)
		発動不可:1 = 1
	SIF メインフェイズ != 1
		発動不可:1 = 1
	SIF ターンプレイヤー != 決闘者
		発動不可:1 = 1
    CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件攻撃力 = 0
	効果条件表示 = 表側表示
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1
	
	SIF 発動不可:0 == 1 && 発動不可:1 == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_55522(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 発動不可,2
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,55522)
		発動不可:0 = 1
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		発動不可:0 = 1
    CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件表示 = 表側表示
	効果条件除去種 = 無効
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	SIF 効果発動済(決闘者,場所,ゾーン)
		発動不可:1 = 1
	SIF メインフェイズ != 1
		発動不可:1 = 1
	SIF ターンプレイヤー != 決闘者
		発動不可:1 = 1
    CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件攻撃力 = 0
	効果条件表示 = 表側表示
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1
	
	IF 発動不可:0 != 1 && 発動不可:1 != 1
		CALL YN_CHOICE(決闘者,"①：相手モンスターの攻撃力を０にして効果を無効にする。","②：攻撃力０の相手モンスターを破壊する。")
	ELSEIF 発動不可:0 != 1
		RESULT = 0
	ELSEIF 発動不可:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55522,1,X消費1)
		IF RESULT == 0
			CALL FULLRESET
			効果追加種類 = 11
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"無効")
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55522,10)
		IF RESULT == 0
			CALL FULLRESET
			効果条件攻撃力 = 0
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地")
		ENDIF
	ENDIF
ENDIF