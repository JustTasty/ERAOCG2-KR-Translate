@CARDCAN_55522(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,55522)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
		
	SIF 발동済_1(듀얼리스트,55522)
		발동불가:0 = 1
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		발동불가:0 = 1
    CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 無効
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동불가:1 = 1
	SIF メインフェイズ != 1
		발동불가:1 = 1
	SIF ターンプレイヤー != 듀얼리스트
		발동불가:1 = 1
    CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件攻撃力 = 0
	효과条件표시 = 表側표시
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_55522(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,55522)
		발동불가:0 = 1
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		발동불가:0 = 1
    CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 無効
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		발동불가:1 = 1
	SIF メインフェイズ != 1
		발동불가:1 = 1
	SIF ターンプレイヤー != 듀얼리스트
		발동불가:1 = 1
    CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件攻撃力 = 0
	효과条件표시 = 表側표시
	효과条件除去種 = 묘지
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	IF 발동불가:0 != 1 && 발동불가:1 != 1
		CALL YN_CHOICE(듀얼리스트,"①：상대몬스터의 攻撃力を０にして효과を무효로 한다。","②：攻撃力０の상대 몬스터를 破壊する。")
	ELSEIF 발동불가:0 != 1
		RESULT = 0
	ELSEIF 발동불가:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55522,1,X消費1)
		IF RESULT == 0
			CALL FULLRESET
			효과추가종류 = 11
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,55522,10)
		IF RESULT == 0
			CALL FULLRESET
			효과条件攻撃力 = 0
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF