@CARDNAME_31233,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 뇌수룡－썬더 드래곤
	CASE "略称"
		RESULTS = 뇌수룡
	CASE "カテゴリ"
		RESULTS:0 = 썬더 드래곤
ENDSELECT


@CARD_31233(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 6
	CASE "攻撃力"
		RETURN 2400
	CASE "守備力"
		RETURN 0
	CASE "추가日"
		RETURN 250707
ENDSELECT

RETURN 0

@CARD_EXPLANATION_31233(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①②の효과は１ターンに１度、いずれか１つしか使用できない。
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①：このカードを손패から捨てて발동できる。
PRINTL 「뇌수룡－썬더 드래곤」以外の자신の묘지・제외状態の「썬더 드래곤」カード１枚を손패に加える。
CALLFORM CARD_ABLE(2,제외時,戦破壊→묘지,필드→묘지,戦闘→묘지)
PRINTL ②：このカードが제외された場合、またはモンスターゾーンから묘지へ送られた場合に발동できる。
PRINTL 덱から「썬더 드래곤」モンスター１体を守備표시で특수소환する。
PRINTL この효과で특수소환したモンスターはエンドフェイズに손패に戻る。


@CARDCAN_31233(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31233)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,31233)
		RETURN 0
	SIF 발동済_2(듀얼리스트,31233)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件固名前 = 뇌수룡－썬더 드래곤
	효과条件カテゴリ = 썬더 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時 || 종류 == 戦破壊→묘지 || 종류 == 필드→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_1(듀얼리스트,31233)
		RETURN 0
	SIF 발동済_2(듀얼리스트,31233)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 썬더 드래곤
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31233(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31233,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
;		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲제외 = 1
			효과条件カテゴリ = 썬더 드래곤
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
;		ENDIF
	ENDIF
ELSEIF 종류 == 제외時 || 종류 == 戦破壊→묘지 || 종류 == 필드→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31233,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 썬더 드래곤
		효과条件소환可 = 1
		효과추가종류 = 効追終手
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF



