@CARDSUMMON_55541(決闘者,召喚カード,EX参照)
#DIMS DYNAMIC 決闘者
#DIM DYNAMIC 召喚カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要素材数 = 2

IF EX参照 == 0 || EX参照 == 1
	素材条件名前 = 썬더 드래곤
ELSEIF EX参照 >= 10
	素材条件種族 = 元素霊族
ENDIF

IF EX参照 == 1
	CALL FUSCAN(決闘者,召喚カード,55541) 
	RETURN RESULT
ENDIF

@CARDCAN_55541(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,55541)
SIF RESULT == 1
	RETURN 0


IF 種類 == EXデッキ起動
	SIF GETVAR(@"%決闘者%_手札発動数") <= 0 && GETVAR(@"%対面者%_手札発動数") <= 0
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲手札 = 1
	素材範囲戦場 = 1
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件名前 = 초뇌룡－썬더 드래곤
	効果条件召喚可 = 2
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 身代効果
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 破壊対象ゾーン != "戦場"
		RETURN 0
	SIF 破壊対象場所 != 場所
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種族 = 元素霊族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_55541(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 出処
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EXデッキ起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55541)
	IF RESULT == 0
		TRYCALLFORM CARDSUMMON_55541(決闘者,場所)
		CALL FUSSUMMON(決闘者,場所)
	ENDIF
ELSEIF 種類 == 永続効果
	;サーチロック機能が（多分）無いのでハリボテ
ELSEIF 種類 == 身代効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55541)
	IF RESULT == 0
		CALL FULLRESET
		効果条件種族 = 元素霊族
		効果条件種類 = モン全般
		CALL CARD_ADD_GY_BASIC(決闘者,"墓地",ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF

