@CARDCAN_55542(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,55542)
SIF RESULT == 1
	RETURN 0


IF 種類 == EXデッキ起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_EX_CHECK(決闘者,55542)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種族 = 元素霊族
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件固名前 = 뇌신룡－썬더 드래곤
	効果条件種族 = 元素霊族
	効果条件種類 = 융합
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 発動誘発
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種族 = 元素霊族
	CALL CARD_CHECK_START_DATA(決闘者,2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 身代効果
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 破壊対象ゾーン != "戦場"
		RETURN 0
	SIF 破壊対象場所 != 場所
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_55542(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 出処
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EXデッキ起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55542)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件種族 = 元素霊族
		効果条件種類 = モン全般
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件固名前 = 뇌신룡－썬더 드래곤
			効果条件種族 = 元素霊族
			効果条件種類 = 융합
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_EX_SUMMON(決闘者,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55542)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"両戦場単体",場所,"墓地")
	ENDIF
ELSEIF 種類 == 身代効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55542)
	IF RESULT == 0
		CALL FULLRESET
		効果条件複数 = 2
		CALL CARD_ADD_GY_BASIC(決闘者,"墓地",ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF

