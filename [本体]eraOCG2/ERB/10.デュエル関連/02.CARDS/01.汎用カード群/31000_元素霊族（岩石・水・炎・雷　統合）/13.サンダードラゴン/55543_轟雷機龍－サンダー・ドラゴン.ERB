@CARDCAN_55543(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,55543)
SIF RESULT == 1
	RETURN 0


IF 種類 == 戦場起動
	SIF 発動済_1(決闘者,55543)
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_召種:場所") != 召種EXデッキ
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲除外 = 1
	CALLFORM 効果条件レベル_ADV(7,"以下")
	効果条件カテゴリ = 썬더 드래곤
	効果条件種類 = 効果モン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 身代効果
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 破壊対象ゾーン != "戦場"
		RETURN 0
	TRYCALLFORM CARD_{破壊対象ID}("種族")
	SIF RESULT != 元素霊族
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_55543(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 出処
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件合致数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%
 
IF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55543,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲除外 = 1
		CALLFORM 効果条件レベル_ADV(7,"以下")
		効果条件カテゴリ = 썬더 드래곤
		効果条件種類 = 効果モン
		効果条件行先フラグ = デッキ行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARDEFFECT_{選択カード_ID}(決闘者,手札起動,"効果処理",場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 身代効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55543)
	IF RESULT == 0
		CALL FULLRESET
		効果条件複数 = 3
		CALL CARD_ADD_GY_BASIC(決闘者,"墓地",ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
	ENDIF
	RETURN 0
ENDIF

