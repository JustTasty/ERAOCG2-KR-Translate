@CARDCAN_31235(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31235)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF GETVAR(@"%決闘者%_手札発動数") <= 0 && GETVAR(@"%対面者%_手札発動数") <= 0
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,31235,"手札")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲戦場 = 1
	CALLFORM 効果条件レベル_ADV(8,"以下")
	効果条件種族 = 元素霊族
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種族 = 元素霊族
	効果条件種類 = モン全般
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種族 = 元素霊族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == ターン終了時
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲除外 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31235(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件達成
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31235)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲戦場 = 1
		CALLFORM 効果条件レベル_ADV(8,"以下")
		効果条件種族 = 元素霊族
		効果条件種類 = モン全般
		効果条件行先フラグ = 除外行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,"手札",場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31235,10)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件種族 = 元素霊族
		効果条件種類 = モン全般
		効果条件複数 = 2
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件種族 = 元素霊族
			CALL CARD_GRANT_ADV(決闘者,ゾーン,場所,"対耐",1)
		ENDIF
	ENDIF
ELSEIF 種類 == ターン終了時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31235)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 썬더 드래곤
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF



