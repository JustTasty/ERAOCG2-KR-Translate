@CARDNAME_31231,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 뇌전룡－썬더 드래곤
	CASE "略称"
		RESULTS = 뇌전룡
	CASE "カテゴリ"
		RESULTS:0 = 썬더 드래곤
ENDSELECT


@CARD_31231(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 5
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 1500
	CASE "추가日"
		RETURN 250707
ENDSELECT

RETURN 0

@CARD_EXPLANATION_31231(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①②の효과は１ターンに１度、いずれか１つしか使用できない。
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①：자신・상대ターンに、このカードを손패から捨てて발동できる。
PRINTL 덱から「뇌전룡－썬더 드래곤」１体を손패に加える。
CALLFORM CARD_ABLE(2,제외時,戦破壊→묘지,필드→묘지,戦闘→묘지)
PRINTL ②：このカードが제외された場合、またはモンスターゾーンから묘지へ送られた場合に발동できる。
PRINTL 덱から「뇌전룡－썬더 드래곤」以外の「썬더 드래곤」カード１枚を손패に加える。


@CARDCAN_31231(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31231)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,31231)
		RETURN 0
	SIF 발동済_2(듀얼리스트,31231)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件名前 = 뇌전룡－썬더 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 제외時 || 종류 == 戦破壊→묘지 || 종류 == 필드→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_1(듀얼리스트,31231)
		RETURN 0
	SIF 발동済_2(듀얼리스트,31231)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = 뇌전룡－썬더 드래곤
	효과条件カテゴリ = 썬더 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31231(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31231,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
;		IF RESULT == 1
			CALL FULLRESET
			효과条件名前 = 뇌전룡－썬더 드래곤
			CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
;		ENDIF
	ENDIF
ELSEIF 종류 == 제외時 || 종류 == 戦破壊→묘지 || 종류 == 필드→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31231,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件固名前 = 뇌전룡－썬더 드래곤
		효과条件カテゴリ = 썬더 드래곤
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF



