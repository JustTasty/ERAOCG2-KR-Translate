CALLFORM CARD_ABLE(2,除外時,戦破壊→墓地,戦場→墓地,戦闘→墓地)
PRINTL ②：このカードが除外された場合、またはモンスターゾーンから墓地へ送られた場合に発動できる。
PRINTL デッキから「뇌원룡－썬더 드래곤」１体を手札に加える。


@CARDCAN_31236(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31236)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動 || 種類 == フリー誘発
	SIF ゾーン != "手札"
		RETURN 0
	SIF 発動済_1(決闘者,31236)
		RETURN 0
	SIF 発動済_2(決闘者,31236)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種族 = 元素霊族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 除外時 || 種類 == 戦破壊→墓地 || 種類 == 戦場→墓地 || 種類 == 戦闘→墓地
	SIF 発動済_1(決闘者,31236)
		RETURN 0
	SIF 発動済_2(決闘者,31236)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件名前 = 뇌원룡－썬더 드래곤
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31236(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件達成
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31236,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
;		IF RESULT == 1
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件種族 = 元素霊族
			CALL CARD_GRANT_ADV(決闘者,ゾーン,場所,"永攻",500)
;		ENDIF
	ENDIF
ELSEIF 種類 == 除外時 || 種類 == 戦破壊→墓地 || 種類 == 戦場→墓地 || 種類 == 戦闘→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31236,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件名前 = 뇌원룡－썬더 드래곤
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
	ENDIF
ENDIF



