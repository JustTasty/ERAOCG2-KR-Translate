@CARDCAN_55566(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,55566)
SIF RESULT == 1
	RETURN 0

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,55566)
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF 発動済_3(決闘者,55566)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= 0
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 라이제올
	効果条件固名前起動 = 1
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1	
ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") < 0
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_55566(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 修正値
#DIM DYNAMIC 修正値２

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55566,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"Ｘ",1)
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55566,3,X消費2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 라이제올
		効果条件複数 = 2
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
	ENDIF
ELSEIF 種類 == 攻守変動
	修正値 = (GETVAR(@"%決闘者%_MZ_Ｘ:場所") + 1) * 100
	CALL FULLRESET
	CALL STATCHANGE_BASIC(決闘者,"戦場",場所,修正値,0)
	修正値２ = (GETVAR(@"%決闘者%_MZ_Ｘ:場所") + 1) * -100
	CALL FULLRESET
	CALL STATCHANGE_BASIC(決闘者,"相手戦場",場所,修正値２,0)
ENDIF