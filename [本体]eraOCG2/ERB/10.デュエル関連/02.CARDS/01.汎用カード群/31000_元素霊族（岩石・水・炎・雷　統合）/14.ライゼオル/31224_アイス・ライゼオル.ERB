;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 아이스 라이제올
	CASE "略称"
		RESULTS = 빙 라이제올
	CASE "カテゴリ"
		RESULTS:0 = 라이제올
ENDSELECT


@CARD_31224(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 効果モン
	CASE "属性"
		RETURN 光属性
	CASE "種族"
		RETURN 元素霊族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1700
	CASE "守備力"
		RETURN 1000

ENDSELECT
RETURN 0

@CARD_EXPLANATION_31224(種類)
