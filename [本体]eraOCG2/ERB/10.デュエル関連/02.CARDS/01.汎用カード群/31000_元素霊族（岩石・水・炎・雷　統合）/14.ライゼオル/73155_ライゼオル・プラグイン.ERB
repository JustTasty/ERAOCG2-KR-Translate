@CARD_EXPLANATION_73155(種類)
#DIM DYNAMIC 種類

PRINTL このカード名のカードは１ターンに１枚しか発動できない。
CALLFORM CARD_ABLE(1,魔罠起動,手札起動,フリー誘発)
PRINTL ①：自分の墓地・除外状態の「라이제올」モンスター１体を対象として発動できる。
PRINTL そのモンスターを効果を無効にして特殊召喚する。
PRINTL その後、自分フィールドのランク４のＸモンスター１体のＸ素材を１つ増やす。
PRINTL このターン、自分はＸモンスターでしか攻撃宣言できない。

@CARDCAN_73155(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,73155)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,73155)
		RETURN 0
	IF ゾーン == "手札"
		SIF ターンプレイヤー != 決闘者
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲除外 = 1
	効果条件カテゴリ = 라이제올
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73155(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カード_ID
#DIM DYNAMIC 選択カード

IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73155,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲除外 = 1
		効果条件カテゴリ = 라이제올
		効果条件種類 = モン全般
		効果追加種類 = 効追無効
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)	

		CALL FULLRESET
		効果条件レベル = 4
		効果条件種類 = エクシーズ
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"Ｘ",1)
		ENDIF

		攻撃可能種類 = エクシーズ
		CALL CARD_ATK_RESTRICTION(決闘者)
	ENDIF
ENDIF