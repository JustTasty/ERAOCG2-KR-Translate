@CARDCAN_55565(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,55565)
SIF RESULT == 1
	RETURN 0

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,55565)
		RETURN 0
	RETURN 1
ELSEIF 種類 == 身代効果
	SIF 発動済_3(決闘者,55565)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	TRYCALLFORM CARD_{破壊対象ID}("種類")
	SIF RESULT != エクシーズ
		RETURN 0
	SIF !GROUPMATCH(破壊種類,"効果","戦闘")
		RETURN 0
	RETURN 1	
ELSEIF 種類 == 発動誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= 0
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_55565(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55565,1)
	IF RESULT == 0
		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"Ｘ",1)
	ENDIF
ELSEIF 種類 == 身代効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55565,3,X消費1)
	IF RESULT == 0
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55565,2,X消費2)
	IF RESULT == 0	
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"全場単体",場所,"墓地")
	ENDIF
ENDIF