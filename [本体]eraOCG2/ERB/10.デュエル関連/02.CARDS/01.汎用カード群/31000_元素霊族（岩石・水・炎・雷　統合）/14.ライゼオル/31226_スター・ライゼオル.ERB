@CARDCAN_31226(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31226)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,31226)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,31226,"手札")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件Ｘ素所持 = 999
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 特殊召喚時
	SIF 発動済_2(決闘者,31226)
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 라이제올
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF


@CARDEFFECT_31226(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31226,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件Ｘ素所持 = 999
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(決闘者,選択カード)
			CALL SET_FIELD_INFO(対象者（CS）,"戦場",選択カード（CS）,"Ｘ",-1)

			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,"手札",場所)
			EX召喚可能レベル = 4
			EX召喚可能種類 = エクシーズ
			CALL CARD_EX_RESTRICTION(決闘者)
		ENDIF
	ENDIF
ELSEIF 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31226,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 라이제올
		効果条件種類 = 魔罠全般
		CALL CARD_SET_BASIC(決闘者,"デッキ",ゾーン,場所,"裏側表示")
	ENDIF
ENDIF


