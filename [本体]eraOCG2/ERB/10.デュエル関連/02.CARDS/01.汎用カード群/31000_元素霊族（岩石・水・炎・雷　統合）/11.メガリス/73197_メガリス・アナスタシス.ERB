#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
	CASE "추가日"
		RETURN 250726
ENDSELECT

RETURN 0

@CARD_EXPLANATION_73197(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①의 효과는 １턴에 １번밖에 사용할 수 없다。
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ①：패를 １장 捨てて발동할 수 있다。
PRINTL 덱에서 レベル４以下と８以上の「메가리스」몬스터를 각각 １体ずつ패에 넣는다。
CALLFORM CARD_ABLE(10,효과後誘発)
PRINTL ②：１턴에 １번、자신が「메가리스」몬스터를 특수소환した경우、
PRINTL 이하의 효과에서 １つを選択して발동할 수 있다。
PRINTL （이 카드명의 以下의 효과는 각각 １턴에 １번밖에 選択できない）
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ●자신은２枚ドローし、패를 １장 選んで捨てる。
CALLFORM CARD_ABLE(3,효과後誘発)
PRINTL ●상대 필드의 몬스터 １장을 リリースする。


@CARDCAN_73197(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73197)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,73197)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(듀얼리스트) < 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 메가리스
	효과条件종류 = モン全般
	CALLFORM 효과条件レベル_ADV(4,"以下")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 메가리스
	효과条件종류 = モン全般
	CALLFORM 효과条件レベル_ADV(8,"以上")
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "마함"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0

	CALL FULLRESET
	효과条件カテゴリ = 메가리스
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환")
	SIF RESULT != 1
		RETURN 0
	
	SIF 발동済_2(듀얼리스트,73197)
		발동불가:0 = 1
	SIF 발동불가:0 != 1
		CALL CARD_DRAW_CHECK
	
	SIF 발동済_3(듀얼리스트,73197)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件除去種 = リリース
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73197(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73197,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 메가리스
			효과条件종류 = モン全般
			CALLFORM 효과条件レベル_ADV(4,"以下")
			CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件カテゴリ = 메가리스
				효과条件종류 = モン全般
				CALLFORM 효과条件レベル_ADV(8,"以上")
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73197)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73197,10)
	IF RESULT == 0
		SIF 발동済_2(듀얼리스트,73197)
			발동불가:0 = 1
		SIF 발동불가:0 != 1
			CALL CARD_DRAW_CHECK
		
		SIF 발동済_3(듀얼리스트,73197)
			발동불가:1 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件除去種 = リリース
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1
		
		IF 발동불가:0 != 1 && 발동불가:1 != 1
			IF 듀얼리스트 == "자신"
				CALL YN_CHOICE(듀얼리스트,"●２枚ドローし、패를 １장 捨てる。","●상대 필드의 몬스터 １장을 リリースする。")
			ELSE
				RESULT = 1
			ENDIF
		ELSEIF 발동불가:0 != 1
			RESULT = 0
		ELSEIF 발동불가:1 != 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL CARD_EFFECT_USE(듀얼리스트,73197,2)
			CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
			IF RESULT == 0
				CALL CARDDRAW_BASIC(듀얼리스트,2)
				CALL FULLRESET
				효과範囲손패 = 1
				CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ELSEIF RESULT == 1
			CALL CARD_EFFECT_USE(듀얼리스트,73197,3)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"リリース")
		ENDIF
	ENDIF
ENDIF
