	CASE "名前"
		RESULTS = 메가리스 베토르
	CASE "略称"
		RESULTS = 베토르
	CASE "カテゴリ"
		RESULTS:0 = 메가리스
ENDSELECT


@CARD_31191(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 儀式
	CASE "属性"
		RETURN 地属性
	CASE "種族"
		RETURN 元素霊族
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 1500
	CASE "守備力"
		RETURN 2600
	CASE "追加日"
		RETURN 250703
ENDSELECT

RETURN 0

