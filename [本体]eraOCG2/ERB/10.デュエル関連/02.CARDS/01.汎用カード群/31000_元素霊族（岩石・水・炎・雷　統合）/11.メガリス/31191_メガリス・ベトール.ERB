@CARDCAN_31191(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成
#DIMS DYNAMIC 対面者


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31191)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,31191)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲手札 = 1
	素材範囲戦場 = 1
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種類 = 儀式
	効果条件カテゴリ = 메가리스
	効果条件召喚可 = 1
	効果条件他所 = 1
	強制素材禁止場所 = 100 + 場所
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == EX召喚時
	SIF 発動済_2(決闘者,31191)
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種類 = 儀式
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31191(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 破壊횟수
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31191,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL RESETAREA_MAT
		素材範囲手札 = 1
		素材範囲戦場 = 1
		CALL FULLRESET
		効果条件種類 = 儀式
		効果条件カテゴリ = 메가리스
		効果条件召喚可 = 1
		CALL CARD_CHOOSE_BASIC(決闘者,"手札",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_手札:選択カード")}(決闘者,選択カード)
			素材範囲戦場 = 1
			素材範囲手札 = 1
			TRYCALLFORM RITSUMMON(決闘者, 選択カード,"手札")
		ENDIF
	ENDIF

ELSEIF 種類 == EX召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31191,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件種類 = 儀式
		効果条件固名前起動 = 1
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		破壊횟수 = 100 - RESULT
		SIF 破壊횟수 == 100
			RETURN 0

		CALL FULLRESET
		効果条件複数 = 破壊횟수
		CALL CARD_REMOVAL_BASIC(決闘者,"全場単体",場所,"墓地",31191)
	ENDIF
ENDIF

