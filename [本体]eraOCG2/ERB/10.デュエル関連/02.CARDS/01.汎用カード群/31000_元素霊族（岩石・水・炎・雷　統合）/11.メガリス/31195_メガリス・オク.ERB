@CARDCAN_31175(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成
#DIMS DYNAMIC 対面者


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31175)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 発動済_2(決闘者,31175)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲手札 = 1
	素材範囲戦場 = 1
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種類 = 儀式
	効果条件召喚可 = 1
	強制素材場所 = 指定場所(場所,ゾーン)
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == EX召喚時
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_31175(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 元手札数
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31175,1)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲手札 = 1
		素材範囲戦場 = 1
		CALL FULLRESET
		効果条件種類 = 儀式
		効果条件召喚可 = 1
		CALL CARD_CHOOSE_BASIC(決闘者,"手札",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_手札:選択カード")}(決闘者,選択カード)
			素材範囲戦場 = 1
			素材範囲手札 = 1
			TRYCALLFORM RITSUMMON(決闘者, 選択カード,"手札")
		ENDIF
	ENDIF

ELSEIF 種類 == EX召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31175)
	IF RESULT == 0
		元手札数 = 手札数(決闘者)
		CALL CARDDRAW_BASIC(決闘者,2)
		SIF 元手札数 == 手札数(決闘者)
			RETURN 0
		CALL FULLRESET
		効果範囲手札 = 1
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF

