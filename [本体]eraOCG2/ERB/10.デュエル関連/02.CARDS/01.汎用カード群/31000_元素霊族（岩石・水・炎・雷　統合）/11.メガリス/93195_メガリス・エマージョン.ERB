@CARDCAN_93195(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 効果制限達成
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,93195)
SIF RESULT == 1
	RETURN 0


IF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,93195)
		RETURN 0
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") >= 2	
		RETURN 0
	CALL FULLRESET
	効果条件カテゴリ = 메가리스
	効果条件種類 = モン全般
	CALL CARD_CHECK_FIN_DATA(決闘者,"戦場離れ")
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,93195)
		RETURN 0
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") != 1	
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 메가리스
	効果条件召喚可 = 1
	効果条件特不無視 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	
ELSEIF 種類 == 魔罠起動
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_93195(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93195,2)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(決闘者,1)
	ENDIF

ELSEIF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93195,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 메가리스
		効果条件召喚可 = 1
		効果条件特不無視 = 1
		効果追加種類 = 効追終手
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 魔罠起動
	;カード発動＆設置まで
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93195)
	IF RESULT == 0
	ENDIF
ENDIF
