PRINTL 자신의 패 / 필드의 몬스터를 릴리스 하고、
PRINTL 덱에서 "메가리스" 의식몬스터 １장을 수비 표시로 의식 소환한다。

@CARDCAN_73196(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73196)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF

	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件종류 = 의식
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		条件달성:0 = 1

	FOR カウンタ,2,9
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 의식
		효과条件カテゴリ = 메가리스
		효과条件レベル = カウンタ 
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			CONTINUE
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲손패 = 1
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT:2 >= カウンタ * 2
			条件달성:1 ++
	NEXT
	SIF 条件달성:0 < 1 && 条件달성:1 < 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_73196(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성,2
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件レベル

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73196)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件종류 = 의식
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			条件달성:0 = 1

		FOR カウンタ,2,9
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件종류 = 의식
			효과条件カテゴリ = 메가리스
			효과条件レベル = カウンタ 
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				CONTINUE
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲손패 = 1
			효과条件종류 = モン全般
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT:2 >= カウンタ * 2
				条件달성:1 ++
		NEXT
		IF 条件달성:0 > 0 && 条件달성:1 > 0
			CALL YN_CHOICE(듀얼리스트,"●상대 몬스터의 攻撃力をダウンさせる","●덱에서 「메가리스」의식몬스터를 의식 소환하는 ")
		ELSEIF 条件달성:0 > 0
			RESULT = 0
		ELSEIF 条件달성:1 > 0
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲상대필드 = 1
			효과条件종류 = 의식
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			攻撃力修正 = RESULT * 500
			CALL FULLRESET
			CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"一攻")

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件종류 = 의식
			효과条件カテゴリ = 메가리스
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARD_{RESULT:99},"レベル"
				条件レベル = RESULT * 2
				WHILE 条件レベル > 0
					PRINTFORMW 必要レベル：{条件レベル}
					CALL FULLRESET
					효과範囲손패 = 1
					효과範囲필드 = 1
					효과条件종류 = モン全般
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
					SIF RESULT != 1
						RETURN 0
					TRYCALLFORM CARD_{RESULT:1},"レベル"
					条件レベル -= RESULT
				WEND
				CALL FULLRESET
				CALL CARD_EX_SUMMON(듀얼리스트,"덱",選択カード,"守備표시")
			ENDIF
		ENDIF
	ENDIF
ENDIF