#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要レベル数 = 4

IF EX参照 == 1
	CALL RITCAN(듀얼리스트,소환カード,31193) 
	RETURN RESULT
ENDIF

