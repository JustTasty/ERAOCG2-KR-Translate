@CARDNAME_31193,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 메가리스 오피엘
	CASE "略称"
		RESULTS = 오피엘
	CASE "カテゴリ"
		RESULTS:0 = 메가리스
ENDSELECT


@CARD_31193(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 의식
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 2500
	CASE "성별"
		RETURN 牝性
	CASE "추가日"
		RETURN 250703
ENDSELECT

RETURN 0

@CARDSUMMON_31193(듀얼리스트,소환カード,EX参照)
