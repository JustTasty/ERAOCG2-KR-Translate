@CARDCAN_31190(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成
#DIMS DYNAMIC 対面者


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31190)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,31190)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲手札 = 1
	素材範囲戦場 = 1
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種類 = 儀式
	効果条件カテゴリ = 메가리스
	効果条件召喚可 = 1
	効果条件他所 = 1
	強制素材禁止場所 = 100 + 場所
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31190(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31190,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL RESETAREA_MAT
		素材範囲手札 = 1
		素材範囲戦場 = 1
		CALL FULLRESET
		効果条件種類 = 儀式
		効果条件カテゴリ = 메가리스
		効果条件召喚可 = 1
		CALL CARD_CHOOSE_BASIC(決闘者,"手札",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_手札:選択カード")}(決闘者,選択カード)
			素材範囲戦場 = 1
			素材範囲手札 = 1
			TRYCALLFORM RITSUMMON(決闘者, 選択カード,"手札")
		ENDIF
	ENDIF

ELSEIF 種類 == 攻守変動
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種類 = 儀式
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	攻撃力修正 = RESULT * 300
	CALL FULLRESET
	CALL STATCHANGE_BASIC(決闘者,"戦場",場所,攻撃力修正,攻撃力修正)
ENDIF

