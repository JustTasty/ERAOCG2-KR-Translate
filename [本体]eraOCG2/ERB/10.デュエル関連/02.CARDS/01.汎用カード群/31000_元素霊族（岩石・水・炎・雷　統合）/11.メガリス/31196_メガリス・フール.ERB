;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 메가리스 풀
	CASE "略称"
		RESULTS = 풀
	CASE "カテゴリ"
		RESULTS:0 = 메가리스
ENDSELECT


@CARD_31196(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 儀式
	CASE "属性"
		RETURN 地属性
	CASE "種族"
		RETURN 元素霊族
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 2000
	CASE "性別"
		RETURN 牝性
	CASE "追加日"
		RETURN 250703
ENDSELECT

RETURN 0

@CARDSUMMON_31196(決闘者,召喚カード,EX参照)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 出処
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 召喚カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要レベル数 = 2

IF EX参照 == 1
	CALL RITCAN(決闘者,召喚カード,31196) 
	RETURN RESULT
ENDIF

