@CARDNAME_31197,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 메가리스 프로츄
	CASE "略称"
		RESULTS = 프로츄
	CASE "カテゴリ"
		RESULTS:0 = 메가리스
ENDSELECT


@CARD_31197(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 의식
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 300
	CASE "추가日"
		RETURN 250726
ENDSELECT

RETURN 0

@CARDSUMMON_31197(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 出処
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照

CALL RESETCONDITION_MAT
必要レベル数 = 4

IF EX参照 == 1
	CALL RITCAN(듀얼리스트,소환カード,31197) 
	RETURN RESULT
ENDIF

