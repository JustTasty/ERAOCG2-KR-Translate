@CARDCAN_31320(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31320)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,31320)
		RETURN 0
	SIF 発動済_2(決闘者,31320)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ELSEIF 種類 == ターン終了時強制
	SIF ゾーン != "手札"
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_手_公開:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "手札"
		RETURN 0
	SIF GETVAR(@"%決闘者%_手_公開:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 種類 == 効果後誘発
	SIF 発動済_1(決闘者,31320)
		RETURN 0
	SIF 発動済_2(決闘者,31320)
		RETURN 0
	SIF ゾーン != "手札"
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,31320,"手札")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果条件種類:0 = 通常魔法
	効果条件種類:2 = 速攻魔法
	効果条件種類:3 = 通常罠
	CALL CARD_CHECK_FIN_DATA(決闘者,"効果発動",2)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_31320(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件達成


IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31320,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL STATCHANGE_HAND(決闘者,"指定",場所,"公開",2)
	ENDIF
ELSEIF 種類 == ターン終了時強制
	CALL FULLRESET
	CALL STATCHANGE_HAND(決闘者,"指定",場所,"公開",-1)
ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果条件表示 = 裏側表示
	CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")

	CALL FULLRESET
	効果条件表示 = 裏側表示
	CALL STATCHANGE_EFFECT(決闘者,"相手戦場",場所,"破耐")

	CALL FULLRESET
	効果条件表示 = 裏側表示
	CALL STATCHANGE_EFFECT(決闘者,"魔罠",場所,"破耐")

	CALL FULLRESET
	効果条件表示 = 裏側表示
	CALL STATCHANGE_EFFECT(決闘者,"相手魔罠",場所,"破耐")

ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31320,2)
	IF RESULT == 0
		SIF GETVAR(@"%決闘者%_手_公開:場所") >= 1
			条件達成 = 1
		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者, "手札", 場所)
		IF 条件達成 == 1
			CALL FULLRESET
			効果条件種類:0 = 通常魔法
			効果条件種類:2 = 速攻魔法
			効果条件種類:3 = 通常罠
			CALL CARD_SET_BASIC(決闘者,"デッキ",ゾーン,場所,"裏側表示")
		ENDIF
	ENDIF
ENDIF
