@CARDCAN_31320(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31320)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,31320)
		RETURN 0
	SIF 발동済_2(듀얼리스트,31320)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "손패"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_手_公開:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "손패"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_手_公開:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,31320)
		RETURN 0
	SIF 발동済_2(듀얼리스트,31320)
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,31320,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과条件종류:0 = 通常마법
	효과条件종류:2 = 速攻마법
	효과条件종류:3 = 通常함정
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT != 1
		RETURN 0

	RETURN 1
ENDIF

@CARDEFFECT_31320(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성


IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31320,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL STATCHANGE_HAND(듀얼리스트,"지정",場所,"公開",2)
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL FULLRESET
	CALL STATCHANGE_HAND(듀얼리스트,"지정",場所,"公開",-1)
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件표시 = 裏側표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"破耐")

	CALL FULLRESET
	효과条件표시 = 裏側표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"破耐")

	CALL FULLRESET
	효과条件표시 = 裏側표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"破耐")

	CALL FULLRESET
	효과条件표시 = 裏側표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대마함",場所,"破耐")

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31320,2)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_手_公開:場所") >= 1
			条件달성 = 1
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
		IF 条件달성 == 1
			CALL FULLRESET
			효과条件종류:0 = 通常마법
			효과条件종류:2 = 速攻마법
			효과条件종류:3 = 通常함정
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"裏側표시")
		ENDIF
	ENDIF
ENDIF
