CALLFORM CARD_ABLE(10,戦場起動,フリー誘発)
PRINTL ②：お互いのターンに１度、自分フィールドに「트라미드」フィールド魔法カードが存在する場合に発動できる。
PRINTL 以下の効果から１つを選択し、適用する。
PRINTL ●相手フィールドのモンスター１体を裏側表示にする。
PRINTL ●相手フィールドにセットされたカード１枚を破壊する。


@CARDCAN_31220(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 発動不可,2

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,31220)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,31220)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 트라미드
	効果条件種類 = フィールド
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件カテゴリ = 트라미드
	効果条件種類 = フィールド
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件表示 = 表側表示
	効果条件除去種 = 表示変更
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1
	
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	効果条件表示 = 裏側表示
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1
	
	SIF 発動不可:0 == 1 && 発動不可:1 == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31220(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 発動不可,2

IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31220,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 트라미드
		効果条件種類 = フィールド
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,31220,10)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果条件表示 = 表側表示
		効果条件除去種 = 表示変更
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			発動不可:0 = 1
		
		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果範囲相手魔罠 = 1
		効果条件表示 = 裏側表示
		効果条件除去種 = 墓地
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1
			発動不可:1 = 1
		
		IF 発動不可:0 != 1 && 発動不可:1 != 1
			CALL YN_CHOICE(決闘者,"●相手モンスター１体を裏側表示にする。","●相手のセットカードを破壊する。")
		ELSEIF 発動不可:0 == 1
			RESULT = 0
		ELSEIF 発動不可:1 != 1
			RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"表示変更")
		ELSEIF RESULT == 1
			CALL FULLRESET
			効果条件表示 = 裏側表示
			CALL CARD_REMOVAL_BASIC(決闘者,"全場単体",場所,"墓地")
		ENDIF
	ENDIF
ENDIF
