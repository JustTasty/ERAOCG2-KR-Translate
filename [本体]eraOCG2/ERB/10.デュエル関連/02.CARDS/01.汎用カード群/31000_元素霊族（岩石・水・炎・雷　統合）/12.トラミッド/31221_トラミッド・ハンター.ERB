@CARDNAME_31221,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 트라미드 헌터
	CASE "略称"
		RESULTS = Ｔ 헌터
	CASE "カテゴリ"
		RESULTS:0 = 트라미드
ENDSELECT


@CARD_31221(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 効果モン
