@CARDNAME_31221,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 트라미드 헌터
	CASE "略称"
		RESULTS = Ｔ 헌터
	CASE "カテゴリ"
		RESULTS:0 = 트라미드
ENDSELECT


@CARD_31221(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1400
	CASE "守備力"
		RETURN 1100
	CASE "성별"
		RETURN 雄性
	CASE "추가日"
		RETURN 250706
ENDSELECT

RETURN 0

@CARD_EXPLANATION_31221(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①の효과は１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,소환時,특수소환時)
PRINTL ①：このカードが소환・특수소환した場合に발동できる。
PRINTL 덱からこのカード名以外の「트라미드」モンスター１体を손패に加える。
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ②：このモンスターがフィールドに存在する限り、
PRINTL 자신は通常소환に加えて１度だけ、자신メインフェイズに땅속성・원소정령족モンスター１体を소환できる。


@CARDCAN_31221(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,31221)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,31221)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 트라미드
	효과条件종류 = モン全般
	효과条件固名前 = 트라미드 헌터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_31221(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,31221,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 트라미드
		효과条件종류 = モン全般
		효과条件固名前 = 트라미드 헌터
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件속성 = 땅속성
	효과条件종족 = 원소정령족
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"召可")
ENDIF
