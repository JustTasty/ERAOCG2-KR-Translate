@CARDCAN_55545(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 発動不可,2

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,55545)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動
	SIF 発動済_1(決闘者,55545)
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
    CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 트라미드
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻守変動 || 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_55545(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 発動不可,2
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,55545,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 트라미드
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 攻守変動
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 트라미드
	効果条件固名前起動 = 1
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	CALL STATCHANGE_BASIC(決闘者,"自身",場所,RESULT*500,RESULT*500)

ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果条件固名前 = 트라미드 스핑크스
	CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"攻避")
ENDIF