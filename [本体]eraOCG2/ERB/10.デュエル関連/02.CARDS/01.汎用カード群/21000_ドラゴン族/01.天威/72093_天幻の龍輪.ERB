@CARDNAME_72093,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 천환의 용륜
	CASE "略称"
		RESULTS = 천환의 용륜
	CASE "カテゴリ"
		RESULTS:0 = 천위
ENDSELECT


@CARD_72093(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 速攻마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72093(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의  ①②의 효과는 1턴에 1번, 어느 1개 밖에 사용할 수 없다。
CALLFORM CARD_ABLE(1,마함起動,손패起動,フリー誘発)
PRINTL ①：자신 필드의 드래곤족 몬스터 1장을 릴리스하고 발동할 수 있다。
PRINTL 덱에서 드래곤족 몬스터 1장을 패에 넣는다。
PRINTL 효과 몬스터 이외의 몬스터를 릴리스하고 이 카드를 발동했을 경우,
PRINTL 패에 추가하지 않고 효과를 무효로 하여 특수 소환할 수도 있다。
CALLFORM CARD_ABLE(2,묘지起動)
PRINTL ②：자신 필드에 효과 몬스터 이외의 몬스터가 존재할 경우,
PRINTL 자신 메인 페이즈에 묘지의 이 카드를 제외해 발동할 수 있다。
PRINTL 「천환의 용륜」을 제외한 「천위」카드 1장을 덱에서 패에 넣는다。


@CARDCAN_72093(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72093)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,72093)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = モン全般
	효과条件종족 = 드래곤족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,72093)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 효과無し全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 천위
	효과条件固名前 = 천환의 용륜
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72093(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件달성

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72093,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件종류 = モン全般
		효과条件종족 = 드래곤족
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			SIF RESULT == 通常モン
				条件달성++
			TRYCALLFORM CARD_{選択カード_ID},"分割"
			SIF RESULT == 효과なし
				条件달성++
			RESULT = 0
			IF 条件달성 && モンスター数(듀얼리스트) < 5
				PRINTL 효과를 무효로 하고 특수 소환 하시겠습니까？
				CALL YN_CHOICE(듀얼리스트,"패에 넣는다","특수 소환한다")
			ENDIF
			IF RESULT == 0
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종류 = モン全般
				효과条件종족 = 드래곤족
				CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
			ELSEIF RESULT == 1
				CALL FULLRESET
				효과範囲덱 = 1
				효과条件종족 = 드래곤족
				효과추가종류:0 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72093,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 천위
		효과条件固名前 = 천환의 용륜
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
