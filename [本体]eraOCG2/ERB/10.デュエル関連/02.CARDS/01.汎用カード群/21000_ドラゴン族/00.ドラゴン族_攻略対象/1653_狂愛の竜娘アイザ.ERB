@CARDCAN_1653(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1653)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,1653)
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1653)
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF GETVAR(@"%対面者%_MZ_個Ｃ:戦闘場所(対面者)") < 1
		RETURN 0
	SIF GETVAR(@"%対面者%_MZ_悪Ｃ:戦闘場所(対面者)") < 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == バトル終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1653) == 0
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1653(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 好きな人

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1653,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 10
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
		IF RESULT == 1
			CALL CARD_SELECT(듀얼리스트,RESULT:1)
			好きな人 = RESULT
			CALL STATCHANGE_EFFECT(対面者,"필드",好きな人,"不材",2)
			CALL SET_FIELD_INFO(対面者,"필드",好きな人,"個Ｃ",1)
			CALL SET_FIELD_INFO(対面者,"필드",好きな人,"悪Ｃ",1)
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1653,2)
	IF RESULT == 0
		好きな人 = 戦闘場所(듀얼리스트,1)
		CALL FULLRESET
		효과추가종류 = 10
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",好きな人,"묘지")
	ENDIF

ELSEIF 종류 == バトル終了時強制
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
ENDIF


