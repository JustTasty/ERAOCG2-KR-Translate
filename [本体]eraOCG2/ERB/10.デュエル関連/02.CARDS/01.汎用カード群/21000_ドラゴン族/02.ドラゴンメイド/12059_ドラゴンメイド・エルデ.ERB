@CARDNAME_12059,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤메이드 에르데
	CASE "略称"
		RESULTS = 에르데
	CASE "カテゴリ"
		RESULTS:0 = 드래곤메이드
ENDSELECT


@CARD_12059(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 드래곤족
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2600
	CASE "守備力"
		RETURN 1600
	CASE "성별"
		RETURN 牝性
		CASE "連動ID"
		RETURN 2059
ENDSELECT

RETURN 0

@CARD_EXPLANATION_12059(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①③의 효과는 각각 1턴에 1번 밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動,フリー誘発)
PRINTL ①：자신 / 상대 턴에, 이 카드를 패에서 버리고 발동할 수 있다.
PRINTL 패에서 레벨 4 이하의「드래곤메이드" 몬스터 1장을 특수 소환한다.
CALLFORM CARD_ABLE(2,지속효과)
PRINTL ②：자신 필드에 융합 몬스터가 존재하는 한, 이 카드는 효과로는 파괴되지 않는다.
CALLFORM CARD_ABLE(3,バトル終了時)
PRINTL ③：자신 / 상대의 배틀 페이즈 종료시에 발동할 수 있다.
PRINTL 이 카드를 패에 넣고, 패에서 레벨 4 이하의「드래곤메이드" 몬스터 1장을 특수 소환한다.


@CARDCAN_12059(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,12059)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF ゾーン != "손패"
		RETURN 0
	SIF 발동済_1(듀얼리스트,12059)
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 드래곤메이드
	CALL 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル終了時
	SIF 발동済_3(듀얼리스트,12059)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 드래곤메이드
	CALL 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0


	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 융합
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_12059(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성

IF 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12059,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件カテゴリ = 드래곤메이드
		효과条件종류 = モン全般
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == バトル終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,12059,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,"필드",場所,3)	
		CALL FULLRESET
		효과範囲손패 = 1
		CALL 효과条件レベル_ADV(4, "以下")
		효과条件カテゴリ = 드래곤메이드
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"破耐")
ENDIF
