@CARDNAME_82057,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤메이드의 릴랙제이션
	CASE "略称"
		RESULTS = 드메 릴랙제이션
	CASE "カテゴリ"
		RESULTS:0 = 드래곤메이드
ENDSELECT


@CARD_82057(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_82057(종류)
#DIM DYNAMIC 종류
#DIMS DYNAMIC 듀얼리스트

PRINTL 이 카드명의 ①의 효과는 1턴에 1번 밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ①：자신 필드의「드래곤메이드" 몬스터 1장을 대상으로 하여, 아래의 효과 중 하나를 선택하여 발동할 수 있다.
PRINTL ●대상 몬스터를 주인의 패에 넣고 덱에서「드래곤메이드 릴랙제이션」이외의「드래곤메이드」카드 1장을 패에 넣는다.
PRINTL ●대상 몬스터를 주인의 패에 넣고, 상대 필드의 마법 / 함정 카드 1장을 골라 주인의 패로 되돌린다.

@CARDCAN_82057(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,82057)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,82057)
		RETURN 0	
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 드래곤메이드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_82057(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성,5



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82057,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 드래곤메이드
		효과条件종류 = モン全般
		효과条件行先플래그 = 손패行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件カテゴリ = 드래곤메이드
			효과条件固名前 = 드래곤메이드의 릴랙제이션
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성:0 = 1

			SIF 마함数(対面者) != 0
				条件달성:1 = 1

			IF 条件달성:0 == 1 && 条件달성:1 == 1
PRINTL 어느 쪽 효과를 발동하시겠습니까?
				CALL YN_CHOICE(듀얼리스트,"드래곤메이드 카드를 패에 넣는다","상대의 마법 / 함정 카드를 패로 되돌린다")
			ELSEIF 条件달성:0 == 1 && 条件달성:1 != 1
				RESULT = 0
			ELSEIF 条件달성:0 != 1 && 条件달성:1 == 1
				RESULT = 1
			ENDIF

			IF RESULT == 0
				CALL FULLRESET
				효과条件カテゴリ = 드래곤메이드
				효과条件固名前 = 드래곤메이드의 릴랙제이션
				CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
			ELSE
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"손패")
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,82057)
	IF RESULT == 0
	ENDIF
ENDIF
