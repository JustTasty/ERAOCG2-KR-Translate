@CARDCAN_50576(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,50576)
SIF RESULT == 1
	RETURN 0
IF 種類 == 戦場起動
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	IF 決闘者 == "自分"
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
	ENDIF
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦闘→墓地 || 種類 == 破壊→墓地
	CALL CARD_SS_CHECK(決闘者,50565,"墓地")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50576(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正


CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,50576)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%決闘者%_戦場:カウンタ") == -1
				CONTINUE
			SIF カウンタ == 場所
				CONTINUE
			CALL CARD_DISPOSE(決闘者,"戦場",カウンタ)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%決闘者%_魔罠:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(決闘者,"魔罠",カウンタ)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_戦場:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(対面者,"戦場",カウンタ)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_魔罠:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(対面者,"魔罠",カウンタ)
		NEXT
	ENDIF
ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"追戦",1)
ELSEIF 種類 == 戦闘→墓地 || 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,50576)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件名前 = 레드 데몬즈 드래곤
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF