@CARDCAN_93315(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,93315)
SIF RESULT == 1
	RETURN 0
IF 種類 == 魔罠起動 || 種類 == フリー誘発
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前:0 = 스타더스트 드래곤
	効果条件名前:1 = 레드 데몬즈 드래곤
	効果条件名前:2 = 기간틱 파이터
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_93315(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード,5
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 選択名前
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,93315)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件名前:0 = 스타더스트 드래곤
		効果条件名前:1 = 레드 데몬즈 드래곤
		効果条件名前:2 = 기간틱 파이터
		CALL CARD_ADD_GY_BASIC(決闘者,"戦場",ゾーン,場所)
		IF RESULT == 1
			CALLFORM CARDNAME_{RESULT:1}("名前")
			選択名前 = %RESULTS%
			CALL FULLRESET
			効果範囲EXデッキ = 1
			SIF 選択名前 == "스타더스트 드래곤"
				効果条件名前 = 스타더스트 드래곤/버스터
			SIF 選択名前 == "레드 데몬즈 드래곤"
				効果条件名前 = 레드 데몬즈 드래곤/버스터
			SIF 選択名前 == "레드 데몬즈 드래곤"
				効果条件名前 = 기간틱 파이터/버스터
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"攻撃表示")		
		ENDIF
	ENDIF
ENDIF
