@CARDCAN_50575(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,50575)
SIF RESULT == 1
	RETURN 0
IF 種類 == 発動誘発
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦闘→墓地 || 種類 == 破壊→墓地
	CALL CARD_SS_CHECK(決闘者,50555,"墓地")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_50575(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM 選択カード


CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,50575,10)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,除外行き,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"墓地")
		RETURN 1
	ENDIF
	RETURN 0

ELSEIF 種類 == 戦闘→墓地 || 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,50575)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件名前 = 스타더스트 드래곤
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF