#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 스타더스트 드래곤/버스터
	CASE "略称"
		RESULTS = 스타더스트/B
	CASE "カテゴリ"
		RESULTS:0 = 스타더스트
		RESULTS:1 = 버스터
ENDSELECT


@CARD_50575(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN シンクロ
	CASE "属性"
		RETURN 風属性
	CASE "種族"
		RETURN ドラゴン族
	CASE "レベル"
		RETURN 10
	CASE "攻撃力"
		RETURN 3000
	CASE "守備力"
		RETURN 2500
	CASE "性別"
		RETURN 牝性
ENDSELECT

