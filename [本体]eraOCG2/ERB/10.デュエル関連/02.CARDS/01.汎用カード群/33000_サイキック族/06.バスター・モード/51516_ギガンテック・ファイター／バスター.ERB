@CARDCAN_51516(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,51516)
SIF RESULT == 1
	RETURN 0

IF 種類 == 特殊召喚時
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件種族 = 戦士族
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦闘→墓地 || 種類 == 破壊→墓地
	CALL CARD_SS_CHECK(決闘者,51515,"墓地")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_51516(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正


CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51516)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件種族 = 戦士族
		効果条件任意 = 1
		効果条件複数 = 98
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 攻守変動
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲相手墓地 = 1
	効果条件種族 = 戦士族
	効果条件CNT = 1	
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	攻撃力修正 = RESULT * 100
	CALL STATCHANGE_BASIC(決闘者,"自身",場所,攻撃力修正,攻撃力修正)
	CALL STATCHANGE_BASIC(決闘者,"相手戦場",場所,-攻撃力修正,-攻撃力修正,51516)

ELSEIF 種類 == 戦闘→墓地 || 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51516)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件名前 = 기간틱 파이터
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF