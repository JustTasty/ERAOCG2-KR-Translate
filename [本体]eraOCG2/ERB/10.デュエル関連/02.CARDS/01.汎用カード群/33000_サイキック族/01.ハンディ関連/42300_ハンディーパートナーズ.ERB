@CARD_42300(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 融合
	CASE "属性"
		RETURN 風属性
	CASE "種族"
		RETURN サイキック族
	CASE "レベル"
		RETURN 8
	CASE "攻撃力"
		RETURN 2800
	CASE "守備力"
		RETURN 1200
	CASE "性別"
		RETURN 牝性
	CASE "連動ID"
		SELECTCASE RAND:2
			CASE 0
				RESULT:1 = 2300
				RETURN 2335
			CASE 1
				RESULT:1 = 2335
				RETURN 2300
		ENDSELECT
	CASE "追加日"
		RETURN 250810
ENDSELECT
RETURN 0

