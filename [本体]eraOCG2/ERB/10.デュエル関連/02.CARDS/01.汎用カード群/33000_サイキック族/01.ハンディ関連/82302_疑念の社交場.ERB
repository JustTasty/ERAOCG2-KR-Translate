@CARDCAN_82302(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,82302)
SIF RESULT == 1
	RETURN 0
IF 種類 == 魔罠起動 || (種類 == フリー誘発 && ゾーン == "魔罠")
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF 発動済_1(決闘者,82302)
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件固守備力 = 1200
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	;自明だが判別用
	SIF ゾーン != "墓地"
		RETURN 0
	;既に使用してるなら
	SIF 発動済_2(決闘者,82302)
		RETURN 0

	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件CNT = 1	
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_82302(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カードID
IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,82302,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件固守備力 = 1200
		効果条件召喚可 = 1
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件名前 = 핸디레이디
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(決闘者,"手札破壊",場所,"墓地")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,82302,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果条件固守備力 = 1200
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所,3)
	ENDIF
ENDIF
