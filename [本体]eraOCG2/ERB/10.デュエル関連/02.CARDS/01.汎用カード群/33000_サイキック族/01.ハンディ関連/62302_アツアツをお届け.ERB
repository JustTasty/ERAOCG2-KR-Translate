@CARDCAN_62302(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,62302)
SIF RESULT == 1
	RETURN 0
IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF 発動済_1(決闘者,62302)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲魔罠 = 1
	効果範囲戦場 = 1
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 墓地起動
	SIF ゾーン != "墓地"
		RETURN 0
	;既に使用してるなら
	SIF 発動済_2(決闘者,62302)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	;除外が行えない状況なら当然ダメ
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲除外 = 1
	効果条件カテゴリ = 핸디
	効果条件他所 = 1
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_62302(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM 召喚カード

IF 種類 == 魔罠起動 || 種類 == 手札起動
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,62302,1)
	IF RESULT == 0
		;通常魔法汎用発動後墓地送り処理
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)

		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲魔罠 = 1
		効果範囲戦場 = 1
		効果条件他所 = 1
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL CARDDRAW_BASIC(決闘者,1)
			CALL LIFE_CHANGE(決闘者,"増加","効果",1000,1)
			CALL FULLRESET
			効果範囲手札 = 1
			効果範囲墓地 = 1
			効果条件固守備力 = 1200
			CALLFORM 効果条件レベル_ADV(4, "以下")
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,62302,2)
	IF RESULT == 0
		;通常魔法汎用処理
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)

		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲除外 = 1
		効果条件カテゴリ = 핸디
		効果条件複数 = 3
		効果条件行先フラグ = デッキ行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL CARDDRAW_BASIC(決闘者,1)
		ENDIF
	ENDIF
ENDIF
