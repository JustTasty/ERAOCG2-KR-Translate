@CARDCAN_32407(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,32407)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0	
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0


	RETURN 1
ENDIF

@CARDEFFECT_32407(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 攻撃力修正
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
IF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃力修正 = 300 * RESULT:10

	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,32407)
	IF RESULT == 0
		CALL FULLRESET
		CALLFORM CARDNAME_{直前戦闘破壊ID(듀얼리스트,1)}("名前")
효과条件名前 = %RESULTS%
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "상대묘지",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_EROTICS_FIELD(듀얼리스트,"묘지",選択カード,1)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORMW %CALLNAME:조교대상%는 모레이 네펜테스에게 머리부터 먹혀버렸습니다.
				PRINTFORMW 버둥거리며 저항하고, 발버둥치며 괴로워하지만, 도망칠 곳은 없어 보입니다.
				CALL EROTIC_MOVE("丸飲み",조교대상, -1, 100)
			ENDIF
			CALL CARD_EQUIP_MONSTER(듀얼리스트,場所,"상대묘지",選択カード)
		ENDIF
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,32407,10)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_마함:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_魔_装:カウンタ") != 場所
				CONTINUE
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:カウンタ")}("종류")
			SIF RESULT <= 100
				CONTINUE
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:カウンタ")}("성별")
			IF RESULT == 牝性 || RESULT == ふたなり
				CALL CARD_EROTICS_FIELD(듀얼리스트,"마함",カウンタ)
;				CALL CARD_EROTICS_FIELD(듀얼리스트,"마함",カウンタ)
				IF RESULT != -1
					조교대상 = RESULT

					PRINTFORMW %CALLNAME:조교대상%는 저항에 지쳐, 체력을 회복하던 중 변화가 찾아온다…….
					PRINTFORMW 모레이 네펜테스의 내벽이 움직이기 시작하며, %CALLNAME:조교대상%를 삼키기 시작한 것이다.
					PRINTFORMW %CALLNAME:조교대상%는 서둘러 다시 발버둥치기 시작했지만 모든 것이 너무 늦었고, 오히려 손발을 움직일 때마다 깊고, 깊은 곳으로…….
					PRINTFORMW ………
					PRINTFORMW ……
					PRINTFORMW …
					PRINTFORMW 
					PRINTFORMW 포식을 마친 모레이 네펜테스는 크게 『꺼억~!』하고 만족스럽게 다음 사냥감을 찾기 시작했습니다.
					CALL EROTIC_MOVE("丸飲み",조교대상, -1, 500)
				ENDIF
			ENDIF
			CALLFORM CARD_{GETVAR(@"%듀얼리스트%_마함:カウンタ")}("攻撃力")
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",RESULT)
			CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ,破壊行き)
		NEXT
	ENDIF
ENDIF

