@CARDCAN_70558(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,70558)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = 엑시즈
	효과条件カテゴリ = 넘버즈
	효과条件固カテゴリ = カオス
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_70558(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 설정レベル
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 소환先_ID
#DIMS DYNAMIC 소환先名前
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,70558)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		;通常마법汎用処理
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件종류 = 엑시즈
		효과条件カテゴリ = 넘버즈
		효과条件固カテゴリ = カオス
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			설정レベル = GETVAR(@"%듀얼리스트%_MZ_星:選択カード") + 1
			CALL FULLRESET
			효과条件カテゴリ = カオス
			효과条件종류 = 엑시즈	
			;カオス넘버즈のカードIDは元の넘버즈のID + 100の場所に登録されているので、
			;その法則に沿って소환先IDを算出
			;ただし一部例外があるためここで吸収
			TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
			IF RESULTS == "No.39 유토피아" || RESULTS == "No.39 유토피아・ダブル"　|| RESULTS == "SNo.39 유토피아ONE" || RESULTS == "No.39 유토피아・ライジング"
				효과条件名前:0 = CNo.39 유토피아レイV
				효과条件名前:1 = CNo.39 유토피아レイ・ヴィクトリー
				효과条件名前:2 = 獣装合体 ライオ・ホープレイ
				효과条件名前:3 = 竜装合体 ドラゴニック・ホープレイ
			;今後の実装を見据えて……
			;これでシニューニャ出すことある？？
			ELSEIF RESULTS == "No.1 게이트 오브 누메론－에캄"
				효과条件名前 = CNo.1 게이트 오브 카오스 누메론－시뉴니아
			ELSEIF RESULTS == "No.5 망롱룡 데스 키메라 드래곤"
				효과条件名前 = CNo.5 망롱룡 카오스 키메라 드래곤
			ELSEIF RESULTS == "No.6 오파츠 아틀란타르"
				효과条件名前 = CNo.6 오파츠 카오스 아틀란타르
			ELSEIF RESULTS == "No.32 샤크 드레이크"
				효과条件名前 = CNo.32 샤크 드레이크 리바이스
			ELSE
				효과条件レベル = 설정レベル
				소환先_ID = 選択カード_ID + 100
				TRYCALLFORM CARDNAME_{소환先_ID}, "名前"
				효과条件名前 = %RESULTS%
			ENDIF
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カードB = RESULT
			;戻る
			IF 選択カードB != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カードB}")}(듀얼리스트,選択カードB)
				CALL RESETCONDITION_MAT(1)
				代替素材数 = 1
				重ねてＸ = 1
				素材条件固定 = 選択カード
				TRYCALLFORM XYZSUMMON(듀얼리스트,選択カードB)
			ENDIF
		ENDIF
	ENDIF
ENDIF