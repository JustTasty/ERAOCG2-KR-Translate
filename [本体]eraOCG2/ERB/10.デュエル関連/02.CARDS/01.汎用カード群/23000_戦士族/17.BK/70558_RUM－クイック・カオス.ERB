@CARDCAN_70558(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,70558)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	IF ゾーン == "手札"
		SIF ターンプレイヤー != 決闘者
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = エクシーズ
	効果条件カテゴリ = 넘버즈
	効果条件固カテゴリ = カオス
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_70558(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 設定レベル
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 召喚先_ID
#DIMS DYNAMIC 召喚先名前
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == 手札起動 || フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,70558)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		;通常魔法汎用処理
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件種類 = エクシーズ
		効果条件カテゴリ = 넘버즈
		効果条件固カテゴリ = カオス
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード != 9999
			設定レベル = GETVAR(@"%決闘者%_MZ_星:選択カード") + 1
			CALL FULLRESET
			効果条件カテゴリ = カオス
			効果条件種類 = エクシーズ	
			;カオス넘버즈のカードIDは元の넘버즈のID + 100の場所に登録されているので、
			;その法則に沿って召喚先IDを算出
			;ただし一部例外があるためここで吸収
			TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
			IF RESULTS == "No.39 希望皇ホープ" || RESULTS == "No.39 希望皇ホープ・ダブル"　|| RESULTS == "SNo.39 希望皇ホープONE" || RESULTS == "No.39 希望皇ホープ・ライジング"
				効果条件名前:0 = CNo.39 希望皇ホープレイV
				効果条件名前:1 = CNo.39 希望皇ホープレイ・ヴィクトリー
				効果条件名前:2 = 獣装合体 ライオ・ホープレイ
				効果条件名前:3 = 竜装合体 ドラゴニック・ホープレイ
			;今後の実装を見据えて……
			;これでシニューニャ出すことある？？
			ELSEIF RESULTS == "No.1 ゲート・オブ・ヌメロン－エーカム"
				効果条件名前 = CNo.1 ゲート・オブ・カオス・ヌメロン－シニューニャ
			ELSEIF RESULTS == "No.5 亡朧竜 デス・キマイラ・ドラゴン"
				効果条件名前 = CNo.5 亡朧龍 カオス・キマイラ・ドラゴン
			ELSEIF RESULTS == "No.6 先史遺産アトランタル"
				効果条件名前 = CNo.6 先史遺産カオス・アトランタル
			ELSEIF RESULTS == "No.32 海咬龍シャーク・ドレイク"
				効果条件名前 = CNo.32 海咬龍シャーク・ドレイク・リバイス
			ELSE
				効果条件レベル = 設定レベル
				召喚先_ID = 選択カード_ID + 100
				TRYCALLFORM CARDNAME_{召喚先_ID}, "名前"
				効果条件名前 = %RESULTS%
			ENDIF
			CALL CARD_CHOOSE_BASIC(決闘者,"EXデッキ",ゾーン,場所)
			選択カードB = RESULT
			;戻る
			IF 選択カードB != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_EXデッキ:{選択カードB}")}(決闘者,選択カードB)
				CALL RESETCONDITION_MAT(1)
				代替素材数 = 1
				重ねてＸ = 1
				素材条件固定 = 選択カード
				TRYCALLFORM XYZSUMMON(決闘者,選択カードB)
			ENDIF
		ENDIF
	ENDIF
ENDIF