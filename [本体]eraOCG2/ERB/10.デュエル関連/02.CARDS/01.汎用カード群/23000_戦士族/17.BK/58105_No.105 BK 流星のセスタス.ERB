@CARDCAN_58105(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,58105)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF メインフェイズ != 1 && バトルフェイズ != 1
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件表示 = 表側表示
	効果条件除去種 = 無効
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 墓地起動
	SIF 発動済_1(決闘者,58105)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ = RUM
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 短紋章起動
	RETURN 1
ENDIF


@CARDEFFECT_58105(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58105,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件表示 = 表側表示
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"無効")
		CALL FULLRESET
		CALL CARD_RESERV(決闘者,58105,短紋章予約)
	ENDIF
ELSEIF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58105,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = RUM
		CALL CARD_CHOOSE_BASIC(決闘者,"手札",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,"墓地",場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 短紋章起動
	CALL FULLRESET
	効果条件カテゴリ = BK
	効果条件種類 = モン全般
	CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"一破",1)
	CALL SET_PLAYER_INFO(決闘者,"ダメージ反射",1)
ENDIF