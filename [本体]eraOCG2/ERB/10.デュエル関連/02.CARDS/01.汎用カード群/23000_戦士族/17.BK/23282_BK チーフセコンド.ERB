@CARDCAN_23282(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,23282)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃時誘発
	SIF ゾーン != "手札"
		RETURN 0
	SIF 発動済_1(決闘者,23282)
		RETURN 0
	SIF ターンプレイヤー == 決闘者
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,23282,"手札")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種族 = 戦士族
	効果条件スーパー属性 = 炎属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_23282(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23282,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
		CALL EVADE_ATTACK(決闘者)
		CALL FULLRESET
		効果追加種類 = 1
		CALL CARD_REMOVAL_BASIC(決闘者,"両戦場単体",場所,"除外")
	ENDIF
ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ = BK
	CALL STATCHANGE_HAND(決闘者,"全体",場所,"召可")
ENDIF