@CARDCAN_58205(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58205)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,58205)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 通常함정
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 直前戦闘破壊ID(듀얼리스트,1) == 0
		RETURN 0
	SIF モンスター数(対面者) == 0
		RETURN 0
	RETURN 1

ELSEIF 종류 == 발동誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_条達:場所") == 0
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF モンスター数(対面者) == 0 && 마함数(対面者) == 0
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(듀얼리스트)
	SIF RESULT == 1
		RETURN 1
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT == 1
		RETURN 1
	RETURN 0
ENDIF


@CARDEFFECT_58205(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 最大選択数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58205,1)
	IF RESULT == 0
		最大選択数 = GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1
		SIF 最大選択数 > 5 - 마함数(듀얼리스트) 
			最大選択数 = 5 - 마함数(듀얼리스트) 
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 通常함정
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF 最大選択数 > RESULT
			最大選択数 = RESULT
		FOR カウンタ,0,最大選択数
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = 通常함정
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			選択カード_ID = RESULT:99
			IF 選択カード_ID != 9999
				CALL CARD_SELECT(듀얼리스트,選択カード)
				選択カード = RESULT
				TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
				IF MATCH(RESULTS,"카운터")
					CALL FULLRESET
					PRINTL 
					SETCOLOR C_YELLOW
					PRINTL カエストスは反撃の構えを取った！
					RESETCOLOR
					PRINTL 
					CALL CARD_ADD(듀얼리스트,"묘지","마함", 選択カード, "使化裏側표시")
				ELSE
					CALL FULLRESET
					CALL CARD_ADD(듀얼리스트,"묘지","마함", 選択カード, "裏側표시")
				ENDIF
			ENDIF
			CALL FULLRESET
			IF 듀얼리스트 == "자신" && 最大選択数 - カウンタ > 1
				PRINTL さらにカードをセットしますか？
				CALL YN_CHOICE(듀얼리스트)
				SIF RESULT == いいえ
					BREAK
			ENDIF
		NEXT
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58205,2)
	IF RESULT == 0
		효과추가종류 = 2
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58205,3,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",500,1)
	ENDIF
ENDIF