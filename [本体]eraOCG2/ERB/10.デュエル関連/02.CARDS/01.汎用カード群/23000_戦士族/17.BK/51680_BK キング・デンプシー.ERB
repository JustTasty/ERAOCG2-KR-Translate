@CARDCAN_51680(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,51680)
SIF RESULT == 1
	RETURN 0

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,51680)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件種類 = モン全般
	効果条件属性 = 炎属性
	効果条件種族 = 戦士族
	CALL 効果条件レベル_ADV(4,"以下")
	効果条件スーパー種類 = 魔罠全般
	効果条件スーパーカテゴリ = BK
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF 発動済_2(決闘者,51680)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件Ｘ素所持 = 999
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果範囲墓地 = 1
	効果条件種類 = 魔罠全般
	効果条件カテゴリ = RUM
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 短紋章起動
	RETURN 1
ENDIF

@CARDEFFECT_51680(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51680,1)
	IF RESULT == 0
		効果範囲デッキ = 1
		効果条件種類 = モン全般
		効果条件属性 = 炎属性
		効果条件種族 = 戦士族
		CALL 効果条件レベル_ADV(4,"以下")
		効果条件スーパー種類 = 魔罠全般
		効果条件スーパーカテゴリ = BK
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51680,2)
	IF RESULT == 0
		PRINTL 素材を取り除くモンスターを選んでください。
		効果範囲戦場 = 1
		効果条件Ｘ素所持 = 999
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		SIF 選択カード == 9999
			RETURN 0
		CALL CARD_SELECT(決闘者,選択カード)
		選択カード = RESULT
		CALL SET_FIELD_INFO(対象者（CS）,"戦場",選択カード（CS）,"Ｘ",-1)

		TRYCALLFORM CARDNAME_{選択カード_ID}, "名前"
		IF RESULTS == "BK 구속만병 리드블로"
			PRINTL 
			SETCOLOR C_YELLOW
			PRINTL 리드블로の구속が解かれた！
			RESETCOLOR
			PRINTL 
			CALL SET_FIELD_INFO(決闘者,"戦場",選択カード（CS）,"永攻",800)
		ENDIF

		CALL FULLRESET
		効果範囲デッキ = 1
		効果範囲墓地 = 1
		効果条件種類 = 魔罠全般
		効果条件カテゴリ = RUM
		CALL CARD_SET_ADV(決闘者,ゾーン,場所,"裏側表示")

		CALL CARD_RESERV(決闘者,51680,短紋章予約)


	ENDIF
ELSEIF 種類 == 短紋章起動
	CALL FULLRESET
	効果条件カテゴリ = BK
	効果条件種類 = モン全般
	CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"対耐")
ENDIF