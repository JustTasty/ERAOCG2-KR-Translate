@CARDNAME_63279,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 버닝나클 스피릿
	CASE "略称"
		RESULTS = BK 스피릿
	CASE "カテゴリ"
		RESULTS:0 = BK
ENDSELECT


@CARD_63279(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 通常魔法
	CASE "追加日"
		RETURN 250707
ENDSELECT

RETURN 0

@CARD_EXPLANATION_63279(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の①②の効果はそれぞれ１ターンに１枚しか発動できない。
CALLFORM CARD_ABLE(1,魔罠起動,手札起動)
PRINTL ①：デッキの一番上のカードを墓地へ送り、自分の墓地の「ＢＫ」モンスター１体を対象として発動できる。
PRINTL そのモンスターを守備表示で特殊召喚する。
CALLFORM CARD_ABLE(2,墓地起動)
PRINTL ②：墓地のこのカードを除外して発動できる。
PRINTL 自分の墓地の「버닝나클 스피릿」以外の「ＢＫ」魔法カードまたは「カウンター」罠カード１枚を手札に加える。

@CARDCAN_63279(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,63279)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF 発動済_1(決闘者,63279)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種類 = モン全般
	効果条件カテゴリ = BK
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 墓地起動
	SIF 発動済_2(決闘者,63279)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ:0 = BK
	効果条件カテゴリ:0 = カウンター
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_63279(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

IF 種類 == 魔罠起動 || 種類 == 手札起動
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,63279,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL CARD_DECK_DISPOSE(決闘者,"デッキ",1)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件種類 = モン全般
		効果条件カテゴリ = BK
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,70143,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ:0 = BK
		効果条件カテゴリ:0 = カウンター
		効果条件種類 = 魔罠全般
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF
