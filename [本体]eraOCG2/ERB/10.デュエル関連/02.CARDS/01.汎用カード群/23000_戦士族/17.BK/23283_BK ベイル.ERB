	CASE "種類"
		RETURN 効果モン
	CASE "属性"
		RETURN 炎属性
	CASE "種族"
		RETURN 戦士族 
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 1800
	CASE "追加日"
		RETURN 250707
