		RETURN 4
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 200
	CASE "추가日"
		RETURN 250707
ENDSELECT

RETURN 0

@CARD_EXPLANATION_23279(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①②の효과はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,소환時,특수소환時)
PRINTL ①：このカードが소환・특수소환した場合に발동できる。
PRINTL 「ＢＫ 어퍼커터」以外の「ＢＫ」モンスター１体か「카운터」함정カード１枚を덱から손패に加える。
CALLFORM CARD_ABLE(2,필드→묘지 ,손패→묘지 ,덱→묘지 ,破壊→묘지)
PRINTL ②：このカードが효과で묘지へ送られた場合に발동できる。
PRINTL 以下の효과から１つを選んで適用する。
PRINTL ●자신の묘지から「ＢＫ 어퍼커터」以外の「ＢＫ」モンスター１体を특수소환する。
PRINTL ●자신の묘지から「카운터」함정カード１枚を자신フィールドにセットする。

@CARDCAN_23279(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,23279)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,23279)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = BK
	효과条件종류 = モン全般
	효과条件固名前 = BK 어퍼커터
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 카운터
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지
	SIF 발동済_2(듀얼리스트,23279)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = BK
	효과条件종류 = モン全般
	효과条件固名前 = BK 어퍼커터
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 카운터
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0
ENDIF

@CARDEFFECT_23279(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23279,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ:0 = BK
		효과条件固名前 = BK 어퍼커터
		효과条件종류 = モン全般
		효과条件スーパーカテゴリ = 카운터
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,23279,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = BK
		효과条件固名前 = BK 어퍼커터
		효과条件종류 = モン全般
		효과条件スーパーカテゴリ = 카운터
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード_ID != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			TRYCALLFORM CARD_{選択カード_ID},"종류"
			IF RESULT <= 10
				CALL FULLRESET
				CALL CARD_SP_SUMMON(듀얼리스트,"묘지",選択カード)
			ELSE
				CALL FULLRESET
				CALL CARD_ADD(듀얼리스트,"묘지","마함", 選択カード, "裏側표시")
			ENDIF
		ENDIF
	ENDIF
ENDIF