#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = BK 어퍼커터
	CASE "略称"
		RESULTS = BKアッパー
	CASE "カテゴリ"
		RESULTS:0 = BK
ENDSELECT


