@CARDNAME_23279,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = BK 어퍼커터
	CASE "略称"
		RESULTS = BKアッパー
	CASE "カテゴリ"
		RESULTS:0 = BK
ENDSELECT


@CARD_23279(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
		RETURN 効果モン
	CASE "属性"
		RETURN 炎属性
	CASE "種族"
		RETURN 戦士族 
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 200
	CASE "追加日"
		RETURN 250707
ENDSELECT

RETURN 0

@CARD_EXPLANATION_23279(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の①②の効果はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,召喚時,特殊召喚時)
PRINTL ①：このカードが召喚・特殊召喚した場合に発動できる。
PRINTL 「ＢＫ 어퍼커터」以外の「ＢＫ」モンスター１体か「カウンター」罠カード１枚をデッキから手札に加える。
CALLFORM CARD_ABLE(2,戦場→墓地 ,手札→墓地 ,デッキ→墓地 ,破壊→墓地)
PRINTL ②：このカードが効果で墓地へ送られた場合に発動できる。
PRINTL 以下の効果から１つを選んで適用する。
PRINTL ●自分の墓地から「ＢＫ 어퍼커터」以外の「ＢＫ」モンスター１体を特殊召喚する。
PRINTL ●自分の墓地から「カウンター」罠カード１枚を自分フィールドにセットする。

@CARDCAN_23279(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,23279)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,23279)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = BK
	効果条件種類 = モン全般
	効果条件固名前 = BK 어퍼커터
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = カウンター
	効果条件種類 = 罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 種類 == 戦場→墓地 || 種類 == 手札→墓地 || 種類 == デッキ→墓地 || 種類 == 破壊→墓地
	SIF 発動済_2(決闘者,23279)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = BK
	効果条件種類 = モン全般
	効果条件固名前 = BK 어퍼커터
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = カウンター
	効果条件種類 = 罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0
ENDIF

@CARDEFFECT_23279(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23279,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ:0 = BK
		効果条件固名前 = BK 어퍼커터
		効果条件種類 = モン全般
		効果条件スーパーカテゴリ = カウンター
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 戦場→墓地 || 種類 == 手札→墓地 || 種類 == デッキ→墓地 || 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,23279,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = BK
		効果条件固名前 = BK 어퍼커터
		効果条件種類 = モン全般
		効果条件スーパーカテゴリ = カウンター
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		選択カード = RESULT
		選択カード_ID = RESULT:99
		IF 選択カード_ID != 9999
			CALL CARD_SELECT(決闘者,選択カード)
			選択カード = RESULT
			TRYCALLFORM CARD_{選択カード_ID},"種類"
			IF RESULT <= 10
				CALL FULLRESET
				CALL CARD_SP_SUMMON(決闘者,"墓地",選択カード)
			ELSE
				CALL FULLRESET
				CALL CARD_ADD(決闘者,"墓地","魔罠", 選択カード, "裏側表示")
			ENDIF
		ENDIF
	ENDIF
ENDIF