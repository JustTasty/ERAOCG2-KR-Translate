@CARDCAN_58079(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,58079)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動
	CALL FULLRESET
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ = BK
	効果条件種類 = モン全般
	効果条件スーパー種類 = 通常罠
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 破壊→墓地 || 種類 == 戦闘→墓地
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = BK
	効果条件種類 = エクシーズ以外
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") < 0
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_58079(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58079,10)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件カテゴリ = BK
		効果条件種類 = モン全般
		効果条件スーパー種類 = 通常罠
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件カテゴリ = BK
			効果条件種類 = モン全般		
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
			CALL SET_FIELD_INFO(決闘者,"戦場",場所,"Ｘ",1)
		ENDIF
	ENDIF

ELSEIF 種類 == 破壊→墓地 || 種類 == 戦闘→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58079,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = BK
		効果条件種類 = エクシーズ以外
		効果条件任意 = 1
		効果条件複数 = 98
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 攻守変動
	攻撃力修正 = (GETVAR(@"%決闘者%_MZ_Ｘ:場所") + 1) * 100
	CALL STATCHANGE_BASIC(決闘者,"自身",場所,攻撃力修正)
ENDIF