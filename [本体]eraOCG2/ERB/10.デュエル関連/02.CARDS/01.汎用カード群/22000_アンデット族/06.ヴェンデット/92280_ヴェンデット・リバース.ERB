@CARD_EXPLANATION_92280(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の①②の効果は１ターンに１度、いずれか１つしか使用できない。
CALLFORM CARD_ABLE(1,魔罠起動,フリー誘発)
PRINTL ①：手札を１枚捨て、自分の墓地の「벤데드」モンスター１体と儀式魔法カード１枚を対象として発動できる。
PRINTL そのモンスターを守備表示で特殊召喚し、その儀式魔法カードを手札に加える。
CALLFORM CARD_ABLE(1,墓地起動,フリー誘発)
PRINTL ②：墓地のこのカードを除外して発動できる。
PRINTL 自分の除外状態の「벤데드」モンスターを素材として墓地に戻し、
PRINTL 手札・墓地から「벤데드」儀式モンスター１体を儀式召喚する。


@CARDCAN_92280(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,92280)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || (種類 == フリー誘発 && ゾーン == "魔罠")
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF 発動済_1(決闘者,92280)
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") != 2
		RETURN 0
	SIF 手札数(決闘者) < 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 벤데드
	効果条件種類 = 儀式以外
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 儀式魔法
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	SIF 発動済_1(決闘者,92280)
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲除外 = 1
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
	効果条件種類 = 儀式
	効果条件カテゴリ = 벤데드
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_92280(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || (種類 == フリー誘発 && ゾーン == "魔罠")
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,92280,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 벤데드
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所,"守備表示")
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件カテゴリ = 儀式魔法
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 種類 == 墓地起動 || (種類 == フリー誘発 && ゾーン == "墓地")
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,92280,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL RESETAREA_MAT
		素材範囲除外 = 1
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲墓地 = 1
		効果条件種類 = 儀式
		効果条件カテゴリ = 벤데드
		効果条件召喚可 = 1
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		IF RESULT != 9999
			CALL CARD_SELECT(決闘者,RESULT)
			選択カード = RESULT
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_%参照先（CS）%:選択カード")}(決闘者,選択カード)
			素材範囲除外 = 1
			TRYCALLFORM RITSUMMON(決闘者, 選択カード,参照先（CS）,効果墓地行き)
		ENDIF
	ENDIF
ENDIF

