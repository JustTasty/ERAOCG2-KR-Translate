@CARDCAN_22060(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,22060)
SIF RESULT == 1
	RETURN 0

IF 種類 == 墓地起動
	SIF 発動済_1(決闘者,22060)
		RETURN 0
	SIF GETVAR(@"ライフ_%決闘者%") <= 1000
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF モンスター数(対面者) < 1
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,22060,"墓地")
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == R素材時効果
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = 벤데드
	効果条件種類 = 儀式
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

;――――――――――――――――――――――――付与効果――――――――――――――――――――――――

ELSEIF 種類 == 戦場起動付与
	SIF 発動済_2(決闘者,29103)
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件召種 = 召種全特殊
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_22060(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 選択カード

IF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,22060,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(決闘者,"減少","コスト",1000)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件名前 = 벤데드 레버넌트
		効果追加種類 = 効追除処
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == R素材時効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,22060)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 벤데드
		効果条件種類 = 儀式
		効果条件表示 = 表側表示
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:選択カード"),1) != 1
				CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"汎数",2)
		ENDIF
	ENDIF

;――――――――――――――――――――――――付与効果――――――――――――――――――――――――

ELSEIF 種類 == 戦場起動付与
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,22060,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件召種 = 召種全特殊
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"除外")
	ENDIF
ENDIF

