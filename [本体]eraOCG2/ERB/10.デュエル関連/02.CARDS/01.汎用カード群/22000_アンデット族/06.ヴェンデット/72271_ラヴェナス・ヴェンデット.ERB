#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 래버너스 벤데드
	CASE "略称"
		RESULTS = Ravenous VD.
	CASE "カテゴリ"
		RESULTS:0 = 벤데드
		RESULTS:1 = 儀式魔法
ENDSELECT


