@CARDCAN_72274(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72274)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,72274)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1
	素材範囲덱 = 1
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = 의식
	효과条件カテゴリ = 벤데드
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時予約 || 종류 == ターン終了時予約
	RETURN 1
ENDIF


@CARDEFFECT_72274(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72274,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL RESETAREA_MAT
		素材範囲손패 = 1
		素材範囲필드 = 1
		素材範囲덱 = 1
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종류 = 의식
		효과条件カテゴリ = 벤데드
		효과条件소환可 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			CALL CARD_SELECT(듀얼리스트,RESULT)
			選択カード = RESULT
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_%参照先（CS）%:選択カード")}(듀얼리스트,選択カード)
			素材範囲필드 = 1
			素材範囲손패 = 1
			素材範囲덱 = 1
			TRYCALLFORM RITSUMMON(듀얼리스트, 選択カード,参照先（CS）)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"個Ｃ",1)
			CALL CARD_RESERV(듀얼리스트,72274,スタン予約)
		ENDIF
		EX소환可能종족 = 언데드족
		CALL CARD_EX_RESTRICTION(듀얼리스트)
	ENDIF

ELSEIF 종류 == ターン開始時予約
	CALL CARD_RESERV(듀얼리스트,72274,エンド予約)

ELSEIF 종류 == ターン終了時予約
	PRINTL 【破壊する몬스터를 選択してください】
	PRINTL
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 벤데드
	효과条件종류 = 의식
	효과条件個Ｃ所持 = 999
	효과条件行先플래그 = 破壊行き
	CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
ENDIF

