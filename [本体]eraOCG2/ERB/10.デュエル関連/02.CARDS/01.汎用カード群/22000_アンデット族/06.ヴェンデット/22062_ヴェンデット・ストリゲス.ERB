@CARDCAN_22062(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,22062)
SIF RESULT == 1
	RETURN 0

IF 種類 == 墓地起動
	SIF 発動済_1(決闘者,22062)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,22062,"墓地")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ = 벤데드
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == R素材時効果
	SIF 発動済_2(決闘者,22062)
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = 벤데드
	効果条件種類 = 儀式
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_22062(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 選択カード

IF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,22062,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件カテゴリ = 벤데드
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件名前 = 벤데드 헬하운드
			効果追加種類 = 効追除処
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 種類 == R素材時効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,29103,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 벤데드
		効果条件種類 = 儀式
		効果条件表示 = 表側表示
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:選択カード"),3) != 1
				CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"汎数",6)
		ENDIF
	ENDIF
ENDIF
