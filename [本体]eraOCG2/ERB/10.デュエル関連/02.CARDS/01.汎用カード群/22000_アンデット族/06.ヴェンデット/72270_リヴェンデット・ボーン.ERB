@CARDNAME_72270,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 리벤데드 본
	CASE "略称"
		RESULTS = RVD.Origin
	CASE "カテゴリ"
		RESULTS:0 = 벤데드
		RESULTS:1 = 의식 마법
ENDSELECT


@CARD_72270(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常마법
	CASE "추가日"
		RETURN 250707
ENDSELECT

RETURN 0

