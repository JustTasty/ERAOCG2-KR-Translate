@CARDCAN_72270(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,72270)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲戦場 = 1
	素材範囲手札 = 1
	素材範囲墓地 = 1
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
	効果条件種類 = 儀式
	効果条件カテゴリ = 벤데드
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 身代効果
	SIF ゾーン != "墓地"
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	TRYCALLFORM CARDNAME_{破壊対象ID},"名前"
	SIF RESULTS == "벤데드 슬레이어"
		RETURN 0
	SIF !GROUPMATCH(破壊種類,"効果","戦闘")
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_72270(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72270)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL RESETAREA_MAT
		素材範囲手札 = 1
		素材範囲戦場 = 1
		素材範囲墓地 = 1
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲墓地 = 1
		効果条件種類 = 儀式
		効果条件カテゴリ = 벤데드
		効果条件召喚可 = 1
		CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		IF RESULT != 9999
			CALL CARD_SELECT(決闘者,RESULT)
			選択カード = RESULT
			CALL RESETAREA_MAT
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%決闘者%_%参照先（CS）%:選択カード")}(決闘者,選択カード)
			素材範囲戦場 = 1
			素材範囲手札 = 1
			素材範囲墓地 = 1
			TRYCALLFORM RITSUMMON(決闘者, 選択カード,参照先（CS）)
		ENDIF
	ENDIF

ELSEIF 種類 == 身代効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72270)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

