@CARDCAN_51061(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,2

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51061)
SIF RESULT == 1
	RETURN 0

IF 종류 == 戦破壊→묘지
	SIF 발동済_3(듀얼리스트,51061)
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"戦闘破壊","破壊")
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 벤데드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	;レヴナント
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		발동불가:0 = 1
	SIF 발동済_1(듀얼리스트,51061)
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種全특수
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	;ヘルハン
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
		발동불가:1 = 1
	SIF 발동済_2(듀얼리스트,51061)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1

	SIF 발동불가:0 == 1 && 발동불가:1 == 1
		RETURN 0
	RETURN 1

;ストリゲスの付与효과
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),3) != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_51061(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 발동불가,2
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51061,3)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 벤데드
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"変化元ID",51060)
	IF GETVAR(@"%듀얼리스트%_MZ_召種:場所") == 召種EX덱
		CALL FULLRESET
		효과条件他所 = 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"마함",場所,"対耐")
	ENDIF


ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		발동불가:0 = 1
	SIF 발동済_1(듀얼리스트,51061)
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種全특수
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
		발동불가:1 = 1
	SIF 발동済_2(듀얼리스트,51061)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1

	IF 발동불가:0 != 1 && 발동불가:1 != 1
		PRINTL 使用する효과を選択してください
		CALL YN_CHOICE(듀얼리스트,"●벤데드 레버넌트","●벤데드 헬하운드")
	ELSEIF 발동불가:0 != 1
		RESULT = 0
	ELSEIF 발동불가:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51061,1)
		IF RESULT == 0
			CALL FULLRESET
			효과条件召種 = 召種全특수
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"제외")
		ENDIF
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51061,2)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"제외")
		ENDIF
	ENDIF

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51061)
	IF RESULT == 0
		CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,2)
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF