@CARDCAN_51063(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 発動不可,3

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,51063)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	
	;スカベンジャー
	SIF 発動済_1(決闘者,51063)
		発動不可:2 = 1
	SIF メインフェイズ != 1
		発動不可:2 = 1
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種族 = アンデット族
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:2 = 1
	
	IF GETVAR(@"%決闘者%_除外NG置換") >= 1
		発動不可:0 = 1
		発動不可:1 = 1
	ENDIF

	;レヴナント
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),1) != 1
		発動不可:0 = 1
	SIF 発動済_3(決闘者,51063)
		発動不可:0 = 1
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件召種 = 召種全特殊
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	;ヘルハン
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),2) != 1
		発動不可:1 = 1
	SIF 発動済_4(決闘者,51063)
		発動不可:1 = 1
	CALL FULLRESET
	効果範囲相手魔罠 = 1
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1

	SIF 発動不可:0 == 1 && 発動不可:1 == 1 && 発動不可:2 == 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 墓地起動
	SIF 発動済_2(決闘者,51063)
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件名前 = 벤데드 스캐벤저
	効果条件特不無視 = 1
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = 벤데드 슬레이어
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

;ストリゲスの付与効果
ELSEIF 種類 == 攻撃後誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),3) != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_51063(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 発動不可,3
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動
	;スカベンジャー
	SIF 発動済_1(決闘者,51063)
		発動不可:2 = 1
	SIF メインフェイズ != 1
		発動不可:2 = 1
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種族 = アンデット族
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:2 = 1
	
	
	IF GETVAR(@"%決闘者%_除外NG置換") >= 1
		発動不可:0 = 1
		発動不可:1 = 1
	ENDIF

	;レヴナント
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),1) != 1
		発動不可:0 = 1
	SIF 発動済_3(決闘者,51063)
		発動不可:0 = 1
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件召種 = 召種全特殊
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	;ヘルハン
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),2) != 1
		発動不可:1 = 1
	SIF 発動済_4(決闘者,51063)
		発動不可:1 = 1
	CALL FULLRESET
	効果範囲相手魔罠 = 1
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1
	
	IF 決闘者 == "自分"
		PRINTL 使用する効果を選択してください
		PRINTL 
		SIF 発動不可:0 != 1
			PRINTL [0] - ●レヴナント
		SIF 発動不可:1 != 1
			PRINTL [1] - ●ヘルハウンド
		SIF 発動不可:2 != 1
			PRINTL [2] - ●スカヴェンジャー
	ELSE
		SIF 発動不可:2 != 1
			RESULT = 2
		SIF 発動不可:1 != 1
			RESULT = 1
		SIF 発動不可:0 != 1
			RESULT = 0
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51063,3)
		IF RESULT == 0
			CALL FULLRESET
			効果条件召種 = 召種全特殊
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"除外")
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51063,4)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"魔罠単体",場所,"除外")
		ENDIF
		
	ELSEIF RESULT == 2
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51063,1)
		IF RESULT == 0
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件種族 = アンデット族
			効果条件他所 = 1
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARD_{RESULT:1},"攻撃力"
				CALL SET_FIELD_INFO(決闘者,ゾーン,場所,"一攻",RESULT)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51063,2)
	IF RESULT == 0
		CALL FULLRESET
		効果追加種類 = 効追除処
		CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 攻撃後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51063)
	IF RESULT == 0
		CALL URARA_CHANCE(決闘者,処理中_効果ID,"雑多")
		IF RESULT == 0
			CALL CARDDRAW_BASIC(決闘者,2)
			CALL FULLRESET
			効果範囲手札 = 1
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF