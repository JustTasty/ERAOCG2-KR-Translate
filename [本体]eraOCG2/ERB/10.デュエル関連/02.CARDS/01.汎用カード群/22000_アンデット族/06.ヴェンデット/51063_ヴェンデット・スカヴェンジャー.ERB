CALL CARD_ABLE(2,묘지起動)
PRINTL ②：자신 필드에 "리벤데드 슬레이어"가 존재하는 경우에 발동할 수 있다。
PRINTL 이 카드를 묘지에서 특수 소환한다。
PRINTL 이 효과로 특수 소환한 이 카드는、필드에서 벗어난 경우에 제외된다。


@CARDCAN_51063(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,3

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,51063)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	
	;スカベンジャー
	SIF 발동済_1(듀얼리스트,51063)
		발동불가:2 = 1
	SIF メインフェイズ != 1
		발동불가:2 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 언데드족
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:2 = 1
	
	IF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		발동불가:0 = 1
		발동불가:1 = 1
	ENDIF

	;レヴナント
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		발동불가:0 = 1
	SIF 발동済_3(듀얼리스트,51063)
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種全특수
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	;ヘルハン
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
		발동불가:1 = 1
	SIF 발동済_4(듀얼리스트,51063)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1

	SIF 발동불가:0 == 1 && 발동불가:1 == 1 && 발동불가:2 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,51063)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 벤데드 스캐벤저
	효과条件特不無視 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 벤데드 슬레이어
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

;ストリゲスの付与효과
ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),3) != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_51063(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 발동불가,3
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	;スカベンジャー
	SIF 발동済_1(듀얼리스트,51063)
		발동불가:2 = 1
	SIF メインフェイズ != 1
		발동불가:2 = 1
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 언데드족
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:2 = 1
	
	
	IF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		발동불가:0 = 1
		발동불가:1 = 1
	ENDIF

	;レヴナント
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),1) != 1
		발동불가:0 = 1
	SIF 발동済_3(듀얼리스트,51063)
		발동불가:0 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件召種 = 召種全특수
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	;ヘルハン
	SIF GETBIT(GETVAR(@"%듀얼리스트%_MZ_汎数:場所"),2) != 1
		발동불가:1 = 1
	SIF 발동済_4(듀얼리스트,51063)
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件除去種 = 제외
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	IF 듀얼리스트 == "자신"
		PRINTL 使用する효과を選択してください
		PRINTL 
		SIF 발동불가:0 != 1
			PRINTL [0] - ●レヴナント
		SIF 발동불가:1 != 1
			PRINTL [1] - ●ヘルハウンド
		SIF 발동불가:2 != 1
			PRINTL [2] - ●スカヴェンジャー
	ELSE
		SIF 발동불가:2 != 1
			RESULT = 2
		SIF 발동불가:1 != 1
			RESULT = 1
		SIF 발동불가:0 != 1
			RESULT = 0
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51063,3)
		IF RESULT == 0
			CALL FULLRESET
			효과条件召種 = 召種全특수
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"제외")
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51063,4)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함単体",場所,"제외")
		ENDIF
		
	ELSEIF RESULT == 2
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51063,1)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲필드 = 1
			효과条件종족 = 언데드족
			효과条件他所 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				TRYCALLFORM CARD_{RESULT:1},"攻撃力"
				CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"一攻",RESULT)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51063,2)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 効追除処
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,51063)
	IF RESULT == 0
		CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,2)
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF