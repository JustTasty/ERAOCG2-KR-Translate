@CARDCAN_51064(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 発動不可,2

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,51064)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,51064)
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種族 = アンデット族
	効果条件スーパーカテゴリ = 벤데드
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == R素材時効果
	SIF 発動済_2(決闘者,51064)
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
[SKIPSTART]
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0

	;レヴナント
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),1) != 1
		発動不可:0 = 1
	SIF 発動済_3(決闘者,51064)
		発動不可:0 = 1
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件召種 = 召種全特殊
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	;ヘルハン
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),2) != 1
		発動不可:1 = 1
	SIF 発動済_4(決闘者,51064)
		発動不可:1 = 1
	CALL FULLRESET
	効果範囲相手魔罠 = 1
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1

	SIF 発動不可:0 == 1 && 発動不可:1 == 1
		RETURN 0
	RETURN 1

;ストリゲスの付与効果
ELSEIF 種類 == 攻撃後誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),3) != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
[SKIPEND]
ENDIF

