		発動不可:0 = 1
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件召種 = 召種全特殊
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),2) != 1
		発動不可:1 = 1
	SIF 発動済_4(決闘者,51064)
		発動不可:1 = 1
	CALL FULLRESET
	効果範囲相手魔罠 = 1
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1

	IF 発動不可:0 != 1 && 発動不可:1 != 1
		PRINTL 使用する効果を選択してください
		CALL YN_CHOICE(決闘者,"●벤데드 레버넌트","●벤데드 헬하운드")
	ELSEIF 発動不可:0 != 1
		RESULT = 0
	ELSEIF 発動不可:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51064,3)
		IF RESULT == 0
			CALL FULLRESET
			効果条件召種 = 召種全特殊
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"除外")
		ENDIF

	ELSEIF RESULT == 1
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51064,4)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"魔罠単体",場所,"除外")
		ENDIF
	ENDIF

ELSEIF 種類 == 攻撃後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51064)
	IF RESULT == 0
		CALL URARA_CHANCE(決闘者,処理中_効果ID,"雑多")
		IF RESULT == 0
