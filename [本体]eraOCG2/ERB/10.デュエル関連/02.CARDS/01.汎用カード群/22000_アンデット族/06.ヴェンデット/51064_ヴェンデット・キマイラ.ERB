	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51064,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場全体",場所,"永攻DOWN",500)
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場全体",場所,"永守DOWN",500)
	ENDIF

[SKIPSTART]
ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
