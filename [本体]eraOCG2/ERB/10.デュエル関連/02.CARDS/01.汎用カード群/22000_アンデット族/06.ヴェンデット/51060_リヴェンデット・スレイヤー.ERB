@CARDCAN_51060(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 発動不可,2

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,51060)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃時誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種族 = アンデット族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦破壊→墓地
	SIF 発動済_2(決闘者,51060)
		RETURN 0
	SIF !GROUPMATCH(墓地送り種類,"戦闘破壊","破壊","リリース")
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 儀式魔法
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 벤데드
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0

	;レヴナント
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),1) != 1
		発動不可:0 = 1
	SIF 発動済_1(決闘者,51060)
		発動不可:0 = 1
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件召種 = 召種全特殊
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	;ヘルハン
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),2) != 1
		発動不可:1 = 1
	SIF 発動済_3(決闘者,51060)
		発動不可:1 = 1
	CALL FULLRESET
	効果範囲相手魔罠 = 1
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1

	SIF 発動不可:0 == 1 && 発動不可:1 == 1
		RETURN 0
	RETURN 1

;ストリゲスの付与効果
ELSEIF 種類 == 攻撃後誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),3) != 1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_51060(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 発動不可,2
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51060)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件種族 = アンデット族
		効果条件行先フラグ = 除外行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL SET_FIELD_INFO(決闘者,ゾーン,場所,"永攻",300)
		ENDIF
	ENDIF

ELSEIF 種類 == 戦破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51060,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 儀式魔法
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲デッキ = 1
			効果条件カテゴリ = 벤데드
			効果条件種類 = モン全般
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF


ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),1) != 1
		発動不可:0 = 1
	SIF 発動済_1(決闘者,51060)
		発動不可:0 = 1
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件召種 = 召種全特殊
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:0 = 1

	SIF GETBIT(GETVAR(@"%決闘者%_MZ_汎数:場所"),2) != 1
		発動不可:1 = 1
	SIF 発動済_3(決闘者,51060)
		発動不可:1 = 1
	CALL FULLRESET
	効果範囲相手魔罠 = 1
	効果条件除去種 = 除外
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		発動不可:1 = 1

	IF 発動不可:0 != 1 && 発動不可:1 != 1
		PRINTL 使用する効果を選択してください
		CALL YN_CHOICE(決闘者,"●벤데드 레버넌트","●벤데드 헬하운드")
	ELSEIF 発動不可:0 != 1
		RESULT = 0
	ELSEIF 発動不可:1 != 1
		RESULT = 1
	ENDIF

	IF RESULT == 0
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51060,1)
		IF RESULT == 0
			CALL FULLRESET
			効果条件召種 = 召種全特殊
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"除外")
		ENDIF
	ELSEIF RESULT == 1
		CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51060,3)
		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"魔罠単体",場所,"除外")
		ENDIF
	ENDIF

ELSEIF 種類 == 攻撃後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,51060)
	IF RESULT == 0
		CALL URARA_CHANCE(決闘者,処理中_効果ID,"雑多")
		IF RESULT == 0
			CALL CARDDRAW_BASIC(決闘者,2)
			CALL FULLRESET
			効果範囲手札 = 1
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF