@CARDNAME_72225,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 퓨어리 마이프렌드
	CASE "略称"
		RESULTS = 마이프렌드
	CASE "カテゴリ"
		RESULTS:0 = 퓨어리
ENDSELECT


@CARD_72225(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_72225(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의  ①②의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALL CARD_ABLE(1,마함起動)
PRINTL ① : 500LP를 지불하여 발동할 수 있다.
PRINTL 덱에서 '퓨어리 마이프렌드' 이외의 '퓨어리' 카드 3장을 상대에게 보여, 그 중에서 랜덤하게 1장 선택한다.
PRINTL 그 1장을 자신의 패에 넣고 나머지를 덱에 되돌린다.
CALL CARD_ABLE(2,효과後誘発)
PRINTL ② : 자신 필드의 앞면 표시의 「「퓨어리」X 몬스터가 상대에 의해 필드로부터 떨어진 경우에 발동할 수 있다.
PRINTL 자신의 묘지에서 「「퓨어리」속공 마법 카드를 2장까지 선택해 패에 넣는다.

@CARDCAN_72225(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,72225)
SIF RESULT == 1
	RETURN 0
IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,72225)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 500
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 퓨어리
	효과条件固名前 = 퓨어리 마이프렌드
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == 효과後誘発
	SIF 발동済_2(듀얼리스트,72225)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과条件カテゴリ = 퓨어리
	효과条件종류 = 엑시즈
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"필드離れ")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_72225(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード,5
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 설정レベル 

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72225,1)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",500)
		CALL FULLRESET
		효과条件カテゴリ = 퓨어리
		효과条件固名前 = 퓨어리 마이프렌드
		효과条件複数 = 3
		CALL CARD_CHOOSE_BASIC(듀얼리스트, "덱",ゾーン,場所)
		IF RESULT != 9999
			選択カード:0 = RESULT:0
			選択カード:1 = RESULT:1
			選択カード:2 = RESULT:2
			IF 選択カード != 9999
				CALL CARD_ADD(듀얼리스트, "덱", "손패", 選択カード:(RAND:3))
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72225)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,72225,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 퓨어리
		효과条件종류 = 速攻마법
		효과条件任意 = 1
		효과条件複数 = 98
		CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
	ENDIF
ENDIF
