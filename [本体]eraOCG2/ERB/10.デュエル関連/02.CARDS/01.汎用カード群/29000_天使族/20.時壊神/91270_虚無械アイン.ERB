	CASE "名前"
		RESULTS = 虚無械アイン
	CASE "略称"
		RESULTS = 虚無械アイン
	CASE "カテゴリ"
		RESULTS:0 = 時械神
ENDSELECT


@CARD_91270(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_91270(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(0,지속효과)
PRINTL ①：このカードはフィールドに表側표시で存在する限り１度だけ、효과で破壊されない。
CALLFORM CARD_ABLE(10,마함起動)
PRINTL ②：１ターンに１度、以下の효과から１つを選択して발동できる。
PRINTL ●손패から「時械神」モンスター１体を捨て、자신は１枚ドローする。
PRINTL ●자신の묘지の「時械神」モンスター１体を덱に戻す。
PRINTL その後、덱・묘지から「無限械アイン・ソフ」１枚を자신の마법＆함정ゾーンにセットできる。


@CARDCAN_91270(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,91270)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 時械神
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_91270(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 속성数


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91270,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 時械神
		효과条件종류 = モン全般
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード = RESULT
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = RESULT
			IF 参照先（CS） == "손패"
				CALL CARD_DISPOSE(듀얼리스트,"손패",選択カード)
				SIF RESULT == 1
					CALL CARDDRAW_BASIC(듀얼리스트,1)
			ELSEIF 参照先（CS） == "묘지"
				CALL CARD_DISPOSE(듀얼리스트,"묘지",選択カード,덱行き)
				IF RESULT == 1
					CALL FULLRESET
					효과範囲덱 = 1
					효과範囲묘지 = 1
					효과条件名前 = 無限械アイン・ソフ
					효과条件任意 = 1
					CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,91270)
	IF RESULT == 0
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(듀얼리스트,"魔自身",場所,"一破")
ENDIF
