@CARDNAME_62015,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 천후예보
	CASE "略称"
		RESULTS = 천후예보
	CASE "カテゴリ"
		RESULTS:0 = 천후
ENDSELECT


@CARD_62015(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"

		RETURN フィールド
ENDSELECT

RETURN 0

