@CARDSUMMON_AA_1767


@CARDCAN_1767(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,1767)
SIF RESULT == 1
	RETURN 0

IF 種類 == 効果後誘発
	SIF !MATCH(ゾーン,"手札")
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,1767,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果条件属性 = 水属性
	CALL CARD_CHECK_FIN_DATA(決闘者,"破壊全般")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1767(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1767,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"手札破壊",場所,"墓地")
		ENDIF
	ENDIF
ENDIF


