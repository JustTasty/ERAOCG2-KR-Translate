;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 머시너즈 디펜더
	CASE "略称"
		RESULTS = 기갑 디펜더
	CASE "カテゴリ"
		RESULTS:0 = 머시너즈
ENDSELECT


@CARD_24497(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
	
		RETURN 効果モン
	CASE "属性"
		RETURN 地属性
	CASE "種族"
		RETURN 機械族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1200
	CASE "守備力"
		RETURN 1800
	CASE "追加日"
		RETURN 250809
ENDSELECT

RETURN 0

@CARD_EXPLANATION_24497(種類)
#DIM DYNAMIC 種類

CALLFORM CARD_ABLE(0,召喚時,特殊召喚時)
PRINTL ①：このカードが召喚・特殊召喚に成功した時に発動できる。
PRINTL デッキから「督戦官コヴィントン」１体を手札に加える。

@CARDCAN_24497(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,24497)
SIF RESULT == 1
	RETURN 0

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件名前 = 督戦官コヴィントン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24497(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,24497)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件名前 = 督戦官コヴィントン
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF

