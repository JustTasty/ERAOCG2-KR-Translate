@CARD_EXPLANATION_72451(種類)
#DIM DYNAMIC 種類

CALLFORM CARD_ABLE(0,魔罠起動,手札起動)
PRINTL ①：自分フィールドの表側表示の「머시너즈 솔저」「머시너즈・スナイパー」「머시너즈・ディフェンダー」を１体ずつ除外して発動できる。
PRINTL 手札・デッキ・墓地から「머시너즈・フォース」１体を特殊召喚する。
PRINTL このカードがフィールドから離れた時にこうして特殊召喚したモンスターは破壊される。

@CARDCAN_72451(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,72451)
SIF RESULT == 1
	RETURN 0

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = 머시너즈 솔저
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = 머시너즈 스나이퍼
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = 머시너즈 디펜더
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲デッキ = 1
	効果範囲墓地 = 1
	効果条件名前 = 머시너즈 포스
	効果条件召喚可 = 1
	効果条件特不無視 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_72451(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC セット先
#DIM DYNAMIC カード召喚場所

IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,72451)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)

		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件名前 = 머시너즈 솔저
		効果条件行先フラグ = 除外行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		SIF RESULT != 0
			RETURN 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件名前 = 머시너즈 스나이퍼
		効果条件行先フラグ = 除外行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		SIF RESULT != 0
			RETURN 0

		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件名前 = 머시너즈 디펜더
		効果条件行先フラグ = 除外行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		SIF RESULT != 0
			RETURN 0

		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲デッキ = 1
		効果範囲墓地 = 1
		効果条件名前 = 머시너즈 포스
		効果条件召喚可 = 1
		効果条件特不無視 = 1
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		IF RESULT
			カード召喚場所 = カード召喚先
			CALL CARD_DISPOSE(決闘者,ゾーン,場所)
			セット先 = カード設置先
			CALL SET_FIELD_INFO(決闘者,"戦場",カード召喚場所,"束縛",セット先 + 30,1)
		ENDIF
	ENDIF
ENDIF

