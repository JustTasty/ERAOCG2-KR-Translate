VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 머시너즈 솔저
	CASE "略称"
		RESULTS = 기갑 솔저
	CASE "カテゴリ"
		RESULTS:0 = 머시너즈
ENDSELECT


@CARD_24496(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "種類"
	
		RETURN 効果モン
	CASE "属性"
		RETURN 地属性
	CASE "種族"
		RETURN 機械族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 1500
	CASE "追加日"
		RETURN 250809
ENDSELECT

RETURN 0

@CARD_EXPLANATION_24496(種類)
#DIM DYNAMIC 種類

CALLFORM CARD_ABLE(0,召喚時)
PRINTL ①：このカードが召喚に成功した時に発動できる。
PRINTL 手札から機械族モンスター１体を特殊召喚する。

@CARDCAN_24496(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,24496)
SIF RESULT == 1
	RETURN 0

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 種類 == 召喚時
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件種族 = 機械族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24496(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード


IF 種類 == 召喚時 
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,24496)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件種族 = 機械族
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF

