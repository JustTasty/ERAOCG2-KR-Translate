@CARDCAN_24498(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,24498)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃時強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦破壊→墓地
	SIF !GROUPMATCH(墓地送り種類,"破壊","戦闘破壊")
		RETURN 0
	SIF モンスター数(決闘者) <= 3
		RETURN 1
	CALL FULLRESET
	効果範囲除外 = 1
	効果条件名前 = 머시너즈 솔저
	効果条件召喚可 = 1
	CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0
	CALL FULLRESET
	効果範囲除外 = 1
	効果条件名前 = 머시너즈 스나이퍼
	効果条件召喚可 = 1
	CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0

	CALL FULLRESET
	効果範囲除外 = 1
	効果条件名前 = 머시너즈 디펜더
	効果条件召喚可 = 1
	CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	SIF RESULT != 0
		RETURN 0

	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_24498(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 召喚済レベル
#DIM DYNAMIC 墓地送りレベル


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 攻撃時強制誘発
	CALL LIFE_CHANGE(決闘者,"減少","コスト",1000)
ELSEIF 種類 == 戦破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,24498)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲除外 = 1
		効果条件名前 = 머시너즈 솔저
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲除外 = 1
		効果条件名前 = 머시너즈 스나이퍼
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲除外 = 1
		効果条件名前 = 머시너즈 디펜더
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"貫通")
ENDIF


