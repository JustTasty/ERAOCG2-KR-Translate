@CARDCAN_1769(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,1769)
SIF RESULT == 1
	RETURN 0

CALL 装備判定(決闘者,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 種類 == 手札起動 || 種類 == フリー誘発
	SIF ゾーン != "手札"
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
	SIF 発動済_1(決闘者,1769)
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件表示 = 10
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1769(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード


IF 種類 == 手札起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1769,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件表示 = 10
		CALL CARD_CHOOSE_BASIC(決闘者,"戦場",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_EQUIP_MONSTER(決闘者,選択カード,"手札",場所,(3))
		ENDIF
	ENDIF
ENDIF

