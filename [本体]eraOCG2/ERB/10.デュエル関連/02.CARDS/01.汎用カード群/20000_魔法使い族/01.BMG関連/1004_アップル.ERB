@CARDNAME_1004,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 애플 매지션 걸
	CASE "略称"
		RESULTS = 애플
	CASE "カテゴリ"
		RESULTS:0 = 매지션 걸
ENDSELECT


@CARD_1004(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
