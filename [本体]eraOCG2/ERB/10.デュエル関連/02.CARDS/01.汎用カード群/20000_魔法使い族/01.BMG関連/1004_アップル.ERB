PRINTL 패에서 레벨５ 이하의 마법사족 몬스터 １장을 특수 소환한다。
PRINTL 그 후、공격 대상을 그 몬스터로 옮기고、공격 몬스터의 공격력을 절반으로 한다。

@CARDCAN_1004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1004)
SIF RESULT == 1
	RETURN 0


IF 종류 == 戦闘→묘지
	SIF 발동済_1(듀얼리스트,1004)
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1004)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종류 = モン全般
	효과条件종족 = 마법사족
	CALLFORM 효과条件レベル_ADV(5, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_1004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 횟수制限
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1004,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 매지션 걸
		효과条件종류 = モン全般
		효과条件複数 = 97
		CALL CARD_ADD_BASIC(듀얼리스트,"묘지",ゾーン,場所)
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1004,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종족 = 마법사족
		효과条件종류 = モン全般
		CALLFORM 효과条件レベル_ADV(5, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF GETVAR(@"%듀얼리스트%_필드:カード소환先") > 0
			CALL COVER_ATTACK(듀얼리스트,カード소환先)
			選択カード = 戦闘場所(듀얼리스트,1)
			CALL SET_FIELD_INFO(対面者,"필드",選択カード,"一攻",- GETVAR(@"%対面者%_MZ_攻:選択カード") / 2)
		ENDIF
	ENDIF
ENDIF
