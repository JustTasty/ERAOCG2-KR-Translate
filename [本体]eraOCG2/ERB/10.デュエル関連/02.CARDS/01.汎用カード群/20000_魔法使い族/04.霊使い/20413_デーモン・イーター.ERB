@CARD_EXPLANATION_20413(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①② 효과는 각각 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 자신 필드에 마법사족 몬스터가 존재할 경우에 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(2,ターン終了時)
PRINTL ②: 상대 엔드 페이즈에 이 카드가 묘지에 존재할 경우, 자신 필드의 앞면 표시 몬스터 1장을 대상으로 하고 발동할 수 있다.
PRINTL 그 몬스터를 파괴하고, 이 카드를 묘지에서 특수 소환한다.
CALLFORM CARD_ABLE(3,戦場起動)
PRINTL ③：自分フィールドから、このカードと魔法使い族モンスター１体を墓地に送って発動できる。
PRINTL 自分フィールドに「憑依覚醒－데몬・リーパー」を特殊召喚する。
PRINTL その後、自分の墓地からレベル４以下のモンスター１体を効果を無効にして特殊召喚する事ができる。


@CARDCAN_20413(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,20413)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,20413)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,20413,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,20413)
		RETURN 0
	SIF モンスター数(듀얼리스트) == 0
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,20413,"묘지",1)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF 発動済_3(決闘者,20413)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,120413,"",1)
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件他所 = 1
	効果条件種族 = 魔法使い族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF わらしチェック == 1
		わらしチェックパス = 1
	RETURN 1
ENDIF


@CARDEFFECT_20413(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

IF 종류 == 손패起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20413,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20413,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件표시 = 表側표시
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者, "墓地", 場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,20413,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件種族 = 魔法使い族
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_GENERATE(決闘者,120413)

			CALL FULLRESET
			効果範囲墓地 = 1
			CALL 効果条件レベル_ADV(4, "以下")
			効果条件種類 = レベル持ち
			効果条件召喚可 = 1
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			IF RESULT == 1
				PRINTL 自分の墓地からレベル４以下のモンスター１体を効果を無効にして特殊召喚しますか？
				CALL YN_CHOICE(決闘者)
				IF RESULT == はい
					CALL WARASHI_CHANCE(決闘者,処理中_効果ID,"雑多")
					IF RESULT == 0
						CALL FULLRESET
						効果範囲墓地 = 1
						CALL 効果条件レベル_ADV(4, "以下")
						効果条件種類 = レベル持ち
						効果追加種類 = 効追無効
						CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF


