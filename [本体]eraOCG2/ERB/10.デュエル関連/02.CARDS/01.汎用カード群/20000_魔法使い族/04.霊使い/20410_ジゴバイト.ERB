@CARD_EXPLANATION_20410(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ①의 효과는 1턴에 1번밖에 사용할 수 없다.
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①: 자신 필드에 마법사족 몬스터가 존재할 경우에 발동할 수 있다.
PRINTL 이 카드를 패에서 특수 소환한다.
CALLFORM CARD_ABLE(0,破壊→묘지,戦闘→묘지)
PRINTL ②: 이 카드가 전투 효과로 파괴되어 묘지로 보내졌을 때 발동할 수 있다.
PRINTL 덱에서 "지고바이트" 이외의 공격력 1500 / 수비력 200의 몬스터 1장을 특수 소환한다.
CALLFORM CARD_ABLE(3,戦場起動)
PRINTL ③：自分フィールドから、このカードと魔法使い族モンスター１体を墓地に送って発動できる。
PRINTL 自分フィールドに「憑依覚醒－기가고바이트」を特殊召喚する。
PRINTL その後、相手の手札をランダムに１枚選んで墓地へ送る事ができる。
PRINTL その場合、さらにお互いに１枚ドローする。


@CARDCAN_20410(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,20410)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,20410)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,20410,"손패")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 마법사족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = 지고바이트
	효과条件固攻撃力 = 1500
	효과条件固守備力 = 200
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
	ELSEIF 種類 == 戦場起動
	SIF 発動済_3(決闘者,20410)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,120410,"",1)
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件他所 = 1
	効果条件種族 = 魔法使い族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF 手札数(対面者) > 0
		CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF


@CARDEFFECT_20410(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 종류 == 손패起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20410,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "손패", 場所)
	ENDIF
ELSEIF 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,20410)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件固名前 = 지고바이트
		효과条件固攻撃力 = 1500
		효과条件固守備力 = 200
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,20410,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件種族 = 魔法使い族
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_GENERATE(決闘者,120410)

			IF 手札数(対面者) > 0
				PRINTL 相手の手札をランダムに１枚選んで墓地へ送りますか？
				CALL YN_CHOICE(決闘者)
				IF RESULT == はい
					CALL URARA_CHANCE(決闘者,処理中_効果ID,"雑多")
					IF RESULT == 0
						CALL FULLRESET
						CALL CARD_REMOVAL_BASIC(決闘者,"手札破壊",場所,"墓地")
						CALL CARDDRAW_BASIC(決闘者,1,1)
						CALL CARDDRAW_BASIC(対面者,1,1)
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF


