@CARDCAN_36005(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 戦闘種族

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,36005)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃後誘発
	SIF 発動済_2(決闘者,36005)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	戦闘種族 = GETVAR(@"%決闘者%_MZ_種:戦闘場所(決闘者)")
	SIF !GROUPMATCH(戦闘種族,機械族,未確認族)
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲除外 = 1
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦破壊→墓地
	SIF 発動済_3(決闘者,36005)
		RETURN 0
	SIF 墓地送り種類 != "除外"
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,36005,"除外",1)
	SIF RESULT == 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36005(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 攻撃後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,36005,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲除外 = 1
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 戦破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,36005,3)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲除外 = 1
		効果条件名前 = 강철의 대마인 골고일
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(決闘者,1),"戦耐")
ENDIF
