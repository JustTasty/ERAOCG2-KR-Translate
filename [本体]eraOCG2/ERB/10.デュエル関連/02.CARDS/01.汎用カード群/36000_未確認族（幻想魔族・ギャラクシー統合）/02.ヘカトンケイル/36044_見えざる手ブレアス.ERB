@CARDCAN_36044(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36044)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,36044)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,36044,"손패")
	SIF RESULT == 1
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	SIF ドローフェイズ == 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득+D",1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_3(듀얼리스트,36044)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 손패数(対面者) == 0
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_36044(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 実손패セット,200
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36044,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,"손패",場所)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(듀얼리스트,1),"戦耐")
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36044,3)
	IF RESULT == 0
		VARSET カウンタB
		FOR カウンタ,0,紙束最大値
			SIF GETVAR(@"%対面者%_손패:カウンタ") == -1
				CONTINUE
			実손패セット:カウンタB = カウンタ
			カウンタB ++
		NEXT
		$INPUT_HAND_LOOP
		選択カード = RAND:カウンタB
		選択カード = 実손패セット:選択カード
		SIF GETVAR(@"%対面者%_손패:選択カード") == -1
			GOTO INPUT_HAND_LOOP
		TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_손패:選択カード"))
		WAIT
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_손패:選択カード")},"종류"
		IF RESULT <= 3
			CALL CARD_SS_CHECK(듀얼리스트,(GETVAR(@"%対面者%_손패:選択カード")),"손패")
			IF RESULT != 1
				IF 듀얼리스트 == "자신"
					PRINTFORML 
					PRINTFORML 특수 소환하시겠습니까?
				ENDIF
				CALL YN_CHOICE(듀얼리스트)
				IF RESULT == 0
					CALL FULLRESET
					효과추가종류 = 効追接触 ;隠し仕様
					CALL CARD_SP_SUMMON(듀얼리스트,"상대손패",選択カード)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
