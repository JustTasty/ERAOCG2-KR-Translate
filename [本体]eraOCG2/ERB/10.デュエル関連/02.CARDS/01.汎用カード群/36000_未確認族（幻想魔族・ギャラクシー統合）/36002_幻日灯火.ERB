@CARDCAN_36002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,36002)
SIF RESULT == 1
	RETURN 0

IF 종류 == ターン終了時
	SIF ゾーン != "필드"
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36002(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,36002,3)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(듀얼리스트,1)
		$INPUT_LOOP
		PRINTFORMW 제외장수：{攻撃力修正}
		CALL FULLRESET
		효과範囲손패 = 1
		SIF 듀얼리스트 != "자신"
			효과条件종류 = モン全般
		효과条件行先플래그 = 제외行き
		효과条件任意 = 1
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)

		SIF 듀얼리스트 != "자신" && 攻撃力修正 == 1
			GOTO INPUT_LOOP2
		IF RESULT == 1
			攻撃力修正 ++
			GOTO INPUT_LOOP
		ENDIF

		$INPUT_LOOP2
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"永攻",攻撃力修正*500)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(듀얼리스트,1),"戦耐")

	SIF バトルフェイズ != 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"対耐")
ENDIF
