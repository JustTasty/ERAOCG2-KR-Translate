@CARDCAN_36002(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,36002)
SIF RESULT == 1
	RETURN 0

IF 種類 == ターン終了時
	SIF ゾーン != "戦場"
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36002(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == ターン終了時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,36002,3)
	IF RESULT == 0
		CALL CARDDRAW_BASIC(決闘者,1)
		$INPUT_LOOP
		PRINTFORMW 제외장수：{攻撃力修正}
		CALL FULLRESET
		効果範囲手札 = 1
		SIF 決闘者 != "自分"
			効果条件種類 = モン全般
		効果条件行先フラグ = 除外行き
		効果条件任意 = 1
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)

		SIF 決闘者 != "自分" && 攻撃力修正 == 1
			GOTO INPUT_LOOP2
		IF RESULT == 1
			攻撃力修正 ++
			GOTO INPUT_LOOP
		ENDIF

		$INPUT_LOOP2
		CALL SET_FIELD_INFO(決闘者,ゾーン,場所,"永攻",攻撃力修正*500)
	ENDIF

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(決闘者,1),"戦耐")

	SIF バトルフェイズ != 1
		CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"対耐")
ENDIF
