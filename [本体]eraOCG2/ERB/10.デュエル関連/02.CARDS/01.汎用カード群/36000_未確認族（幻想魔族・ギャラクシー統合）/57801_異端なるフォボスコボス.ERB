@CARDCAN_57801(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,57801)
SIF RESULT == 1
	RETURN 0

IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 発動済_1(決闘者,57801)
		RETURN 0
	IF GETVAR(@"%決闘者%_MZ_条達:場所") == 0
		SIF 種類 == フリー誘発
			RETURN 0
		SIF メインフェイズ != 1
			RETURN 0
		SIF ターンプレイヤー != 決闘者
			RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件除去種 = 無効
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_57801(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,57801,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件除去種 = 無効
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"選択")
		IF RESULT == 1
			選択カード = RESULT:1
			CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"無効",2,1)
			
			SIF GETVAR(@"%対面者%_MZ_戦済:選択カード") == 0 || モンスター数(決闘者) >= 5
				RETURN 0
			SIF 決闘者 == "自分"
				PRINTL モンスターのコントロールをエンドフェイズまで得ますか？
			CALL YN_CHOICE(決闘者)

			CALL FULLRESET
			効果追加種類:0 = 5
			効果追加種類:1 = 695
			CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",選択カード,"強奪")
		ENDIF
	ENDIF

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(決闘者,1),"戦耐")
ENDIF
