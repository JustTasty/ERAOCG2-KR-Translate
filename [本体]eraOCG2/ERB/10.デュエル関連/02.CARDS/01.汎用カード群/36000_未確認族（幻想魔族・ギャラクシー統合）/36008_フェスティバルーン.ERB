@CARDCAN_36008(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 戦闘種族

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,36008)
SIF RESULT == 1
	RETURN 0

IF 種類 == 攻撃時強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動
	SIF 発動済_3(決闘者,36008)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_攻:場所") < 5000
		RETURN 0
	CALL FULLRESET
	IF 決闘者 == "自分"
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
	ENDIF
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	効果条件他所 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_36008(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 攻撃時強制誘発
	CALL SET_FIELD_INFO(決闘者,ゾーン,場所,"永攻",1000)

ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,36008,3)
	IF RESULT == 0
		CALL SET_FIELD_INFO(決闘者,ゾーン,場所,"永攻",-5000)
		CALL FULLRESET
		効果条件他所 = 1
		CALL CARD_REMOVAL_BASIC(決闘者,"両全場全体",場所,"墓地")
	ENDIF

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(決闘者,1),"戦耐")
ENDIF
