@CARDCAN_1664(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,1664)
SIF RESULT == 1
	RETURN 0

IF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,23257)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(決闘者,"被弾者")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
	IF GETVAR(@"%決闘者%_変動値") >= 2000
		効果範囲デッキ = 1
		効果範囲EXデッキ = 1
	ENDIF
	効果条件種族 = 未確認族
	CALLFORM 効果条件レベル_ADV(3,"以上")
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 戦闘場所(決闘者,1) == 5
		RETURN 0
	SIF 戦闘場所(決闘者) != 場所
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1664(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 戦闘カード
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1664,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲墓地 = 1
		IF GETVAR(@"%決闘者%_変動値") >= 2000
			効果範囲デッキ = 1
			効果範囲EXデッキ = 1
		ENDIF
		効果条件種族 = 未確認族
		CALLFORM 効果条件レベル_ADV(3,"以上")
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(対面者,"自身",戦闘場所(決闘者,1),"戦耐")
ENDIF
