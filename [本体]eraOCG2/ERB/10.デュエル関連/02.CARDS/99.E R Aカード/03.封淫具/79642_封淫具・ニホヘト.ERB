	CASE "名前"
		RESULTS = 봉음구 니호헤토
	CASE "略称"
		RESULTS = 봉음 콩흡판
	CASE "カテゴリ"
		RESULTS:0 = 봉음구
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_79642(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 装備마법
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 기계족
