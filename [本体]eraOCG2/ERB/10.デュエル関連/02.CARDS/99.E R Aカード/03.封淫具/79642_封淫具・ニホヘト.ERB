@CARDCAN_79642(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79642)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF !GROUPMATCH(ゾーン,"마함","필드")
		RETURN 0
	IF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
			RETURN 0
	ELSEIF ゾーン == "필드"
		SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") >= 3
			RETURN 0
	ENDIF
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 봉음구
	효과条件종류 = 효과モン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대손패 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과 || 종류 == リアクション효과
	SIF !GROUPMATCH(ゾーン,"마함","필드")
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_79642(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 조교대상 = -1
#DIM DYNAMIC 조교강도

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79642)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			CALL FULLRESET
			효과範囲필드 = 1
			효과範囲마함 = 1
			효과条件カテゴリ = 봉음구
			효과条件종류 = 装備마법
			효과条件固名前起動 = 1
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			조교강도 = RESULT
			IF 조교대상 >= 1
				SETCOLOR C_PINK
				PRINTFORML 
				PRINTFORML %CALLNAME:조교대상%의 클리토리스에 봉음구 니호헤토가 장착되었다。
				RESETCOLOR
				CALL EROTIC_MOVE("Ｃ単発",조교대상,-1,50 * 조교강도)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		IF 조교대상 >= 1
			CALL CARD_REACTION_EFFECT
			SETCOLOR C_PINK
			PRINTFORML 
			PRINTFORML %CALLNAME:조교대상%는 봉음구에서 부여되는 자극에 버티지 못하고、손패를 떨어뜨려버렸다。
			RESETCOLOR
		ENDIF
	ENDIF
	CALL FULLRESET
	CALL CARD_ADD_GY_BASIC(対面者,"손패",ゾーン,場所)
	IF ゾーン == "마함"
		SETVAR @"%듀얼리스트%_魔_効済:場所", 2
	ELSEIF ゾーン == "필드"
		SETVAR @"%듀얼리스트%_MZ_効済:場所", 2
	ENDIF
ELSEIF 종류 == リアクション효과
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT


		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件カテゴリ = 봉음구
		효과条件종류 = 装備마법
		효과条件固名前起動 = 1

		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		조교강도 = RESULT
		IF 조교대상 >= 1
			SETCOLOR C_PINK
			PRINTFORML 
			PRINTFORML %CALLNAME:조교대상%는 클리토리스를 핥아먹는듯이 간지럽혀졌다。
			RESETCOLOR
			CALL EROTIC_MOVE("Ｃ単発",조교대상,-1,50 * 조교강도)
		ENDIF
	ENDIF
ENDIF
