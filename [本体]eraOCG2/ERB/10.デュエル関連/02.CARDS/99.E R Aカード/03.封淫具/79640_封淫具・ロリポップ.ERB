@CARDNAME_79640,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 봉음구 롤리팝
	CASE "略称"
		RESULTS = 봉음 목사탕
	CASE "カテゴリ"
		RESULTS:0 = 봉음구
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_79640(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 装備마법
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 1
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 0
	;CASE "分割"
	;	RETURN 효과なし
ENDSELECT

RETURN 0

