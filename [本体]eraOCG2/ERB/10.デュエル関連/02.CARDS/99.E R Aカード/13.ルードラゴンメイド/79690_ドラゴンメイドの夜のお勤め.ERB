@CARDNAME_79690,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래곤메이드의 야간근무
	CASE "略称"
		RESULTS = 드메 야간근무
	CASE "カテゴリ"
		RESULTS:0 = 드래곤메이드
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_79690(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
ENDSELECT

RETURN 0

@CARD_EXPLANATION_79690(종류)
#DIM DYNAMIC 종류
#DIMS DYNAMIC 듀얼리스트

CALL TEXT_DECORATION("ROGUE")
PRINTL 이 카드명의  카드는 1턴에 1번 밖에 발동할 수 없다.
CALL CARD_ABLE(1,마함起動,손패起動)
PRINTL ①：이 카드의 발동시 효과 처리로서 덱에서 『드래곤메이드』몬스터 1장을 패에 넣는다.
CALL CARD_ABLE(10,ターン終了時)
PRINTL ②：1턴에 1번, 자신의 엔드 페이즈에 발동할 수 있다.
PRINTL 자신 필드에 존재하는『드래곤메이드』X 몬스터의 엑시즈 소재를 1개씩 늘려, 공격 표시로 한다.
CALL TEXT_DECORATION("ROGUE")



@CARDCAN_79690(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79690)
SIF RESULT == 1
	RETURN 0


IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79690)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "마함"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 드래곤메이드
	효과条件종류 = 엑시즈
	효과条件표시 = 10
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79690(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 変化ID
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 条件달성


IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79690,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과条件カテゴリ = 드래곤메이드
		효과条件종류 = モン全般
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ELSEIF 종류 == ターン終了時
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79690,10)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"カテゴリ"
			SIF RESULTS != "드래곤메이드"
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"종류"
			SIF RESULT != 엑시즈
				CONTINUE
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"表",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"Ｘ",1)

			IF 듀얼리스트 == "자신"
				変化ID = GETVAR(@"%듀얼리스트%_MZ_変化元ID:カウンタ")
				IF 変化ID == -1
					CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",カウンタ)
					조교대상 = RESULT
					PRINTFORML
					SETCOLOR C_PINK
					PRINTFORMW %NAME:조교대상%은 야간근무를 완수했다!
					RESETCOLOR
					CALL EROTIC_MOVE("기승위",조교대상,MASTER,300)
				ELSE
					CALL CARD_EROTICS(変化ID)
					조교대상 = RESULT
					IF 조교대상 != -1
						PRINTFORML
						PRINTFORMW 루 드래곤메이드  %CALLNAME:조교대상%는 야간근무를 완수했다!
						PRINTFORML
						CALL EROTIC_MOVE("기승위",조교대상,MASTER,300)
					ELSE
						TRYCALLFORM CARDNAME_{変化ID},"略称"
						PRINTFORML
						PRINTFORMW 루 드래곤메이드 %RESULTS%는 야간근무를 완수했다!
					ENDIF
				ENDIF
			ENDIF

		NEXT
	ENDIF
ENDIF
