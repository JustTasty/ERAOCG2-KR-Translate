@CARDCAN_59702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59702)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_D1(듀얼리스트,59702)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,59702,"EX덱")
	SIF RESULT == 1
		RETURN 0

	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과範囲상대묘지 = 1
	효과条件カテゴリ:0 = 묘상
	효과条件カテゴリ:1 = 촉수
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 10
		RETURN 0
	RETURN 1
ELSEIF 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,59702)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,59702)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲제외 = 1
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン開始時
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_3(듀얼리스트,59702)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 성별在
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_59702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 取込カードID
#DIM DYNAMIC カードID
#DIMS DYNAMIC カード追カテ


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == EX덱起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59702,20)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트, "EX덱", 場所)
	ENDIF
ELSEIF 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59702,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲손패 = 1
		효과範囲마함 = 1
		효과範囲필드 = 1
		효과条件カテゴリ:0 = 묘상
		효과条件カテゴリ:1 = 촉수
		효과条件複数 = 任意の数
		효과条件行先플래그 = 제외行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		SIF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",RESULT:2 + 1)
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59702,2,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲제외 = 1
		효과추가カテ = 촉수
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == ターン開始時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59702,3)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%対面者%_MZ_性:カウンタ") == 0
				CONTINUE
			VARSET 条件달성
			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")}, "カテゴリ"
			SIF MATCH(RESULTS, "묘상")
				条件달성 ++
			VARSET カード追カテ
			カード追カテ = %GETVARS(@"%対面者%_MZ_追カテ:カウンタ")%
			SIF MATCH(カード追カテ, "묘상")
				条件달성 ++
			IF 条件달성 == 0
				CALL CARD_SET_CATEGORY(対面者,"필드",カウンタ,"묘상")
			ELSEIF 条件달성 >= 1
				IF 마함数(対面者) >= 5
					CALL CARD_DISPOSE(対面者,"필드",カウンタ)
				ELSE
					CALL FULLRESET
					효과추가カテ = 묘상
					CALL CARD_DISPOSE(対面者,"필드",カウンタ,마함行き)
				ENDIF
			ENDIF
		NEXT
	ENDIF
ELSEIF 종류 == 常在無効
	CALL SET_FIELD_MAGIC_INFO(듀얼리스트, "촉수궁")
	CALL FULLRESET
	효과条件カテゴリ = 묘상
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"無効")

	CALL FULLRESET
	효과条件표시 = 表側표시
	효과条件カテゴリ = 묘상
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"表",2)
ENDIF
