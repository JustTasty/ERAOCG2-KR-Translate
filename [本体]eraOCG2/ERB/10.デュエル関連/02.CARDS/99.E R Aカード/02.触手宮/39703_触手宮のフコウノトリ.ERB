@CARDCAN_39703(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39703)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"손패","묘지")
		RETURN 0
	SIF 발동済_1(듀얼리스트,39703)
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,39703,ゾーン)
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件固名前 = 촉수궁의 흑황새
	효과条件カテゴリ = 촉수
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	SIF GETVARS(@"%듀얼리스트%_フィールド名")  !=  "촉수궁"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
	SIF RESULT != 牝性
		RETURN 0
	SIF 마함数(듀얼리스트) == 5
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻撃後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0	
	CALLFORM CARD_{GETVAR(@"%対面者%_直前戦闘破壊")}("성별")
	SIF RESULT != 牝性
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_3(듀얼리스트,39703)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39703(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 戦闘カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 묘지起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39703,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件固名前 = 촉수궁의 흑황새
		효과条件カテゴリ = 촉수
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39703)
	IF RESULT == 0
		戦闘カード = 戦闘場所(듀얼리스트)
		CALL SET_FIELD_INFO(듀얼리스트,"필드",戦闘カード,"一時",2000)
	ENDIF
ELSEIF 종류 == 攻撃後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39703)
	IF RESULT == 0

		CALL FULLRESET
		CALLFORM CARDNAME_{直前戦闘破壊ID(듀얼리스트,1)}("名前")
		효과条件名前 = %RESULTS%
		효과추가カテ = 묘상
		CALL CARD_SET_BASIC(듀얼리스트,"상대묘지",ゾーン,場所,"表側표시")

		CALL CARD_EROTICS(直前戦闘破壊ID(듀얼리스트,1))
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML %CALLNAME:조교대상%은 촉수와의 공생상태가 무너져버린 괴물에게 덮쳐저서 쓰러지고 ,
			PRINTFORML 난폭하게, 힘껏, 안에 가득히 촉수의 근원을 받아버리고 말았다。
			CALL EROTIC_MOVE("前穴凌辱",조교대상, -1,300)
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39703,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		IF 他参照選択カードID != -1
			TRYCALLFORM CARD_{他参照選択カードID}("성별")
			IF RESULT == 牝性 || RESULT == ふたなり
				CALL FULLRESET
				CALLFORM CARDNAME_{他参照選択カードID}("名前")
				효과条件名前 = %RESULTS%
				효과추가カテ = 묘상
				효과条件任意 = 1
				CALL CARD_SET_BASIC(듀얼리스트,"상대묘지",ゾーン,場所,"表側표시")

				CALL CARD_EROTICS(他参照選択カードID)
				IF RESULT != -1
					조교대상 = RESULT
					PRINTFORML %CALLNAME:조교대상%은 흑황새에게 덮쳐지며
					PRINTFORML 난폭하게, 힘껏 , 안에 가득히 촉수의 근원을 받아버리고 말았다。
					CALL EROTIC_MOVE("前穴凌辱",조교대상, -1)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF


