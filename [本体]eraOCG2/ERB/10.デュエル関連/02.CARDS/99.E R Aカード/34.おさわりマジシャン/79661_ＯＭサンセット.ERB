@CARDCAN_79661(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,79661)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF 発動済_1(決闘者,79661)
		RETURN 0
	IF 種類 == 魔罠起動
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 만지기머신 
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 만지기머신 
	効果条件種類 = モン全般
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0	
	RETURN 1

ELSEIF 種類 == 墓地起動
	SIF 発動済_2(決闘者,79661)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = 만지기머신 
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79661(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 조교대상

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,79661,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 만지기머신
		CALLFORM CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 만지기머신
		効果条件種類 = モン全般
		CALLFORM CARD_ADD_ADV(決闘者,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 만지기머신
		効果条件種類 = モン全般
		効果条件行先フラグ = デッキ行き
		CALLFORM CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,79661,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件カテゴリ = 만지기머신 
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		SIF RESULT == 1
			CALL CARD_DISPOSE(決闘者,ゾーン,場所,手札行き)
	ENDIF
ENDIF
