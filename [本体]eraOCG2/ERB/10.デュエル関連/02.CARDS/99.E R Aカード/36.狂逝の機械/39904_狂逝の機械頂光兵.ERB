		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"永守DOWN",減少値)
		IF RESULT == 1
			CALL CARD_EROTICS(RESULT:2)
				IF RESULT != -1
				조교대상 = RESULT
				IF NO: 調教対象 == 2130

