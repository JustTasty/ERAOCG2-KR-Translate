@CARDCAN_99586(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99586)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF 발동済_1(듀얼리스트,99586)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	효과条件除去種 = 無効
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 패러사이트
	효과条件종류 = モン全般
	효과条件うらら解除 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,99586)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0	
	SIF メインフェイズ != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 패러사이트
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99586(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カードA
#DIM DYNAMIC セット先A
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC セット先B
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 条件달성 = 0
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99586,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		
		;상대 필드에 無効로할 수 있다 몬스터가 居ないと패러사이트몬스터를 出す処理から行わない。
		;발동条件で処理は通っているが、효과処理までに場が変わった時に処理が中途半端で終わるため。
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件除去種 = 無効
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 패러사이트
		효과条件종류 = モン全般
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		選択カードA = RESULT:1
		セット先A = 場所
		;PRINTFORMW 選択カードA={選択カードA}　セット先：{セット先A}
		IF 選択カードA != 9999
			CALL FULLRESET
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"無効")
			選択カード_ID = RESULT:2
			セット先B = 他参照選択カード
			;PRINTFORMW 選択カードID={選択カード_ID}　セット先：{他参照選択カード}
			IF RESULT == 1
				;대상카드가 牝性かどうかチェックし、牝性なら任意で強奪可能
				;자신의 필드が満杯だと불가能
				IF モンスター数(듀얼리스트) < 5
					TRYCALLFORM CARD_{選択カード_ID}("성별")
					IF RESULT == 牝性
						TRYCALLFORM CARDNAME_{選択カード_ID}("名前")
						PRINTFORMW %RESULTS%의 컨트롤을 빼앗습니까？
						CALL YN_CHOICE(듀얼리스트)
						IF RESULT == はい
							CALL CARD_GET_CONTROL(듀얼리스트,他参照選択カード)
							CALL SET_FIELD_INFO(듀얼리스트,"마함",セット先A,"装",コントロール先,1)
							条件달성 = 1
						ENDIF
					ENDIF
				ENDIF
				;条件달성=0の場合（コントロール奪取後の装備を行ってない場合）は、ここで装備処理を入れる。
				IF 条件달성 == 0
					CALL SET_FIELD_INFO(듀얼리스트,"마함",セット先A,"装",セット先B,1)
				ENDIF
			ELSE
				;無効に失敗했을 경우、패러사이트몬스터를 自壊させる
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"魔自動処理",セット先A,"묘지")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99586,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 패러사이트
		효과条件종류 = モン全般
		CALL CARD_ADD_BASIC(듀얼리스트,"마함",ゾーン,場所)
	ENDIF
ENDIF

