VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 패러사이트 바이올레이션
	CASE "略称"
		RESULTS = 패러사이트 Ｖ
	CASE "カテゴリ"
		RESULTS:0 = 패러사이트
		RESULTS:2 = E.R.A
ENDSELECT


