@CARDCAN_59880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59880)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	;SIF 발동済_1(듀얼리스트,59880)
	;	RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 악몽의 조교실
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT >= 3
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = 악몽의 조교실
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59880(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 取込カードID
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59880,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件固名前 = 악몽의 조교실
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲마함 = 1
			효과条件固名前 = 악몽의 조교실
			SIF 마함数(듀얼리스트) < 5
				효과条件任意 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			PRINTFORML 
		ENDIF

		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲덱 = 1
		효과条件名前 = 악몽의 조교실
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲덱 = 1
			효과条件名前 = 악몽의 조교실
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ENDIF
		IF RESULT != 1
			CALL FULLRESET
			CALL CARD_GENERATE_MAGIC(듀얼리스트,79608,1)
			PRINTFORML 마법＆함정 존[{カード설치先}]에 "악몽의 조교실"을 놓았습니다。
			PRINTFORMW
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	IF GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
		取込カードID = GETVAR(@"%듀얼리스트%_MZ_汎数:場所")
		IF 攻撃力修正
			CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正)
		ENDIF
	ENDIF
ENDIF


