@CARDCAN_39653(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39653)
SIF RESULT == 1
	RETURN 0

IF 종류 == 攻撃時誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
	SIF RESULT != 牝性
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_戦:場所") == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,39653)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 고블린
	효과条件固名前 = 고블린 도둑 부대
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39653(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 無効カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力상승値
#DIM DYNAMIC 조교대상
#DIM DYNAMIC レイプ횟수



CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 攻撃時誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39653)
	IF RESULT == 0
		無効カード = 戦闘場所(듀얼리스트,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",無効カード,"지속無効",39653)		
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",無効カード,1)
		IF RESULT != -1
			조교대상 = RESULT
			IF GETVAR(@"%対面者%_MZ_服状:無効カード") == 0
				PRINTFORMW 고블린 조련대상의 %CALLNAME:조교대상% 속옷을 도둑질 했습니다.……、
				PRINTFORMW %CALLNAME:조교대상% 아래의 허전한 감각을 느끼며 당황 합니다。
				PRINTFORMW 갓 벗은%CLOTHNAME(6,EQUIP:조교대상:6)% 자랑하는 고블린 수치스러워서 부끄러워진 얼굴로 노려봅니다。
			ELSE
				PRINTFORMW %CALLNAME:조교대상%의 속옷을 자랑하는 고블린 상대로 벗겨진 속옷을 되찾으려고 시도합니다……、
				PRINTFORMW 고블린은 때리려는 공격을 모두 피하고, 노출된 엉덩이를 만지거나 하면서 놀려 됩니다。
				PRINTFORMW %CALLNAME:조교대상%은 숨을 헐떡이며、죽일듯한 눈으로 고블린을 바라봅니다。
			ENDIF
			CALL EROTIC_MOVE("팬티晒し",조교대상,-1,100)
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,"필드",無効カード,"服状",1,1,1)
		CALL EVADE_ATTACK(듀얼리스트)
	ENDIF
ELSEIF 종류 == 攻撃後強制誘発
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"表",2,1)
ELSEIF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"攻誘")
ELSEIF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39653,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과条件カテゴリ = 고블린
		효과条件固名前 = 고블린 도둑 부대
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF

