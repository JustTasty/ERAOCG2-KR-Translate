@CARDCAN_39652(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 合計攻撃力
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39652)
SIF RESULT == 1
	RETURN 0

IF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ELSEIF 종류 == リアクション효과
	SIF !GROUPMATCH(ゾーン, "필드", "마함")
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,39652)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF モンスター数(듀얼리스트) >= 5
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 고블린
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	合計攻撃力 = RESULT:3
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	효과条件攻撃力 = 合計攻撃力
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_2(듀얼리스트,39652)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 装備先 == 5
		RETURN 0
	SIF GETVAR(@"%装備者%_필드:装備先") == -1
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 고블린
	효과条件종류 = モン全般
	효과条件固名前 = 고블린 조교부대
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39652(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 合計攻撃力
#DIM DYNAMIC 조교대상
#DIM DYNAMIC レイプ횟수
#DIM DYNAMIC 所有者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC セット先
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT

IF 듀얼리스트 == "자신"
	所有者 = 1
ELSE
	所有者 = 2
ENDIF

IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"装備",場所,"攻誘")
ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		CALL FULLRESET
		효과条件성별 = 牝性
		효과条件표시 = 表側표시
		CALL CARD_FILTER_SET(듀얼리스트,"필드",カウンタ)
		SIF RESULT != 1
			CONTINUE

		SIF GETVAR(@"%듀얼리스트%_MZ_所有:{カウンタ}") == 所有者 && オプション_主従 == 0
			CONTINUE
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",カウンタ)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORMW 조련 대상인 %CALLNAME:조교대상%은 고기 방패로서 알몸상태로 노출되고 있습니다。
			CALL EROTIC_MOVE("拘束晒し",조교대상)
		ENDIF
	NEXT
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39652,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 고블린
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		合計攻撃力 = RESULT:3
		
		CALL FULLRESET
		효과条件성별 = 牝性 
		효과条件攻撃力 = 合計攻撃力
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
		IF RESULT == 1
			CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"攻誘",2,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",コントロール先,"表固",2,1)
			CALL CARD_EQUIP_MONSTER(듀얼리스트,コントロール先,"필드",場所)
			CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",コントロール先)
			IF RESULT != -1
				조교대상 = RESULT
				PRINTFORMW 쓰러진 %CALLNAME:조교대상%에게 강제로 노예 목걸이를 착용해 고블린 조교 부대의 소유물이 되었습니다。
				CALL EROTIC_MOVE("拘束晒し",조교대상,-1,300)
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39652,2)
	IF RESULT == 0

		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",装備先)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORMW %CALLNAME:조교대상%을 고블린들이 동굴 안쪽으로 데려갔습니다.……。
			PRINTFORMW ……………
			PRINTFORMW …………
			PRINTFORMW ……
			PRINTFORMW 동굴 안쪽에서 고블린들의 자손이 태어났습니다……！
			CALL EROTIC_MOVE("両穴凌辱",조교대상,-1,500)
		ENDIF
		CALL TOKEN_TRANSFORM(듀얼리스트,装備先)
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)

		CALL FULLRESET
		효과条件カテゴリ = 고블린
		효과条件종류 = モン全般
		효과条件固名前 = 고블린 조교부대
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)

	ENDIF	
ENDIF



