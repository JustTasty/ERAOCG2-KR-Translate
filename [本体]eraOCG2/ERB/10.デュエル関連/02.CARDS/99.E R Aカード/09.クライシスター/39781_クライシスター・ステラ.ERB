	CASE "略称"
		RESULTS = 크라이 스텔라
	CASE "カテゴリ"
		RESULTS:0 = 크라이시스터
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39781(参照先)

#DIMS DYNAMIC 参照先
