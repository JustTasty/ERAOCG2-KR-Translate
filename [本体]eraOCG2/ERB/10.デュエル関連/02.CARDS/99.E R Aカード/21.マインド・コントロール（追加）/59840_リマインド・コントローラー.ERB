@CARDSUMMON_59840(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 3

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = MC
ELSE
	PRINT
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,59840) 
	RETURN RESULT
ENDIF

@CARDCAN_59840(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59840)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時
	SIF 발동済_1(듀얼리스트,59840)
		RETURN 0
	CALL FULLRESET
	효과範囲상대묘지 = 1
	효과条件カテゴリ = MC
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,59840)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = MC
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 효과後誘発
	SIF 발동済_3(듀얼리스트,59840)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"손패취득+D",1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59840(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウント数
#DIM DYNAMIC ドロー枚数
#DIM DYNAMIC 복제枚数
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 実보정

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59840,1)
	IF RESULT == 0
		CALL FULLRESET
		SETCOLOR C_PINK
		FOR カウンタ,0,紙束最大値
			SIF GETVAR(@"%対面者%_묘지:カウンタ") == -1
				CONTINUE

			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_묘지:カウンタ")}, "カテゴリ"
			IF !MATCH(RESULTS, "MC")
				CONTINUE
			ENDIF
			CALL CARD_GENERATE_DECK(対面者,GETVAR(@"%対面者%_묘지:カウンタ"))
			복제枚数 ++
		NEXT
		RESETCOLOR

		FOR カウンタ,0,紙束最大値
			SIF GETVAR(@"%対面者%_손패:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(対面者,"손패",カウンタ,덱行き)
			ドロー枚数 ++
		NEXT
		CALL SHUFFLE(対面者)
		;うららで止めて全ハンデスできてしまうため、通常ドロー扱いに
		CALL CARDDRAW_BASIC(対面者,ドロー枚数,1)

		IF 복제枚数 > 0
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != -1
				実보정 = 50 * 복제枚数
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORMW %CALLNAME:조교대상%의 뇌리에 여태까지의 최면중의 기억이 소생한다!
				CALL EROTIC_MOVE("晒しもの",조교대상,MASTER,実보정)
				RESETCOLOR
			ELSE
				PRINTFORMW 상대의 뇌리에 여태까지의 최면중의 기억이 소생한다!
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59840,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = MC
		효과条件行先플래그 = 손패行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59840,3)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ENDIF
