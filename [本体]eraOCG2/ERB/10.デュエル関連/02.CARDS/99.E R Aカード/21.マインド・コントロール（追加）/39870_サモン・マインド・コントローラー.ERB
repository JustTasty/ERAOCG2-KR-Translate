@CARDCAN_39870(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39870)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_1(듀얼리스트,39870)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲EX덱 = 1
	효과条件종류 = レベル持ち
	효과条件カテゴリ = MC
	효과条件レベル = 3
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 발동誘発
	SIF 발동済_2(듀얼리스트,39870)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = MC
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_3(듀얼리스트,39870)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = MC
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF 발동済_4(듀얼리스트,39870)
		RETURN 0
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊","リリース")
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"필드")
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39870(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상 = -1


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39870)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39870,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲EX덱 = 1
		효과条件종류 = EX以外全般
		효과条件カテゴリ = MC
		효과条件レベル = 3
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 발동誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39870,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = MC
		효과条件종류 = モン全般
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"발동無効",場所,"無効")
			SETCOLOR C_PINK 
			SELECTCASE RAND:9
				CASE 0
					CALL CARD_GENERATE_DECK(対面者,79840)
				CASE 1
					CALL CARD_GENERATE_DECK(対面者,79841)
				CASE 2
					CALL CARD_GENERATE_DECK(対面者,79842)
				CASE 3
					CALL CARD_GENERATE_DECK(対面者,79843)
				CASE 4
					CALL CARD_GENERATE_DECK(対面者,79844)
				CASE 5
					CALL CARD_GENERATE_DECK(対面者,79845)
				CASE 6
					CALL CARD_GENERATE_DECK(対面者,79846)
				CASE 7
					CALL CARD_GENERATE_DECK(対面者,79847)
				CASE 8
					CALL CARD_GENERATE_DECK(対面者,79848)
			ENDSELECT
			RESETCOLOR
			TRYCALLFORM CARDNAME_{他参照選択カードID},"名前"
			효과条件名前 = %RESULTS%
			CALL CARD_ADD_BASIC(対面者,"덱",ゾーン,場所)
			SETCOLOR C_PINK
			PRINTFORMW 상대는 효과를 발동한다는 생각이 사라지고,
			PRINTFORMW 그대신 최면 카드를 패에 넣고 있었다.
			RESETCOLOR
			RETURN 1
		ENDIF
		RETURN 1
	ENDIF
	RETURN 0
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39870,3)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = MC
		효과条件종류 = モン全般
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39870,4)
	IF RESULT == 0
		CALL FULLRESET
		효과条件名前 = 마인드컨트롤러 - 서몬
		CALL CARD_SET_BASIC(듀얼리스트,"EX덱",ゾーン,場所,"表側표시")
	ENDIF
ENDIF

