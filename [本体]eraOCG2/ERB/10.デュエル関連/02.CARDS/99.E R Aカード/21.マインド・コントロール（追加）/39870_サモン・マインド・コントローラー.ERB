	CASE "종족"
		RETURN 기계족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 0
	CASE "守備力"
		RETURN 1000
	CASE "分割"
		RETURN 펜듈럼
ENDSELECT

RETURN 0

