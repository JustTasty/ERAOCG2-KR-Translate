@CARDNAME_99771,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 드래그마라의 심문
	CASE "略称"
		RESULTS = 음교의 심문
	CASE "カテゴリ"
		RESULTS:0 = 드래그마라
		RESULTS:1 = 드래그마
		RESULTS:2 = E.R.A
ENDSELECT


