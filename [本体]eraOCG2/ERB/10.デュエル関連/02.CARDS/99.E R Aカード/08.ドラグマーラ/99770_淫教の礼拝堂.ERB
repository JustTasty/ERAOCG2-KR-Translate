#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 글로리 홀 드래그마라
	CASE "略称"
		RESULTS = 음교의 예배당
	CASE "カテゴリ"
		RESULTS:0 = 드래그마라
		RESULTS:1 = 드래그마	
		RESULTS:2 = E.R.A
ENDSELECT


