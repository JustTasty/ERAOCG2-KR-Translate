@CARDCAN_39771(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39771)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,39771)
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動
	SIF 발동済_2(듀얼리스트,39771)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲상대묘지 = 1
	효과条件성별 = 牝性
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 손패起動
	SIF 발동済_3(듀얼리스트,39771)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件レベル:0 = 4
	효과条件レベル:1 = 8
	효과条件종족 = 마법사족
	효과条件속성 = 빛속성
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39771(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 조교대상_ID
#DIM DYNAMIC 元持ち主
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39771,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
	ENDIF
ELSEIF 종류 == 마함起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39771,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件성별 = 牝性
		효과추가종류 = 効追無効
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		조교대상_ID = RESULT:1
		元持ち主 = GETVAR(@"%듀얼리스트%_MZ_所有:カード소환先")
		IF 듀얼리스트 == "자신"
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"所有",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"接可",2,1)
		ELSEIF 듀얼리스트 == "상대"
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カード소환先,"所有",2,1)
		ENDIF
		CALL CARD_EROTICS(조교대상_ID)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK
			PRINTFORMW 음교의 성갑에 기생된 %CALLNAME:조교대상%는 음교의 꼭두각시가 되었다…！
			RESETCOLOR
			PRINTFORML
			CALL EROTIC_MOVE("생체파츠",조교대상, -1, 500)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과条件성별 = 牝性
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,1000,0)
ELSEIF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39771,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件レベル:0 = 4
		효과条件レベル:1 = 8
		효과条件종족 = 마법사족
		효과条件속성 = 빛속성
		효과条件성별 = 牝性
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF

