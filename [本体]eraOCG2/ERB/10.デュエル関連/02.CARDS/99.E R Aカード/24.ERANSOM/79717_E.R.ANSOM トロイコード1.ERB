			효과条件ID = 179716
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			IF RESULT == 1
				조교대상 = -1
				CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
