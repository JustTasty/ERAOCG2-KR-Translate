@CARDCAN_59647(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59647)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX덱起動
	SIF 발동済_1(듀얼리스트,59647)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,159647,ゾーン,1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = レベル持ち
	효과条件カテゴリ = 키스킬
	효과条件レベル = 2
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	;一体も無かればNG
	IF RESULT == 0
		RETURN 0
	;一体だけならチェック
	ELSEIF RESULT == 1
		条件달성 ++
	ENDIF
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종류 = レベル持ち
	효과条件カテゴリ = 리일라
	;上で「キスキル」が一体だけだったなら、「キスキル」カテゴリ同時持ちは弾く
	SIF 条件달성 == 1
		효과条件固カテゴリ = 키스킬
	효과条件レベル = 2
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = AliVe♡Twin 키스킬
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件名前 = AliVe♡Twin 리일라
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "EX덱"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 5
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲EX덱 = 1
	효과条件名前 = AliVe♡Twin 키스킬
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과範囲EX덱 = 1
	효과条件名前 = AliVe♡Twin 리일라
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件カテゴリ = Live☆Twin
	효과条件종류 = モン全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

