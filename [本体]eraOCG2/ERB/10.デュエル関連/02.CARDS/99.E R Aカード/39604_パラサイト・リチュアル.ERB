@CARDCAN_39604(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39604)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,39604)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	IF 종류 == 손패起動
		SIF モンスター数(듀얼리스트) >= 5
			RETURN 0
	ENDIF
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲묘지 = 1
	효과条件종류 = 의식
	효과条件성별 = 牝性
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == R素材時효과
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 패러사이트 리추얼
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件성별 = 牝性
	효과条件종류 = 의식
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == リアクション효과
	SIF ゾーン != "마함"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	RETURN 1
ENDIF

@CARDEFFECT_39604(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードB
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 装備先


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動 || 종류 == 필드起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39604,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종류 = 의식
		효과条件성별 = 牝性
		효과条件特不無視 = 1
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
			CALLFORM CARD_STANBY(39604,듀얼리스트,R素材時효과,"묘지")
			CALL CARD_SELECT(듀얼리스트,選択カード)
			TRYCALLFORM RITSUMMON(듀얼리스트,選択カード（CS）,参照先（CS）,1)
		ENDIF
	ENDIF
ELSEIF 종류 == R素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39604)
	IF RESULT == 0
		CALL FULLRESET
		효과条件성별 = 牝性
		효과条件종류 = 의식
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード_ID = RESULT:99
		選択カード = RESULT
		IF 選択カード != 9999
			CALL FULLRESET
			효과条件名前 = 패러사이트 리추얼
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"묘지",ゾーン,場所)
			選択カードB = RESULT
			IF 選択カードB != 9999
				CALL CARD_EQUIP_MONSTER(듀얼리스트,選択カード,"묘지",選択カードB,(4))
				CALL CARD_EROTICS(選択カード_ID)
				IF RESULT != -1
					조교대상 = RESULT
						SETCOLOR C_PINK
					PRINTFORML
					PRINTFORMW 패러사이트 리추얼은 %CALLNAME:조교대상%의 몸에 기생했다!
					PRINTFORML
						RESETCOLOR
					CALL EROTIC_MOVE("亀甲縛り",조교대상,-1,200)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == リアクション효과
	装備先 = GETVAR(@"%듀얼리스트%_魔_装:場所")
	IF GETVAR(@"%듀얼리스트%_MZ_リ数:装備先") < 10
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",装備先)
		IF RESULT != -1
			조교대상 = RESULT
				SETCOLOR C_PINK
			PRINTFORML
			PRINTFORML 패러사이트 리추얼이 %CALLNAME:조교대상%의 몸에서 기어다니고 있다.
			PRINTFORML
				RESETCOLOR
			CALL EROTIC_MOVE("全身애무",조교대상,-1,100)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",装備先,"リ数",1)
		ENDIF
	ENDIF
ENDIF
