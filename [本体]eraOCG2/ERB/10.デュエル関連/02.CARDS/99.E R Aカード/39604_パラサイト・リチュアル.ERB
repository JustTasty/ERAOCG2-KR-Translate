@CARDNAME_39604,参照先
;ココ39604で지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 패러사이트 리추얼
	CASE "略称"
		RESULTS = 패러사이트·Rit
	CASE "カテゴリ"
		RESULTS:0 = 패러사이트
		RESULTS:1 = 의식마법
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_39604(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS


SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 곤충족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 300
	CASE "의식代用"
		RETURN 어둠속성
ENDSELECT

RETURN 0

