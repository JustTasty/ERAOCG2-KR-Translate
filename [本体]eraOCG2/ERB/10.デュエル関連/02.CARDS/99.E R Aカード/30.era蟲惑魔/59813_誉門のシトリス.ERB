@CARDCAN_59813(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 효과先

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59813)
SIF RESULT == 1
	RETURN 0


IF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時誘発
;シトリス묘지효과
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 오나 홀－시트리스
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0	
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF バトルフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 효과後誘発
;フレシア묘지효과
	SIF ゾーン != "마함"
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 글로리 홀－플레시아
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0	
	SIF FINAL_SUMMON_TARGET(듀얼리스트,1) == 5 
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF !GROUPMATCH(묘지送り종류,"リリース","破壊","戦闘破壊")
		RETURN 0
	SIF 발동済_1(듀얼리스트,59813)
		RETURN 0
	RETURN 1	
ENDIF




@CARDEFFECT_59813(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC ダメージ
#DIM DYNAMIC 戦闘カード
#DIM DYNAMIC 효과先
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59813,1)
	IF RESULT == 0
		PRINTFORML 시트리스는 필드를 떠날 때 상대 마법 & 함정 존의 카드를 삼켜버렸다！
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件固名前起動 = 1
		효과条件カテゴリ = 충혹마
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,59813)
		SIF RESULT > 0
			ダメージ = (RESULT * 200)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"마함全体",場所,"묘지")
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ,1)
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%는 시트리스의 큰 구멍에 삼켜졌다！
			RESETCOLOR
			CALL EROTIC_MOVE("全身애무",조교대상,-1,ダメージ)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時誘発
	;シトリス묘지효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59813)
	IF RESULT == 0
		;通常마법汎用処理
		PRINTFORMW 시트리스는 시트리스의 큰 구멍으로…
		PRINTFORMW ！？
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		戦闘カード = 戦闘場所(듀얼리스트,1)
		CALL FULLRESET
		효과추가종류 = 6
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",戦闘カード,"永攻DOWN")
	ENDIF

ELSEIF 종류 == 효과後誘発
	;フレシア묘지효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59813)
	IF RESULT == 0
		PRINTFORMW 시트리스는 플레시아의 큰 구멍으로 유도했다…
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"묘지")
	ENDIF
ENDIF
