#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 플렉시블 홀－푸티카
	CASE "略称"
		RESULTS = 연혈의 푸티카
	CASE "カテゴリ"
		RESULTS:0 = 함정 속으로
		RESULTS:1 = 충혹마
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_39574(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 식물족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 900
	CASE "守備力"
		RETURN 1900
	CASE "성별"
		RETURN 牝性
ENDSELECT
RETURN 0

