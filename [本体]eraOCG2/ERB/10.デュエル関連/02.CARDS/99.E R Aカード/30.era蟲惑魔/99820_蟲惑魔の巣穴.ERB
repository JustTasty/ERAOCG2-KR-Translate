			효과範囲묘지 = 1
			효과条件カテゴリ = 함정 속으로
			효과条件종류 = モン全般
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ENDIF
		IF 마함数(듀얼리스트) < 5
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 함정 속으로
			효과条件종류 = モン全般
			CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시")
		ENDIF
	ENDIF
ENDIF
