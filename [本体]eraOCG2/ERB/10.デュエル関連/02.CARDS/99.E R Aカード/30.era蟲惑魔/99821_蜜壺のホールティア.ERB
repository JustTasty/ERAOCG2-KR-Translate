@CARDNAME_99821,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 허니팟－홀티아
	CASE "略称"
		RESULTS = 꿀단지 홀티아
	CASE "カテゴリ"
		RESULTS:0 = 함정 속으로
		RESULTS:1 = 충혹마
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_99821(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 通常함정
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 식물족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 400
	CASE "守備力"
		RETURN 2400
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 효과なし
	CASE "連動ID"
		RETURN 1383
ENDSELECT

RETURN 0

@CARD_EXPLANATION_99821(종류)
#DIM DYNAMIC 종류
PRINTL 이 카드명의  ①②③의 효과는 각각 1턴에 1번밖에 사용할 수 없다.
PRINTL 이 카드는 패에서 '함정 속으로' 카드 1장을 버리고, 세트한 턴에 발동할 수도 있다.
CALLFORM CARD_ABLE(1,마함起動,フリー誘発)
PRINTL ①：이 카드는 발동 후, 몬스터 존에 수비 표시로 특수 소환한다.
CALLFORM CARD_ABLE(2,묘지起動,フリー誘発)
PRINTL ②：묘지의 이 카드를 제외하고 발동할 수 있다.
PRINTL 서로 제외되어 있는 카드를 4장까지 선택해 묘지로 되돌릴 수 있다.
CALLFORM CARD_ABLE(3,ターン終了時強制)
PRINTL ③：자신의 엔드 페이즈시에 발동할 수 있다. 상대 플레이어에게 서로의 묘지의 '충혹마' 몬스터의 종류 × 100 데미지를 준다.
@CARDCAN_99821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99821)
SIF RESULT == 1
	RETURN 0


IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,99821)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,99821,"손패")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 아트라의 충혹마
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF ゾーン != "마함"
		RETURN 0
	SIF 발동済_1(듀얼리스트,99821)
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,99821,"마함")
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	효과範囲손패 = 1
	효과条件カテゴリ = 함정 속으로
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3 && RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	SIF 발동済_2(듀얼리스트,99821)
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲상대묘지 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 4
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0

	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF 발동済_3(듀얼리스트,99821)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 트랩트릭 네스트홀
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT != 1
		CALL FULLRESET
		효과条件カテゴリ = 충혹마
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件固名前起動 = 1
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	ELSE
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件固名前起動 = 1
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	ENDIF
	SIF RESULT == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_99821(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 회복量
#DIM DYNAMIC 조교대상

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF (종류 == 마함起動 || (종류 == フリー誘発 && ゾーン == "마함")) && GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99821,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件カテゴリ = 함정 속으로
		CALL CARD_ADD_GY_BASIC(듀얼리스트,"손패",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트, "마함", 場所, "守備표시")
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動  || (종류 == フリー誘発 && GROUPMATCH(ゾーン,"손패","마함"))
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99821,1)
	IF RESULT == 0
		CALL RESETCONDITION		
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所, "守備표시")
	ENDIF
ELSEIF 종류 == 묘지起動 || (종류 == フリー誘発 && ゾーン == "묘지")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99821,2)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲제외 = 1
		효과範囲상대제외 = 1
		효과条件任意 = 1
		효과条件複数 = 96
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99821,3)
	IF RESULT == 0

		IF TALENT:MASTER:성별 == 2
			SETCOLOR C_PINK
		SELECTCASE RAND:2 + 1
			CASE 1
				PRINTFORMW 홀티아는 %CALLNAME:MASTER%의 육봉을 자신의 꿀단지 안에서 만끽하고 있다...
				CALL EROTIC_MOVE("기승위",NO_TO_CHARANUM(1383),MASTER,100)
			CASE 2
				PRINTFORMW 홀티아는 %CALLNAME:MASTER%의 육봉을 입에 물고 있다...
				CALL EROTIC_MOVE("펠라치오",NO_TO_CHARANUM(1383),MASTER,100)
		ENDSELECT
		RESETCOLOR
		ELSEIF TALENT:MASTER:성별 == 3
			SETCOLOR C_PINK
		SELECTCASE RAND:2 + 1
			CASE 1
				PRINTFORMW 홀티아는 %CALLNAME:MASTER%의 후타나리 자지를 자신의 꿀단지 속에서 만끽하고 있다…
				CALL EROTIC_MOVE("기승위",NO_TO_CHARANUM(1383),MASTER,100)
			CASE 2
				PRINTFORMW 홀티아는 %CALLNAME:MASTER%의 후타나리 자지를 입에 물고 있다...
				CALL EROTIC_MOVE("펠라치오",NO_TO_CHARANUM(1383),MASTER,100)
		ENDSELECT
		RESETCOLOR
		ENDIF
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 트랩트릭 네스트홀
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			CALL FULLRESET
			효과条件カテゴリ = 충혹마
			효과範囲묘지 = 1
			효과範囲상대묘지 = 1
			효과条件固名前起動 = 1
			효과条件종류 = モン全般
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			회복量 = RESULT * 100
		ELSE
			CALL FULLRESET
			효과範囲묘지 = 1
			효과範囲상대묘지 = 1
			효과条件固名前起動 = 1
			효과条件종류 = モン全般
			효과条件CNT = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			회복量 = RESULT * 100
		ENDIF
		PRINTFORMW 홀티아는 채취한 꿀을 상대에게 뿌렸다！
		;蜜の出どころは…
		CALL LIFE_CHANGE(対面者,"減少","효과", 회복量)
	ENDIF
ENDIF

