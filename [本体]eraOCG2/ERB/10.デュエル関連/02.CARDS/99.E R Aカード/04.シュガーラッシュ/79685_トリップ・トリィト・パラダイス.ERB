@CARDCAN_79685(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79685)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79685)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 依頼_進行보존:207 >= 10
		RETURN 0
	CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
	SIF RESULT < 1 && GETVAR(@"%対面者%_薬Ｃ") < 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_79685(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 回復量
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79685,1)
	IF RESULT == 0
		;通常마법汎用処理
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		CALL FIELD_INFO_COUNT(듀얼리스트,"薬Ｃ",1,2)
		回復量 += RESULT + GETVAR(@"%対面者%_薬Ｃ")
		CALL LIFE_CHANGE(対面者,"増加","효과", 回復量 * 500)
		
		IF GETVAR(@"ライフ_%対面者%") >= 30000
			CALL SET_PLAYER_INFO(듀얼리스트,"듀얼패배플래그",4,1)
		ENDIF
	ENDIF
ENDIF
