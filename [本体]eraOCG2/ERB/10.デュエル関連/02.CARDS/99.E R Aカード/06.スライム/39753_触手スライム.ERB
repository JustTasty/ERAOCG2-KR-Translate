@CARDCAN_39753(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39753)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時 || 종류 == 특수소환時
	;효과①발동済みなら침묵
	SIF 발동済_1(듀얼리스트,39753)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ:0 = 촉수
	효과条件カテゴリ:1 = 슬라임
	효과条件종류 = 마함全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	;それ以外ならOK
	RETURN 1
ELSEIF 종류 == バトル開始時
	条件달성 = 0
	;효과②발동済みなら침묵
	SIF 발동済_2(듀얼리스트,39753)
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	;특수 소환할 수 없다なら침묵
	CALL CARD_SS_CHECK(듀얼리스트,39753,ゾーン)
	SIF RESULT == 1
		RETURN 0
	;묘지에 いないなら침묵
	SIF ゾーン != "묘지"
		RETURN 0
	;場に묘상がないなら침묵
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과範囲마함 = 1
	효과範囲상대마함 = 1
	효과条件カテゴリ = 묘상
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 戦闘→묘지
	;효과③발동済みなら침묵
	SIF 발동済_3(듀얼리스트,39753)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	;몬스터를 持って来れないなら
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF 戦闘カードID(듀얼리스트,1) == -1
		RETURN 0
	;戦闘상대의 성별チェック
	TRYCALLFORM CARD_{戦闘カードID(듀얼리스트,1)}("성별")
	SIF RESULT != 牝性
		RETURN 0
	;それ以外ならOK
	RETURN 1
ENDIF

@CARDEFFECT_39753(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 묘상可대상
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 캐릭터番号
#DIM DYNAMIC 取込カードID
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39753,1)
	IF RESULT == 0
		;덱에서 サーチ
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ:0 = 촉수
		효과条件カテゴリ:1 = 슬라임
		효과条件종류 = 마함全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == バトル開始時
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39753,2)
	IF RESULT == 0
		;フレ-バ-
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件カテゴリ = 묘상
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_SELECT(듀얼리스트,選択カード)
			조교대상 = GETVAR(@"%대상者（CS）%_%参照先（CS）%:選択カード（CS）")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORML
				PRINTFORMW 묘상 상태 %CALLNAME:조교대상%에 잠복하고 있던 촉수 슬라임이 모습을 나타냈다…！
				PRINTFORML
				RESETCOLOR
				CALL EROTIC_MOVE("疑似출산",조교대상,-1,300)
			ENDIF
		ENDIF
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39753,3)
	IF RESULT == 0
		;이 카드를 묘지에 
		묘상可대상 = 戦闘場所(듀얼리스트,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",묘상可대상,"強奪")
		CALL CARD_SET_CATEGORY(듀얼리스트,"필드",コントロール先,"묘상")
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",コントロール先)
		IF RESULT != -1
			조교대상 = RESULT
				SETCOLOR C_PINK
			PRINTFORML 
			PRINTFORML 쓰러 졌다고 생각했던 촉수 슬라임은 %CALLNAME:조교대상%의 온몸을 집어 삼켜, 꼼짝 못하게 삼켯다,  %CALLNAME:조교대상%은 촉수에게 조종당하게 되었다。
			PRINTFORMW 거기에、슬라임이 채내로 들어간 %CALLNAME:조교대상%은 묘상으로 가공되어 버렸다…。
			PRINTFORML 
				RESETCOLOR
			CALL EROTIC_MOVE("묘상捕縛",조교대상,-1,300)
		ENDIF
	ENDIF
ENDIF

