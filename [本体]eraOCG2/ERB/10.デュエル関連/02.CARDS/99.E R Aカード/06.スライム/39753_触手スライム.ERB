@CARDNAME_39753,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 번식하는 촉수 슬라임
	CASE "略称"
		RESULTS = 촉수 슬라임
	CASE "カテゴリ"
		RESULTS:0 = 촉수
		RESULTS:1 = 슬라임
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_39753(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 물속성
	CASE "종족"
		RETURN 원소정령족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 1600
	CASE "守備力"
		RETURN 1600
ENDSELECT

RETURN 0

