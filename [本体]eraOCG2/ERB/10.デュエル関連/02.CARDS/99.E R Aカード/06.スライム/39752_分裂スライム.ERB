@CARDCAN_39752(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39752)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	;발동済みかチェック
	SIF 발동済_1(듀얼리스트,39752)
		RETURN 0
	;コントロ-ラ-のターンかチェック
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;メインフェイズかチェック
	SIF メインフェイズ != 1
		RETURN 0
	;특수 소환할 수 없다かチェック
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	;특수소환できるかチェック
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = 슬라임
	CALL 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	;それ以外ならOK
	RETURN 1
ELSEIF 종류 == 戦破壊→묘지
	SIF !GROUPMATCH(묘지送り종류,"リリース","破壊","戦闘破壊")
		RETURN 0
	;발동済みかチェック
	SIF 발동済_2(듀얼리스트,39752)
		RETURN 0
	SIF 마함数(対面者) >= 5
		RETURN 0
	;それ以外ならOK
	RETURN 1
ENDIF

@CARDEFFECT_39752(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 合計攻撃力
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 이동カード名
#DIM DYNAMIC 캐릭터番号
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39752,1)
	IF RESULT == 0
		;덱、묘지에서 레벨４以下슬라임を소환
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = 슬라임
		CALL 효과条件レベル_ADV(4, "以下")
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			;フレ-バ-
			PRINTFORML 슬라임은 자신의 몸을 깍아 다른 슬라임으로 분열하였다…！
			;자신にダメージ
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",800)
		ENDIF
	ENDIF
ELSEIF 종류 == 戦破壊→묘지
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39752,2)
	IF RESULT == 0
		TRYCALLFORM CARD_UI(GETVAR(@"%対面者%_덱:0"))
		WAIT
		TRYCALLFORM CARD_{GETVAR(@"%対面者%_덱:0")},"성별"
		IF RESULT == 牝性
			조교대상 = GETVAR(@"%対面者%_덱:0")
			CALL FULLRESET
			효과추가カテ = 묘상
			CALL CARD_ADD(対面者,"덱","마함",0,"表側표시")
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORML
				PRINTFORMW %CALLNAME:조교대상%은 슬라임의 기습을 받아 전신 슬라임 절임으로 묘상이 되어 버렸다…！
				PRINTFORML
				RESETCOLOR
				CALL EROTIC_MOVE("묘상捕縛",조교대상, -1, 300)
			ENDIF
		ELSE
		ENDIF
	ENDIF
ENDIF
