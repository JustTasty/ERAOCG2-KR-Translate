	CASE "名前"
		RESULTS = 번식하는 분열 슬라임
	CASE "略称"
		RESULTS = 분열 슬라임
	CASE "カテゴリ"
		RESULTS:0 = 슬라임
		RESULTS:1 = E.R.A
ENDSELECT


@CARD_39752(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
