@CARDCAN_99751(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99751)
SIF RESULT == 1
	RETURN 0
IF 종류 == 효과後誘発
	SIF 발동済_1(듀얼리스트,99751)
		RETURN 0
	SIF FINAL_SUMMON_TARGET(듀얼리스트,1) == 5 
		RETURN 0

	IF ゾーン == "손패"
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = 아트라의 충혹마
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 슬라임
		효과条件종류:0 = 지속마법
		효과条件종류:1 = 지속함정
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
			RETURN 1
		RETURN 0
	ELSEIF ゾーン == "묘지"
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件カテゴリ = 슬라임
		효과条件종류:0 = 지속마법
		효과条件종류:1 = 지속함정
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
		RETURN 1
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF	

	RETURN 1
ENDIF



@CARDEFFECT_99751(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 묘지送カード,5
#DIM DYNAMIC 효과先
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과後誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99751,1)
	IF RESULT == 0
		IF ゾーン != "묘지"
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		ELSE
			CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,덱行き)
		ENDIF
		효과先 = FINAL_SUMMON_TARGET(듀얼리스트,1)
		IF 효과先 != 5
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:효과先")},"성별"
			IF RESULT == 牝性
				조교대상 = GETVAR(@"%対面者%_필드:효과先")
				CALL FULLRESET
				효과추가カテ = 묘상
				CALL CARD_ADD(対面者,"필드","마함",효과先,"表側표시")

				CALL CARD_EROTICS(조교대상)
				IF RESULT != -1
					조교대상 = RESULT
					SETCOLOR C_PINK
					PRINTFORML
					PRINTFORMW %CALLNAME:조교대상%은 슬라임 무리의 함정에 떨어지고 전신 슬라임 절임으로 범해져 묘상이 되어 버렸다…！
					PRINTFORML
					RESETCOLOR
					CALL EROTIC_MOVE("묘상捕縛",조교대상, -1, 300)
				ENDIF
			ELSE
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",효과先,"묘지")
			ENDIF
		ENDIF
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 슬라임
		효과条件任意 = 1
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
