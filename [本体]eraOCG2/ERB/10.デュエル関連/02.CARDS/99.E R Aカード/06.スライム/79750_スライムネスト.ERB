@CARDCAN_79750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79750)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;②を발동済みなら침묵
	SIF 발동済_2(듀얼리스트,79750)
		RETURN 0
	;コントロ-ラ-のターンじゃないなら침묵
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;メインフェイズじゃないなら침묵
	SIF メインフェイズ != 1
		RETURN 0
	;묘상が설치可能かチェック
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		SIF 마함数(듀얼리스트) < 5
			条件달성++
	ENDIF
	CALL FULLRESET
	효과範囲상대묘지 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1
		SIF 마함数(対面者) < 5
			条件달성++
	ENDIF
	SIF 条件달성 == 0
		RETURN 0
	CALL CARD_DRAW_CHECK
	;それ以外ならOK
	RETURN 1
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;①を발동済みなら침묵
	SIF 발동済_1(듀얼리스트,79750)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ELSEIF 종류 == 손패起動
		SIF 마함数(듀얼리스트) >= 5
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_79750(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択カード


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79750,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件성별 = 牝性
		효과추가カテ = 묘상
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"表側표시",1)
		IF RESULT == 1
			조교대상 = RESULT:1
			CALL CARD_EROTICS(조교대상)
			IF RESULT != -1
				조교대상 = RESULT
				SETCOLOR C_PINK
				PRINTFORML
				PRINTFORMW %CALLNAME:조교대상%는 슬라임 둥지로 납치되어 슬라임들의 묘상이 되어 버렸다！
				PRINTFORML
				RESETCOLOR
				CALL EROTIC_MOVE("묘상捕縛",조교대상,-1,300)
			ENDIF
			CALL CARDDRAW_BASIC(듀얼리스트,1)
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79750,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		;덱에서 슬라임を패에 
		CALL FULLRESET
		효과条件カテゴリ = 슬라임
		효과条件종류 = モン全般
		효과条件任意 = 1
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF
