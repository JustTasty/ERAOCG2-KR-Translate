@CARDCAN_79705(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79705)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79705)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,79705,ゾーン)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	IF ターンプレイヤー == 듀얼리스트
		SIF 발동済_2(듀얼리스트,79705)
			RETURN 0
		CALL FULLRESET
		효과範囲마함 = 1
		효과範囲상대마함 = 1
		효과条件성별 = 牝性
		효과条件固カテゴリ = 음화
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ELSE
		SIF 발동済_3(듀얼리스트,79705)
			RETURN 0
		CALL RESETAREA_MAT
		素材範囲필드 = 1
		素材範囲상대마함 = 1
		CALL FULLRESET
		효과範囲EX덱 = 1
		효과条件カテゴリ = 음화
		효과条件종류 = 융합
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0
	ENDIF
	RETURN 1
ELSEIF 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	SIF 발동済_3(듀얼리스트,79705)
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲상대마함 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件カテゴリ = 음화
	효과条件종류 = 융합
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_79705(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79705,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			PRINTFORML 
			PRINTFORML 파인멜트의 거리낌 없는 모습이 그려진 그림에서 파인멜트가 튀어나왔다！
			PRINTFORMW 
		ENDIF
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	IF ターンプレイヤー == 듀얼리스트
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79705,2)
		IF RESULT == 0
			CALL FULLRESET
			효과範囲마함 = 1
			효과範囲상대마함 = 1
			효과条件성별 = 牝性
			효과条件固カテゴリ = 음화
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT != 9999
				選択カード = RESULT
				選択カード_ID = RESULT:99
				CALL CARD_SELECT(듀얼리스트,選択カード)
				CALL CARD_EROTICS_FIELD(대상者（CS）,"마함",選択カード（CS）)
				조교대상 = RESULT
				IF 조교대상 != -1
					PRINTFORML 
					PRINTFORMW 파인멜트는 가학적인 미소를 지으며 그림에 갇힌 %CALLNAME:조교대상%의 모습을 다시 그린다……
					PRINTFORML 
					PRINTFORML ……………
					PRINTFORML …………
					PRINTFORMW ……
				ENDIF
				CALL TOKEN_TRANSFORM(대상者（CS）,選択カード（CS）,1)
				IF 조교대상 != -1
					CALL EROTIC_MOVE("全身애무",조교대상,-1,500)
				ENDIF
			ENDIF
		ENDIF
	ELSE
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79705,3)
		IF RESULT == 0
			CALL RESETAREA_MAT
			素材範囲필드 = 1
			素材範囲상대마함 = 1
			CALL FULLRESET
			효과条件カテゴリ = 음화
			효과条件종류 = 융합
			효과条件소환可 = 1
			CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
				CALL FUSSUMMON(듀얼리스트,選択カード)
			ENDIF
		ENDIF
	ENDIF
ENDIF


