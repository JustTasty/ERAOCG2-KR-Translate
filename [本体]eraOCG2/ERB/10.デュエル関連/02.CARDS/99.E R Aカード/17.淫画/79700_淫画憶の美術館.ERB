VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 음화를 담은 미술관
	CASE "略称"
		RESULTS = 음화 미술관
	CASE "カテゴリ"
		RESULTS:0 = 음화
		RESULTS:1 = E.R.A
ENDSELECT


