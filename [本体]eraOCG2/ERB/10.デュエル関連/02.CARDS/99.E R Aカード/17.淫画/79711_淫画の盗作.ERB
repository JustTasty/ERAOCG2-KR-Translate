@CARDCAN_79711(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,79711)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,79711)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	FOR カウンタ,0,5
		VARSET RESULT
		SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_変化元ID:{カウンタ}") == -1
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:{カウンタ}")}, "カテゴリ"
		SIF !MATCH(RESULTS, "음화")
			CONTINUE
		条件달성++
	NEXT
	SIF 条件달성 == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_79711(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 条件달성カード名,10
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 이동カード名
#DIMS DYNAMIC 복제カテゴリ,5
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 마함起動 || 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,79711,1)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			選択カード_ID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
			TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
			SIF !MATCH(RESULTS,"음화")
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_変化元ID:{カウンタ}") == -1
				CONTINUE
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			IF RESULTS != ""
				条件달성カード名:カウンタ = %RESULTS%
			ENDIF
		NEXT
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件カテゴリ = 음화
		효과条件표시 = 10
		IF 条件달성カード名:0 != ""
			효과条件名前:0 = %条件달성カード名:0%
		ELSE
			효과条件名前:0 = ""
		ENDIF
		효과条件名前:1 = %条件달성カード名:1%
		효과条件名前:2 = %条件달성カード名:2%
		효과条件名前:3 = %条件달성カード名:3%
		효과条件名前:4 = %条件달성カード名:4%
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT != 9999
			選択カード_ID = GETVAR(@"%듀얼리스트%_MZ_変化元ID:RESULT")
			IF 選択カード_ID != -1
				TRYCALLFORM CARDNAME_{選択カード_ID},"カテゴリ"
				복제カテゴリ:0 = %RESULTS:0%
				복제カテゴリ:1 = %RESULTS:1%
				복제カテゴリ:2 = %RESULTS:2%
				복제カテゴリ:3 = %RESULTS:3%
				복제カテゴリ:4 = %RESULTS:4%

				CALL FULLRESET
				효과範囲상대덱 = 1
				효과範囲상대묘지 = 1
				효과条件カテゴリ:0 = %복제カテゴリ:0%
				효과条件カテゴリ:1 = %복제カテゴリ:1%
				효과条件カテゴリ:2 = %복제カテゴリ:2%
				효과条件カテゴリ:3 = %복제カテゴリ:3%
				효과条件カテゴリ:4 = %복제カテゴリ:4%
				효과条件종류 = 마함全般
				CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
				IF RESULT != 9999
					選択カード_ID = RESULT:99
					選択カード = RESULT
					TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
					이동カード名 = %RESULTS%
					CALL CARD_SELECT(듀얼리스트,選択カード)
					IF 本参照先（CS） == "상대덱"
						CALL CARD_RECONSTRUCT(듀얼리스트,"손패",現손패(듀얼리스트),選択カード_ID)
						SETVAR @"%듀얼리스트%_手加数" , GETVAR(@"%듀얼리스트%_手加数") + 1
						CALL CARD_RECONSTRUCT(対面者,"덱",選択カード（CS）,-1)
						PRINTFORML 
						PRINTFORML %듀얼리스트%는 %本参照先（CS）%에서 『{選択カード（CS）}』%이동カード名%을 패에 넣었다。
						PRINTFORMW
					ELSEIF 本参照先（CS） == "상대묘지"
						CALL CARD_RECONSTRUCT(듀얼리스트,"손패",現손패(듀얼리스트),選択カード_ID)
						SETVAR @"%듀얼리스트%_手加数" , GETVAR(@"%듀얼리스트%_手加数") + 1
						CALL CARD_RECONSTRUCT(対面者,"묘지",選択カード（CS）,-1)
						PRINTFORML 
						PRINTFORML %듀얼리스트%는 %本参照先（CS）%에서 『{選択カード（CS）}』%이동カード名%을 패에 넣었다。
						PRINTFORMW
					ENDIF
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF

