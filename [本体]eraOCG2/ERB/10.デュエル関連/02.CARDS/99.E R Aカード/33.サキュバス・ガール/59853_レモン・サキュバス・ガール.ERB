	CASE "名前"
		RESULTS = 레몬 서큐버스 걸
	CASE "略称"
		RESULTS = 레몬 Ｓ Ｇ
	CASE "カテゴリ"
	    RESULTS:0 = 매지션 걸
		RESULTS:1 = 서큐버스 걸
		RESULTS:2 = E.R.A
ENDSELECT

@CARD_59853(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 융합
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RESULT:1 = 악마족
		RETURN 마법사족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 800
	CASE "守備力"
		RETURN 600
	CASE "성별"
		RETURN 牝性
	CASE "生成カード"
		RETURN 宝液ID
	CASE "連動ID"
		RETURN 1006
ENDSELECT
RETURN 0

