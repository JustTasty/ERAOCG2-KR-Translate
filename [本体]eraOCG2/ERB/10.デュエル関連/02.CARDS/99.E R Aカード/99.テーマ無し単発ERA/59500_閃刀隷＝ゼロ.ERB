@CARDCAN_59500(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59500)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,59500)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲묘지 = 1
	효과条件カテゴリ = E.R.A
	효과条件종류 = 함정全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
;フレ-バ-用
ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ダメージ受者 != 듀얼리스트
		RETURN 0
	SIF ダメージ増減 != "減少"
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류,"戦闘", "효과")
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) == 5
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_攻:場所") != 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_59500(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 無効カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59500,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件カテゴリ = E.R.A
		효과条件종류 = 함정全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 지속효과
	;CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"星",0,上書きモード)
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"攻誘")
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"不材")
	CALL FULLRESET
	효과条件他所 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
	SIF GETVAR(@"%듀얼리스트%_MZ_表:場所") != 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"表",1)
ELSEIF 종류 == ライフ変強制誘発
	PRINTFORML 
	PRINTFORMW ゼロは無저항に상대 몬스터의 攻撃を受けた！
	CALL EROTIC_MOVE("なぶり殺し",NO_TO_CHARANUM(2000),-1,ダメージ受値)
	CALL EROTIC_MOVE("なぶり殺し",NO_TO_CHARANUM(2001),-1,ダメージ受値)
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59500,0)
	IF RESULT == 0
		PRINTFORML 
		PRINTFORMW ゼロは파괴되는 所も無理矢理耐えさせられた
		CALL EROTIC_MOVE("なぶり殺し",NO_TO_CHARANUM(2000),-1,500)
		CALL EROTIC_MOVE("なぶり殺し",NO_TO_CHARANUM(2001),-1,500)
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",1500)
		CALL LIFE_CHANGE(듀얼리스트,"増加","효과",1500,1)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF


