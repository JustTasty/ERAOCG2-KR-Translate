@CARDCAN_39804(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39804)
SIF RESULT == 1
	RETURN 0

IF  종류 == 필드起動
	SIF 발동済_1(듀얼리스트,39804)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL RESETAREA_MAT
	素材範囲필드 = 1
	素材範囲손패 = 1
	素材範囲마함 = 1
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件종류 = 융합
	효과条件종족 = 식물족
	強制素材場所 = 지정場所(場所,ゾーン)
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,39804)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ターン数 < 2
		RETURN 0
	SIF 마함数(対面者) >= 5
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件名前 = 트립아로마지-로리에-
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과 || 종류 == リアクション효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲마함 = 1
	효과条件カテゴリ = 트립아로마
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 5
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39804(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39804,1)
	IF RESULT == 0
		CALL RESETAREA_MAT
		素材範囲손패 = 1
		素材範囲필드 = 1
		素材範囲마함 = 1
		CALL FULLRESET
		효과条件종류 = 융합
		효과条件종족 = 식물족
		효과条件소환可 = 1
		強制素材場所 = 지정場所(場所,ゾーン)
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		SIF 選択カード == 9999
			RETURN 0
		TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
		CALL FUSSUMMON(듀얼리스트, 選択カード)
		SIF RESULT != 1
			RETURN 0
			
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%은 로리에가 피우는 미향에 의해 발정했다!
			RESETCOLOR
			CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1394),100)
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,1,1)

	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39804,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML 
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%의 몸에 로리에의 꽃이 피었다!
			RESETCOLOR
			CALL EROTIC_MOVE("淫紋の疼き",조교대상,NO_TO_CHARANUM(1394),100)
		ENDIF
		CALL CARD_ADD(対面者,"상대묘지","마함",場所)
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	CALL SET_PLAYER_INFO(듀얼리스트,"魔無効",3)
ELSEIF 종류 == ターン開始時強制
	CALL CARD_EROTICS(상대プレイヤー,対面者)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML 
		SETCOLOR C_PINK 
		PRINTFORMW %NAME:조교대상%의 몸에 핀 로리에의 꽃으로부터 감도는 미향에 의해 힘이 빠져간다!
		RESETCOLOR
		CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1394),100)
	ENDIF
ENDIF
