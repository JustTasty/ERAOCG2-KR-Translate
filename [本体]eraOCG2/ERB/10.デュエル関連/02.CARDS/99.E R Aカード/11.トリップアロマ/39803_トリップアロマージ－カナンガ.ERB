@CARDCAN_39803(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,39803)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	SIF 발동済_1(듀얼리스트,39803)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 트립아로마
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,39803)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(対面者) >= 5
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") <= 800
		RETURN 0
	CALL FULLRESET
	효과範囲상대마함 = 1
	효과条件名前 = 트립아로마지-카낭가-
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_39803(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 合計攻撃力
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 조교대상
#DIM DYNAMIC ダメージ量
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 필드→묘지 || 종류 == 손패→묘지 || 종류 == 덱→묘지 || 종류 == 破壊→묘지 || 종류 == 戦闘→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39803,1)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 트립아로마
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)

		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%은 카낭가가 피우는 미향에 의해 발정했다!
			RESETCOLOR
			CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1393),300)
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,1,1)

	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,39803,2)
	IF RESULT == 0
		CALL LIFE_CHANGE(듀얼리스트,"減少","コスト",800)
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%의 몸에 카낭가의 꽃이 피었다!
			RESETCOLOR
			CALL EROTIC_MOVE("淫紋の疼き",조교대상,NO_TO_CHARANUM(1393),300)
		ENDIF
		CALL CARD_ADD(対面者,"상대묘지","마함",場所)
	ENDIF
ELSEIF 종류 == ターン終了時強制
	CALL CARD_EROTICS(상대プレイヤー,対面者)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML 
		SETCOLOR C_PINK 
		PRINTFORMW %NAME:조교대상%은 몸에 핀 카낭가의 꽃으로부터 감도는 미향에 의해 힘이 빠져간다!
		RESETCOLOR
		CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1393),300)
	ENDIF

	CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,,1)
	ダメージ量 = GETVAR(@"%듀얼리스트%_薬Ｃ") * 100
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量)
ENDIF
