@CARDCAN_59802(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59802)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,59802)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"ライフ_%듀얼리스트%") < GETVAR(@"ライフ_%対面者%") + 10000
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件종류 = 마법全般
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ELSEIF 종류 == ライフ変強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ダメージ増減 == "増加"
		RETURN 0
	SIF ダメージ受者 == 듀얼리스트
		RETURN 0
	SIF !GROUPMATCH(ダメージ종류,"戦闘", "直接戦闘")
		RETURN 0
	; CALL CARD_CHECK_FIN_BIT(対面者,"戦闘ダメージ")
	; SIF RESULT != 1
	; 	RETURN 0
	TRYCALLFORM CARDNAME_{戦闘カードID(듀얼리스트)}("カテゴリ")
	SIF !MATCH(RESULTS,"아로마")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59802(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 조교대상
#DIM DYNAMIC 回復量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59802,1)
	IF RESULT == 0
		回復量 = GETVAR(@"ライフ_%듀얼리스트%") - GETVAR(@"ライフ_%対面者%")
		CALL LIFE_CHANGE(対面者,"増加","효과",回復量)

		CALL FULLRESET
		효과範囲덱 = 1
		효과条件종류 = 마법全般
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
		
		CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
		IF RESULT != -1
			조교대상 = RESULT
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %NAME:조교대상%은 마죠람이 피우는 미향에 의해 발정했다!
			RESETCOLOR
			CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1392),600)
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"薬Ｃ",1,1,1)

	ENDIF
ELSEIF 종류 == 攻守変動
	攻撃力修正 = GETVAR(@"%対面者%_薬Ｃ") * 100
	CALL FULLRESET
	효과条件カテゴリ = 아로마
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,攻撃力修正)
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"貫通")
ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	IF RESULT == 0
		IF 戦闘場所(듀얼리스트,1) != 5
			CALL CARD_EROTICS(戦闘カードID(듀얼리스트,1))
			IF RESULT != 0
				조교대상 = RESULT
			ENDIF
		ELSE
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != 0
				조교대상 = RESULT
			ENDIF
		ENDIF
		IF 조교대상 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %CALLNAME:조교대상%은 마죠람에게 전신을 포박되어 희롱당하고 있다!
			RESETCOLOR
			CALL EROTIC_MOVE("묘상捕縛",조교대상,NO_TO_CHARANUM(1392),100)
		ENDIF
	ENDIF
ELSEIF 종류 == ライフ変強制誘発
	回復量 = GETVAR(@"%対面者%_変動値_保")
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML
		SETCOLOR C_PINK 
		PRINTFORML 마죠람에게 포박 된 %CALLNAME:조교대상%은 힘을 빨아들여졌다!
		RESETCOLOR
		CALL EROTIC_MOVE("묘상捕縛",조교대상,NO_TO_CHARANUM(1392),100)
	ENDIF
	CALL LIFE_CHANGE(듀얼리스트,"増加","효과",回復量)
ENDIF



