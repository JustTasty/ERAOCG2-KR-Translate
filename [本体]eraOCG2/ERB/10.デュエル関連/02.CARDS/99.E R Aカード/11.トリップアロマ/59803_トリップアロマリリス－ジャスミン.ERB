@CARDSUMMON_59803(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 3
素材条件종류 = 효과全般


IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 트립아로마
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,59803) 
	RETURN RESULT
ENDIF


@CARDCAN_59803(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%
CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59803)
SIF RESULT == 1
	RETURN 0


IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,59803)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件固名前 = 트립아로마릴리스-재스민
	효과条件カテゴリ = 트립아로마
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 지속효과 || 종류 == リアクション효과 || 종류 == 常在無効
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発 || 종류 == 攻撃後強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_59803(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 조교대상


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59803,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件固名前 = 트립아로마릴리스-재스민
		효과条件カテゴリ = 트립아로마
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			IF モンスター数(対面者) > 0
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"選択")
				IF RESULT == 1
					選択カード = RESULT:1
					CALL CARD_SELECT(듀얼리스트,選択カード)
					選択カード = RESULT
					CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",選択カード,1)
					IF RESULT != -1
						조교대상 = RESULT
						PRINTFORML
						SETCOLOR C_PINK 
						PRINTFORML %NAME:조교대상%은 재스민이 피우는 미향에 의해 발정했다!
						RESETCOLOR
						CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1391),400)
					ENDIF
					CALL STATCHANGE_EFFECT(対面者,"자신",選択カード,"発情",2)
					CALL SET_FIELD_INFO(対面者,"필드",選択カード,"薬Ｃ",1)
				ENDIF
			ENDIF
			SS소환可能종족 = 식물족
			CALL CARD_SS_RESTRICTION(듀얼리스트)
		ENDIF
	ENDIF
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과条件薬Ｃ所持 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"戦無")
ELSEIF  종류 == 常在無効
	CALL FULLRESET
	효과条件薬Ｃ所持 = 1
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"無効")
ELSEIF 종류 == リアクション효과
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_薬Ｃ:カウンタ") == 0
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_リ数:カウンタ") >= 1
			CONTINUE
		CALL CARD_EROTICS_FIELD(듀얼리스트,"필드",カウンタ)
		조교대상 = RESULT
		IF 조교대상 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORMW %NAME:조교대상%의 몸에 핀 재스민의 꽃으로부터 감도는 미향에 의해 힘이 빠져나간다!
			RESETCOLOR
			CALL EROTIC_MOVE("媚毒汚染",조교대상,NO_TO_CHARANUM(1391),400)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"リ数",1)
		ENDIF
	NEXT
ELSEIF 종류 == 攻撃時強制誘発
	CALL FULLRESET
	IF RESULT == 0
		IF 戦闘場所(듀얼리스트,1) != 5
			CALL CARD_EROTICS(戦闘カードID(듀얼리스트,1))
			IF RESULT != 0
				조교대상 = RESULT
			ENDIF
		ELSE
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != 0
				조교대상 = RESULT
			ENDIF
		ENDIF
		IF 조교대상 > 0
			PRINTFORML
			SETCOLOR C_PINK 
			PRINTFORML %CALLNAME:조교대상%은 재스민에게 전신을 포박당해 희롱당하고 있다!
			RESETCOLOR
			CALL EROTIC_MOVE("묘상捕縛",조교대상,NO_TO_CHARANUM(1391),100)
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃後強制誘発
	CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
	IF RESULT != -1
		조교대상 = RESULT
		PRINTFORML
		SETCOLOR C_PINK 
		PRINTFORML %CALLNAME:조교대상%은 재스민에게 전신을 포박당해 희롱당하고 있다!
		RESETCOLOR
		CALL EROTIC_MOVE("묘상捕縛",조교대상,NO_TO_CHARANUM(1391),100)
	ENDIF
ENDIF
