@CARDNAME_59803,参照先
;ココで지정 카드의 名前、略称を返す予定
;#FUNCTIONS
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 트립아로마릴리스-재스민
	CASE "略称"
		RESULTS = TAL-재스민
	CASE "カテゴリ"
		RESULTS:0 = 트립아로마
		RESULTS:1 = 아로마
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_59803(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 링크
	CASE "속성"
		RETURN 어둠속성
	CASE "종족"
		RETURN 식물족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 2200
	CASE "守備力"
		RETURN 600
	CASE "성별"
		RETURN 牝性
	CASE "連動ID"
		RETURN 1391
ENDSELECT

RETURN 0


