@CARDNAME_99693,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 인디센츄리온 템프테이션
	CASE "略称"
		RESULTS = 여기사의 유혹
	CASE "カテゴリ"
		RESULTS:0 = 인디센츄리온
		RESULTS:1 = 센츄리온
		RESULTS:2 = E.R.A
ENDSELECT


@CARD_99693(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
ENDSELECT

RETURN 0

