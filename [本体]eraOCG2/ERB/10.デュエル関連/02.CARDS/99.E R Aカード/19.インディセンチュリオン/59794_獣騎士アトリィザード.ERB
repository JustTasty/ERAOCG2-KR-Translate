@CARDCAN_59794(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59794)
SIF RESULT == 1
	RETURN 0


IF 종류 == 지속효과 || 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 雄性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == バトル開始時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_発情:場所") == 0
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF ゾーン != "필드"
		RETURN 0
	SIF 破壊대상ゾーン != "필드"
		RETURN 0
	SIF 破壊대상場所 != 場所
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59794(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 数値보존

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"発情",3)
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"接可",3)
ELSEIF 종류 == リアクション효과
	PRINTFORML
	SETCOLOR C_PINK
	PRINTFORML 짐승 기사 아트리자드({場所})는 수컷을 눈 앞에 두고 짐승 처럼 발정하고 있다。
	RESETCOLOR
	PRINTFORMW
ELSEIF 종류 == バトル開始時強制
	PRINTFORML
	SETCOLOR C_PINK
	PRINTFORML 짐승 기사 아트리자드({場所})는 먹이를 앞에 두고 혀로 핥고 있다…
	RESETCOLOR
	PRINTFORMW
	攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力修正)
	数値보존 = GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1
	CALL FULLRESET
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"戦",数値보존)
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59794,0,X消費1)
	IF RESULT == 0
		RETURN 1
	ENDIF
	RETURN 0
ENDIF

