@CARDCAN_59791(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59791)
SIF RESULT == 1
	RETURN 0


IF 종류 == 지속효과 || 종류 == リアクション효과
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件성별 = 雄性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= 0
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59791(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 数値보존

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 지속효과
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"発情",3)
	CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"接可",3)
ELSEIF 종류 == リアクション효과
	PRINTFORML
	SETCOLOR C_PINK
	PRINTFORML 짐승 기사 프리메라 비트({場所})는 수컷을 눈앞에 준 짐승처럼 발정하고있다。
	RESETCOLOR
	PRINTFORMW
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59791,2,X消費2)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_発情:場所") >= 1
			条件달성 = 1
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		TRYCALLFORM CARD_{他参照選択カードID},"攻撃力"
		数値보존 = RESULT
		TRYCALLFORM CARD_{他参照選択カードID},"성별"
		IF RESULT == 雄性
			TRYCALLFORM CARDNAME_{他参照選択カードID},"名前"
			IF RESULTS != ""
				PRINTFORML
				SETCOLOR C_PINK
				PRINTFORML 짐승 기사 프리메라 비트({場所})는 %RESULTS%를 밀어 넘어트리고、정성을 다해 착정하기 시작했다！
				RESETCOLOR
				PRINTFORMW
				CALL EROTIC_MOVE("騎乗位",NO_TO_CHARANUM(2130),,数値보존)
			ENDIF
		ENDIF
		IF 条件달성 == 1 && 数値보존 != 0
			CALL LIFE_CHANGE(듀얼리스트,"減少","효과",数値보존,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"Ｘ",2)
		ENDIF
	ENDIF
ENDIF

