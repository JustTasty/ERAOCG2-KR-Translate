@CARDCAN_59793(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,59793)
SIF RESULT == 1
	RETURN 0

IF 종류 == X素材時효과
	SIF 발동済_1(듀얼리스트,59793)
		RETURN 0
	CALL CARD_SS_CHECK(対面者,159793,"",1)
	SIF RESULT == 1
		RETURN 0
	SIF モンスター数(対面者) >= 5
		RETURN 0
	RETURN 1
ELSEIF 종류 == 묘지起動
	SIF 발동済_2(듀얼리스트,59793)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件名前 = 짐승 기사 아트리자드
	효과条件発情 = 0
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_59793(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == X素材時효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59793,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_GENERATE(対面者,159793,"攻撃표시")
	ENDIF
ELSEIF 종류 == 묘지起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,59793,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과条件名前 = 짐승 기사 아트리자드
		효과条件発情 = 0
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"発情",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"接可",1,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"Ｘ",2)
		ENDIF
	ENDIF
ENDIF




