@CARDCAN_99555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 대상カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,99555)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 
	SIF !(メインフェイズ == 1 || バトルフェイズ == 1 )
		RETURN 0
	
	IF ゾーン == "손패"
		;セット카드가 あれば使えない
		CALL FULLRESET
		효과範囲마함 = 1
		효과条件표시 = 裏側표시
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT > 0
			RETURN 0
	ELSEIF ゾーン == "마함"
		;세트 한 턴에 は使えない
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 2
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	
	;필드에 牝が居なければ使えない
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲상대필드 = 1
	효과条件성별 = 牝性
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 0
		RETURN 0
		
	RETURN 1
ELSEIF 종류 == 묘지起動
	
	SIF 발동済_2(듀얼리스트,99555)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲묘지 = 1
	효과条件종류 = 通常モン
	효과条件종족 = 야수족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	
	RETURN 1
ENDIF

@CARDEFFECT_99555(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 参照場所
#DIM DYNAMIC 상대플래그
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 選択カードID_保
#DIM DYNAMIC 参照カードID
#DIM DYNAMIC 암소대상
#DIMS DYNAMIC 암소名称
#DIM DYNAMIC 元乳サイズ
#DIM DYNAMIC 現乳サイズ
#DIM DYNAMIC 암소最大ID
#DIMS DYNAMIC 最大듀얼리스트
#DIM DYNAMIC 最大場所
#DIMS DYNAMIC 암소最大名称
#DIM DYNAMIC 암소最大サイズ
#DIMS DYNAMIC カテゴリ名称
#DIM DYNAMIC 암소鳴き声
#DIM DYNAMIC 암소절정声
#DIM DYNAMIC 절정횟수
#DIM DYNAMIC 一時カードID


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99555,1)
	IF RESULT == 0
		
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件성별 = 牝性
		
		CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
	
		IF RESULT != -1
			選択カード = RESULT
			選択カードID = RESULT:99
			
			IF 選択カード >= 2000
				選択カード = 選択カード - 2000
				상대플래그 = 1
			ENDIF
			
			;호루스타인カードなら、마법함정のカードIDを参照
			CALL HORUSTEIN_GET_DATA(듀얼리스트,選択カードID)
			암소名称 = %RESULTS:0%
			参照場所 = RESULT:0
			参照カードID = RESULT:99
			
			;紋章の場所が入っていなければ、ホルスタインカードではない
			SIF 参照場所 == -1
				参照カードID = 選択カードID
			
			암소最大サイズ = -5
			;필드의 가슴サイズチェック
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
					CONTINUE
				;IDが変化してたらそっちを参照する
				一時カードID = GETVAR(@"%듀얼리스트%_MZ_ID:{カウンタ}")
				SIF GETVAR(@"%듀얼리스트%_MZ_変化元ID:{カウンタ}") != -1
					一時カードID = GETVAR(@"%듀얼리스트%_MZ_変化元ID:{カウンタ}")
				CALL HORUSTEIN_GET_BUST(一時カードID, GETVAR(@"%対面者%_MZ_가슴追:カウンタ"))
				IF RESULT:2 > 암소最大サイズ 
					암소最大サイズ = RESULT:2
					암소最大ID = GETVAR(@"%対面者%_MZ_ID:カウンタ")
					最大듀얼리스트 = %対面者%
					最大場所 = カウンタ
				ENDIF
			NEXT
			
			FOR カウンタ,0,5
				SIF GETVAR(@"%듀얼리스트%_마함:{カウンタ}") == -1
					CONTINUE
				;IDが変化してたらそっちを参照する
				一時カードID = GETVAR(@"%対面者%_MZ_ID:{カウンタ}")
				SIF GETVAR(@"%対面者%_MZ_変化元ID:{カウンタ}") != -1
					一時カードID = GETVAR(@"%対面者%_MZ_変化元ID:{カウンタ}")
				CALL HORUSTEIN_GET_BUST(一時カードID, GETVAR(@"%対面者%_MZ_胸追:カウンタ"))
				IF RESULT:2 > 암소最大サイズ 
					암소最大サイズ = RESULT:2 
					암소最大ID = GETVAR(@"%듀얼리스트%_魔_ID:カウンタ")
					最大듀얼리스트 = %듀얼리스트%
					最大場所 = カウンタ
				ENDIF
			NEXT
			
			CALL HORUSTEIN_GET_DATA(듀얼리스트,암소最大ID)
			
			암소最大名称 = %RESULTS:0%
			
			CALL HORUSTEIN_PRINT_STATE(듀얼리스트,最大場所,암소最大ID, 암소最大サイズ,2,1);2乳上書き(比較なし)、1画像アイコンのみ
			;ホルスタインEXの효과で上がったサイズについては、효과대상外となります。
			IF GROUPMATCH(암소最大ID,179559,279559) && GETVAR(@"%最大듀얼리스트%_MZ_汎数:最大場所") > 0
				
				PRINTFORML ※호루스타인EX의 효과로 올라간 사이즈에 대해서는、효과대상외가 됩니다。
				PRINTFORM 실 사이즈：
				CALL HORUSTEIN_DISP_BUSTSIZE(암소最大サイズ)
				PRINTFORML  + {GETVAR(@"%最大듀얼리스트%_MZ_汎数:最大場所")}사이즈 업 
			ENDIF
			PRINTFORML 
			SETCOLOR C_GOLD
			PRINTFORM ★최대 사이즈★ ：
			RESETCOLOR
			CALL HORUSTEIN_DISP_BUSTSIZE(암소最大サイズ)
			PRINTFORML %암소最大名称%
			PRINTFORML 
			
			;デバッグ표시
			;PRINTFORML 胸：{GETVAR(@"%대상者（CS）%_MZ_胸追:選択カード")}　選択カード{選択カード} %대상者（CS）%
			;현재의 サイズを취득
			CALL HORUSTEIN_GET_BUST(選択カードID, GETVAR(@"%대상者（CS）%_MZ_가슴追:選択カード"))
			元乳サイズ = RESULT:0
			現乳サイズ = RESULT:2
			
			CALL HORUSTEIN_GET_DATA(듀얼리스트,選択カードID)
			암소名称 = %RESULTS:0%
			암소대상 = RESULT:1
			암소鳴き声 = RESULT:2
			암소절정声 = RESULT:3
			
			PRINTFORM 　현재 사이즈　 ：
			CALL HORUSTEIN_DISP_BUSTSIZE(現乳サイズ)
			RESETCOLOR
			PRINTFORML %암소名称%
			PRINTFORMW 
			
			;가슴のサイズによって選択肢の표시有無
			IF 암소最大サイズ <= 現乳サイズ
				;サイズアップのみ
				PRINTFORML
				PRINTFORMW 선택한 카드가 가장 커다란 가슴이기 때문에、"가슴을 한단계 크게 한다"가 선택됩니다。
				RESULT = 0
			ELSE
				;選択可能
				CALL YN_CHOICE(듀얼리스트,"「乳をひと回り大きくする」","「フィールドで一番乳の大きい몬스터와 同じ大きさ로 한다。」")
			ENDIF

			IF RESULT == 0
				;乳を大きくする
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"가슴追",1,,상대플래그)
				現乳サイズ += 1
			ELSE
				;フィールドで一番乳の大きい몬스터와 同じ大きさ로 한다。
				CALL SET_FIELD_INFO(듀얼리스트,"필드",選択カード,"가슴追",암소最大サイズ - 元乳サイズ,上書きモード,상대플래그)
				現乳サイズ = 암소最大サイズ
			ENDIF
			
			PRINTFORML 
			PRINTFORML 호루스의 종자들이 %암소名称%를 둘러싸、수상한 주문을 외기 시작했다…
			PRINTFORMW 
			
			;名前から가슴のサイズの変動まで표시
			CALL HORUSTEIN_PRINT_STATE(듀얼리스트,選択カードID, 現乳サイズ-元乳サイズ,,,99555)
			
			;★特記事項
			PRINTL □ 특이사항 □——————————————————————————————————————————————————————————————————————————————————
			PRINTFORML 

			SETCOLOR C_PINK
			PRINTFORML  발정하고있습니다。
			PRINTFORML 　사이즈가 커진 영향인지、일시적으로 민감해진것같습니다。강한 자극은 삼가해주세요。
			PRINTFORML 
			RESETCOLOR
			
			CALL HORUSTEIN_GET_BUST(参照カードID,現乳サイズ-元乳サイズ)
			SIF GROUPMATCH(암소最大ID,179559,279559) && GETVAR(@"%最大듀얼리스트%_MZ_汎数:最大場所") > 0
				RESULT:2 += GETVAR(@"%最大듀얼리스트%_MZ_汎数:最大場所")
			PRINTFORM  가슴 사이즈가
			CALL HORUSTEIN_DISP_BUSTSIZE(RESULT:0)
			PRINTFORM 에서
			CALL HORUSTEIN_DISP_BUSTSIZE(RESULT:2)
			PRINTFORML 가 되었습니다。
			PRINTFORML
			PRINTFORML 　이 카드로 부여한 발정상태는、가슴 사이즈에 의한 공격이 실패하는 확률이 변동합니다。
			PRINTFORML 　이하、참고자료가 되겠습니다。참고해주세요。
			PRINTFORML 
			PRINTFORML 　[평범]이하　：５０％정도
			SETCOLOR C_D_GRAY
			PRINTFORML 　　[거유]　　：６０％정도
			SETCOLOR 0X222222
			PRINTFORML 　　[폭유]　　：７０％정도
			SETCOLOR 0X111111
			PRINTFORML 　 [소젖] 　：８０％정도
			RESETCOLOR
			PRINTFORML 
			;PRINTFORML 　　[魔乳]　　：９０%정도
			;PRINTFORML 
			;PRINTFORML 　 [規格外] 　：１００％
			;PRINTFORML 

			CUSTOMDRAWLINE —
			PRINTFORMW 
			
			IF INRANGE (RESULT:2 , 2, 4) 
				PRINTFORML
				PRINTFORML %암소名称%는 커진 가슴을 무거운듯이 붙잡고있다…
				PRINTFORMW 
			ELSEIF RESULT:2 >= 5
				PRINTFORML
				PRINTFORML %암소名称%는 가슴이 너무 커서 움직이지 못하는듯 하다…
				PRINTFORMW 
			ENDIF
		
			SETCOLOR C_PINK
			CUSTOMDRAWLINE —
			PRINTFORML
			PRINTFORML %암소名称%는 발정해있다…
			PRINTFORML 
			CUSTOMDRAWLINE —
			PRINTFORML
			RESETCOLOR
			
			;発情値설정
			SELECTCASE 現乳サイズ
				CASE IS < 0
					CALL STATCHANGE_EFFECT(대상者（CS）,"자신",選択カード,"発情",150)
					PRINTFORML %암소名称%는 발정해있다…
				CASE 1 ;巨乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"자신",選択カード,"発情",160)
				CASE 2 ;爆乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"자신",選択カード,"発情",170)
				CASE 3 ;牛乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"자신",選択カード,"発情",180)
				CASE 4 ;魔乳
					CALL STATCHANGE_EFFECT(대상者（CS）,"자신",選択カード,"発情",190)
				CASE IS >= 5 ;規格外
					CALL STATCHANGE_EFFECT(대상者（CS）,"자신",選択カード,"発情",200)
			ENDSELECT
			
			IF 암소대상 != -1 && (現乳サイズ-元乳サイズ) > 0
				;元のサイズより大きい分だけ強い刺激になる(+2サイズで1回は절정する)
				IF (現乳サイズ-元乳サイズ-1) / 2 > 0 
					;最低保証절정횟수
					EXP:암소대상:절정경험 += 1
					절정횟수 += 1
				ENDIF
				IF (現乳サイズ-元乳サイズ-1) / 4 > 0 
					;4段階以上大きくなれば、추가で절정する
					EXP:암소대상:절정경험 += (現乳サイズ-元乳サイズ-1) / 4
					절정횟수 += (現乳サイズ-元乳サイズ-1) / 4
				ENDIF
				
				CALL EROTIC_MOVE("バスト조교",암소대상,-1, 100 + (現乳サイズ-元乳サイズ) * 50)
				
				PRINTFORML 
				절정횟수 += RESULT:1
				IF 암소절정声 != -1 && 절정횟수 != 0
					CALL HORUSTEIN_RAND_COW_TXT(절정횟수,암소절정声);うるさい鳴き声
				ELSEIF 암소鳴き声 != -1
					CALL HORUSTEIN_RAND_COW_TXT(1,암소鳴き声);うるさい鳴き声
				ENDIF
			ENDIF
			
			IF 절정횟수 > 0
				SETCOLOR C_PINK
				PRINTFORML 
				PRINTFORML %암소名称%는 막 커져서 민감한 가슴을 흔들어버려서
				PRINTFORML 그 희미한 자극으로 {절정횟수}번 가버렸다…
				PRINTFORMW 
				RESETCOLOR
			ENDIF
			
		ENDIF
		;テスト時はコメント化
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 묘지起動
	
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,99555,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,손패行き)
	ENDIF
ENDIF
