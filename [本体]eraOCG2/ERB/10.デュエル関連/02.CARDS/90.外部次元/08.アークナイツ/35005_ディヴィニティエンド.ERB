@CARDEFFECT_135006(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 攻守変動
	攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:場所") / 2
	CALL FULLRESET
	CALL STATCHANGE_BASIC(듀얼리스트,"상대필드",場所,-攻撃力修正,-攻撃力修正,135006)

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,135006)
	IF RESULT == 0
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:2")},"名前"
		SIF RESULTS != "『디비니티 엔드』、대군의 의지"
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_필드:1") != -1 && GETVAR(@"%듀얼리스트%_필드:3") != -1
			RETURN 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件종류 = モン全般
		효과条件固カテゴリ = 시본
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"レベル"
			攻撃力修正 = RESULT * 300
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 대군의 의지『진화』
			효과추가종류 = 効追永攻 + 攻撃力修正
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",2,"個Ｃ",1)
				TRYCALLFORM CARD_{選択カード_ID},"攻撃力"
				IF RESULT >= 2500
					CALL FULLRESET
					효과条件任意 = 1
					CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
				ENDIF
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 맥시멈条件
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無")
ENDIF


