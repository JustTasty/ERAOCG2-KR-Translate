@CARDCAN_135007(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,135007)
SIF RESULT == 1
	RETURN 0

IF 종류 == 戦破壊→묘지
	SIF !GROUPMATCH(묘지送り종류,"破壊","戦闘破壊","リリース")
		RETURN 0
	CALL CARD_CHECK_MAXX(듀얼리스트,ゾーン,場所,"대군의 의지")
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件종류 = モン全般
	효과条件固カテゴリ = 시본
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 맥시멈条件
	CALL CARD_CHECK_MAXX(듀얼리스트,ゾーン,場所,"대군의 의지")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_135007(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 耐性추가종류,4

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,135007)
	IF RESULT == 0
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:2")},"名前"
		SIF RESULTS != "『디비니티 엔드』、대군의 의지"
			RETURN 0
		SIF GETVAR(@"%듀얼리스트%_필드:1") != -1 && GETVAR(@"%듀얼리스트%_필드:3") != -1
			RETURN 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件종류 = モン全般
		효과条件固カテゴリ = 시본
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			選択カード_ID = RESULT:1
			TRYCALLFORM CARD_{選択カード_ID},"レベル"
			攻撃力修正 = RESULT * 300

			TRYCALLFORM CARD_{選択カード_ID},"守備力"
			IF RESULT >= 2500
				TRYCALLFORM CARD_{選択カード_ID},"종족"
				SIF GROUPMATCH(RESULT,드래곤족,악마족,야수족)
					耐性추가종류:1 = 効追永モ耐
				SIF GROUPMATCH(RESULT,마법사족,천사족,미확인족)
					耐性추가종류:2 = 効追永魔耐
				SIF GROUPMATCH(RESULT,전사족,비늘야수족,비행야수족)
					耐性추가종류:3 = 効追永함정耐
			ENDIF

			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件名前 = 대군의 의지『존속』
			효과추가종류:0 = 効追永守 + 攻撃力修正
			SIF 耐性추가종류:1 != 0
				효과추가종류:1 = 耐性추가종류:1
			SIF 耐性추가종류:2 != 0
				효과추가종류:2 = 耐性추가종류:2
			SIF 耐性추가종류:3 != 0
				효과추가종류:3 = 耐性추가종류:3
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			SIF RESULT == 1
				CALL SET_FIELD_INFO(듀얼리스트,"필드",2,"個Ｃ",1)
		ENDIF
	ENDIF

ELSEIF 종류 == 맥시멈条件
	CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"戦無")
	CALL FULLRESET
	효과条件名前 = 『디비니티 엔드』、대군의 의지
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"攻避")
	CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"対耐")
ENDIF


