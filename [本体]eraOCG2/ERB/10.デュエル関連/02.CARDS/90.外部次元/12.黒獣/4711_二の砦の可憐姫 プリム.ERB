@CARDNAME_4711,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 2의 방패의 공주 프림
	CASE "略称"
		RESULTS = 2의방패 프림
	CASE "カテゴリ"
		RESULTS:0 = 7방패 동맹
		RESULTS:1 = 쿠로이누
ENDSELECT

@CARD_4711(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "外部者"
		RETURN 1
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 빛속성
	CASE "종족"
		RETURN 마법사족
	CASE "レベル"
		RETURN 2
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 2000
	CASE "성별"
		RETURN 牝性
	CASE "分割"
		RETURN 펜듈럼
	CASE "추가日"
		RETURN 250707
ENDSELECT
RETURN 0

