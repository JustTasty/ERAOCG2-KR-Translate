@CARDCAN_78721(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 候補제외レベル,6
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタB

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,78721)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		IF ターンプレイヤー != 듀얼리스트
			RETURN 0
		ENDIF
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,78721)
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前 = 7방패 동맹의 상징 셀레스틴
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1 && 손패数(듀얼리스트) < 1
		RETURN 0
	FOR カウンタ, 0, 5
		;MZ
		選択カードID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
		IF 選択カード != -1
			VARSET 条件달성
			TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
			SIF MATCH(RESULTS, "7방패 동맹")
				条件달성 ++
			IF GETVAR(@"%듀얼리스트%_MZ_変化元ID:カウンタ") > -1
				TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_MZ_変化元ID:カウンタ")}, "カテゴリ"
				SIF MATCH(RESULTS, "7방패 동맹")
					条件달성 ++
			ENDIF
			;改名されてるとカテゴリをすべて失い、추가カテゴリのみ
			IF GETVARS(@"%듀얼리스트%_MZ_改名:カウンタ") != ""
				VARSET 条件달성
			ENDIF
			SIF GETVARS(@"%듀얼리스트%_MZ_追カテ:カウンタ") == "7방패 동맹"
				条件달성++
			SIF GETVARS(@"%듀얼리스트%_MZ_追カテ2:カウンタ") == "7방패 동맹"
				条件달성++
			IF 条件달성 > 0 && GETVAR(@"%듀얼리스트%_MZ_星:カウンタ") < 7
				候補제외レベル:(GETVAR(@"%듀얼리스트%_MZ_星:カウンタ") - 1) = 1
			ENDIF
		ENDIF
		;마함
		選択カードID = GETVAR(@"%듀얼리스트%_마함:カウンタ")
		IF 選択カード != -1
			VARSET 条件달성
			TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
			SIF MATCH(RESULTS, "7방패 동맹")
				条件달성++
			;改名されてるとカテゴリをすべて失い、추가カテゴリのみ
			IF GETVARS(@"%듀얼리스트%_魔_改名:カウンタ") != ""
				VARSET 条件달성
			ENDIF
			SIF GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "7방패 동맹"
				条件달성++
			SIF GETVARS(@"%듀얼리스트%_魔_追カテ2:カウンタ") == "7방패 동맹"
				条件달성++
			IF 条件달성 > 0
				TRYCALLFORM CARD_{選択カードID}("レベル")
				SIF RESULT < 7 && RESULT > 0
					候補제외レベル:(RESULT - 1) = 1
			ENDIF
		ENDIF
	NEXT
	CALL FULLRESET
	효과範囲덱 = 1
	효과範囲EX덱 = 1
	효과条件종류 = EX以外全般
	효과条件分割 = 펜듈럼
	VARSET カウンタB
	FOR カウンタ, 0, 6
		IF 候補제외レベル:カウンタ == 0
			효과条件レベル:カウンタB = カウンタ + 1
			カウンタB++
		ENDIF
	NEXT
	효과条件カテゴリ = 7방패 동맹
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF 발동済_2(듀얼리스트,78721)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과条件名前 = 7방패 동맹의 상징 셀레스틴
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_78721(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 候補제외レベル,6
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタB

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%


IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78721,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		CALL FULLRESET
		효과範囲필드 = 1
		효과範囲마함 = 1
		효과条件名前 = 7방패 동맹의 상징 셀레스틴
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT != 1
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ELSE
			RESULT = 1
		ENDIF
		IF RESULT == 1
			FOR カウンタ, 0, 5
				;MZ
				選択カードID = GETVAR(@"%듀얼리스트%_필드:カウンタ")
				IF 選択カード != -1
					VARSET 条件달성
					TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
					SIF MATCH(RESULTS, "7방패 동맹")
						条件달성 ++
					IF GETVAR(@"%듀얼리스트%_MZ_変化元ID:カウンタ") > -1
						TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_MZ_変化元ID:カウンタ")}, "カテゴリ"
						SIF MATCH(RESULTS, "7방패 동맹")
							条件달성 ++
					ENDIF
					;改名されてるとカテゴリをすべて失い、추가カテゴリのみ
					IF GETVARS(@"%듀얼리스트%_MZ_改名:カウンタ") != ""
						VARSET 条件달성
					ENDIF
					SIF GETVARS(@"%듀얼리스트%_MZ_追カテ:カウンタ") == "7방패 동맹"
						条件달성++
					SIF GETVARS(@"%듀얼리스트%_MZ_追カテ2:カウンタ") == "7방패 동맹"
						条件달성++
					IF 条件달성 > 0 && GETVAR(@"%듀얼리스트%_MZ_星:カウンタ") < 7
						候補제외レベル:(GETVAR(@"%듀얼리스트%_MZ_星:カウンタ") - 1) = 1
					ENDIF
				ENDIF
				;마함
				選択カードID = GETVAR(@"%듀얼리스트%_마함:カウンタ")
				IF 選択カード != -1
					VARSET 条件달성
					TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
					SIF MATCH(RESULTS, "7방패 동맹")
						条件달성++
					;改名されてるとカテゴリをすべて失い、추가カテゴリのみ
					IF GETVARS(@"%듀얼리스트%_魔_改名:カウンタ") != ""
						VARSET 条件달성
					ENDIF
					SIF GETVARS(@"%듀얼리스트%_魔_追カテ:カウンタ") == "7방패 동맹"
						条件달성++
					SIF GETVARS(@"%듀얼리스트%_魔_追カテ2:カウンタ") == "7방패 동맹"
						条件달성++
					IF 条件달성 > 0
						TRYCALLFORM CARD_{選択カードID}("レベル")
						SIF RESULT < 7 && RESULT > 0
							候補제외レベル:(RESULT - 1) = 1
					ENDIF
				ENDIF
			NEXT
			CALL FULLRESET
			효과範囲덱 = 1
			효과範囲EX덱 = 1
			효과条件종류 = EX以外全般
			효과条件分割 = 펜듈럼
			VARSET カウンタB
			FOR カウンタ, 0, 6
				IF 候補제외レベル:カウンタ == 0
					효과条件レベル:カウンタB = カウンタ + 1
					カウンタB++
				ENDIF
			NEXT
			효과条件カテゴリ = 7방패 동맹
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78721,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 7방패 여신의 소집
		효과추가종류 = 500
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
	ENDIF
ENDIF