@CARDCAN_78722(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

#DIM DYNAMIC 候補제외ID, VARSIZE("효과条件固ID")
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタB
#DIMS DYNAMIC 대상ゾーン

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,78722)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	IF ゾーン == "손패"
		IF ターンプレイヤー != 듀얼리스트
			RETURN 0
		ENDIF
	ELSEIF ゾーン == "마함"
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	SIF 발동済_1(듀얼리스트,78722)
		RETURN 0
	FOR カウンタ, 0, 現EX山札数(듀얼리스트)
		選択カードID = GETVAR(@"%듀얼리스트%_EX덱:カウンタ")
		IF 選択カードID != -1
			TRYCALLFORM CARD_{選択カードID}, "종류"
			SIF GROUPMATCH(RESULT, 융합, 싱크로, 엑시즈, 링크, 초차원)
				CONTINUE
			TRYCALLFORM CARD_{選択カードID}, "分割"
			SIF RESULT != 펜듈럼
				CONTINUE
			VARSET 条件달성
			TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
			IF MATCH(RESULTS, "7방패 동맹")
				候補제외ID:カウンタB = 選択カードID
				カウンタB++
				SIF カウンタB >= VARSIZE("효과条件固ID")
					BREAK
			ENDIF
		ENDIF
	NEXT
	SIF カウンタB < 1
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	IF モンスター数(듀얼리스트) < 5
		효과範囲손패 = 1
		효과範囲마함 = 1
	ENDIF
	효과条件分割 = 펜듈럼
	효과条件固名前 = 7방패 동맹의 상징 셀레스틴
	FOR カウンタ, 0, カウンタB
		효과条件固ID:カウンタ = 候補제외ID:カウンタ
	NEXT
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 身代효과
	SIF 발동済_2(듀얼리스트,78722)
		RETURN 0
	SIF ゾーン != "묘지"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	IF 破壊대상ゾーン == "필드"
		대상ゾーン = MZ
	ELSE
		대상ゾーン = 魔
	ENDIF
	IF 대상ゾーン != ""
		SIF 破壊대상ID == 4716 || GETVAR(@"%듀얼리스트%_%대상ゾーン%_変化元ID:破壊대상場所") == 4716
			RETURN 0
	ENDIF
	SIF !GROUPMATCH(破壊종류,"효과","戦闘")
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_78722(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

#DIM DYNAMIC 候補제외ID, VARSIZE("효과条件固ID")
#DIM DYNAMIC 選択カードID
#DIM DYNAMIC 条件달성
#DIM DYNAMIC カウンタB

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78722,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		FOR カウンタ, 0, 現EX山札数(듀얼리스트)
			選択カードID = GETVAR(@"%듀얼리스트%_EX덱:カウンタ")
			IF 選択カードID != -1
				TRYCALLFORM CARD_{選択カードID}, "종류"
				SIF GROUPMATCH(RESULT, 융합, 싱크로, 엑시즈, 링크, 초차원)
					CONTINUE
				TRYCALLFORM CARD_{選択カードID}, "分割"
				SIF RESULT != 펜듈럼
					CONTINUE
				VARSET 条件달성
				TRYCALLFORM CARDNAME_{選択カードID}, "カテゴリ"
				IF MATCH(RESULTS, "7방패 동맹")
					候補제외ID:カウンタB = 選択カードID
					カウンタB++
					SIF カウンタB >= VARSIZE("효과条件固ID") - 1
						BREAK
				ENDIF
			ENDIF
		NEXT
		CALL FULLRESET
		효과範囲필드 = 1
		IF モンスター数(듀얼리스트) < 5
			효과範囲손패 = 1
			효과範囲마함 = 1
		ENDIF
		효과条件分割 = 펜듈럼
		효과条件固名前 = 7방패 동맹의 상징 셀레스틴
		FOR カウンタ, 0, カウンタB
			효과条件固ID:カウンタ = 候補제외ID:カウンタ
		NEXT
		효과条件行先플래그 = EX덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		選択カードID = RESULT:1
		IF RESULT == 1
			CALL FULLRESET
			효과範囲EX덱 = 1
			효과条件종류 = EX以外全般
			効果条件固ID = 選択カードID
			효과条件分割 = 펜듈럼
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 종류 == 身代효과
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,78722,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		RETURN 1
	ENDIF
	RETURN 0
ENDIF