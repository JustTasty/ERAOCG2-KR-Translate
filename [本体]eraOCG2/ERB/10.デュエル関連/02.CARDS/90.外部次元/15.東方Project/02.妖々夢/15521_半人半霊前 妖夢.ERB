@CARDCAN_15521(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,15521)
SIF RESULT == 1
	RETURN 0
IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,15521)
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件名前 = 반령반인분 요우무
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT == 1
		RETURN 0

	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲デッキ = 1
	効果範囲墓地 = 1
	効果条件名前 = 반령반인분 요우무
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0



	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_15521(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC カード追加先

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,15521,1)
	IF RESULT == 0

		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲デッキ = 1
		効果範囲墓地 = 1
		効果条件名前 = 반령반인분 요우무
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)

		EX召喚可能種族 = アンデット族
		CALL CARD_EX_RESTRICTION(決闘者)
	ENDIF
ELSEIF 種類 == 攻撃時誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,15521,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果条件種類 = 速攻魔法
		CALL CARD_SET_ADV(決闘者,ゾーン,場所,"裏側表示")
		カード追加先 = RESULT:2
		選択カード_ID = RESULT:1
		TRYCALLFORM CARDNAME_{選択カード_ID}("カテゴリ")
		IF MATCH(RESULTS,"스펠 카드")
			SETVAR @"%決闘者%_魔_表:カード追加先", 2
		ENDIF
	ENDIF
ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果条件表示 = 表側表示
	効果条件カテゴリ = 백옥루
	CALL STATCHANGE_EFFECT(決闘者,"魔罠",場所,"一破")
ENDIF

