@CARDCAN_205521(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,205521)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,205521)
		RETURN 0
	IF ゾーン == "手札"
		SIF ターンプレイヤー != 決闘者
			RETURN 0
	ELSEIF ゾーン == "魔罠"
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_205521(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダメージ量
#DIM DYNAMIC ドロー枚数
CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 魔罠起動 || 種類 == 手札起動 || 種類 == フリー誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,205521,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)



		CALL FULLRESET
		効果条件名前 = 반령반인분 요우무
		CALL CARD_CHECK_FIN_DATA(決闘者,"破壊全般")
		IF RESULT == 1
			CALL FULLRESET
			効果範囲墓地 = 1
			効果条件名前 = 반령반인분 요우무
			CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
			CALLFORM CHARA_CUTIN("Last Word","待　宵　反　射　衛　星　斬",,,,,1)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地")
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"魔罠単体",場所,"墓地")


			CALL URARA_CHANCE(決闘者,処理中_効果ID,"雑多")
			IF RESULT == 0
				FOR カウンタ,0,紙束最大値
					SIF GETVAR(@"%決闘者%_手札:カウンタ") == -1
						CONTINUE
					CALL CARD_DISPOSE(決闘者,"手札",カウンタ)
					ドロー枚数 ++
				NEXT
				CALL CARDDRAW_BASIC(決闘者,ドロー枚数,2)

				VARSET ドロー枚数
				FOR カウンタ,0,紙束最大値
					SIF GETVAR(@"%対面者%_手札:カウンタ") == -1
						CONTINUE
					CALL CARD_DISPOSE(対面者,"手札",カウンタ)
					ドロー枚数 ++
				NEXT
				CALL CARDDRAW_BASIC(対面者,ドロー枚数,2)
			ENDIF
		ELSE
			CALLFORM CHARA_CUTIN("Spell Card","「인부」현세참",,,,,1)
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地")
		ENDIF


	ENDIF
ENDIF
