@CARDCAN_15522(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,15522)
SIF RESULT == 1
	RETURN 0

IF 種類 == 効果後誘発
	SIF 発動済_1(決闘者,15522)
		RETURN 0
	SIF ゾーン != "手札"
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,15522,"手札")
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果条件名前 = 프리즘리버 유령악단
	CALL CARD_CHECK_FIN_DATA(決闘者,"手札取得")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_2(決闘者,15522)
		RETURN 0
	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果条件表示 = 表側表示
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_15522(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 条件達成

IF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,15522,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者, "手札", 場所)
	ENDIF
ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,15522,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件表示 = 表側表示
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"表示変更")
	ENDIF
ENDIF

