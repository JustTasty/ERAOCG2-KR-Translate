	CASE "名前"
		RESULTS = -이변- 묵염의 벚꽃
	CASE "略称"
		RESULTS = 묵염의 벚꽃
	CASE "カテゴリ"
		RESULTS:0 = 백옥루
		RESULTS:1 = 이변
		RESULTS:4 = 동방 Project
ENDSELECT


