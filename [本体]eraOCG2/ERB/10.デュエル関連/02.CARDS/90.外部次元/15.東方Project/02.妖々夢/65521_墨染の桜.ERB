@CARDNAME_65521,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = -이변- 묵염의 벚꽃
	CASE "略称"
		RESULTS = 묵염의 벚꽃
	CASE "カテゴリ"
		RESULTS:0 = 백옥루
		RESULTS:1 = 이변
		RESULTS:4 = 동방 Project
ENDSELECT


@CARD_65521(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"
		RETURN 지속마법
	CASE "추가日"
		RETURN 250808
ENDSELECT

RETURN 0

