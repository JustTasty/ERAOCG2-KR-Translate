@CARDCAN_85520(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,85520)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	SIF 発動済_1(決闘者,92591)
		RETURN 0
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_85520(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成
#DIM DYNAMIC 選択カード


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == フリー誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,85520,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)	
		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲相手墓地 = 1
		効果条件種類 = モン全般
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		条件達成 = RESULT

		IF 条件達成 >= 1
			CALL FULLRESET
			効果条件名前 = -이변- 묵염의 벚꽃
			効果条件任意 = 1
			CALL CARD_SET_BASIC(決闘者,"デッキ",ゾーン,場所,"表側表示")
		ENDIF
		IF 条件達成 >= 3
			CALL FULLRESET
			効果条件任意 = 1
			CALL CARD_REMOVAL_BASIC(決闘者,"全場単体",場所,"無効")
		ENDIF
		IF 条件達成 >= 5
			CALL FULLRESET
			効果範囲手札 = 1
			CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
		ENDIF
		IF 条件達成 >= 8
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地")
		ENDIF
	ENDIF
ENDIF
