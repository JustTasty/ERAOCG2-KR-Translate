CALLFORM CARD_ABLE(1,마함起動 ,フリー誘発)
PRINTL ①：お互いの묘지に存在するモンスターの数によって、以下の효과をそれぞれ適用する。
PRINTL ●１体以上：덱から「-이변- 묵염의 벚꽃」を表側표시で置ける。
PRINTL ●３体以上：상대フィールドに存在するモンスター最大１体の효과を無効にする。
PRINTL ●５体以上：상대は손패を１枚捨てる。
PRINTL ●８体以上：フィールドに存在する全てのモンスターを破壊する。


@CARDCAN_85520(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ


CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,85520)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,92591)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1
ENDIF




@CARDEFFECT_85520(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,85520,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)	
		CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲상대묘지 = 1
		효과条件종류 = モン全般
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		条件달성 = RESULT

		IF 条件달성 >= 1
			CALL FULLRESET
			효과条件名前 = -이변- 묵염의 벚꽃
			효과条件任意 = 1
			CALL CARD_SET_BASIC(듀얼리스트,"덱",ゾーン,場所,"表側표시")
		ENDIF
		IF 条件달성 >= 3
			CALL FULLRESET
			효과条件任意 = 1
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"無効")
		ENDIF
		IF 条件달성 >= 5
			CALL FULLRESET
			효과範囲손패 = 1
			CALL CARD_ADD_GY_ADV(対面者,ゾーン,場所)
		ENDIF
		IF 条件달성 >= 8
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"묘지")
		ENDIF
	ENDIF
ENDIF
