	CALL LINCAN(듀얼리스트,소환カード,5510) 
	RETURN RESULT
ENDIF


@CARDEFFECT_5510(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 合計ダメージ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5510,1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		효과条件カテゴリ = 홍마관
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5510,2)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"덱",ゾーン,場所,6)
		選択カード = RESULT
		IF 選択カード != 9999
			選択カード_ID = RESULT:99
			CALL CARD_ADD_DECK_SPC(듀얼리스트,"덱",選択カード)
			CALL SET_PLAYER_INFO(듀얼리스트,"ドロー倍化",1)
			TRYCALLFORM CARDNAME_{選択カード_ID}("カテゴリ")
			IF MATCH(RESULTS,"홍마관")
				CALL FULLRESET
				효과条件任意 = 1
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"묘지")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5510)
	IF RESULT == 0
		選択カード = 戦闘場所(듀얼리스트,1)
		合計ダメージ = GETVAR(@"%듀얼리스트%_MZ_攻:戦闘場所(듀얼리스트)")
		CALL FULLRESET
		효과추가종류 = 3
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"自動処理",選択カード,"묘지",合計ダメージ)
	ENDIF
ENDIF


