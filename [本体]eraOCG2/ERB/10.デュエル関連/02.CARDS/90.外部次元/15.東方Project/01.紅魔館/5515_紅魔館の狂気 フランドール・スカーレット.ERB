CALL CARD_ABLE(3,ターン終了時)
PRINTL ③：자신のエンドフェイズにフィールドのカード１枚を대상として발동できる。
PRINTL そのカードを破壊する。
PRINTL 상대フィールドにカードが存在せず、상대ライフポイントが２０００以下である場合、代わりに상대プレイヤーを破壊する。


@CARDCAN_5515(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,5515)
SIF RESULT == 1
	RETURN 0

IF 종류 == EX소환時 || 종류 == 특수소환時

	RETURN 1
ELSEIF 종류 == 필드起動
	SIF 발동済_2(듀얼리스트,5515)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1
ELSEIF 종류 == ターン終了時
	SIF ゾーン != "필드"
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 발동済_3(듀얼리스트,5515)
		RETURN 0

	RETURN 1
ENDIF
@CARDSUMMON_5515(듀얼리스트,소환カード,EX参照)
#DIMS DYNAMIC 듀얼리스트
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 소환カード
#DIM DYNAMIC EX参照
;素材条件

CALL RESETCONDITION_MAT
必要링크数 = 4

IF EX参照 == 0 || EX参照 == 1
	素材条件カテゴリ = 홍마관
ELSE
ENDIF

IF EX参照 == 1
	CALL LINCAN(듀얼리스트,소환カード,5515) 
	RETURN RESULT
ENDIF


@CARDEFFECT_5515(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード


CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == EX소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5515)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
	ENDIF
ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5515,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,EX덱行き)
		CALL CARD_GENERATE(듀얼리스트,105515,,,4)
		CALL CARD_EX_RESTRICTION(듀얼리스트,"플랑드르")
	ENDIF
ELSEIF 종류 == ターン終了時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,5515,3)
	IF RESULT == 0

		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"묘지")
		ELSE
			IF GETVAR(@"ライフ_%対面者%") <= 2000
				SETCOLOR C_RED
				PRINTFORMW 「きゅっとして―――
				PRINTFORMW 　　ドカーン♪」
				CALL FLASH(3)
				CALL SET_PLAYER_INFO(듀얼리스트,"듀얼패배플래그",4,1)
				PRINTFORML 
				PRINTFORMW 상대プレイヤーは破壊されてしまいました。
				RESETCOLOR
			ENDIF
		ENDIF
	ENDIF
ENDIF



