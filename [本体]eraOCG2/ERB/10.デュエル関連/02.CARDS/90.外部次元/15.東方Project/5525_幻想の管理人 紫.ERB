@CARDCAN_5525(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件達成

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,5525)
SIF RESULT == 1
	RETURN 0
IF 種類 == 手札起動
	SIF 発動済_1(決闘者,5525)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,5525,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
	効果範囲相手墓地 = 1
	効果条件カテゴリ = 이변
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,5525)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(決闘者,"特殊召喚",1)
	SIF RESULT != 1
		RETURN 0
	SIF FINAL_SUMMON_TARGET(決闘者,1) == 5 
		RETURN 0
	RETURN 1
ELSEIF 種類 == 発動誘発
	SIF 発動済_3(決闘者,5525)
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲相手戦場 = 1
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_5525(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,5525,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲手札 = 1
		効果範囲相手墓地 = 1
		効果条件カテゴリ = 이변
		効果条件行先フラグ = 除外行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者, ゾーン, 場所)
		ENDIF
	ENDIF
ELSEIF 種類 == 効果後誘発
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,5525,2)
	IF RESULT == 0
		選択カード = FINAL_SUMMON_TARGET(決闘者,1)
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"自動処理",選択カード,"除外")
	ENDIF
ELSEIF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,5525,3)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,除外行き)
		CALL FULLRESET
		効果追加種類 = 1
		CALL CARD_REMOVAL_BASIC(決闘者,"両戦場単体",場所,"除外")
	ENDIF
ENDIF

