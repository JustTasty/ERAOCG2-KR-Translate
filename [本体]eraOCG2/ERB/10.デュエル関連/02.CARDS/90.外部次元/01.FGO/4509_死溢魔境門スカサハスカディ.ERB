@CARDCAN_4509(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件達成

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,4509)
SIF RESULT == 1
	RETURN 0
IF 種類 == 戦場起動
	SIF 発動済_1(決闘者,4509)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種族 = 天使族
	効果条件種類 = モン全般
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,4509)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,4509,"墓地",1)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(決闘者,"効果除送",1)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件属性 = 光属性
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF
@CARDEFFECT_4509(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 条件達成


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4509,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件属性 = 光属性
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4509,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件属性 = 炎属性
		効果条件行先フラグ = 破壊行き
		CALL CARD_ADD_GY_BASIC(決闘者,"戦場",ゾーン,場所)
		
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"戦場単体",場所,"墓地")

		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者, "墓地", 場所)
	ENDIF
ELSEIF 種類 == 永続効果
	CALL SET_TMP_SS_RST(決闘者,"属性",光属性)
ENDIF



