@CARDCAN_4547(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限달성
#DIM DYNAMIC カウンタ

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%



IF 종류 == 攻撃後強制誘発
	SIF 듀얼리스트 != "자신"
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	SIF 戦闘場所(듀얼리스트,1) != 5
		RETURN 0
	SIF ライフ_상대 >= 1
		RETURN 0
	RETURN 1
ENDIF

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4547)
SIF RESULT == 1
	RETURN 0
IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,4547)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_발동数") != 0
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,4547,"손패")
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 攻撃時強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 戦闘場所(듀얼리스트) != 場所
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4547(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 破壊カード
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 失敗率
#DIM DYNAMIC 캐릭터_ID
#DIM DYNAMIC 攻撃力修正
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 손패起動
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4547,1)
	IF RESULT == 0
		CALL FULLRESET
		효과추가종류 = 2
		CALL CARD_SP_SUMMON(듀얼리스트, ゾーン, 場所)
	ENDIF
ELSEIF 종류 == 攻撃時強制誘発
	캐릭터_ID = NO_TO_CHARANUM(4547)
	;素で80％くらいの失敗率があり、호감도分下がる。
	失敗率 = 8000 - CFLAG:캐릭터_ID:호감도
	IF 失敗率 >= 10000
		失敗率 = 10000
	ELSEIF 失敗率 <= 0
		失敗率 = 0
	ENDIF
	IF RAND:10000 + 1 >= 失敗率
		SETCOLOR C_GOLD
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTL
		PRINTFORML 「天に威星！　地に鉄鎖！　今、私が輝く時が来た～！
		PRINTFORML 　　私ってば最高ーーー！！！……ですよね？」
		PRINTL
		CUSTOMDRAWLINE ―
		RESETCOLOR
		攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"永攻",攻撃力修正)
	ELSE
		SETCOLOR C_GOLD
		PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
		PRINTL
		PRINTFORML 「あっ、無理そう……出ない……ひぃ！　叱らないでマスター！　過程を褒めて！」
		PRINTL
		CUSTOMDRAWLINE ―
		RESETCOLOR
	ENDIF
ELSEIF 종류 == 攻撃後強制誘発
	캐릭터_ID = NO_TO_CHARANUM(4547)
	CALL EVENT_FAVUP(캐릭터_ID,1000)
	SETCOLOR C_GOLD
	PRINTFORML >>——MESSAGE:——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————>>>
	PRINTL
	PRINTFORML 「私が、トドメ……くぅ～～！！　褒めて！　もっと褒めて！
	PRINTFORML 　　かっこいい、호연작を応援よろしくお願いします！」
	PRINTL
	CUSTOMDRAWLINE ―
	RESETCOLOR
ENDIF
