@CARDCAN_4515(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,4515)
SIF RESULT == 1
	RETURN 0


IF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF !GROUPMATCH(ゾーン,"戦場")
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件表示 = 表側表示
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 発動誘発
	SIF 発動済_2(決闘者,4515)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件カテゴリ = 英霊
	効果条件固名前 = 楽園の妖精アルトリア・キャスター
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4515(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 選択レベル
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 属性セット
#DIM DYNAMIC 属性セットビット

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 戦場起動 || 種類 == フリー誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4515,1)
	IF RESULT == 0	
		CALL FULLRESET
		効果範囲戦場 = 1
		CALL CARD_GRANT_ADV(決闘者,ゾーン,場所,"破耐",1)
	ENDIF
ELSEIF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,4515,2)
	IF RESULT == 0
		選択カード = 効後_設場所:(処理中番号 - 1) 
		CALL SET_FIELD_INFO(決闘者,"戦場",選択カード,"一攻",1000)
	ENDIF
ENDIF
