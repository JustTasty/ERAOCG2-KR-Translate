@CARDCAN_4850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,4850)
SIF RESULT == 1
	RETURN 0

IF 종류 == 소환時
	SIF 발동済_D1(듀얼리스트,4850)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ELSEIF 종류 == 時限紋章起動
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF スタンバイフェイズ != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_4850(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 条件달성
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 속성チェック,5
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,4850,20)
	IF RESULT == 0
		CALL SET_PLAYER_INFO(対面者,"마함無効",1)
		CALL SET_PLAYER_INFO(対面者,"モン無効",1)

		CALL FULLRESET
		효과範囲손패 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT <= 1
			CALL CARDDRAW_BASIC(듀얼리스트,1)
			CALL SET_PLAYER_INFO(듀얼리스트,"ドロー倍化",2)
			RETURN 1
		ENDIF

		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT >= 3
			CALL FULLRESET
			효과範囲EX덱 = 1
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
			CALL CARD_RESERV(듀얼리스트,4850,時限紋章予約)
			RETURN 1
		ENDIF

		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件以攻撃力 = 3000
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")
			CALL CARD_RESERV(듀얼리스트,4850,永紋章予約)
			RETURN 1
		ENDIF



	ENDIF
ELSEIF 종류 == 時限紋章起動
	소환権 ++
ELSEIF 종류 == 永紋章起動
	CALL FULLRESET
	CALL STATCHANGE_HAND(듀얼리스트,"全体",場所,"一星",99)
ENDIF

