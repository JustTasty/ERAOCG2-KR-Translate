@CARDNAME_94702,参照先
;ココで지정 카드의 名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = RAIL ACTION - REVENGE SPIRIT
	CASE "略称"
		RESULTS = RA-REVENGE S
	CASE "カテゴリ"
		RESULTS:0 = 신희
ENDSELECT


@CARD_94702(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "외부자"
		RETURN 1
	CASE "종류"

		RETURN 지속함정
ENDSELECT

RETURN 0

@CARD_EXPLANATION_94702(종류)
#DIM DYNAMIC 종류

PRINTL 이 카드명의 ②의 효과는 １턴에 １번밖에 사용할 수 없다。
PRINTL 자신 필드의 몬스터가 「신희」몬스터 １장만 있을 경우, 이 카드는 패에서 발동할 수 있다.
CALLFORM CARD_ABLE(0,常在無効)
PRINTL ①：자신 필드의 몬스터가 「신희」몬스터 １장만 있을 경우,
PRINTL 그 몬스터보다 공격력이 낮은 상대 필드의 몬스터의 효과는 무효화된다.
CALLFORM CARD_ABLE(1,마함起動)
PRINTL ②：자신 필드에  몬스터가 존재하지 않을 경우、자신 묘지의 초차원몬스터 이외의 「신희" 몬스터 １장을 대상으로 하고 발동할 수 있다。
PRINTL 이 카드를 패로 되돌리고、그 몬스터를 특수 소환한다。
PRINTL 그 후、자신 묘지의 "신희」장착 마법 카드 １장을 고르고、그 몬스터에 장착한다。

@CARDCAN_94702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 条件チェック,5

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,94702)
SIF RESULT == 1
	RETURN 0

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	SIF 발동済_1(듀얼리스트,94702)
		RETURN 0

	SIF ゾーン != "마함"
		RETURN 0
	SIF モンスター数(듀얼리스트) != 0
		RETURN 0
	
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 효과モン
	효과条件カテゴリ = 신희
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	RETURN 1

ELSEIF 종류 == 마함起動
	SIF 발동済_2(듀얼리스트,94702)
		RETURN 0
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 손패起動
	SIF 발동済_2(듀얼리스트,94702)
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 신희
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF モンスター数(듀얼리스트) != 1
		RETURN 0
	
	RETURN 1
ELSEIF 종류 == 지속효과 || 종류 == 常在無効
	SIF ゾーン != "마함"
		RETURN 0
	SIF モンスター数(듀얼리스트) != 1
		RETURN 0

	CALL FULLRESET
	효과範囲필드 = 1
	효과条件カテゴリ = 신희
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0

	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_94702(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者

#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIMS DYNAMIC 装備者
#DIM DYNAMIC 装備先
#DIM DYNAMIC 条件チェック,5
#DIM DYNAMIC カード装備先
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID 

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備先 = RESULT	
装備者 = %RESULTS%


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,94702,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,"마함",場所,3)
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件종류 = 효과モン
		효과条件カテゴリ = 신희
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT
			カード装備先 = カード소환先
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件カテゴリ = 신희
			효과条件종류 = 装備마법
			CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
			選択カード = RESULT
			IF 選択カード != 9999
				選択カード -= 200
				選択カード_ID = GETVAR(@"%듀얼리스트%_묘지:選択カード")
				CALL FULLRESET
				효과条件固定 = カード装備先
				CALLFORM CARD_EQUIP_ADV(듀얼리스트,選択カード,"묘지")
			ENDIF
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,94702,2)
	IF RESULT == 0
	ENDIF
ELSEIF 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,94702,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件名前 = RAIL ACTION - REVENGE SPIRIT
		CALL CARD_ADD(듀얼리스트,"손패","마함",場所,"表側표시")
	ENDIF

ELSEIF 종류 == 常在無効
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
			CONTINUE
		IF 条件チェック:0 < GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
			条件チェック:0 = GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
		ENDIF
	NEXT
	CALL FULLRESET
	효과条件攻撃力 = 条件チェック:0
	효과条件표시 = 表側표시
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"無効",0,94702)
ENDIF

