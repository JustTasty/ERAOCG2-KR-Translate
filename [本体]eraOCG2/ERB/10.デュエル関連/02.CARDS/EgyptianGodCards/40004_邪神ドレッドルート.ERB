@CARDCAN_40004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40004)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動 || 종류 == 사신変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_40004(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 守備力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과条件複数 = 3
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲제외 = 1
	효과条件名前 = 사신 드레드루트
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
	ENDIF
	IF GETVAR(@"ライフ_%対面者%") > 4000
		SETVAR @"ライフ_%対面者%", 4000
	ENDIF
ELSEIF 종류 == 사신変動
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF カウンタ == 場所
			CONTINUE
		攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ") / 2
		守備力修正 = GETVAR(@"%듀얼리스트%_MZ_守:カウンタ") / 2
		CALL STATCHANGE_BASIC(듀얼리스트,"自身",カウンタ,-攻撃力修正,-守備力修正)
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:カウンタ") / 2
		守備力修正 = GETVAR(@"%対面者%_MZ_守:カウンタ") / 2
		CALL STATCHANGE_BASIC(対面者,"자신",カウンタ,-攻撃力修正,-守備力修正)
	NEXT
ENDIF


