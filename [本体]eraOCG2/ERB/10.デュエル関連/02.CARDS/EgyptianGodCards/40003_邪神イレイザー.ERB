@CARDCAN_40003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과先
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40003)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환 
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	RETURN 1

ELSEIF 종류 == 戦破壊→묘지
	SIF !GROUPMATCH(묘지送り종류,"リリース","破壊","戦闘破壊")
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_40003(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃修正
#DIM DYNAMIC ダメージ修正
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과条件複数 = 3
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40003)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
	ENDIF

ELSEIF 종류 == 戦破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40003)
	IF RESULT == 0
		SETCOLOR C_RED
			PRINTFORML 
			PRINTFORML すべてを消し去れ、イレイザ-！！！
			PRINTFORMW 
		RESETCOLOR

		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"필드",カウンタ)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_마함:カウンタ") == -1
				CONTINUE
			CALL CARD_DISPOSE(듀얼리스트,"마함",カウンタ)
		NEXT
		
		FOR カウンタ,0,5
			VARSET 条件달성
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "종족"
			SIF RESULT == 환신야수족
				条件달성 = 1
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_필드:カウンタ")}, "속성"
			SIF RESULT == 신속성
				条件달성 = 1
			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_필드:カウンタ")}, "名前"
			SIF STRFIND(RESULTS, "ゴッド")  != -1
				条件달성 = 1
			SIF STRFIND(RESULTS, "神")  != -1
				条件달성 = 1
			SIF 条件달성 == 1
				ダメージ修正 ++
			CALL CARD_DISPOSE(対面者,"필드",カウンタ)
		NEXT
		FOR カウンタ,0,5
			VARSET 条件달성
			SIF GETVAR(@"%対面者%_마함:カウンタ") == -1
				CONTINUE
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_마함:カウンタ")}, "종족"
			SIF RESULT == 환신야수족
				条件달성 = 1
			TRYCALLFORM CARD_{GETVAR(@"%対面者%_마함:カウンタ")}, "속성"
			SIF RESULT == 신속성
				条件달성 = 1
			TRYCALLFORM CARDNAME_{GETVAR(@"%対面者%_마함:カウンタ")}, "名前"
			SIF STRFIND(RESULTS, "ゴッド")  != -1
				条件달성 = 1
			SIF STRFIND(RESULTS, "神")  != -1
				条件달성 = 1
			SIF 条件달성 == 1
				ダメージ修正 ++
			CALL CARD_DISPOSE(対面者,"필드",カウンタ)
		NEXT

		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ修正*8000,1)
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과範囲상대묘지 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	攻撃修正 = RESULT * 1000
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃修正,攻撃修正)
ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲제외 = 1
효과条件名前 = 사신 아바타
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"モ耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"魔耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"자신",場所,"함정耐")
	ENDIF
ENDIF


