@CARDCAN_40005(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 条件달성
#DIMS DYNAMIC 対面者
CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,40005)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과소환 
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件CNT = 1	
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時強制
	RETURN 1

ELSEIF 종류 == 지속효과 || 종류 == 攻守変動 || 종류 == 사신変動
	SIF ゾーン != "필드"
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") == 0
		RETURN 0
	SIF ターンプレイヤー == 듀얼리스트
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_40005(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 효과소환
	CALL FULLRESET
	효과条件複数 = 3
	CALL CARD_ADD_GY_BASIC(듀얼리스트,"필드",ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 소환時強制
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,40005)
	IF RESULT == 0
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"汎数",2,1)
	ENDIF

ELSEIF 종류 == 지속효과
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	효과範囲묘지 = 1
	효과範囲손패 = 1
	효과範囲덱 = 1
	효과範囲제외 = 1
	효과条件名前 = 사신 아바타
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	IF RESULT == 1 
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"モ耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"魔耐")
		CALL STATCHANGE_EFFECT(듀얼리스트,"自身",場所,"함정耐")
	ENDIF

	IF GETVAR(@"%듀얼리스트%_MZ_汎数:場所") != 0
		CALL SET_PLAYER_INFO(듀얼리스트,"魔無効",3,1)
		CALL SET_PLAYER_INFO(듀얼리스트,"함정無効",3,1)
	ENDIF

ELSEIF 종류 == 사신変動
	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		SIF 攻撃力修正 < GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
			攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ")
	NEXT
	FOR カウンタ,0,5
		SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%対面者%_MZ_表:カウンタ") == 3
			CONTINUE
		SIF 攻撃力修正 < GETVAR(@"%対面者%_MZ_攻:カウンタ")
			攻撃力修正 = GETVAR(@"%対面者%_MZ_攻:カウンタ")
	NEXT
	CALL STATCHANGE_BASIC(듀얼리스트,"自身",場所,攻撃力修正+1)

ELSEIF 종류 == ターン終了時強制
	CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"汎数",-1)
ENDIF


