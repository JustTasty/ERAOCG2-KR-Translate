@CARDCAN_28152(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,28152)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,28152)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	RETURN 1
ELSEIF 種類 == 召喚時
	SIF 発動済_2(決闘者,28152)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件固名前 = 《이치키사요리히메》
	効果条件守備力 = 800
	効果条件レベル = 4
	効果条件属性:0 = 光属性
	効果条件属性:1 = 闇属性
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == ターン終了時強制
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_28152(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード


IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,28152,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SUMMON_SHORI(決闘者,場所,"攻撃表示",1)
	ENDIF
ELSEIF 種類 == 召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,28152,2)
	IF RESULT == 0
		CALL FULLRESET
		効果条件固名前 = 《이치키사요리히메》
		効果条件守備力 = 800
		効果条件レベル = 4
		効果条件属性:0 = 光属性
		効果条件属性:1 = 闇属性
		効果条件種類 = モン全般
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
	ENDIF
ELSEIF 種類 == ターン終了時強制
	CALL CARD_DISPOSE(決闘者,ゾーン,場所,手札行き)
ENDIF