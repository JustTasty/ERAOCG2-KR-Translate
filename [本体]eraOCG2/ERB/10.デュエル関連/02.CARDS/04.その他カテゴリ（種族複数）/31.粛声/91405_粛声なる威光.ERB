@CARD_EXPLANATION_91405(種類)
#DIM DYNAMIC 種類

PRINTL このカード名の①の効果は１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(0,魔罠起動,フリー誘発)
PRINTL ①：自分・相手のメインフェイズに、以下の効果から１つを選択して発動できる。
PRINTL ●自分の手札・墓地から、戦士族・ドラゴン族で光属性の儀式モンスター１体または儀式魔法カード１枚をデッキに戻し、
PRINTL デッキから「순성」モンスター１体を選び、手札に加えるか特殊召喚する。
PRINTL ●自分フィールドの戦士族・ドラゴン族で光属性の儀式モンスターの数まで、
PRINTL 相手フィールドのカードを対象として発動できる。そのカードとこのカードを破壊する。


@CARDCAN_91405(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 効果使用不可,10
CALL 対面者判定(決闘者)
対面者 = %RESULTS%


CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,91405)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1
	SIF 発動済_1(決闘者,91405)
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果範囲墓地 = 1
	効果条件種族:0 = 戦士族
	効果条件種族:1 = ドラゴン族
	効果条件属性 = 光属性
	効果条件種類 = 儀式
	効果条件スーパーカテゴリ = 의식 마법
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1 
		効果使用不可:0 = 1

	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 순성
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1 
		効果使用不可:0 = 1

	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種族:0 = 戦士族
	効果条件種族:1 = ドラゴン族
	効果条件属性 = 光属性
	効果条件種類 = 儀式
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1 
		効果使用不可:1 = 1

	CALL FULLRESET
	効果範囲相手戦場 = 1
	効果範囲相手魔罠 = 1
	効果条件除去種 = 墓地
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1 
		効果使用不可:1 = 1
    SIF 効果使用不可:0 == 1 && 効果使用不可:1 == 1
	    RETURN 0
	RETURN 1
ELSEIF 種類 == 魔罠起動
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ENDIF



@CARDEFFECT_91405(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 効果使用不可,10
#DIM DYNAMIC 破壊数 

CALL 対面者判定(決闘者)
対面者 = %RESULTS%
IF 種類 == 魔罠起動 && GETVAR(@"%決闘者%_魔_表:場所") == 1
	;カード発動確認
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,91405,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲手札 = 1
		効果範囲墓地 = 1
		効果条件種族:0 = 戦士族
		効果条件種族:1 = ドラゴン族
		効果条件属性 = 光属性
		効果条件種類 = 儀式
		効果条件スーパーカテゴリ = 儀式魔法
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1 
			効果使用不可:0 = 1

		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 순성
		効果条件種類 = モン全般
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1 
			効果使用不可:0 = 1

		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件種族:0 = 戦士族
		効果条件種族:1 = ドラゴン族
		効果条件属性 = 光属性
		効果条件種類 = 儀式
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1 
			効果使用不可:1 = 1

		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果範囲相手魔罠 = 1
		効果条件除去種 = 墓地
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT != 1 
			効果使用不可:1 = 1
		IF 効果使用不可:0 == 0 && 効果使用不可:1 == 0
			CALL YN_CHOICE(決闘者,"●デッキから「순성」モンスター１体を選び手札に加えるか特殊召喚する","●自分フィールドの戦士族・ドラゴン族で光属性の儀式モンスターの数まで相手カードを破壊する")
		ELSEIF 効果使用不可:0 == 1
			RESULT = はい
		ELSEIF 効果使用不可:1 == 1
			RESULT = いいえ
		ENDIF

		IF RESULT == はい
			CALL FULLRESET
			効果範囲手札 = 1
			効果範囲墓地 = 1
			効果条件種族:0 = 戦士族
			効果条件種族:1 = ドラゴン族
			効果条件属性 = 光属性
			効果条件種類 = 儀式
			効果条件スーパーカテゴリ = 儀式魔法
			CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
			IF RESULT == 1
				CALL FULLRESET
				効果範囲デッキ = 1
				効果条件カテゴリ = 순성
				効果条件種類 = モン全般
				効果条件召喚可 = 1
				CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
				IF RESULT == 1
					CALL YN_CHOICE(決闘者,"モンスターを特殊召喚する","手札に加える")
					IF RESULT == 0
						CALL FULLRESET
						効果範囲デッキ = 1
						効果条件カテゴリ = 순성
						効果条件種類 = モン全般
						CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
					ELSEIF RESULT == 1
						CALL FULLRESET
						効果範囲デッキ = 1
						効果条件カテゴリ = 순성
						効果条件種類 = モン全般
						CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
					ENDIF
				ELSE
					CALL FULLRESET
					効果範囲デッキ = 1
					効果条件カテゴリ = 순성
					効果条件種類 = モン全般
					CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
				ENDIF			
			ENDIF			
		ELSEIF RESULT == いいえ
			CALL CARD_DISPOSE(決闘者,ゾーン,場所,破壊行き)
			CALL FULLRESET
			効果範囲戦場 = 1
			効果条件種族:0 = 戦士族
			効果条件種族:1 = ドラゴン族
			効果条件属性 = 光属性
			効果条件種類 = 儀式
			効果条件CNT = 1
			CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
			破壊数 = RESULT
			CALL FULLRESET
			効果範囲相手戦場 = 1
			効果範囲相手魔罠 = 1
			効果条件複数 = 100 - 破壊数
			CALL CARD_REMOVAL_ADV(決闘者,"単体除去",場所,"墓地")
		ENDIF
	ENDIF
ELSEIF 種類 == 魔罠起動
	;カード発動＆設置まで
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,91405)
	IF RESULT == 0
	ENDIF
ENDIF
