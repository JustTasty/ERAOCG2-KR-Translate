VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 문장수 레오
	CASE "略称"
		RESULTS = 문장수 레오
	CASE "カテゴリ"
		RESULTS:0 = 문장수
ENDSELECT


@CARD_38370(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 효과モン
	;어둠속성/빛속성/땅속성/물속성/화염속성/바람속성
	CASE "속성"
		RETURN 땅속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 1000
	CASE "추가日"
		RETURN 250713
ENDSELECT
RETURN 0

