@CARDNAME_38370,参照先
;ココで指定カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 문장수 레오
	CASE "略称"
		RESULTS = 문장수 레오
	CASE "カテゴリ"
		RESULTS:0 = 문장수
ENDSELECT


@CARD_38370(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;効果モン/通常モン/儀式/融合/シンクロ/エクシーズ/リンク/超次元
	CASE "種類"
		RETURN 効果モン
	;闇属性/光属性/地属性/水属性/炎属性/風属性
	CASE "属性"
		RETURN 地属性
	CASE "種族"
		RETURN 獣族
	CASE "レベル"
		RETURN 4
	CASE "攻撃力"
		RETURN 2000
	CASE "守備力"
		RETURN 1000
	CASE "追加日"
		RETURN 250713
ENDSELECT
RETURN 0

