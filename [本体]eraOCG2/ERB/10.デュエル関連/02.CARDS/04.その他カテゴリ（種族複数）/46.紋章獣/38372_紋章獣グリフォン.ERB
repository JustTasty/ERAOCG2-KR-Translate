@CARDCAN_38372(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,38372)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	SIF 発動済_1(決闘者,38372)
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,38372,"手札")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0

	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 문장수
	効果条件固名前 = 문장수 그리폰
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF
	
@CARDEFFECT_38372(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動 
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,38372,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 문장수
		効果条件固名前 = 문장수 그리폰
		効果条件種類 = モン全般
		CALL CARD_ADD_GY_BASIC(決闘者,"デッキ",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
			CALL CARD_EX_RESTRICTION(決闘者,"문장수")
		ENDIF
	ENDIF

ENDIF
