@CARDCAN_38375(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,38375)
SIF RESULT == 1
	RETURN 0

IF 種類 == 手札起動
	CALL CARD_SS_CHECK(決闘者,38375,"手札")
	SIF RESULT == 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ = 문장수
	効果条件種類 = モン全般
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動
	SIF ゾーン != "戦場"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲手札 = 1
	効果条件カテゴリ = 문장수
	効果条件種類 = モン全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ENDIF

@CARDEFFECT_38375(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 手札起動 
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,38375)
	IF RESULT == 0
		CALL FULLRESET
		効果条件カテゴリ = 문장수
		効果条件種類 = モン全般
		効果条件他所 = 1
		CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
		ENDIF
	ENDIF

ELSEIF 種類 == 戦場起動
    CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,38375)
	IF RESULT == 0
	    CALL FULLRESET
		効果条件カテゴリ = 문장수
		効果条件種類 = モン全般
		CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL SET_FIELD_INFO(決闘者,"戦場",場所,"一攻",800)
		ENDIF
	ENDIF
ENDIF