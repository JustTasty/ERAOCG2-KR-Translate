@CARDCAN_38374(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,38374)
SIF RESULT == 1
	RETURN 0

IF 種類 == 墓地起動
	SIF ゾーン != "墓地"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF 発動済_1(決闘者,38374)
		RETURN 0
	SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
    CALL FULLRESET
	効果範囲墓地 = 1	
    効果条件名前 = 문장수 아바콘웨이
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1


ENDIF	

@CARDEFFECT_38374(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%



IF 種類 == 墓地起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,38374,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件カテゴリ = 문장수
		効果条件種類 = モン全般
		効果条件行先フラグ = 手札行き
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
	ENDIF
ENDIF
