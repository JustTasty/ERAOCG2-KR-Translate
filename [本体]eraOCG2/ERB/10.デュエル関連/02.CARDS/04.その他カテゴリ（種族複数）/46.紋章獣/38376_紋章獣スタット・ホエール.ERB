	CASE "名前"
		RESULTS = 문장수 스탓트 웨일
	CASE "略称"
		RESULTS = 스탓트 웨일
	CASE "カテゴリ"
		RESULTS:0 = 문장수
ENDSELECT


@CARD_38376(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;효과モン/通常モン/의식/융합/싱크로/엑시즈/링크/초차원
	CASE "종류"
		RETURN 효과モン
