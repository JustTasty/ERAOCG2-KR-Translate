@CARDCAN_58078(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58078)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58078(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIM DYNAMIC 宣言넘버즈

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58078,10,X消費1)
	IF RESULT == 0
		IF 듀얼리스트 == "자신"
			$INPUT_LOOP
			PRINTL 【１～９９の数字을 선언해주세요】
			PRINTL
			INPUT
			SIF !INRANGE(RESULT,0,99)
				GOTO INPUT_LOOP
			宣言넘버즈 = RESULT

		ELSE
			IF ターンプレイヤー == 듀얼리스트
				SELECTCASE RAND:6
					CASE 0
						宣言넘버즈 = 4
					CASE 1
						宣言넘버즈 = 11
					CASE 2
						宣言넘버즈 = 39
					CASE 3
						宣言넘버즈 = 61
					CASE 4
						宣言넘버즈 = 68
					CASE 5
						宣言넘버즈 = 77
				ENDSELECT
			ELSE
				SELECTCASE RAND:7
					CASE 0
						宣言넘버즈 = 4
					CASE 1
						宣言넘버즈 = 37
					CASE 2
						宣言넘버즈 = 38
					CASE 3
						宣言넘버즈 = 39
					CASE 4
						宣言넘버즈 = 41
					CASE 5
						宣言넘버즈 = 77
					CASE 6
						宣言넘버즈 = 92
				ENDSELECT
			ENDIF
		ENDIF

		IF 듀얼리스트 == "자신"
			PRINTL 【ＥＸ덱に추가する몬스터를 選択してください】
			PRINTL
			IF GROUPMATCH(宣言넘버즈,1,2,3,4,5,6,7,8,9,39)
				SELECTCASE 宣言넘버즈
					CASE 39
						PRINTL [0] - No.39 유토피아
						PRINTL [1] - CNo.39 유토피아レイ
						PRINTL [2] - No.39 希望皇ビヨンド・ザ・ホープ
						PRINTL [3] - SNo.39 유토피아・ザ・ライトニング
						PRINTL [4] - No.39 유토피아・ダブル
						PRINTL [5] - CNo.39 유토피아レイV
						BINPUT
						SELECTCASE RESULT
							CASE 0
								選択カード_ID = 58039
							CASE 1
								選択カード_ID = 58139
							CASE 2
								選択カード_ID = 58239
							CASE 3
								選択カード_ID = 58240
							CASE 4
								選択カード_ID = 58241
							CASE 5
								選択カード_ID = 58244
						ENDSELECT
					CASE 6
						PRINTL [0] - No.6 先史遺産アトランタル
						PRINTL [1] - CNo.6 先史遺産카오스・アトランタル
						BINPUT
						IF RESULT == 0
							選択カード_ID = 58006
						ELSEIF RESULT == 1
							選択カード_ID = 58246
						ENDIF
					CASEELSE
						TRYCALLFORM CARDNAME_5800{宣言넘버즈},"名前"
						PRINTFORML [0] - %RESULTS%
						BINPUT
						選択カード_ID = 58000 + 宣言넘버즈
				ENDSELECT
			ELSE
				TRYCALLFORM CARDNAME_580{宣言넘버즈},"名前"
				PRINTFORML [0] - %RESULTS%
				TRYCALLFORM CARDNAME_581{宣言넘버즈},"名前"
				SIF RESULTS != ""
					PRINTFORML [1] - %RESULTS%
				BINPUT
				IF RESULT == 0
					選択カード_ID = 58000 + 宣言넘버즈
				ELSEIF RESULT == 1
					選択カード_ID = 58100 +宣言넘버즈
				ENDIF
			ENDIF

		ELSE
			IF 宣言넘버즈 == 39
				選択カード_ID = 58239
			ELSE
				選択カード_ID = 58000 + 宣言넘버즈
			ENDIF
		ENDIF

		CALL CARD_GENERATE_DECK_EX(듀얼리스트,選択カード_ID)

		CALL FULLRESET
		효과条件ID = 選択カード_ID
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"EX덱",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			TRYCALLFORM CARDSUMMON_{GETVAR(@"%듀얼리스트%_EX덱:{選択カード}")}(듀얼리스트,選択カード)
			代替素材数 = 1
			素材条件固定 = 場所
			효과추가종류 = 効追終除
			CALL XYZSUMMON(듀얼리스트, 選択カード)
		ENDIF
		CALL SET_PLAYER_INFO(듀얼리스트,"SS阻害状態",1)
	ENDIF
ENDIF
