		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58087(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동불가,2

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58087,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件除去種 = 無効
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1
		
		CALL FULLRESET
		SIF 듀얼리스트 == "자신"
			효과範囲필드 = 1
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		효과条件除去種 = 표시변경
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1
		
		IF 듀얼리스트 == "자신"
			PRINTL 【효과を選択してください】
			PRINTL
			SIF 발동불가:0 != 1
				PRINTL [0] - 상대フィールドの表側표시カード１枚の효과を無効にする。
			PRINTL [1] - フィールドのモンスター１体を裏側守備표시にする。
			PRINTL [2] - 자신フィールドのモンスターの攻撃力は６００アップする。
			BINPUT
		ELSE
			RESULT = 2
			SIF 발동불가:1 != 1
				RESULT = 1
			SIF 발동불가:0 != 1
				RESULT = 0
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"지속無効")

		ELSEIF RESULT == 1
			CALL FULLRESET
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"両필드単体",場所,"표시변경")

		ELSEIF RESULT == 2
			CALL FULLRESET
			CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"永攻",600)
		ENDIF
	ENDIF
ENDIF