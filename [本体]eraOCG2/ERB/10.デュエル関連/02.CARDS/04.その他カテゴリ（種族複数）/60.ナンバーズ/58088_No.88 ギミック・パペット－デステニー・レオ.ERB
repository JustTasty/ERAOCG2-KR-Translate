#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58088,10)
	IF RESULT == 0
		SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
			RETURN 0
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"Ⅹ",-1)
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"個Ｃ",1)
	ENDIF
ENDIF
