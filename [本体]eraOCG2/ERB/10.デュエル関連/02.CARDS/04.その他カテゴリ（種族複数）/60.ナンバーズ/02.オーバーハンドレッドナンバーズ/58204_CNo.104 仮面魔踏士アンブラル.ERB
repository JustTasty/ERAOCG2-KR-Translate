@CARDCAN_58204(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,58204)
SIF RESULT == 1
	RETURN 0

IF 種類 == 特殊召喚時 || 種類 == EX召喚時
	RETURN 1
ELSEIF 種類 == 発動誘発
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_58204(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 最大選択数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 特殊召喚時 || 種類 == EX召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58204)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲相手戦場 = 1
		効果範囲相手魔罠 = 1
		CALL CARD_REMOVAL_ADV(決闘者,"単体除去",場所,"墓地")
	ENDIF
ELSEIF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58204,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"無効")
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"手札破壊",場所,"墓地")
		CALL LIFE_CHANGE(決闘者,"半分","変更",0,1)
	ENDIF
ENDIF

