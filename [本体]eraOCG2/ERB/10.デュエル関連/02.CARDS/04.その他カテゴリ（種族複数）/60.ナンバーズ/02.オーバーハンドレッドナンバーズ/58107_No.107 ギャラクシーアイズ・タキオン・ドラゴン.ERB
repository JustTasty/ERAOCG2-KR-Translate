			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"一時",0,1)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"攻固",-1,1)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_필드:カウンタ") == -1
