			CALL SET_FIELD_INFO(対面者,"필드",カウンタ,"攻固",-1,1)
		NEXT

		CALL FULLRESET
		효과条件他所 = 1
		CALL STATCHANGE_EFFECT(듀얼리스트,"필드",場所,"無効",1)
		CALL FULLRESET
