@CARDCAN_58107(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,58107)
SIF RESULT == 1
	RETURN 0
IF 種類 == 戦場起動
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 発動強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_T1汎数:場所") == 0
		RETURN 0

	CALL FULLRESET
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58107(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM 選択カード


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58107,10,X消費1)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF カウンタ == 場所
				CONTINUE
			SIF GETVAR(@"%決闘者%_戦場:カウンタ") == -1
				CONTINUE
			CALL SET_FIELD_INFO(決闘者,"戦場",カウンタ,"一攻",0,1)
			CALL SET_FIELD_INFO(決闘者,"戦場",カウンタ,"一守",0,1)
			CALL SET_FIELD_INFO(決闘者,"戦場",カウンタ,"永攻",0,1)
			CALL SET_FIELD_INFO(決闘者,"戦場",カウンタ,"永守",0,1)
			CALL SET_FIELD_INFO(決闘者,"戦場",カウンタ,"一時",0,1)
			CALL SET_FIELD_INFO(決闘者,"戦場",カウンタ,"攻固",-1,1)
		NEXT
		FOR カウンタ,0,5
			SIF GETVAR(@"%対面者%_戦場:カウンタ") == -1
				CONTINUE
			CALL SET_FIELD_INFO(対面者,"戦場",カウンタ,"一攻",0,1)
			CALL SET_FIELD_INFO(対面者,"戦場",カウンタ,"一守",0,1)
			CALL SET_FIELD_INFO(対面者,"戦場",カウンタ,"永攻",0,1)
			CALL SET_FIELD_INFO(対面者,"戦場",カウンタ,"永守",0,1)
			CALL SET_FIELD_INFO(対面者,"戦場",カウンタ,"一時",0,1)
			CALL SET_FIELD_INFO(対面者,"戦場",カウンタ,"攻固",-1,1)
		NEXT

		CALL FULLRESET
		効果条件他所 = 1
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"無効",1)
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(決闘者,"相手戦場",場所,"無効",1,58107)

		CALL SET_FIELD_INFO(決闘者,"戦場",場所,"T1汎数",1)
	ENDIF
ELSEIF 種類 == 発動強制誘発
