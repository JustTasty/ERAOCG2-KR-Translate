@CARDCAN_58206(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,58206)
SIF RESULT == 1
	RETURN 0

IF 種類 == 発動誘発
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	CALL CARD_CHECK_START_DATA(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_58206(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 最大選択数
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58206,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(決闘者,"発動無効",場所,"無効")

		CALL FULLRESET
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"相手戦場",場所,"無効",1,58206)
		CALL FULLRESET
		効果条件表示 = 表側表示
		CALL STATCHANGE_EFFECT(決闘者,"相手魔罠",場所,"無効",1,58206)
	ENDIF
ELSEIF 種類 == 永続効果
	CALL SET_PLAYER_INFO(決闘者,"効果ダメージ無効",3)
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"破耐")
ENDIF