@CARDCAN_58207(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 必要カード
CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,58207)
SIF RESULT == 1
	RETURN 0
IF 種類 == 戦場起動
	SIF 効果発動済(決闘者,場所,ゾーン)
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	SIF GETVAR(@"%決闘者%_MZ_条達:場所") == 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58207(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM 選択カード


CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 発動誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,58207,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件他所 = 1
		CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"無効",1)
		CALL FULLRESET
		CALL STATCHANGE_EFFECT(決闘者,"魔罠",場所,"無効",1)

		CALL FULLRESET
		CALL STATCHANGE_EFFECT(決闘者,"相手戦場",場所,"無効",1,58207)

		CALL FULLRESET
		CALL STATCHANGE_EFFECT(決闘者,"相手魔罠",場所,"無効",1,58207)

		CALL CARD_RESERV(決闘者,58207,短紋章予約)
	ENDIF
ELSEIF 種類 == 短紋章起動
	CALL FULLRESET
	CALL STATCHANGE_EFFECT(決闘者,"相手戦場",場所,"発無",3)
ELSEIF 種類 == 永続効果
	CALL FULLRESET
	CALL SET_FIELD_INFO(決闘者,"戦場",場所,"戦",3,1)
ENDIF