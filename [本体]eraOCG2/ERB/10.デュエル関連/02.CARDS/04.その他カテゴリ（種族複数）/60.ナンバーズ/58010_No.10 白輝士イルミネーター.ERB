@CARDCAN_58010(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58010)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,58010)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1
ENDIF

@CARDEFFECT_58010(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ドロー枚数
#DIM DYNAMIC 捨て枚数

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58010,1)
	IF RESULT == 0
		ドロー枚数 = GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") + 1
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"Ｘ",-ドロー枚数)
		CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
		IF RESULT == 0
			CALL CARDDRAW_BASIC(듀얼리스트,ドロー枚数)
			捨て枚数 = ドロー枚数 / 2
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件複数 = 捨て枚数
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF