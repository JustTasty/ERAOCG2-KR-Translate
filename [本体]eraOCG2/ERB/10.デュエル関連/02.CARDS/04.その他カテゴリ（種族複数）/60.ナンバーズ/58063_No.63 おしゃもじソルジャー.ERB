対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58063)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1

ELSEIF 종류 == ターン開始時予約
	RETURN 1
ENDIF

@CARDEFFECT_58063(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58063,10,X消費1)
	IF RESULT == 0
		CALL YN_CHOICE(듀얼리스트,"●상대 스탠바이 페이즈에、서로 １장 드로우한다。","●서로 １０００ＬＰ회복한다。")
		IF RESULT == 0
			CALL CARD_RESERV(듀얼리스트,,スタン予約)
		ELSEIF RESULT == 1
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",1000)
			CALL CARD_EROTICS(상대プレイヤー,対面者)
			IF RESULT != -1
				CALL RECOVER_PERMIL(RESULT,1000,"体力",1)
				CALL RECOVER_PERMIL(RESULT,1000,"気力",1)
			ENDIF
			
			CALL LIFE_CHANGE(듀얼리스트,"増加","효과",1000,1)
			CALL CARD_EROTICS(상대プレイヤー,듀얼리스트)
			IF RESULT != -1
				CALL RECOVER_PERMIL(RESULT,1000,"体力",1)
				CALL RECOVER_PERMIL(RESULT,1000,"気力",1)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == ターン開始時予約
	CALL CARDDRAW_BASIC(듀얼리스트,1)
	CALL CARDDRAW_BASIC(対面者,1)
ENDIF