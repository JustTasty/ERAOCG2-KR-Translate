@CARDCAN_58007(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58007)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_58007(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC ダイス結果,2
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 발동불가,3

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58007,10,X消費1)
	IF RESULT == 0
		CALL DICE_ROLL(듀얼리스트,1)
		ダイス結果:0 = RESULT
		CALL DICE_ROLL(듀얼리스트,1)
		ダイス結果:1 = RESULT

		IF ダイス結果:0 >= ダイス結果:1
			攻撃力修正 = ダイス結果:0 * 700
		ELSEIF ダイス結果:0 < ダイス結果:1
			攻撃力修正 = ダイス結果:1 * 700
		ENDIF
		CALL SET_FIELD_INFO(듀얼리스트,ゾーン,場所,"一攻",攻撃力修正)

		IF ダイス結果:0 + ダイス結果:1 == 7
			SIF モンスター数(対面者) < 1 && 마함数(対面者) < 1
				발동불가:0 = 1
			CALL FULLRESET
			효과範囲손패 = 1
			효과範囲묘지 = 1
			효과範囲상대묘지 = 1
			효과条件소환可 = 1
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT != 1
				발동불가:1 = 1
			SIF 現山札数(듀얼리스트) < 3
				발동불가:2 = 1
			
			IF 듀얼리스트 == "자신"
				SIF 발동불가:0 != 1
					PRINTL [0] - 상대 필드의 카드를 全て묘지로 보낸다。
				SIF 발동불가:1 != 1
					PRINTL [1] - 손패또는 자신 / 상대의 묘지에서 몬스터 １장을 골라서 자신 필드에 특수 소환한다。
				SIF 발동불가:2 != 1
					PRINTL [2] - 자신은 덱에서 ３장 드로우 하고、その後패를 ２枚選んで捨てる。
				PRINTL
				SIF 발동불가:0 == 1 && 발동불가:1 == 1 && 발동불가:2 == 1
					PRINTL [9999] - 戻る
				BINPUT

			ELSE
				RESULT = 9999
				SIF 발동불가:2 != 1
					RESULT = 2
				SIF 발동불가:0 != 1
					RESULT = 0
				SIF 발동불가:1 != 1
					RESULT = 1
			ENDIF

			IF RESULT == 0
				CALL FULLRESET
				CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場全体",場所,"リリース")

			ELSEIF RESULT == 1
				CALL FULLRESET
				효과範囲손패 = 1
				효과範囲묘지 = 1
				효과範囲상대묘지 = 1
				CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

			ELSEIF RESULT == 2
				CALL URARA_CHANCE(듀얼리스트,処理中_효과ID,"雑多")
				IF RESULT == 0
					CALL CARDDRAW_BASIC(듀얼리스트,3)
					CALL FULLRESET
					효과範囲손패 = 1
					효과条件複数 = 2
					CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
				ENDIF
			ENDIF
		ENDIF
	ENDIF
ENDIF
