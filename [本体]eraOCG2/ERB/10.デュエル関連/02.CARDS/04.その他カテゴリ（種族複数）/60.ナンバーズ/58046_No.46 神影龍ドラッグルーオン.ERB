@CARDCAN_58046(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 발동불가,3
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58046)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件종족 = 드래곤족
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:0 = 1

	SIF モンスター数(듀얼리스트) >= 5
		발동불가:1 = 1
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件종족 = 드래곤족
	효과条件표시 = 表側표시
	효과条件除去種 = 強奪
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		발동불가:1 = 1
	
	IF 듀얼리스트 != "자신"
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대묘지 = 1
		효과範囲상대제외 = 1
		효과条件종족 = 드래곤족
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:2 = 1
	ENDIF

	SIF 발동불가:0 == 1 && 발동불가:1 == 1 && 발동불가:2 == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 短紋章起動
	RETURN 1

ELSEIF 종류 == ターン開始時予約
	RETURN 1
ENDIF

@CARDEFFECT_58046(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIMS DYNAMIC 対面者
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 발동불가,2
#DIM DYNAMIC 条件달성

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58046,10,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲손패 = 1
		효과条件종족 = 드래곤족
		효과条件소환可 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:0 = 1

		SIF モンスター数(듀얼리스트) >= 5
			발동불가:1 = 1
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件종족 = 드래곤족
		효과条件표시 = 表側표시
		효과条件除去種 = 強奪
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			발동불가:1 = 1
		
		IF 듀얼리스트 != "자신"
			CALL FULLRESET
			효과範囲상대필드 = 1
			효과範囲상대묘지 = 1
			효과範囲상대제외 = 1
			효과条件종족 = 드래곤족
			CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
			SIF RESULT == 1
				条件달성 = 1
		ENDIF
		
		IF 듀얼리스트 == "자신"
			PRINTL [0] - 패에서 드래곤족 몬스터 １장을 특수 소환한다。
			PRINTL [1] - 상대 필드의 드래곤족 몬스터 １장의 コントロールを得る。
			PRINTL [2] - 상대턴 종료시 까지、상대 필드의 드래곤족 몬스터는 효과 を발동할 수 없다。
			BINPUT
		ELSE
			RESULT = 2
			SIF 발동불가:0 != 1
				RESULT = 0
			SIF 条件달성 == 1
				RESULT = 2
			SIF 발동불가:1 != 1
				RESULT = 1
		ENDIF

		IF RESULT == 0
			CALL FULLRESET
			효과範囲손패 = 1
			효과条件종족 = 드래곤족
			CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)

		ELSEIF RESULT == 1
			CALL FULLRESET
			효과条件종족 = 드래곤족
			효과条件표시 = 表側표시
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드単体",場所,"強奪")

		ELSEIF RESULT == 2
			CALL CARD_RESERV(듀얼리스트,58046,短紋章予約)
			CALL CARD_RESERV(듀얼리스트,58046,スタン予約)
		ENDIF
	ENDIF

ELSEIF 종류 == 短紋章起動
	CALL FULLRESET
	효과条件종족 = 드래곤족
	CALL STATCHANGE_EFFECT(듀얼리스트,"상대필드",場所,"발동無効",,58046)

ELSEIF 종류 == ターン開始時予約
	CALL CARD_RESERV(듀얼리스트,58046,短紋章予約)
ENDIF