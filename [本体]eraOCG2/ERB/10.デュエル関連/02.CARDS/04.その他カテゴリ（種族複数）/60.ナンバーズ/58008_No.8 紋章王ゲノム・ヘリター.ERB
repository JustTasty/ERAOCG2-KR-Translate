@CARDCAN_58008(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 必要カード

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,58008)
SIF RESULT == 1
	RETURN 0

IF 종류 == 필드起動 || 종류 == フリー誘発
    SIF 발동済_1(듀얼리스트,58008)
		RETURN 0
	SIF ゾーン != "필드"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_MZ_Ｘ:場所") <= -1
		RETURN 0
	CALL FULLRESET
	효과範囲상대필드 = 1
	효과条件표시 = 表側표시
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	


ENDIF


@CARDEFFECT_58008(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC 選択カード_ID
#DIMS DYNAMIC 選択カード名前

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 필드起動 || 종류 == フリー誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,58008,1,X消費1)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과条件표시 = 表側표시
		CALL CARD_REMOVAL_ADV(듀얼리스트,"単体除去",場所,"選択")
		選択カード = RESULT:1
		IF RESULT == 1
			CALL CARD_SELECT(듀얼리스트,選択カード)
			選択カード = 選択カード（CS）
			攻撃力修正 = (GETVAR(@"%対面者%_MZ_攻:選択カード"))
			選択カード_ID = RESULT:99
			TRYCALLFORM CARDNAME_{選択カード_ID},"名前"
			選択カード名前 = %RESULTS%

			CALLFORM CARDEFFECT_{GETVAR(@"%対面者%_필드:選択カード")}(듀얼리스트,필드起動,"효과処理")
			
			CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"一攻",-999999,1)
			CALL SET_FIELD_INFO(대상者（CS）,参照先（CS）,選択カード,"無効",1)
			CALL CARD_SET_RENAME(対面者,"필드",選択カード,"アンノウン")

			CALL FULLRESET
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"変化元ID",選択カード_ID,上書きモード)
			CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"攻固",攻撃力修正,上書きモード)
		ENDIF

	ENDIF
ENDIF