@CARDNAME_25120,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 현람한 에르담
	CASE "略称"
		RESULTS = 에르담
	CASE "カテゴリ"
		RESULTS:0 = 현람
ENDSELECT


@CARD_25120(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 야수족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 1300
	CASE "守備力"
		RETURN 800
	CASE "성별"
		RETURN 雄性
	CASE "추가日"
		RETURN 250726
ENDSELECT
RETURN 0

@CARD_EXPLANATION_25120(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①②の효과はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①：자신の묘지に「サイクロン」が存在するか、상대フィールドに마법・함정カードが存在しない場合に발동できる。
PRINTL このカードを손패から특수소환する。
CALLFORM CARD_ABLE(2,소환時,특수소환時)
PRINTL ②：このカードが소환・특수소환した場合に발동できる。
PRINTL 덱から「현람한 에르담」以外の「현람」モンスター１体か「サイクロン」１枚を손패に加える。


@CARDCAN_25120(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25120)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,25120)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,25120,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF 마함数(対面者) == 0
		RETURN 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = サイクロン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,25120)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 현람
	효과条件종류 = モン全般
	효과条件固名前 = 현람한 에르담
	효과条件スーパー名前 = サイクロン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_25120(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25120,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25120,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 현람
		효과条件종류 = モン全般
		효과条件固名前 = 현람한 에르담
		효과条件スーパー名前 = サイクロン
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
