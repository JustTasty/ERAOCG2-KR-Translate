@CARD_81530(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속함정
	CASE "추가日"
		RETURN 250726
ENDSELECT

RETURN 0

@CARD_EXPLANATION_81530(종류)
#DIM DYNAMIC 종류

CALLFORM CARD_ABLE(10,마함起動,フリー誘発)
PRINTL ①：１턴에 １번、「현람」카드를 포함하는 자신 묘지의 속공 마법 카드３장을 대상으로 하고 발동할 수 있다。
PRINTL 이하를 적용한다。
PRINTL ●그 카드를 덱으로 되돌리고、자신은１장 드로우한다。
PRINTL ●이 턴、자신 필드의 바람속성 몬스터의 공격력 / 수비력은 ３００올린다。
CALLFORM CARD_ABLE(0,지속효과)
PRINTL ②：자신의 "싸이크론"은 이하의 효과를 얻는다（１번의 발동마다 １개밖에 적용할 수 없다）。
PRINTL 이 효과는 무효화되지 않는다.
PRINTL ●상대 필드의 앞면 표시카드 １장의 효과를 무효로 할 수 있다。
PRINTL ●상대의 패 / 필드의 마법 / 함정 카드의 효과에 체인해서 발동한 경우、그 발동한효과를 무효로 할 수 있다。
CALLFORM CARD_ABLE(0,破壊→묘지)
PRINTL ③：이 카드가 "싸이크론"의 효과로 파괴된 경우에 발동할 수 있다。
PRINTL 이 카드를 자신 필드에 세트한다。


@CARDCAN_81530(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,81530)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件カテゴリ = 현람
	효과条件종류 = 速攻마법
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종류 = 速攻마법
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT < 3
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 攻紋章起動
	RETURN 1

ELSEIF 종류 == 마함起動
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 3	
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 지속효과
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 破壊→묘지
	SIF ゾーン != "묘지"
		RETURN 0
	TRYCALLFORM CARDNAME_{処理中_효과ID},"名前"
	SIF RESULTS != "싸이크론"
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	RETURN 1
ENDIF



@CARDEFFECT_81530(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB
#DIM DYNAMIC 속성数


IF 종류 == 마함起動 && GETVAR(@"%듀얼리스트%_魔_表:場所") == 1 || (종류 == フリー誘発 && ゾーン == "마함")
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81530,10)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件カテゴリ = 현람
		효과条件종류 = 速攻마법
		효과条件行先플래그 = 덱行き
		CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			효과範囲묘지 = 1
			효과条件종류 = 速攻마법
			효과条件行先플래그 = 덱行き
			효과条件複数 = 2
			CALL CARD_ADD_GY_ADV(듀얼리스트,ゾーン,場所)
			IF RESULT == 1
				CALL CARDDRAW_BASIC(듀얼리스트,1)
				CALL CARD_RESERV(듀얼리스트,81530,攻紋章予約)
			ENDIF
		ENDIF
	ENDIF

ELSEIF 종류 == 攻紋章起動
	CALL FULLRESET
	효과条件속성 = 바람속성
	CALL STATCHANGE_BASIC(듀얼리스트,"필드",場所,300,300)

ELSEIF 종류 == 마함起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81530)
	IF RESULT == 0
	ENDIF

ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,81530)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲묘지 = 1
		효과条件名前 = 현람한 권능
		CALL CARD_SET_ADV(듀얼리스트,ゾーン,場所,"裏側표시")
	ENDIF
ENDIF
