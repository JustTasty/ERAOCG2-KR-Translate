PRINTL このカードを특수소환する。


@CARDCAN_26120(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,26120)
SIF RESULT == 1
	RETURN 0

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		SIF 발동済_1(듀얼리스트,26120)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,26120,ゾーン)
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件종류 = 速攻마법
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
		SIF RESULT != 1
			RETURN 0
	
	ELSEIF ゾーン == "필드"
		SIF 발동済_2(듀얼리스트,26120)
			RETURN 0
		CALL FULLRESET
		효과条件종류 = 速攻마법
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
		SIF RESULT != 1
			RETURN 0
		CALL FULLRESET
		효과範囲상대필드 = 1
		효과範囲상대마함 = 1
		효과条件除去種 = 덱
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT != 1
			RETURN 0

	ELSEIF ゾーン == "묘지"
		SIF 발동済_3(듀얼리스트,26120)
			RETURN 0
		CALL CARD_SS_CHECK(듀얼리스트,26120,ゾーン)
		SIF RESULT == 1
			RETURN 0
		CALL FULLRESET
		효과条件名前 = サイクロン
		CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
		SIF RESULT != 1
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	RETURN 1
ENDIF

@CARDEFFECT_26120(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

IF 종류 == 효과後誘発
	IF ゾーン == "손패"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26120,1)
	ELSEIF ゾーン == "필드"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26120,2)
	ELSEIF ゾーン == "묘지"
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,26120,3)
	ENDIF
	IF RESULT == 0
		IF ゾーン == "필드"
			CALL FULLRESET
			효과条件複数 = 98
			CALL CARD_REMOVAL_BASIC(듀얼리스트,"全場単体",場所,"덱")

		ELSE
			CALL FULLRESET
			CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF
