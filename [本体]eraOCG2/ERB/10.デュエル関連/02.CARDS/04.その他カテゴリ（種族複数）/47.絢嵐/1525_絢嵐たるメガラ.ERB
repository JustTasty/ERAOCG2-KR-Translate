@CARDNAME_1525,参照先
;ココで지정カードの名前、略称を返す予定
#DIMS DYNAMIC 参照先

VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "名前"
		RESULTS = 현람한 메가라
	CASE "略称"
		RESULTS = 메가라
	CASE "カテゴリ"
		RESULTS:0 = 현람
ENDSELECT


@CARD_1525(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 효과モン
	CASE "속성"
		RETURN 바람속성
	CASE "종족"
		RETURN 천사족
	CASE "レベル"
		RETURN 3
	CASE "攻撃力"
		RETURN 500
	CASE "守備力"
		RETURN 1500
	CASE "성별"
		RETURN 牝性
	CASE "추가日"
		RETURN 250726
ENDSELECT
RETURN 0

@CARD_EXPLANATION_1525(종류)
#DIM DYNAMIC 종류

PRINTL このカード名の①②の효과はそれぞれ１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,손패起動)
PRINTL ①：자신の묘지に「サイクロン」が存在するか、상대フィールドに마법・함정カードが存在しない場合に발동できる。
PRINTL このカードを손패から특수소환する。
CALLFORM CARD_ABLE(2,효과後誘発)
PRINTL ②：「현람」速攻마법カードか「サイクロン」が발동した場合に발동できる。
PRINTL 同名モンスターが자신フィールドに存在しない「현람」モンスター１体を덱から특수소환する。
PRINTL この효과の발동後、ターン終了時まで자신は바람속성モンスターしか특수소환できない。


@CARDCAN_1525(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前,6
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1525)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,1525)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1525,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF 마함数(対面者) == 0
		RETURN 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = サイクロン
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1525)
		RETURN 0
	CALL FULLRESET
	효과条件スーパー名前 = サイクロン
	효과条件カテゴリ = 현람
	효과条件종류 = 速攻마법
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT != 1
		RETURN 0

	FOR カウンタ,0,5
		SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
			CONTINUE
		SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"カテゴリ"
		SIF !MATCH(RESULTS,"현람")
			CONTINUE
		TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"名前"
		選択カード名前:(カウンタ+1) = %RESULTS%
	NEXT
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 현람
	효과条件固名前:0 = 仮置き
	FOR カウンタ,1,6
		효과条件固名前:カウンタ = %選択カード名前:カウンタ%
	NEXT
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1525(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前,6

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1525,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1525,2)
	IF RESULT == 0
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:カウンタ") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_表:カウンタ") == 3
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"カテゴリ"
			SIF !MATCH(RESULTS,"현람")
				CONTINUE
			TRYCALLFORM CARDNAME_{GETVAR(@"%듀얼리스트%_필드:カウンタ")},"名前"
			選択カード名前:(カウンタ+1) = %RESULTS%
		NEXT
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 현람
		효과条件固名前:0 = 仮置き
		FOR カウンタ,1,6
			효과条件固名前:カウンタ = %選択カード名前:カウンタ%
		NEXT
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		SS소환可能속성 = 바람속성
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF
