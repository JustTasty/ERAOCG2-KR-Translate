PRINTL 같은 이름의 몬스터가 자신 필드에 존재하지 않는 "현람" 몬스터 １장을 덱에서 특수 소환한다。
PRINTL 이 효과의 발동 후、턴 종료시 까지 자신은 바람속성 몬스터밖에 특수 소환할 수 없다。


@CARDCAN_1525(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 選択カード名前,6
#DIMS DYNAMIC 対面者

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,1525)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,1525)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_SS_CHECK(듀얼리스트,1525,ゾーン)
	SIF RESULT == 1
		RETURN 0
	SIF 마함数(対面者) == 0
		RETURN 1
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件名前 = 싸이크론
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT == 1
		RETURN 1
	RETURN 0

ELSEIF 종류 == 효과後誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_2(듀얼리스트,1525)
		RETURN 0
	CALL FULLRESET
	효과条件スーパー名前 = 싸이크론
	효과条件カテゴリ = 현람
	효과条件종류 = 速攻마법
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"효과발동",2)
	SIF RESULT != 1
		RETURN 0

	CALL FULLRESET
	효과範囲덱 = 1
	효과条件カテゴリ = 현람
	CALL SET_EXIST_CARDS(듀얼리스트,필드지정)
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1525(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前,6

IF 종류 == 손패起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1525,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 효과後誘発
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,1525,2)
	IF RESULT == 0
		CALL FULLRESET
		효과範囲덱 = 1
		효과条件カテゴリ = 현람
		CALL SET_EXIST_CARDS(듀얼리스트,필드지정)
		CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		SS소환可能속성 = 바람속성
		CALL CARD_SS_RESTRICTION(듀얼리스트)
	ENDIF
ENDIF
