@CARDCAN_1526(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIMS DYNAMIC 対面者

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,1526)
SIF RESULT == 1
	RETURN 0

IF 種類 == 効果後誘発
	SIF ゾーン != "手札"
		RETURN 0
	SIF 発動済_1(決闘者,1526)
		RETURN 0
	CALL CARD_SS_CHECK(決闘者,1526,ゾーン)
	SIF RESULT == 1
		RETURN 0
	CALL FULLRESET
	効果条件種類 = 速攻魔法
	CALL CARD_CHECK_FIN_DATA(決闘者,"効果発動",2)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_2(決闘者,1526)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果範囲墓地 = 1
	効果条件カテゴリ = 현람
	効果条件固名前 = 현람한 크로제아
	効果条件スーパー名前 = サイクロン
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 魔罠数(対面者) > 0
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_1526(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

IF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1526,1)
	IF RESULT == 0
		CALL FULLRESET
		CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,1526,2)
	IF RESULT == 0
		CALL URARA_CHANCE(決闘者,処理中_効果ID,"雑多")
		IF RESULT == 0
			CALL FULLRESET
			効果範囲デッキ = 1
			効果範囲墓地 = 1
			効果条件カテゴリ = 현람
			効果条件固名前 = 현람한 크로제아
			効果条件任意 = 1
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
			CALL FULLRESET
			効果範囲デッキ = 1
			効果範囲墓地 = 1
			効果条件名前 = サイクロン
			効果条件任意 = 1
			CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
		ENDIF
		SS召喚可能属性 = 風属性
		CALL CARD_SS_RESTRICTION(決闘者)
	ENDIF

ELSEIF 種類 == 永続効果
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"戦耐")
	CALL STATCHANGE_EFFECT(決闘者,"自身",場所,"破耐")
ENDIF
