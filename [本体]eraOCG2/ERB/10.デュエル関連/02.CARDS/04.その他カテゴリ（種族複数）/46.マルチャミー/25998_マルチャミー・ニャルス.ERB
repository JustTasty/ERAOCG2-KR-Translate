@CARDCAN_25998(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 효과制限達成
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,25998)
SIF RESULT == 1
	RETURN 0

IF 종류 == 손패起動 || 종류 == フリー誘発
	SIF 발동済_1(듀얼리스트,25998) + 발동済_2(듀얼리스트,25998) + 발동済_1(듀얼리스트,26998) + 발동済_2(듀얼리스트,26998) + 발동済_1(듀얼리스트,31998) + 발동済_2(듀얼리스트,31998) >= 2
		RETURN 0
	SIF ゾーン != "손패"
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과範囲마함 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,25998)
	SIF RESULT == 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 効後紋章起動
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(듀얼리스트,"특수소환",1)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"소환出処",3,1)
	SIF RESULT == 1
		RETURN 1
	CALL CARD_CHECK_FIN_BIT(듀얼리스트,"소환出処",6,1)
	SIF RESULT == 1
		RETURN 1
	RETURN 0
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,25998)
	カウンタ = RESULT

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,25998)
	カウンタB = RESULT

	SIF カウンタ <= カウンタB + 6
		RETURN 0

	RETURN 1
ENDIF



@CARDEFFECT_25998(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 덱送りカード
#DIM DYNAMIC カウンタ
#DIM DYNAMIC カウンタB

IF 종류 == 손패起動 || 종류 == フリー誘発
	;カード발동確認
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,25998,15)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
			CALL CARD_RESERV(듀얼리스트,25998,効後紋章予約)
			CALL CARD_RESERV(듀얼리스트,25998,エンド予約)
		ENDIF
	ENDIF
ELSEIF 종류 == 効後紋章起動
	CALL CARDDRAW_BASIC(듀얼리스트,1)
ELSEIF 종류 == ターン終了時予約
	CALL FULLRESET
	효과範囲손패 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,25998)
	カウンタ = RESULT

	CALL FULLRESET
	효과範囲상대필드 = 1
	효과範囲상대마함 = 1
	효과条件CNT = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所,25998)
	カウンタB = RESULT

	덱送りカード = カウンタ - (カウンタB + 6)

	VARSET カウンタ
	FOR カウンタ,0,덱送りカード
		CALL FULLRESET
		CALL CARD_REMOVAL_BASIC(듀얼리스트,"손패破壊",場所,"덱",,1)
	NEXT
ENDIF

