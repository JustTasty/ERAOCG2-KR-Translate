@CARDCAN_2237(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,2237)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,2237)
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件カテゴリ = 드래곤테일
	効果条件固ID = 2237
	効果条件種類 = モン全般
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == F素材時効果
	SIF 発動済_2(決闘者,2237)
		RETURN 0
	SIF 魔罠数(決闘者) >= 5
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件カテゴリ = 드래곤테일
	効果条件種類 = 魔罠全般
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL CARD_DRAW_CHECK(1)
	RETURN 1
ENDIF


@CARDEFFECT_2237(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード


IF 種類 == 召喚時 || 種類 == 特殊召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2237,1)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲墓地 = 1
		効果条件固ID = 2237
		効果条件カテゴリ = 드래곤테일
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果条件行先フラグ = 手札行き
			CALL CARD_ADD_GY_BASIC(決闘者,"戦場",ゾーン,場所)
		ENDIF
	ENDIF
ELSEIF 種類 == F素材時効果
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2237,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		効果条件カテゴリ = 드래곤테일
		効果条件種類 = 魔罠全般
		CALL CARD_SET_ADV(決闘者,ゾーン,場所,"裏側表示")
	ENDIF
ENDIF



