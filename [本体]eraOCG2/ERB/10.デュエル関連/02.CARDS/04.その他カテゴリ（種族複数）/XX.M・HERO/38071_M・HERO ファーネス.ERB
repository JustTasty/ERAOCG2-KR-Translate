CALLFORM CARD_ABLE(2,効果後誘発)
PRINTL ②：自分が炎属性以外の「HERO」融合モンスターを特殊召喚した場合に発動できる。
PRINTL このカードを手札・墓地から特殊召喚する。
PRINTL この効果で特殊召喚したこのカードは、フィールドから離れた場合に除外される。

@CARDCAN_38071(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
CALL 対面者判定(決闘者)
対面者 = %RESULTS%

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,38071)
SIF RESULT == 1
	RETURN 0



IF 種類 == 手札起動
	SIF 発動済_1(決闘者,38071)
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件名前:0 = 融合
	効果条件名前:1 = マスク・チェンジ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果条件固カテゴリ = HERO
	CALL CARD_CHECK_FIN_DATA(決闘者,"EX履歴")
	SIF RESULT != 0
		RETURN 0
	RETURN 1

ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,38071)
		RETURN 0
	SIF !GROUPMATCH(ゾーン,"手札","墓地")
		RETURN 0
	CALL FULLRESET
	効果条件カテゴリ = HERO
	効果条件種類 = 融合
	CALL 効果条件属性_ADV(炎属性, "以外")
	CALL CARD_CHECK_FIN_DATA(決闘者,"特殊召喚")
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

@CARDEFFECT_38071(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIMS DYNAMIC 対面者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 選択カード
#DIMS DYNAMIC 選択カード名前
#DIM DYNAMIC 条件カード数

CALL 対面者判定(決闘者)
対面者 = %RESULTS%



IF 種類 == 手札起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,38071,1)
	IF RESULT == 0
		CALL FULLRESET
		効果条件名前:0 = 融合
		効果条件名前:1 = マスク・チェンジ
		CALL CARD_ADD_BASIC(決闘者,"デッキ",ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			CALL CARD_ADD_GY_BASIC(決闘者,"手札",ゾーン,場所)
			CALL CARD_EX_RESTRICTION(決闘者,"HERO")
		ENDIF
	ENDIF
ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,38071,2)
	IF RESULT == 0
		効果追加種類:0 = 効追除処
		CALL CARD_SP_SUMMON(決闘者,ゾーン,場所)
	ENDIF
ENDIF

