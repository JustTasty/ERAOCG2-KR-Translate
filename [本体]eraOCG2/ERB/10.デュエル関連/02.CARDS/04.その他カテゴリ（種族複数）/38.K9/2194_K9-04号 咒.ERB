@CARDSUMMON_AA_2194


@CARDCAN_2194(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,2194)
SIF RESULT == 1
	RETURN 0

IF 種類 == 効果召喚
	CALL FULLRESET
	効果範囲相手手札 = 1
	効果条件CNT = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT < 2
		RETURN 0
	RETURN 1
ELSEIF 種類 == 召喚誘発
	SIF 発動済_2(決闘者,2194)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	CALLFORM 効果条件種族_ADV(機械族,"以外")
	効果条件レベル = 5
	効果条件カテゴリ = K9
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 種類 == 戦場起動
	SIF 発動済_3(決闘者,2194)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF 決闘者 == "相手" ;CPUは使わない
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果範囲魔罠 = 1
	効果条件カテゴリ = K9
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲相手手札 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF


@CARDEFFECT_2194(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード


IF 種類 == 効果召喚
	RETURN 1
ELSEIF 種類 == 召喚誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2194,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲デッキ = 1
		CALLFORM 効果条件種族_ADV(機械族,"以外")
		効果条件レベル = 5
		効果条件カテゴリ = K9
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF
ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,2194,3)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果範囲魔罠 = 1
		効果条件カテゴリ = K9
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)
		IF RESULT == 1
			CALL FULLRESET
			効果範囲相手手札 = 1
			効果条件任意 = 1
			CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF



