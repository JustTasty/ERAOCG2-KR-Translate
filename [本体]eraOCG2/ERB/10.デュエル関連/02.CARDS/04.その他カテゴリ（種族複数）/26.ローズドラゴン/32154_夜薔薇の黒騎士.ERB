@CARDCAN_32154(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,32154)
SIF RESULT == 1
	RETURN 0

IF 種類 == 召喚時 || 種類 == 特殊召喚時
	SIF 発動済_1(決闘者,32154)
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件スーパー名前 = 블랙 로즈 드래곤
	効果条件種族 = 植物族
	CALL 効果条件レベル_ADV(4, "以下")
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	

ELSEIF 種類 == 攻守変動
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種類 = シンクロ
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	

ELSEIF 種類 == 戦場起動
    SIF 発動済_2(決闘者,32154)
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果範囲戦場 = 1
	効果条件種族 = 植物族
	効果条件種類 = モン全般
	効果条件他所 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	


ENDIF	

@CARDEFFECT_32154(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%


IF 種類 == 召喚時 || 種類 == 特殊召喚時
    CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,32154,1)
	IF RESULT == 0
	    CALL FULLRESET
		効果範囲墓地 = 1
		効果条件スーパー名前 = 블랙 로즈 드래곤
	    効果条件種族 = 植物族
	    CALL 効果条件レベル_ADV(4, "以下")
		効果追加種類 = 効追無効
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 攻守変動
	CALL FULLRESET
	効果条件種族 = 植物族
	CALL STATCHANGE_BASIC(決闘者,"戦場",場所,1000)

ELSEIF 種類 == 戦場起動
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,32154,2)
	IF RESULT == 0
		CALL FULLRESET
		効果範囲戦場 = 1
		効果条件種族 = 植物族
		効果条件他所 = 1
		CALL CARD_GRANT_ADV(決闘者,ゾーン,場所,"永星変動",1)
	ENDIF

ENDIF