@CARDCAN_50553(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,50553)
SIF RESULT == 1
	RETURN 0

IF 종류 == 발동強制誘発
	SIF ゾーン != "필드"
		RETURN 0
	CALL FULLRESET
	효과条件종류 = モン全般
	CALL CARD_CHECK_START_DATA_2(듀얼리스트,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
	SIF ゾーン != "필드"
		RETURN 0
	SIF 발동済_1(듀얼리스트,50553)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	효과範囲EX덱 = 1
	효과条件名前 = 블랙 로즈 드래곤
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	

ELSEIF 종류 == 묘지起動
    SIF ゾーン != "묘지"
		RETURN 0
    SIF 발동済_2(듀얼리스트,50553)
		RETURN 0
    SIF GETVAR(@"%듀얼리스트%_제외NG置換") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL FULLRESET
	효과範囲묘지 = 1
	효과条件종족 = 식물족
	효과条件튜너 = 1
	CALL 효과条件レベル_ADV(4, "以下")
	효과条件소환可 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	


ENDIF


@CARDEFFECT_50553(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 발동強制誘発	
	CALL LIFE_CHANGE(듀얼리스트,"減少","효과",600,1)
	CALL FULLRESET
	CALL CARD_REMOVAL_BASIC(듀얼리스트,"필드全体",場所,"永攻DOWN",600)

ELSEIF 종류 == 필드起動 || 종류 == フリー誘発
    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50553,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
		    CALL FULLRESET
		    효과範囲EX덱 = 1
		    효과条件名前 = 블랙 로즈 드래곤
		    CALL CARD_CHOOSE_ADV(듀얼리스트,ゾーン,場所)
		    SIF RESULT == 9999
			    RETURN 0
		    CALL CARD_SELECT(듀얼리스트,RESULT)
		    CALL CARD_EX_SUMMON(듀얼리스트,"EX덱",RESULT)
		ENDIF
	ENDIF

ELSEIF 종류 == 묘지起動
    CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,50553,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		IF RESULT == 1
	        CALL FULLRESET
		    효과範囲묘지 = 1
		    효과条件튜너 = 1
	        효과条件종족 = 식물족
	        CALL 효과条件レベル_ADV(4, "以下")
		    CALL CARD_SP_SUMMON_ADV(듀얼리스트,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

