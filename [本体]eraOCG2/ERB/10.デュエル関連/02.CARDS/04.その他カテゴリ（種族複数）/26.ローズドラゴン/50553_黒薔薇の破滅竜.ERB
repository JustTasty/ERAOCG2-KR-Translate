@CARDCAN_50553(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,50553)
SIF RESULT == 1
	RETURN 0

IF 種類 == 発動強制誘発
	SIF ゾーン != "戦場"
		RETURN 0
	CALL FULLRESET
	効果条件種類 = モン全般
	CALL CARD_CHECK_START_DATA_2(決闘者,1)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
	SIF ゾーン != "戦場"
		RETURN 0
	SIF 発動済_1(決闘者,50553)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件名前 = 블랙 로즈 드래곤
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	

ELSEIF 種類 == 墓地起動
    SIF ゾーン != "墓地"
		RETURN 0
    SIF 発動済_2(決闘者,50553)
		RETURN 0
    SIF GETVAR(@"%決闘者%_除外NG置換") >= 1
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL FULLRESET
	効果範囲墓地 = 1
	効果条件種族 = 植物族
	効果条件チューナー = 1
	CALL 効果条件レベル_ADV(4, "以下")
	効果条件召喚可 = 1
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1	


ENDIF


@CARDEFFECT_50553(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 発動強制誘発	
	CALL LIFE_CHANGE(決闘者,"減少","効果",600,1)
	CALL FULLRESET
	CALL CARD_REMOVAL_BASIC(決闘者,"戦場全体",場所,"永攻DOWN",600)

ELSEIF 種類 == 戦場起動 || 種類 == フリー誘発
    CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,50553,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		IF RESULT == 1
		    CALL FULLRESET
		    効果範囲EXデッキ = 1
		    効果条件名前 = 블랙 로즈 드래곤
		    CALL CARD_CHOOSE_ADV(決闘者,ゾーン,場所)
		    SIF RESULT == 9999
			    RETURN 0
		    CALL CARD_SELECT(決闘者,RESULT)
		    CALL CARD_EX_SUMMON(決闘者,"EXデッキ",RESULT)
		ENDIF
	ENDIF

ELSEIF 種類 == 墓地起動
    CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,50553,2)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所)
		IF RESULT == 1
	        CALL FULLRESET
		    効果範囲墓地 = 1
		    効果条件チューナー = 1
	        効果条件種族 = 植物族
	        CALL 効果条件レベル_ADV(4, "以下")
		    CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
		ENDIF
	ENDIF
ENDIF

