@CARD_50553(参照先)

#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	;効果モン/通常モン/儀式/融合/シンクロ/エクシーズ/リンク/超次元
	CASE "種類"
		RETURN シンクロ
	;闇属性/光属性/地属性/水属性/炎属性/風属性
	CASE "属性"
		RETURN 闇属性
	CASE "種族"
		RETURN 植物族
	CASE "レベル"
		RETURN 7
	CASE "攻撃力"
		RETURN 2400
	CASE "守備力"
		RETURN 1800
	;牝性/雄性があるよ
	CASE "性別"
		RETURN 牝性
	CASE "追加日"
		RETURN 250726
ENDSELECT
RETURN 0


@CARDSUMMON_50553(決闘者,召喚カード,EX参照)
#DIMS DYNAMIC 決闘者
#DIM DYNAMIC 召喚カード
#DIM DYNAMIC EX参照
#DIM DYNAMIC カウンタ

CALL RESETCONDITION_MAT
必要レベル数 = 7
IF EX参照 == 0 || EX参照 == 1
	素材条件チューナー = 1
	素材条件種類 = 植物族
ELSEIF EX参照 >= 10
	素材条件チューナー = -1
ENDIF

IF EX参照 == 1
	CALL SYNCAN(決闘者,召喚カード,50553) 
	RETURN RESULT
ENDIF


