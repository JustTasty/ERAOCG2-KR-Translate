@CARDCAN_56060(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,56060)
SIF RESULT == 1
	RETURN 0

IF 種類 == EX召喚時
	SIF 発動済_1(決闘者,56060)
		RETURN 0
	CALL FULLRESET
	効果範囲デッキ = 1
	効果条件種族 = 植物族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	CALL FULLRESET
	効果範囲EXデッキ = 1
	効果条件種族 = 植物族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 効果後誘発
	SIF 発動済_2(決闘者,56060)
		RETURN 0
	SIF ゾーン != "墓地"
		RETURN 0
	CALL FULLRESET
	CALL CARD_CHECK_FIN_DATA(決闘者,"効果破壊")
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 永続効果
	SIF ゾーン != "戦場"
		RETURN 0
	RETURN 1	

ENDIF

@CARDEFFECT_56060(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == EX召喚時
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,56060,1)
	IF RESULT == 0
	    CALL FULLRESET
		効果範囲デッキ = 1
		効果条件種族 = 植物族
		効果条件任意 = 1
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)

		CALL FULLRESET
		効果範囲EXデッキ = 1
		効果条件種族 = 植物族
		効果条件任意 = 1
		CALL CARD_ADD_GY_ADV(決闘者,ゾーン,場所)

		EX召喚可能種類 = シンクロ
		CALL CARD_EX_RESTRICTION(決闘者)
	ENDIF

ELSEIF 種類 == 効果後誘発
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,56060,2)
	IF RESULT == 0
	    CALL FULLRESET
		効果範囲墓地 = 1
		効果条件名前 = 헤이트 로즈 위치
		CALL CARD_SP_SUMMON_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 永続効果
	CALL FULLRESET
	効果条件種族 = 植物族
	CALL STATCHANGE_EFFECT(決闘者,"戦場",場所,"破耐")


ENDIF