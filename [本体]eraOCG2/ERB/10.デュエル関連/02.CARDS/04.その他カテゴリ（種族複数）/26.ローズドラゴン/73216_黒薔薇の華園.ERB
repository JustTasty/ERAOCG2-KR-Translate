#DIMS DYNAMIC 参照先
VARSET RESULT
VARSET RESULTS

SELECTCASE 参照先
	CASE "종류"
		RETURN 지속마법
	CASE "추가日"
		RETURN 250726
ENDSELECT
RETURN 0

@CARD_EXPLANATION_73216(종류)
#DIM DYNAMIC 종류

PRINTL このカード名のカードは１ターンに１枚しか발동できず、このカード名の③の효과は１ターンに１度しか使用できない。
CALLFORM CARD_ABLE(1,마함起動 ,손패起動)
PRINTL ①：このカードの발동時の효과処理として、
PRINTL 자신の덱・묘지から드래곤족の「로즈」モンスター１体を손패に加える事ができる。
CALLFORM CARD_ABLE(0,攻守変動)
PRINTL ②：フィールドの表側표시モンスターは식물족になる。
CALLFORM CARD_ABLE(2,破壊→묘지)
PRINTL ③：このカードが破壊された場合に발동できる。
PRINTL 자신の묘지・제외状態の식물족モンスターの数×１００ダメージを상대に与える。
PRINTL 자신の묘지または제외状態の「블랙 로즈 드래곤」が存在する場合、さらに상대に２４００ダメージを与える。


@CARDCAN_73216(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,73216)
SIF RESULT == 1
	RETURN 0

IF 종류 == 마함起動 || 종류 == 손패起動
	SIF 발동済_1(듀얼리스트,73216)
		RETURN 0
	IF 종류 == 마함起動
		SIF GETVAR(@"%듀얼리스트%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 종류 == 破壊→묘지
    SIF 발동済_2(듀얼리스트,73216)
		RETURN 0
    CALL FULLRESET
	효과範囲묘지 = 1
	효과範囲제외 = 1
	효과条件종족 = 식물족
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 攻守変動
	SIF ゾーン != "마함"
		RETURN 0
	SIF GETVAR(@"%듀얼리스트%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ENDIF	

@CARDEFFECT_73216(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ量

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

IF 종류 == 마함起動 || 종류 == 손패起動
	;カード발동＆설치まで
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73126,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,마함行き)
		CALL FULLRESET
		효과範囲덱 = 1
		효과範囲묘지 = 1
		효과条件종류 = モン全般
		효과条件종족 = 드래곤족
		효과条件カテゴリ = 로즈
		효과条件任意 = 1
		CALL CARD_ADD_ADV(듀얼리스트,ゾーン,場所)
	ENDIF

ELSEIF 종류 == 攻守変動
	CALL FULLRESET
	CALL STATCHANGE_OTHER(듀얼리스트,"필드",場所,"種",식물족,73216)
	CALL FULLRESET
	;효과元カードID = 73216
	CALL STATCHANGE_OTHER(듀얼리스트,"상대필드",場所,"種",식물족,73216)

ELSEIF 종류 == 破壊→묘지
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,73216)
	IF RESULT == 0
	    CALL FULLRESET
		효과範囲묘지 = 1
		효과範囲제외 = 1
		효과条件종족 = 식물족
		효과条件CNT = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		ダメージ量 = RESULT * 100
		CALL LIFE_CHANGE(듀얼리스트,"減少","효과",ダメージ量,1)
		
		CALL FULLRESET
	    효과範囲묘지 = 1
	    효과範囲제외 = 1
	    효과条件名前 = 블랙 로즈 드래곤
	    CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		SIF RESULT == 1
		    CALL LIFE_CHANGE(듀얼리스트,"減少","효과",2400,1)
	ENDIF

ENDIF
