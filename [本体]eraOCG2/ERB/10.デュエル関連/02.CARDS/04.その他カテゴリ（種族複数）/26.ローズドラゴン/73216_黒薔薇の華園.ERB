PRINTL 自分の墓地または除外状態の「블랙 로즈 드래곤」が存在する場合、さらに相手に２４００ダメージを与える。


@CARDCAN_73216(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所

CALL CARD_NEGATE(決闘者,種類,ゾーン,場所,73216)
SIF RESULT == 1
	RETURN 0

IF 種類 == 魔罠起動 || 種類 == 手札起動
	SIF 発動済_1(決闘者,73216)
		RETURN 0
	IF 種類 == 魔罠起動
		SIF GETVAR(@"%決闘者%_魔_表:場所") == 1
			RETURN 0
	ENDIF
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 決闘者
		RETURN 0
	CALL CARD_DRAW_CHECK
	RETURN 1

ELSEIF 種類 == 破壊→墓地
    SIF 発動済_2(決闘者,73216)
		RETURN 0
    CALL FULLRESET
	効果範囲墓地 = 1
	効果範囲除外 = 1
	効果条件種族 = 植物族
	CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 種類 == 攻守変動
	SIF ゾーン != "魔罠"
		RETURN 0
	SIF GETVAR(@"%決闘者%_魔_表:場所") >= 2
		RETURN 0
	RETURN 1

ENDIF	

@CARDEFFECT_73216(決闘者,種類,ゾーン,場所)
#DIMS DYNAMIC 決闘者
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 種類
#DIM DYNAMIC 場所
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正
#DIM DYNAMIC 選択カード
#DIM DYNAMIC ダメージ量

CALL 対面者判定(決闘者)
対面者 = %RESULTS%

IF 種類 == 魔罠起動 || 種類 == 手札起動
	;カード発動＆設置まで
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73126,1)
	IF RESULT == 0
		CALL CARD_DISPOSE(決闘者,ゾーン,場所,魔罠行き)
		CALL FULLRESET
		効果範囲デッキ = 1
		効果範囲墓地 = 1
		効果条件種類 = モン全般
		効果条件種族 = ドラゴン族
		効果条件カテゴリ = 로즈
		効果条件任意 = 1
		CALL CARD_ADD_ADV(決闘者,ゾーン,場所)
	ENDIF

ELSEIF 種類 == 攻守変動
	CALL FULLRESET
	CALL STATCHANGE_OTHER(決闘者,"戦場",場所,"種",植物族,73216)
	CALL FULLRESET
	;効果元カードID = 73216
	CALL STATCHANGE_OTHER(決闘者,"相手戦場",場所,"種",植物族,73216)

ELSEIF 種類 == 破壊→墓地
	CALL CARD_CHOICE(決闘者,種類,ゾーン,場所,73216)
	IF RESULT == 0
	    CALL FULLRESET
		効果範囲墓地 = 1
		効果範囲除外 = 1
		効果条件種族 = 植物族
		効果条件CNT = 1
		CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		ダメージ量 = RESULT * 100
		CALL LIFE_CHANGE(決闘者,"減少","効果",ダメージ量,1)
		
		CALL FULLRESET
	    効果範囲墓地 = 1
	    効果範囲除外 = 1
	    効果条件名前 = 블랙 로즈 드래곤
	    CALL CARD_CHECK_ADV(決闘者,種類,ゾーン,場所)
		SIF RESULT == 1
		    CALL LIFE_CHANGE(決闘者,"減少","効果",2400,1)
	ENDIF

ENDIF
