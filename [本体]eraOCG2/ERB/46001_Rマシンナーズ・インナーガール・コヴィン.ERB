;ここは효과を使う「条件」を書くのだ！
;実際の효과処理は一個下なのだ！
@CARDCAN_46001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,46001)
SIF RESULT == 1
	RETURN 0
;「종류」は数列変数だから、文字列変数（""でくくる奴）ではだめなのだ
;そしてイコールも半角じゃないとダメなのだ！
IF 종류 == 필드起動
	;同名じゃないターン１の制限確認なのだ
	;발동してたら使えないのだ
	SIF 효과발동済(듀얼리스트,場所,ゾーン)
		RETURN 0
	;ターンプレイヤーが듀얼리스트（コントローラー）じゃないとダメなのだ
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	;メイン２だと使えないのだ
	SIF メインフェイズ２ == 1
		RETURN 0

	;필드起動だと、ゾーン=="필드"で確定しているからこの辺全部いらないのだ
	[SKIPSTART]

	;「SIF」は「SHORT IF」って覚えるといいのだ
	;すぐ下の処理しか読み込まないから「ENDIF」とかがいらないのだ、むしろ付けると怒られるのだ
	SIF !GROUPMATCH(ゾーン,"필드")
		RETURN 0
	 
		SIF ターンプレイヤー != 듀얼리스트
			RETURN 0
	ELSEIF ゾーン == "필드"

		;これは효과処理で使う関数なのだ
		;条件で使っちゃダメなのだ
		CALL CARD_REMOVAL_BASIC （"듀얼리스트,"필드",場所,"묘지"） == 3
			RETURN 0
	ELSE
		RETURN 0
	ENDIF
	;【アトラ】ここら辺はルーチンで발동可否を설정したほうがいいから必要なし、以下の条件が何をしているかというと『자신以外』、
	;　つまりCPUが使うとき、無駄に自壊효과を발동しないように止めてる条件です、リミッター解除に会ったのかな？あとで調整しないと
	IF 듀얼리스트 != "자신"
		SIF バトルフェイズ != 1
			RETURN 0
		
		;これはカードの有無をチェックする関数なのだ
		;おそらく「상대モンスターがいなかったら발동しない」とかにしたかったのでは？と、読み取ったのだ
		;듀얼리스트が자신なら何か悪さとかしてくれるに違いないのだ！
		;そもそもバトルしているならいらないのでは？ボブは訝しんだ
		CALL FULLRESET
		;１で反応してくれるのだ
		;상대場を見たい時は、「효과範囲상대필드」にするのだ
		효과範囲상대필드 = 1
		CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
		;１であるよ！　１以外で無いよ！
		SIF RESULT != 1
			RETURN 0
	ENDIF
	[SKIPEND]

	RETURN 1

;バトル終了時に破壊される処理は無かった気がするのだ
;なので、①を使ってたら破壊されるように組むのだ
;ただし、同名ターン１系に流用すると、間違いなく不具合が起こるのだ
ELSEIF 종류 == バトル終了時強制
	SIF ゾーン != "필드"
		RETURN 0
	;①使ってたらオッケーね！
;	SIF 효과발동済(듀얼리스트,場所,ゾーン)
;		RETURN 1
;　【アトラ】　こっちのが一貫性あるかな、발동していなかったら（0なら）NG
	SIF 효과발동済(듀얼리스트,場所,ゾーン) == 0
		RETURN 0
	;ダメだったらおわり！
	RETURN 1
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_2(듀얼리스트,46001)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = R머시너즈 이너걸 커빈
	효과条件カテゴリ = 머시너즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ENDIF

;ここで효과処理を行うのだ！
@CARDEFFECT_46001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC 対面者 
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 발동済
#DIM DYNAMIC 装備者
#DIM DYNAMIC カウンタ
#DIM DYNAMIC 攻撃力修正

CALL 対面者판정(듀얼리스트)
対面者 = %RESULTS%

;효과処理にはこの部分が必要なのだ！
;無いとバグ扱いされるのだ　　←【OK!】
IF 종류 == 필드起動
	;									カードID　ターン１制限（１０だとフィールドターン１）　　←【OK!】
	;										　↓　 ↓
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46001,10)
	IF RESULT == 0
		;【アトラ】　文章ココに이동したよ
		SETCOLOR C_P_RED
		ALIGNMENT CENTER
		CUSTOMDRAWLINE ╱
		CUSTOMDRAWLINE ╲
		PRINTL WARNING　WARNING　WARNING　WARNING　WARNING　WARNING　WARNING　WARNING　WARNING
		CUSTOMDRAWLINE ╱
		CUSTOMDRAWLINE ╲
		ALIGNMENT LEFT
		CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46001)
		RESETCOLOR
		PRINTL 목덜미에 장착되어있던 인젝터가 움직여、봉입되어있던 액체가 커빈에 주입되어간다…
		PRINTL 커빈은 볼을 빨갛게 물들여、쾌감에 무너진 표정을 적에게 보였다！


		;わかりやすくここで攻撃力を入れておくのだ
		;「듀얼리스트（コントローラー）」の「MZ（モンスターゾーン）」の「場所（カードの位置）」の「攻（攻撃力）」を、「攻撃力修正」に入れているのだ
		攻撃力修正 = GETVAR(@"%듀얼리스트%_MZ_攻:場所")

		;リミ解にある処理なのだ
		;「듀얼리스트」の「필드（モンスターゾーン）」の「場所」のモンスターに、「一攻（エンドまでステ変動状態）」をセットしているのだ
		;デフォルトだとプラスなので、攻撃力修正分上がっているのだ
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"一攻",攻撃力修正)

		;影魔ワイバーンから借りてきた処理なのだ
		;このカードに「発情」状態を付与しているのだ
		;"発情"の後ろの「２」は持続時間なのだ。１=１ターン、２=지속、って感じなのだ
		;その後ろの「１」は「上書き플래그」なのだ。　何かの효과で１ターンしか発情しなくても、지속に上書きされるのだ
		CALL SET_FIELD_INFO(듀얼리스트,"필드",場所,"発情",2,1)
	ENDIF

ELSEIF 종류 == バトル終了時強制
	;確認などの必要はないから、「CARD_CHOICE」はいらないのだ　　←【OK!】
	;破壊行きを설정すると爆発してくれるよ！
	CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所,破壊行き)
ELSEIF 종류 == 소환時 || 종류 == 특수소환時
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46001,2)
	IF RESULT == 0
		CALL FULLRESET
		효과条件固名前 = 머시너즈 이너걸 커빈
		효과範囲덱 = 1
		효과条件カテゴリ = 머시너즈
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF
ENDIF

;【アトラ】
[SKIPSTART]
;IF 종류 == 필드起動 || 종류 == バトル終了時強制
ELSEIF 종류 == バトル終了時強制
	;リミッター解除の경고표시なのだ
	;リミッター解除の경고표시は、カードの종류が「필드起動」か「バトル終了時強制」の時に표시されるのだ
	SETCOLOR C_P_RED
	ALIGNMENT CENTER
	CUSTOMDRAWLINE ╱
	CUSTOMDRAWLINE ╲
	PRINTL WARNING　WARNING　WARNING　WARNING　WARNING　WARNING　WARNING　WARNING　WARNING
	CUSTOMDRAWLINE ╱
	CUSTOMDRAWLINE ╲
	ALIGNMENT LEFT
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46001)
	RESETCOLOR
	PRINTL 首筋に装備されていたインジェクターが動き、封入されていた液体がコヴィンに注入されていく…
	PRINTL コヴィンは顔を赤らめ、快感に崩れた表情を敵に目を向けた！
	IF RESULT == 0

		CALL CARD_DISPOSE(듀얼리스트,ゾーン,場所)
		FOR カウンタ,0,5
			SIF GETVAR(@"%듀얼리스트%_필드:{カウンタ}") == -1
				CONTINUE
			SIF GETVAR(@"%듀얼리스트%_MZ_種:{カウンタ}") != 기계족
				CONTINUE
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"一攻",GETVAR(@"%듀얼리스트%_MZ_攻:カウンタ"))
			CALL SET_FIELD_INFO(듀얼리스트,"필드",カウンタ,"終処",破壊行き)
		NEXT
	ENDIF

ENDIF

CALL CARD_NEGATE(듀얼리스트,종류,ゾーン,場所,46001)
SIF RESULT == 1
	RETURN 0

CALL 装備판정(듀얼리스트,場所,ゾーン)
装備者 = %RESULTS%
装備先 = RESULT


IF 종류 == 소환時 || 종류 == 특수소환時
	SIF 발동済_1(듀얼리스트,46001)
		RETURN 0
	CALL FULLRESET
	효과範囲덱 = 1
	효과条件固名前 = R머시너즈・インナーガール・コヴィン
	효과条件カテゴリ = 머시너즈
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1

ELSEIF 종류 == 필드起動
	SIF 발동済_1(듀얼리스트,46001)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0
	SIF 마함数(듀얼리스트) >= 5
		RETURN 0
	CALL FULLRESET
	효과範囲필드 = 1
	효과条件종족 = 기계족
	효과条件他所 = 1
	CALL CARD_CHECK_ADV(듀얼리스트,종류,ゾーン,場所)
	SIF RESULT != 1
		RETURN 0
	RETURN 1
ELSEIF 종류 == 마함起動 
	SIF 발동済_1(듀얼리스트,46001)
		RETURN 0
	SIF メインフェイズ != 1
		RETURN 0
	SIF ターンプレイヤー != 듀얼리스트
		RETURN 0

	CALL CARD_SS_CHECK(듀얼리스트,46001,"마함")
	SIF RESULT == 1
		RETURN 0

	SIF GETVAR(@"%装備者%_戦闘カード") != 装備先
		RETURN 0

	RETURN 1
ENDIF

;【アトラ】　同じ関数(CARDEFFECT_46001)が2つもあるぞい？　しかもCAN条件も上に合ったりとコピペがおかしいかも

@CARDEFFECT_46001(듀얼리스트,종류,ゾーン,場所)
#DIMS DYNAMIC 듀얼리스트
#DIMS DYNAMIC ゾーン
#DIM DYNAMIC 종류
#DIM DYNAMIC 場所
#DIM DYNAMIC 選択カード


IF 종류 == 소환時 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46001)
	IF RESULT == 0
		CALL FULLRESET
		효과条件固名前 = 머시너즈・インナーガール・コヴィン
		효과範囲덱 = 1
		효과条件カテゴリ = 머시너즈
		CALL CARD_ADD_BASIC(듀얼리스트,"덱",ゾーン,場所)
	ENDIF

ELSEIF 종류 == 필드起動
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46001,1)
	IF RESULT == 0
		CALL FULLRESET
		효과条件종족 = 기계족
		효과条件他所 = 1
		CALL CARD_CHOOSE_BASIC(듀얼리스트,"필드",ゾーン,場所)
		選択カード = RESULT
		IF 選択カード != 9999
			CALL CARD_EQUIP_MONSTER(듀얼리스트,選択カード,"필드",場所,(4))
		ENDIF
	ENDIF
ELSEIF 종류 == 마함起動 
	CALL CARD_CHOICE(듀얼리스트,종류,ゾーン,場所,46001,1)
	IF RESULT == 0
		CALL RESETCONDITION
		CALL CARD_SP_SUMMON(듀얼리스트,ゾーン,場所)
	ENDIF
ENDIF
[SKIPEND]